<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:orientation="vertical"
    tools:parentTag="androidx.appcompat.widget.LinearLayoutCompat">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginVertical="@dimen/margin_8">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_24"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_chris_news"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_40"
            app:cardCornerRadius="@dimen/margin_8"
            app:cardBackgroundColor="@color/color_FFFFFF"
            app:cardElevation="0dp">
            <LinearLayout
                android:id="@+id/linTab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_chris_news_title">
                <RadioGroup
                    android:id="@+id/rgTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_12"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbtnOkbet"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_28"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/selector_chris_tab_home_news"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:paddingHorizontal="12dp"
                        android:text="@string/app_name"
                        android:textColor="@color/color_white_transwhite"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/rbtnSport"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_28"
                        android:background="@drawable/selector_chris_tab_home_news"
                        android:button="@null"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingHorizontal="12dp"
                        android:text="@string/B001"
                        android:textColor="@color/color_white_transwhite"
                        android:textSize="12sp" />
                </RadioGroup>

                <TextView
                    android:id="@+id/tvMore"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:drawablePadding="@dimen/margin_4"
                    android:layout_marginRight="@dimen/margin_12"
                    android:layout_marginTop="@dimen/margin_13"
                    android:drawableRight="@drawable/ic_home_more"
                    android:gravity="center"
                    android:text="@string/N702"
                    android:drawableTint="@color/color_FFFFFF"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="14sp" />

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="50dp"
                android:orientation="vertical"
                android:background="@drawable/bg_chris_news"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_home_news_1"
                tools:itemCount="3" />
        </androidx.cardview.widget.CardView>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="65dp"
            android:layout_marginTop="-25dp"
            android:src="@drawable/ic_chris_home_news_logo"/>
    </FrameLayout>

</merge>