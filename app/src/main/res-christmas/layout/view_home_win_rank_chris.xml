<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:orientation="vertical"
    tools:parentTag="androidx.appcompat.widget.LinearLayoutCompat">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/margin_8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_24"
                    android:src="@drawable/ic_chris_latestbet"/>

                <androidx.legacy.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_gradient_home_news">
                <RadioGroup
                    android:id="@+id/rGroupRecord"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:paddingBottom="@dimen/margin_10"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_chris_win_title_right">

                    <RadioButton
                        android:id="@+id/rbtn_lb"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableBottom="@drawable/selector_indicate_trans_green"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/N708"
                        android:textColor="@color/color_white_gray"
                        android:textSize="@dimen/textSize14sp" />

                    <RadioButton
                        android:id="@+id/rbtn_lbw"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableBottom="@drawable/selector_indicate_trans_green"
                        android:button="@null"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:text="@string/N709"
                        android:textColor="@color/color_white_gray"
                        android:textSize="@dimen/textSize14sp"
                        android:checked="true"/>
                </RadioGroup>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_okgame_record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_chris_win"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    tools:itemCount="5"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_home_win_rank" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:src="@drawable/ic_chris_rank_cup"
            android:adjustViewBounds="true"
            android:layout_gravity="right"/>
    </FrameLayout>

</merge>