<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginRight="8dp"
    android:background="@drawable/bg_item_home_hot_match">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_trans_home_hot_match"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/margin_12"
            android:paddingTop="@dimen/margin_12"
            android:paddingBottom="@dimen/margin_5"
            android:background="@drawable/bg_chris_hot_match_top">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivHomeIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_oval_transwhite_stroke_white"
                    android:padding="@dimen/margin_5"
                    android:src="@drawable/ic_team_default" />
                <ImageView
                    android:id="@+id/ivAwayIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="@dimen/margin_5"
                    android:background="@drawable/bg_oval_transwhite_stroke_white"
                    android:layout_marginLeft="-3dp"
                    android:src="@drawable/ic_team_default" />
                <androidx.legacy.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical|right">
                    <TextView
                        android:id="@+id/tvGamePlayTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:lines="1"
                        android:text="---"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="@dimen/textSize16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvGameStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_1"
                        android:lines="1"
                        android:text="---"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="@dimen/textSize12sp" />


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_9">
                <TextView
                    android:id="@+id/tvGameType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    tools:text="Football"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/textSize14sp"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="@dimen/margin_0.5"
                    android:layout_height="@dimen/margin_12"
                    android:background="@color/transparent_white_60"
                    android:layout_marginHorizontal="@dimen/margin_8"/>
                <TextView
                    android:id="@+id/tvLeagueName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="Siêu giải Trung Quốc"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/textSize14sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5"
            android:background="@color/color_E0E3EE"
            android:layout_marginHorizontal="@dimen/margin_12"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/margin_12"
            android:layout_marginTop="@dimen/margin_10">


            <TextView
                android:id="@+id/tv_home_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:ellipsize="end"
                android:layout_marginRight="@dimen/margin_16"
                android:lines="1"
                android:textColor="@color/color_313F56"
                android:textStyle="bold"
                android:textSize="@dimen/textSize14sp"
                tools:text="Chelsea"/>

            <TextView
                android:id="@+id/tv_home_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:includeFontPadding="false"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/color_313F56"
                android:textSize="@dimen/textSize16sp"
                tools:text="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/margin_12"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10">


            <TextView
                android:id="@+id/tv_away_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:layout_marginRight="@dimen/margin_16"
                android:includeFontPadding="false"
                android:textColor="@color/color_313F56"
                android:textStyle="bold"
                android:textSize="@dimen/textSize14sp"
                tools:text="Chelsea"/>

            <TextView
                android:id="@+id/tv_away_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:includeFontPadding="false"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/color_313F56"
                android:textSize="@dimen/textSize16sp"
                tools:text="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_12"
            android:layout_marginBottom="12dp">

            <org.cxct.sportlottery.ui.sport.oddsbtn.OddsHomeHotButton
                android:id="@+id/oddBtn1"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1" />

            <org.cxct.sportlottery.ui.sport.oddsbtn.OddsHomeHotButton
                android:id="@+id/oddBtn2"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"/>

            <org.cxct.sportlottery.ui.sport.oddsbtn.OddsHomeHotButton
                android:id="@+id/oddBtn3"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>
</LinearLayout>
</FrameLayout>