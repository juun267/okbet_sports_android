<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/publicityFragment">

    <fragment
        android:id="@+id/publicityOldFragment"
        android:name="org.cxct.sportlottery.ui.game.publicity.PublicityFragment"
        android:label="PublicityFragment"
        tools:layout="@layout/fragment_publicity">

        <action
            android:id="@+id/action_publicityFragment_to_oddsDetailLiveFragment"
            app:destination="@id/oddsDetailLiveFragment"
            app:enterAnim="@anim/enter_from_right"
            app:popExitAnim="@anim/exit_to_right">
            <argument
                android:name="matchType"
                app:argType="org.cxct.sportlottery.network.common.MatchType" />

            <argument
                android:name="gameType"
                app:argType="org.cxct.sportlottery.network.common.GameType" />

            <argument
                android:name="matchId"
                app:argType="string" />
        </action>
        <action
            android:id="@+id/action_publicityFragment_self"
            app:destination="@id/publicityFragment" />
    </fragment>

    <fragment
        android:id="@+id/publicityFragment"
        android:name="org.cxct.sportlottery.ui.game.publicity.PublicityNewFragment"
        android:label="PublicityFragment"
        tools:layout="@layout/fragment_publicity">

        <action
            android:id="@+id/action_publicityFragment_to_oddsDetailLiveFragment"
            app:destination="@id/oddsDetailLiveFragment"
            app:enterAnim="@anim/enter_from_right"
            app:popExitAnim="@anim/exit_to_right">
            <argument
                android:name="matchType"
                app:argType="org.cxct.sportlottery.network.common.MatchType" />

            <argument
                android:name="gameType"
                app:argType="org.cxct.sportlottery.network.common.GameType" />

            <argument
                android:name="matchId"
                app:argType="string" />
        </action>
        <action
            android:id="@+id/action_publicityFragment_self"
            app:destination="@id/publicityFragment" />
    </fragment>

    <fragment
        android:id="@+id/oddsDetailLiveFragment"
        android:name="org.cxct.sportlottery.ui.odds.OddsDetailLiveFragment"
        tools:layout="@layout/fragment_odds_detail_live">

        <argument
            android:name="matchType"
            app:argType="org.cxct.sportlottery.network.common.MatchType" />

        <argument
            android:name="gameType"
            app:argType="org.cxct.sportlottery.network.common.GameType" />

        <argument
            android:name="matchId"
            app:argType="string" />

        <argument
            android:name="liveVideo"
            android:defaultValue="0"
            app:argType="integer" />

        <action
            android:id="@+id/action_oddsDetailLiveFragment_self"
            app:destination="@id/oddsDetailLiveFragment"
            app:enterAnim="@anim/enter_from_right"
            app:popExitAnim="@anim/exit_to_right">

            <argument
                android:name="matchType"
                app:argType="org.cxct.sportlottery.network.common.MatchType" />

            <argument
                android:name="gameType"
                app:argType="org.cxct.sportlottery.network.common.GameType" />

            <argument
                android:name="matchId"
                app:argType="string" />
        </action>

        <action
            android:id="@+id/action_oddsDetailLiveFragment_to_gameV3Fragment"
            app:destination="@id/gameV3Fragment"
            app:popUpTo="@id/gameV3Fragment">
            <argument
                android:name="matchType"
                app:argType="org.cxct.sportlottery.network.common.MatchType" />
        </action>

        <!--返回首頁-->
        <action
            android:id="@+id/action_oddsDetailLiveFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_oddsDetailLiveFragment_to_publicityFragment"
            app:destination="@id/publicityFragment" />
    </fragment>
</navigation>