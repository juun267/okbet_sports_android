<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_navigation"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="org.cxct.sportlottery.ui.game.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_gameFragment"
            app:destination="@id/gameV3Fragment">
            <argument
                android:name="matchType"
                app:argType="org.cxct.sportlottery.network.common.MatchType" />
        </action>
        <action
            android:id="@+id/action_homeFragment_to_mainActivity"
            app:destination="@id/mainActivity">
            <argument
                android:name="thirdGameCate"
                app:argType="org.cxct.sportlottery.ui.main.entity.ThirdGameCategory" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="org.cxct.sportlottery.ui.game.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game">
        <argument
            android:name="matchType"
            app:argType="org.cxct.sportlottery.network.common.MatchType" />
    </fragment>
    <fragment
        android:id="@+id/gameV3Fragment"
        android:name="org.cxct.sportlottery.ui.game.v3.GameV3Fragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game">
        <argument
            android:name="matchType"
            app:argType="org.cxct.sportlottery.network.common.MatchType" />
        <action
            android:id="@+id/action_gameFragment_to_gameFragment"
            app:destination="@id/gameV3Fragment">
            <argument
                android:name="matchType"
                app:argType="org.cxct.sportlottery.network.common.MatchType" />
        </action>
        <action
            android:id="@+id/action_gameFragment_to_game2Fragment"
            app:destination="@id/game2Fragment" />
        <action
            android:id="@+id/action_gameV3Fragment_to_mainActivity"
            app:destination="@id/mainActivity">
            <argument
                android:name="thirdGameCate"
                app:argType="org.cxct.sportlottery.ui.main.entity.ThirdGameCategory" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/game2Fragment"
        android:name="org.cxct.sportlottery.ui.game.GameDetailFragment"
        android:label="fragment_game2"
        tools:layout="@layout/fragment_game_detail">
        <argument
            android:name="oddsListId"
            app:argType="string" />
        <argument
            android:name="matchType"
            app:argType="org.cxct.sportlottery.network.common.MatchType" />
        <argument
            android:name="startTime"
            app:argType="string" />
        <argument
            android:name="endTime"
            app:argType="string" />
        <action
            android:id="@+id/action_game2Fragment_to_gameFragment"
            app:destination="@+id/gameV3Fragment">
            <argument
                android:name="matchType"
                app:argType="org.cxct.sportlottery.network.common.MatchType" />
        </action>
    </fragment>

    <activity
        android:id="@+id/mainActivity"
        android:name="org.cxct.sportlottery.ui.main.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main">
        <argument
            android:name="thirdGameCate"
            app:argType="org.cxct.sportlottery.ui.main.entity.ThirdGameCategory" />
    </activity>


</navigation>