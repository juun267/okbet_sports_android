<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="org.cxct.sportlottery.ui.game.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_gameFragment"
            app:destination="@id/gameV3Fragment">
            <argument
                android:name="matchType"
                app:argType="org.cxct.sportlottery.network.common.MatchType" />
        </action>

        <action
            android:id="@+id/action_homeFragment_to_mainActivity"
            app:destination="@id/mainActivity">
            <argument
                android:name="thirdGameCate"
                app:argType="org.cxct.sportlottery.ui.main.entity.ThirdGameCategory" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/gameV3Fragment"
        android:name="org.cxct.sportlottery.ui.game.v3.GameV3Fragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game_v3">
        <argument
            android:name="matchType"
            app:argType="org.cxct.sportlottery.network.common.MatchType" />

        <action
            android:id="@+id/action_gameFragment_to_gameFragment"
            app:destination="@id/gameV3Fragment">
            <argument
                android:name="matchType"
                app:argType="org.cxct.sportlottery.network.common.MatchType" />
        </action>

        <action
            android:id="@+id/action_gameV3Fragment_to_mainActivity"
            app:destination="@id/mainActivity">
            <argument
                android:name="thirdGameCate"
                app:argType="org.cxct.sportlottery.ui.main.entity.ThirdGameCategory" />
        </action>

        <action
            android:id="@+id/action_gameV3Fragment_to_gameLeagueFragment"
            app:destination="@id/gameLeagueFragment"
            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_to_right"
            app:popEnterAnim="@anim/enter_from_right"
            app:popExitAnim="@anim/exit_to_right">
            <argument
                android:name="matchType"
                app:argType="org.cxct.sportlottery.network.common.MatchType" />

            <argument
                android:name="sportType"
                app:argType="org.cxct.sportlottery.network.common.SportType" />

            <argument
                android:name="leagueId"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/gameLeagueFragment"
        android:name="org.cxct.sportlottery.ui.game.v3.GameLeagueFragment"
        tools:layout="@layout/fragment_game_league">
        <argument
            android:name="matchType"
            app:argType="org.cxct.sportlottery.network.common.MatchType" />

        <argument
            android:name="sportType"
            app:argType="org.cxct.sportlottery.network.common.SportType" />

        <argument
            android:name="leagueId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/menuLeftFragment"
        android:name="org.cxct.sportlottery.ui.menu.MenuLeftFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_menu_left">
        <action
            android:id="@+id/action_menuLeftFragment_to_mainActivity"
            app:destination="@id/mainActivity">
            <argument
                android:name="thirdGameCate"
                app:argType="org.cxct.sportlottery.ui.main.entity.ThirdGameCategory" />
        </action>
    </fragment>

    <activity
        android:id="@+id/mainActivity"
        android:name="org.cxct.sportlottery.ui.main.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main">
        <argument
            android:name="thirdGameCate"
            app:argType="org.cxct.sportlottery.ui.main.entity.ThirdGameCategory" />
    </activity>

</navigation>