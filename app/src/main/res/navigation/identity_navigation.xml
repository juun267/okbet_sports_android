<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/verifyKYCFragment">

    <fragment
        android:id="@+id/verifyIdentityDetailFragment"
        android:name="org.cxct.sportlottery.ui.profileCenter.identity.VerifyIdentityDetailFragment"
        android:label="VerifyIdentityDetailFragment"
        tools:layout="@layout/fragment_verify_identity_detail_new">

        <argument
            android:name="data"
            app:argType="org.cxct.sportlottery.network.credential.CredentialCompleteData"
            app:nullable="false" />
    </fragment>

    <fragment
        android:id="@+id/credentialsFragment"
        android:name="org.cxct.sportlottery.ui.profileCenter.identity.CredentialsFragment"
        android:label="fragment_credentials"
        tools:layout="@layout/fragment_credentials">
        <action android:id="@+id/action_credentialsFragment_to_credentialsDetailFragment"
            app:destination="@id/verifyIdentityDetailFragment"
            app:enterAnim="@anim/enter_from_right"
            app:popExitAnim="@anim/exit_to_right"
            />
    </fragment>

    <fragment
        android:id="@+id/verifyKYCFragment"
        android:name="org.cxct.sportlottery.ui.profileCenter.identity.VerifyKYCFragment2"
        android:label="VerifyKYCFragment"
        tools:layout="@layout/fragment_verify_identity_kyc2">

        <action
            android:id="@+id/action_verifyKYCFragment_to_verifyStatusFragment"
            app:destination="@id/verifyStatusFragment"
            app:enterAnim="@anim/enter_from_right"
            app:popExitAnim="@anim/exit_to_right" />

    </fragment>

    <fragment
        android:id="@+id/verifyStatusFragment"
        android:name="org.cxct.sportlottery.ui.profileCenter.identity.VerifyStatusFragment"
        android:label="VerifyStatusFragment"
        tools:layout="@layout/fragment_verify_status">

        <action
            android:id="@+id/action_verifyStatusFragment_to_verifyKYCFragment"
            app:destination="@id/verifyKYCFragment" />

    </fragment>

    <fragment
        android:id="@+id/reverifyKYCFragment"
        android:name="org.cxct.sportlottery.ui.profileCenter.identity.ReverifyKYCFragment"
        android:label="VerifyKYCFragment"
        tools:layout="@layout/fragment_verify_identity_kyc">

        <action
            android:id="@+id/action_reverifyKYCFragment_to_verifyStatusFragment"
            app:destination="@id/verifyStatusFragment" />

    </fragment>
    <fragment
        android:id="@+id/verifyRejectFragment"
        android:name="org.cxct.sportlottery.ui.profileCenter.identity.VerifyRejectFragment"
        android:label="VerifyKYCFragment"
        tools:layout="@layout/fragment_verify_reject">

<!--        <action-->
<!--            android:id="@+id/action_reverifyKYCFragment_to_verifyRejectFragment"-->
<!--            app:destination="@id/verifyRejectFragment"-->
<!--            app:enterAnim="@anim/enter_from_right"-->
<!--            app:popExitAnim="@anim/exit_to_right" />-->

    </fragment>

</navigation>