<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp" android:top="0.5dp">
                <shape android:shape="rectangle">
                    <corners android:radius="2dp" />
                    <size android:width="150dp" android:height="50dp" />
                    <stroke android:width="2dp" android:color="@color/main" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>

            <item android:bottom="5.5dp" android:drawable="@drawable/ic_tri" android:gravity="end|bottom" android:left="2.5dp" android:right="5.5dp" android:top="2.5dp" />

        </layer-list>
    </item>

    <item android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp" android:top="0.5dp">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <size android:width="150dp" android:height="50dp" />
            <stroke android:width="2dp" android:color="@color/light_gray" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>