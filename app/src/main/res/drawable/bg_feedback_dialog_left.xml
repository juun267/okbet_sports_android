<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp" android:top="0.5dp">
        <layer-list>
            <item android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp" android:top="0.5dp">
                <shape android:shape="rectangle">
                    <corners android:radius="5dp" />
                    <size android:width="350dp" android:height="80dp" />
                    <stroke android:width="2dp" android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:width="300dp" android:height="100dp" android:bottom="0.5dp" android:left="20dp" android:right="0.5dp" android:top="0.5dp">
                <shape android:shape="rectangle">
                    <corners android:radius="5dp" />
                    <size android:width="300dp" android:height="80dp" />
                    <stroke android:width="2dp" android:color="#f4f7fc" />
                    <solid android:color="#f4f7fc" />
                </shape>
            </item>
            <item android:width="60dp" android:height="60dp" android:bottom="10dp" android:left="18dp" android:right="10dp" android:top="20dp">
                <rotate android:fromDegrees="45" android:pivotX="50%" android:pivotY="50%">
                    <shape android:shape="rectangle">
                        <solid android:color="#f4f7fc" />
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
</selector>