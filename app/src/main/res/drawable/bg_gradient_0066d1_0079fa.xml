<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<!--create by Martin-->

    <item android:top="00dp"
        android:right="0dp"
        android:left="0dp"
        android:bottom="0dp">
        <rotate android:fromDegrees="0"
            android:pivotX="100%"
            android:pivotY="0%">
            <shape android:shape="rectangle">
                <gradient
                    android:startColor="#0054AC"
                    android:endColor="#0068D6"
                    android:angle="135"/>
            </shape>
        </rotate>
    </item>


</layer-list>