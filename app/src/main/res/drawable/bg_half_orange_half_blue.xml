<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--create by Martin-->
    <item android:top="-0dp"
        android:right="0dp"
        android:left="0dp"
        android:bottom="-00dp">
        <rotate android:fromDegrees="0.5"
            android:pivotX="100%"
            android:pivotY="100%">
            <shape android:shape="rectangle">
                <gradient
                    android:startColor="#FF6502"
                    android:endColor="#F6A744"
                    android:angle="180"/>
            </shape>
        </rotate>
    </item>

    <item android:top="-100dp"
        android:right="00dp"
        android:left="35dp"
        android:bottom="-100dp">
        <rotate android:fromDegrees="22.5"
            android:pivotX="50%"
            android:pivotY="100%">
            <shape android:shape="rectangle">
                <gradient
                    android:startColor="#0079FA"
                    android:endColor="#0079FA"
                    android:angle="180"/>
            </shape>
        </rotate>
    </item>



</layer-list>