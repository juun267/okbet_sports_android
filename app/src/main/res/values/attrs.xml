<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AutoScrollRecyclerView">
        <attr name="speed_dp_sec" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="CustomView">
        <attr name="cvTitle" format="string" />
        <attr name="cvMarginBottom" format="dimension" />
        <attr name="cvTitleTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
            <flag name="bold_italic" value="3" />
        </attr>
        <attr name="cvEnable" format="boolean" />
        <attr name="cvEditable" format="boolean" />
        <attr name="cvCount" format="string" />
        <attr name="cvIcon" format="reference" />
        <attr name="cvDividerColor" format="reference" />
        <attr name="cvHint" format="string" />
        <attr name="cvText" format="string" />
        <attr name="cvEms" format="integer" />
        <attr name="cvTitleMinEms" format="integer" />
        <attr name="necessarySymbol">
            <!-- Visible on screen; the default value. -->
            <enum name="visible" value="0x00000000" />
            <!-- Not displayed, but taken into account during layout (space is left for it). -->
            <enum name="invisible" value="0x00000004" />
            <!-- Completely hidden, as if the view had not been added. -->
            <enum name="gone" value="0x00000008" />
        </attr>
        <attr name="arrowSymbolVisibility">
            <!-- Visible on screen; the default value. -->
            <enum name="visible" value="0x00000000" />
            <!-- Not displayed, but taken into account during layout (space is left for it). -->
            <enum name="invisible" value="0x00000004" />
            <!-- Completely hidden, as if the view had not been added. -->
            <enum name="gone" value="0x00000008" />
        </attr>
        <attr name="cvInputType">
            <!-- Just plain old text.  Corresponds to
            {@link android.text.InputType#TYPE_CLASS_TEXT} |
            {@link android.text.InputType#TYPE_TEXT_VARIATION_NORMAL}. -->
            <flag name="text" value="0x00000001" />
            <!-- Text that is a password.  Corresponds to
            {@link android.text.InputType#TYPE_CLASS_TEXT} |
            {@link android.text.InputType#TYPE_TEXT_VARIATION_PASSWORD}. -->
            <flag name="textPassword" value="0x00000081" />
            <!-- A numeric only field.  Corresponds to
            {@link android.text.InputType#TYPE_CLASS_NUMBER} |
            {@link android.text.InputType#TYPE_NUMBER_VARIATION_NORMAL}. -->
            <flag name="number" value="0x00000002" />
            <flag name="numberPassword" value="0x00000012" />
        </attr>
        <attr name="cvEnableVerificationCode" format="boolean" />
        <attr name="cvEnableMoreBtn" format="boolean" />
        <attr name="cvSpanCount" format="integer" />
    </declare-styleable>

    <declare-styleable name="SpinnerWithTitleAtStartStyle">
        <attr name="titleText" format="string" />
        <attr name="spinnerLayout" format="reference" />
        <attr name="spinnerTitle" format="string" />
        <attr name="spinnerIsShowCloseButton" format="boolean" />
        <attr name="spinnerList" format="reference" />
    </declare-styleable>

    <declare-styleable name="CalendarBottomSheetStyle">
        <attr name="calendarLayout" format="reference" />
        <attr name="dateRange" format="integer" />
    </declare-styleable>

    <declare-styleable name="StatusBottomSheetStyle">
        <attr name="sheetLayout" format="reference" />
        <attr name="defaultStatusText" format="string" />
        <attr name="defaultBottomSheetTitleText" format="string" />
        <attr name="bottomSheetShowCloseButton" format="boolean" />
        <attr name="arrowAtEnd" format="boolean" />
        <attr name="horizontalChainStyle" format="enum">
            <enum name="spread" value="0" />
            <enum name="spread_inside" value="1" />
            <enum name="packed" value="2" />
        </attr>
        <attr name="arrowSrc" format="reference"/>
        <attr name="backgroundFrame" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ToolBarView">
        <attr name="title" format="string" />
        <attr name="fragmentNavGraph" format="reference" />
    </declare-styleable>

    <declare-styleable name="CustomTabLayout">
        <attr name="firstTabText" format="string" />
        <attr name="secondTabText" format="string" />
    </declare-styleable>

    <declare-styleable name="CustomTopToolbar">
        <attr name="topTitleText" format="string" />
    </declare-styleable>

    <declare-styleable name="OddsBetButton">
        <attr name="status" format="enum">
            <enum name="visible" value="0" />
            <enum name="lock" value="1" />
            <enum name="invisible" value="2" />
        </attr>
        <attr name="ouType" format="enum">
            <enum name="oType" value="0" />
            <enum name="uType" value="1" />
        </attr>
        <attr name="topText" format="string" />
        <attr name="bottomText" format="string" />
    </declare-styleable>

    <declare-styleable name="MatchTypeRow">
        <attr name="matchType" format="enum">
            <enum name="in_play" value="0" />
            <enum name="today" value="1" />
            <enum name="early" value="2" />
            <enum name="parlay" value="3" />
            <enum name="outright" value="4" />
            <enum name="at_start" value="5" />
        </attr>
    </declare-styleable>

    <declare-styleable name="GameFilterRow" />

    <declare-styleable name="GameListView" />

    <declare-styleable name="OddButton" />

    <declare-styleable name="OddsButton">
        <attr name="ob_fillet" format="boolean" />
        <attr name="ob_background" format="reference" />
        <attr name="ob_hide_item_flag" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="BottomNavigationItem">
        <attr name="btiTitle" format="string" />
        <attr name="btiIcon" format="reference" />
    </declare-styleable>

    <declare-styleable name="ExtendedEditText">

        <!--Texts-->
        <attr name="prefix" format="string" />
        <attr name="suffix" format="string" />

        <!--Colors-->
        <attr name="prefixTextColor" format="color" />
        <attr name="suffixTextColor" format="color" />

    </declare-styleable>

    <declare-styleable name="TextFieldBoxes">

        <!--Texts-->
        <attr name="labelText" format="string" />
        <attr name="subLabelText" format="string" />
        <attr name="hintText" format="string" />
        <attr name="singleText" format="string" />
        <attr name="helperText" format="string" />


        <!--Colors-->
        <attr name="helperTextColor" format="color" />
        <attr name="mCounterTextColor" format="color" />
        <attr name="errorColor" format="color" />
        <attr name="primaryColor" format="color" />
        <attr name="secondaryColor" format="color" />
        <attr name="panelBackgroundColor" format="color" />

        <!--Characters counter-->
        <attr name="maxCharacters" format="integer" />
        <attr name="minCharacters" format="integer" />

        <!--Others-->
        <attr name="enabled" format="boolean" />
        <attr name="iconSignifier" format="reference" />
        <attr name="endIcon" format="reference" />
        <attr name="isResponsiveIconColor" format="boolean" />
        <attr name="hasClearButton" format="boolean" />
        <attr name="hasFocus" format="boolean" />
        <attr name="alwaysShowHint" format="boolean" />
        <attr name="useDenseSpacing" format="boolean" />
        <attr name="rtl" format="boolean" />
        <attr name="hideSelectedTitle" format="boolean" />

        <!-- Set whether to automaticavalidateErrordate, or only on demand
               @see {@link TextFieldBoxes#setManualValidateError(boolean) } -->
        <attr name="manualValidateError" format="boolean" />

    </declare-styleable>

    <declare-styleable name="SecurityCodeStyleEditText">

        <!--Texts-->
        <attr name="scLabelText" format="string" />
        <attr name="scHintText" format="string" />
        <attr name="scErrorText" format="string" />

        <!--Icon-->
        <attr name="scIcon" format="reference" />


    </declare-styleable>

    <declare-styleable name="HighlightTextView">
        <attr name="highlightColor" format="color|reference"/>
        <attr name="highlightText" format="string"/>
        <attr name="highlightWidth" format="dimension"/>
        <attr name="highlightRadius" format="dimension"/>
        <attr name="highlightBold" format="boolean"/>
        <attr name="highlightTextColor" format="color|reference"/>
    </declare-styleable>

</resources>