<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="160dp"
    android:paddingRight="@dimen/margin_10"
    tools:ignore="ContentDescription, SpUsage">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/card01_element01" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_414655"
            android:textSize="20sp"
            tools:text="足球" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginBottom="9dp"
            android:textColor="@color/color_025BE8"
            android:fontFamily="@font/helvetica_bold"
            android:textStyle="bold"
            android:textSize="32sp"
            tools:text="2290" />

        <View
            android:layout_width="@dimen/margin_30"
            android:layout_height="2dp"
            android:background="@color/color_025BE8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:textColor="@color/color_6C7BA8"
            android:fontFamily="@font/helvetica_bold"
            android:textSize="14sp"
            android:text="场赛事" />


    </LinearLayout>


</FrameLayout>