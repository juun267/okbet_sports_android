<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:layout_width="wrap_content"
    tools:layout_height="wrap_content"
    tools:ignore="ContentDescription, SpUsage">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="bottom"
        app:cardElevation="@dimen/margin_2"
        app:cardCornerRadius="@dimen/margin_8">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:adjustViewBounds="true"
            android:src="@drawable/card_sport_home" />
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_people"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="5dp"
        android:elevation="@dimen/margin_3"
        android:layout_gravity="right"
        android:adjustViewBounds="true"
        android:src="@drawable/card_sport_football" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:elevation="@dimen/margin_4"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="25dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:textColor="@color/color_414655"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="足球" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="@color/color_025BE8"
            android:fontFamily="@font/din_regular"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:text="2290" />

        <View
            android:layout_width="@dimen/margin_30"
            android:layout_height="2dp"
            android:background="@color/color_025BE8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:textColor="@color/color_6C7BA8"
            android:fontFamily="@font/din_regular"
            android:textSize="14sp"
            android:text="@string/sport_match" />


    </LinearLayout>


</FrameLayout>