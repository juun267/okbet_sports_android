<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F0F5FA"
    android:orientation="vertical"
    tools:context=".ui.profileCenter.profile.ProfileActivity">

    <org.cxct.sportlottery.ui.common.CustomTopToolbar
        android:id="@+id/custom_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_F0F5FA" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_30">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_191919_FCFCFC"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/btn_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/margin_14"
                        android:text="@string/avatar"
                        android:textColor="@color/color_BBBBBB_333333"
                        android:textSize="@dimen/textSize14sp" />


                    <RelativeLayout
                        android:id="@+id/rl_head"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_10">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/iv_head"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_centerVertical="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_avatar_default"
                            app:riv_border_color="@color/exo_white"
                            app:riv_border_width="@dimen/margin_1"
                            app:riv_oval="true" />


                        <ImageView
                            android:id="@+id/btn_edit_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:contentDescription="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_icon_editor"
                            app:layout_constraintHorizontal_bias="0" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/color_F0F5FA" />

                <LinearLayout
                    android:id="@+id/btn_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="46dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/nickname"
                        android:textColor="@color/color_BBBBBB_333333"
                        android:textSize="@dimen/textSize14sp" />

                    <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:textColor="@color/color_939393_999999"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="ia***18" />

                    <ImageView
                        android:id="@+id/icon_arrow_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right" />

                    <androidx.legacy.widget.Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="14dp"
                    android:background="@color/color_F0F5FA" />

                <LinearLayout
                    android:id="@+id/btn_pwd_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="46dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:text="@string/password_setting"
                        android:textColor="@color/color_BBBBBB_333333"
                        android:textSize="@dimen/textSize14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/color_F0F5FA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:minHeight="46dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/member_account"
                        android:textColor="@color/color_BBBBBB_333333"
                        android:textSize="@dimen/textSize14sp" />

                    <TextView
                        android:id="@+id/tv_member_account"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="18dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:textColor="@color/color_939393_999999"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="ianlee0518" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="14dp"
                    android:background="@color/color_F0F5FA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="46dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/id"
                        android:textColor="@color/color_BBBBBB_333333"
                        android:textSize="@dimen/textSize14sp" />

                    <TextView
                        android:id="@+id/tv_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="18dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:textColor="@color/color_939393_999999"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="235291" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="14dp"
                    android:background="@color/color_F0F5FA" />

                <LinearLayout
                    android:id="@+id/ll_real_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="46dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/real_name"
                        android:textColor="@color/color_BBBBBB_333333"
                        android:textSize="@dimen/textSize14sp" />

                    <TextView
                        android:id="@+id/tv_real_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:textColor="@color/color_939393_999999"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="ianlee051**" />

                    <ImageView
                        android:id="@+id/icon_real_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right" />

                    <androidx.legacy.widget.Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/color_F0F5FA" />
                <!--  QQ號碼  -->
                <LinearLayout
                    android:id="@+id/ll_qq_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="46dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/qq_number"
                        android:textColor="@color/color_BBBBBB_333333"
                        android:textSize="@dimen/textSize14sp" />

                    <TextView
                        android:id="@+id/tv_qq_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:textColor="@color/color_939393_999999"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="1022423383" />

                    <ImageView
                        android:id="@+id/icon_qq_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right" />

                    <androidx.legacy.widget.Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="14dp"
                    android:background="@color/color_F0F5FA" />

                <!--  郵箱  -->
                <LinearLayout
                    android:id="@+id/ll_e_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="46dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/e_mail"
                        android:textColor="@color/color_BBBBBB_333333"
                        android:textSize="@dimen/textSize14sp" />

                    <TextView
                        android:id="@+id/tv_e_mail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:textColor="@color/color_939393_999999"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="ianlee051＠gmail.com" />

                    <ImageView
                        android:id="@+id/icon_e_mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right" />

                    <androidx.legacy.widget.Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="14dp"
                    android:background="@color/color_F0F5FA" />

                <!--  手機號碼  -->
                <LinearLayout
                    android:id="@+id/ll_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="46dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/phone_number"
                        android:textColor="@color/color_BBBBBB_333333"
                        android:textSize="@dimen/textSize14sp" />

                    <TextView
                        android:id="@+id/tv_phone_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:textColor="@color/color_939393_999999"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="1022423383" />

                    <ImageView
                        android:id="@+id/icon_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right" />

                    <androidx.legacy.widget.Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="14dp"
                    android:background="@color/color_F0F5FA" />

                <!--  微信  -->
                <LinearLayout
                    android:id="@+id/ll_wechat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="46dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/we_chat"
                        android:textColor="@color/color_BBBBBB_333333"
                        android:textSize="@dimen/textSize14sp" />

                    <TextView
                        android:id="@+id/tv_we_chat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:textColor="@color/color_939393_999999"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="2443875459" />

                    <ImageView
                        android:id="@+id/icon_wechat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right" />

                    <androidx.legacy.widget.Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/color_F0F5FA" />

                <LinearLayout
                    android:id="@+id/ll_verified"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="46dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="4dp"
                        android:text="@string/identity"
                        android:textColor="@color/color_BBBBBB_333333"
                        android:textSize="@dimen/textSize14sp" />

                    <TextView
                        android:id="@+id/tv_verified"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/not_verify"
                        android:textAlignment="textEnd"
                        android:textColor="@color/color_E44438_e44438"
                        android:textSize="@dimen/textSize12sp" />

                    <ImageView
                        android:id="@+id/icon_identity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right" />

                    <androidx.legacy.widget.Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="14dp"
                    android:background="@color/color_F0F5FA" />

                <RelativeLayout
                    android:id="@+id/rl_cancel_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="46dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="4dp"
                        android:text="@string/cancel_account"
                        android:textColor="@color/color_BBBBBB_333333"
                        android:textSize="@dimen/textSize14sp" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="20dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right" />


                </RelativeLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btn_sign_out"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_45"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginEnd="@dimen/margin_20"
                android:background="@drawable/ic_sign_out"
                android:text="@string/sign_out"
                android:textColor="@color/exo_white" />
        </LinearLayout>


    </ScrollView>

</LinearLayout>