<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.tabs.TabLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game_tabs"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:tabGravity="center"
    app:tabIndicatorColor="@color/colorBlue"
    app:tabMode="fixed"
    app:tabSelectedTextColor="@color/colorBlue"
    app:tabTextAppearance="@style/TabTextSize"
    app:tabTextColor="@color/colorGray">

    <com.google.android.material.tabs.TabItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_tab_league_odd" />

    <com.google.android.material.tabs.TabItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_tab_outright_odd" />

    <com.google.android.material.tabs.TabItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_tab_price_boosts_odd" />

</com.google.android.material.tabs.TabLayout>
