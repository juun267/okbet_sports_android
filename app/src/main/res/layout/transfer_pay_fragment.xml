        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cv_recharge_upload_evidence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/color_FFFFFF">

            <TextView
                android:id="@+id/tv_upload_evidence"
                android:text="@string/update_voucher"
                android:gravity="center"
                android:textSize="@dimen/margin_14"
                android:textColor="@color/color_D2E4FF_414655"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_14"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"/>
            <View
                android:id="@+id/view_upload"
                android:background="@color/color_eeeeee"
                app:layout_constraintTop_toBottomOf="@+id/tv_upload_evidence"
                android:layout_marginStart="@dimen/margin_14"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <Button
                android:id="@+id/bt_check_files"
                style="?android:attr/borderlessButtonStyle"
                android:text="@string/select_file1"
                android:textColor="@color/color_2b2b2b_ffffff"
                android:textSize="@dimen/textSize14sp"
                android:layout_marginEnd="@dimen/margin_14"
                android:layout_marginTop="@dimen/margin_8"
                android:textAllCaps="false"
                android:background="@drawable/btn_send_sms"
                app:layout_constraintTop_toBottomOf="@+id/view_upload"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="85dp"
                android:layout_height="35dp"/>
            <View
                android:layout_marginTop="@dimen/margin_8"
                android:id="@+id/view_upload2"
                android:background="@color/color_eeeeee"
                android:layout_marginStart="@dimen/margin_14"
                app:layout_constraintTop_toBottomOf="@+id/bt_check_files"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <EditText
                android:id="@+id/tv_hint_upload"
                app:layout_constraintTop_toBottomOf="@+id/view_upload"
                app:layout_constraintBottom_toTopOf="@+id/view_upload2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/bt_check_files"
                android:layout_width="0dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/textSize14sp"
                android:background="@null"
                android:hint="@string/no_select_file"
                android:enabled="false"
                android:textColor="@color/color_FFFFFF_414655"
                android:textColorHint="@color/color_C9CFD7"
                android:layout_marginStart="@dimen/margin_14"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_marginHorizontal="@dimen/margin_14"
            android:layout_marginVertical="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/optional_tips"
            android:textColor="@color/color_E44438_e44438"
            android:textSize="@dimen/textSize12sp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/color_FFFFFF"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:autoSizeMaxTextSize="13dp"
                    android:autoSizeMinTextSize="6dp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/title_current_money"
                    android:textColor="@color/color_9BB3D9_535D76"
                    android:textSize="@dimen/textSize14sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="invisible"
                    android:background="@color/color_1F1F1F_E2E2E2" />

                <TextView
                    android:id="@+id/txv_wallet_money"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="start|center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/color_FFFFFF_414655"
                    android:textSize="@dimen/textSize14sp"
                    tools:text="₱ 15,282.42" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ll_fee_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/title_fee_rate"
                android:layout_marginStart="@dimen/margin_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_E44438_e44438"
                android:textSize="@dimen/textSize12sp"
                tools:text="@string/title_fee_rate" />

            <TextView
                android:id="@+id/tv_fee_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_E44438_e44438"
                android:textSize="@dimen/textSize12sp"
                tools:text="0.500" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
