<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:background="@color/colorWhite1"
    tools:context=".ui.money.recharge.TransferPayFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/title_bank"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textSize13sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorWhite6" />

                <ImageView
                    android:id="@+id/iv_bank_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_bank_default" />

                <TextView
                    android:id="@+id/txv_pay_bank"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="9dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical|left"
                    android:textSize="@dimen/textSize14sp" />

                <ImageView
                    android:id="@+id/iv_click_pay_account"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_gray" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/title_name"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textSize13sp" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="使用者姓名" />

                    <Button
                        android:id="@+id/btn_name_copy"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="45dp"
                        android:layout_height="26dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_3dp_radius_button"
                        android:gravity="center"
                        android:text="@string/btn_copy"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/textSize12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/title_account"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textSize13sp" />

                    <TextView
                        android:id="@+id/tv_account"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="1123456789011111" />

                    <Button
                        android:id="@+id/btn_account_copy"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="45dp"
                        android:layout_height="26dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_3dp_radius_button"
                        android:gravity="center"
                        android:text="@string/btn_copy"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/textSize12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:orientation="horizontal"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:text="@string/title_address"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textSize13sp" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="1dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="上海市浦东大道2851号" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_qr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/title_qr_pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="@string/title_qr_pay"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textSize13sp" />

                        <TextView
                            android:id="@+id/tv_hint_qr_pay"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/title_hint_qr_pay"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textSize12sp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_address"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:maxHeight="110dp"
                        android:maxWidth="110dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        tools:src="@drawable/ic_close_gray_blue" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/title_remark"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textSize13sp" />

                    <TextView
                        android:id="@+id/tv_remark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/title_hint_qr_pay"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="财付通线下充值" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ll_hit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dot"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/textSize12sp" />

            <TextView
                android:id="@+id/tv_hint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/money_recharge_hint1"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/textSize12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_hit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dot"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/textSize12sp" />

            <TextView
                android:id="@+id/tv_hint2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/money_recharge_hint2"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/textSize12sp" />
        </LinearLayout>


        <!-- 充值金額 -->
        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_recharge_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/edt_hint_deposit_money"
            app:cvInputType="number"
            app:cvTitle="@string/title_deposit_money" />

        <!-- 微信 -->
        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_wx_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/edt_hint_wx_id"
            app:cvInputType="text"
            app:cvTitle="@string/title_wx_id" />

        <!-- 認證姓名 -->
        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/edt_hint_check_real_name"
            app:cvInputType="text"
            app:cvTitle="@string/title_real_name" />

        <!-- 銀行卡號 -->
        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_bank_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/edt_hint_bank_account"
            app:cvInputType="number"
            app:cvTitle="@string/title_bank_account" />

        <!-- 暱稱 -->
        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/edt_hint_nick_name"
            app:cvInputType="text"
            app:cvTitle="@string/title_nick_name" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_recharge_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:autoSizeMaxTextSize="13dp"
                    android:autoSizeMinTextSize="6dp"
                    android:autoSizeTextType="uniform"
                    android:ems="4"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/title_recharge_time"
                    android:textColor="@color/colorBlackLight"
                    android:textStyle="bold"
                    android:textSize="@dimen/textSize13sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorWhite6" />


                <TextView
                    android:id="@+id/txv_recharge_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="start|center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="@dimen/textSize12sp"
                    tools:text="2020-13-25 19:35:35 (GMT+8)" />

                <ImageView
                    android:id="@+id/ic_calendar"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_calendar_v4" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:autoSizeMaxTextSize="13dp"
                    android:autoSizeMinTextSize="6dp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:text="@string/title_current_money"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="@dimen/textSize13sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorWhite6" />

                <TextView
                    android:id="@+id/txv_wallet_money"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="start|center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="@dimen/textSize14sp"
                    tools:text="15,282.42 RMB" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ll_fee_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/title_fee_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/textSize12sp"
                tools:text="@string/title_fee_rate" />

            <TextView
                android:id="@+id/tv_fee_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/textSize12sp"
                tools:text="0.500" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/percent"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/textSize12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fee_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/title_fee_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/textSize12sp"
                tools:text="@string/title_fee_amount" />

            <TextView
                android:id="@+id/tv_fee_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/textSize12sp"
                tools:text="12.000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/currency"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/textSize12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_radius_20_button_dusk"
            android:gravity="center"
            android:text="@string/btn_submit"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize16sp"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>

</ScrollView>