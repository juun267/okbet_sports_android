<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_141414_F3F4F5"
    android:overScrollMode="never"
    android:paddingBottom="15dp"
    tools:context=".ui.money.recharge.TransferPayFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_14"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/color_191919_FCFCFC"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/title_bank"
                    android:textColor="@color/color_CCCCCC_000000"
                    android:textSize="@dimen/textSize13sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/color_666666_bcbcbc" />

                <ImageView
                    android:id="@+id/iv_bank_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_bank_default" />

                <TextView
                    android:id="@+id/txv_pay_bank"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="9dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|left"
                    android:textColor="@color/color_CCCCCC_000000"
                    android:textSize="@dimen/textSize14sp" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_gray" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/color_191919_FCFCFC"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="14dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_name"
                        android:textColor="@color/color_CCCCCC_000000"
                        android:textSize="@dimen/textSize13sp" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/color_CCCCCC_000000"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="使用者姓名" />

                    <Button
                        android:id="@+id/btn_name_copy"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_radius_2_button_dusk_stroke"
                        android:gravity="center"
                        android:minWidth="48dp"
                        android:paddingHorizontal="4dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="@string/btn_copy"
                        android:textAllCaps="false"
                        android:textColor="@color/color_025BE8"
                        android:textSize="@dimen/textSize12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_account"
                        android:textColor="@color/color_CCCCCC_000000"
                        android:textSize="@dimen/textSize13sp" />

                    <TextView
                        android:id="@+id/tv_account"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/color_CCCCCC_000000"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="1123456789011111" />

                    <Button
                        android:id="@+id/btn_account_copy"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_radius_2_button_dusk_stroke"
                        android:gravity="center"
                        android:minWidth="48dp"
                        android:paddingHorizontal="4dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="@string/btn_copy"
                        android:textAllCaps="false"
                        android:textColor="@color/color_025BE8"
                        android:textSize="@dimen/textSize12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/title_address"
                        android:textColor="@color/color_CCCCCC_000000"
                        android:textSize="@dimen/textSize13sp" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="1dp"
                        android:textColor="@color/color_CCCCCC_000000"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="上海市浦东大道2851号" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_qr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_qr_pay"
                        android:textColor="@color/color_CCCCCC_000000"
                        android:textSize="@dimen/textSize13sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="40dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_address"
                                android:layout_width="wrap_content"
                                android:layout_height="110dp"
                                android:adjustViewBounds="true"
                                android:maxWidth="110dp"
                                android:maxHeight="110dp"
                                android:scaleType="fitCenter"
                                tools:src="@drawable/ic_close_gray_blue" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_14"
                                android:text="@string/title_hint_qr_pay"
                                android:textColor="@color/color_CCCCCC_000000"
                                android:textSize="@dimen/textSize12sp" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/log_detail_reason"
                        android:textColor="@color/color_CCCCCC_000000"
                        android:textSize="@dimen/textSize13sp" />

                    <TextView
                        android:id="@+id/tv_remark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/title_hint_qr_pay"
                        android:textColor="@color/color_E23434"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="财付通线下充值" />

                    <Button
                        android:id="@+id/btn_remaks_copy"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_radius_2_button_dusk_stroke"
                        android:gravity="center"
                        android:minWidth="48dp"
                        android:paddingHorizontal="4dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="@string/btn_copy"
                        android:textAllCaps="false"
                        android:textColor="@color/color_025BE8"
                        android:textSize="@dimen/textSize12sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dot"
                android:textColor="@color/color_E44438_e44438"
                android:textSize="@dimen/textSize12sp" />

            <TextView
                android:id="@+id/tv_hint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/money_recharge_hint1"
                android:textColor="@color/color_E44438_e44438"
                android:textSize="@dimen/textSize12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_hit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dot"
                android:textColor="@color/color_E44438_e44438"
                android:textSize="@dimen/textSize12sp" />

            <TextView
                android:id="@+id/tv_hint2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/money_recharge_hint2"
                android:textColor="@color/color_E44438_e44438"
                android:textSize="@dimen/textSize12sp" />
        </LinearLayout>

        <!-- 充值金額 -->
        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_recharge_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/edt_hint_deposit_money"
            app:cvInputType="number"
            app:cvTextColor="@color/color_9BB3D9_535D76"
            app:cvTitle="@string/title_deposit_money" />

        <!-- 微信 -->
        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_wx_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/edt_hint_wx_id"
            app:cvInputType="text"
            app:cvTextColor="@color/color_9BB3D9_535D76"
            app:cvTitle="@string/title_wx_id" />

        <!-- 認證姓名 -->
        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/edt_hint_check_real_name"
            app:cvInputType="text"
            app:cvTextColor="@color/color_9BB3D9_535D76"
            app:cvTitle="@string/title_real_name" />

        <!-- 銀行卡號 -->
        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_bank_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/please_enter_bank_card_rule"
            app:cvInputType="number"
            app:cvTextColor="@color/color_9BB3D9_535D76"
            app:cvTitle="@string/title_bank_account" />

        <!-- 暱稱 -->
        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/edt_hint_nick_name"
            app:cvInputType="text"
            app:cvTextColor="@color/color_9BB3D9_535D76"
            app:cvTitle="@string/title_nick_name" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_recharge_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/color_191919_FCFCFC"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:autoSizeMaxTextSize="13dp"
                    android:autoSizeMinTextSize="6dp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/title_recharge_time"
                    android:textColor="@color/color_9BB3D9_535D76"
                    android:textSize="@dimen/textSize13sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/color_1F1F1F_E2E2E2" />


                <TextView
                    android:id="@+id/txv_recharge_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="start|center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/color_BBBBBB_333333"
                    android:textSize="@dimen/textSize12sp"
                    app:autoSizeMaxTextSize="@dimen/textSize12sp"
                    app:autoSizeMinTextSize="@dimen/textSize8sp"
                    app:autoSizeTextType="uniform"
                    tools:text="2020-13-25 19:35:35 (GMT+8)" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_icon_timev_01" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/color_191919_FCFCFC"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:autoSizeMaxTextSize="13dp"
                    android:autoSizeMinTextSize="6dp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/title_current_money"
                    android:textColor="@color/color_9BB3D9_535D76"
                    android:textSize="@dimen/textSize13sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/color_1F1F1F_E2E2E2" />

                <TextView
                    android:id="@+id/txv_wallet_money"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="start|center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/color_FFFFFF_414655"
                    android:textSize="@dimen/textSize14sp"
                    tools:text="₱ 15,282.42" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ll_fee_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/title_fee_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_E44438_e44438"
                android:textSize="@dimen/textSize12sp"
                tools:text="@string/title_fee_rate" />

            <TextView
                android:id="@+id/tv_fee_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_E44438_e44438"
                android:textSize="@dimen/textSize12sp"
                tools:text="0.500" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/percent"
                android:textColor="@color/color_E44438_e44438"
                android:textSize="@dimen/textSize12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fee_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/title_fee_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_E44438_e44438"
                android:textSize="@dimen/textSize12sp"
                tools:text="@string/title_fee_amount" />


            <TextView
                android:id="@id/tv_currency_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/color_E44438_e44438"
                android:textSize="@dimen/textSize12sp"
                tools:text="$" />

            <TextView
                android:id="@+id/tv_fee_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/color_E44438_e44438"
                android:textSize="@dimen/textSize12sp"
                tools:text="12.000" />


        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/margin_20"
            android:background="@drawable/ic_submit"
            android:gravity="center"
            android:text="@string/btn_submit"
            android:textColor="@color/color_FFFFFF_FFFFFF"
            android:textSize="@dimen/textSize16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_20"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customer_service"
                android:textColor="@color/color_A5A9B3"
                android:textSize="@dimen/textSize14sp" />

            <TextView
                android:id="@+id/tv_customer_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_service"
                android:textColor="@color/color_025BE8"
                android:textSize="@dimen/textSize14sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>