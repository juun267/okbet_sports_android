<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_marginRight="@dimen/margin_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/margin_5">

        <ImageView
           android:id="@+id/ivIcon"
           android:layout_width="@dimen/margin_24"
           android:layout_height="@dimen/margin_24"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/color_home_black_white"
            android:textSize="@dimen/textSize10sp"
            android:text="hot"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linMaintenance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/margin_5"
        android:visibility="gone"
        android:clickable="true"
        android:background="@drawable/bg_home_menu_maintenance">

        <ImageView
            android:layout_width="@dimen/margin_24"
            android:layout_height="@dimen/margin_24"
            android:src="@drawable/ic_home_menu_maintenance"/>
    </LinearLayout>

</FrameLayout>