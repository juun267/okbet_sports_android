<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_radius_8"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="44dp"
        android:paddingHorizontal="26dp"
        android:paddingVertical="@dimen/margin_12"
        android:textColor="@color/color_CCCCCC_000000"
        android:textSize="@dimen/textSize16sp"
        android:textStyle="bold"
        tools:text="工商银行停用通知" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:fillViewport="true"
        android:overScrollMode="never">

        <TextView
            android:id="@+id/txv_detail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:paddingHorizontal="26dp"
            android:paddingVertical="11dp"
            android:textColor="@color/color_BBBBBB_333333"
            android:textSize="@dimen/textSize12sp"
            tools:text="公告假文：\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n人护是仍现升诗时坐价一！有孩维样的师中院？大倒发机，说广的西家时，种常的形小质到不功片统业，友年度器量居味静，告作头这城思没师王保，心有作况业后去，了选下步，到去般分想后史位当步那已；家前的…" />

    </ScrollView>

    <View
        android:id="@+id/info_center_detail_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_191919_EEEFF0" />

    <Button
        android:id="@+id/info_center_detail_confirm"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="@string/btn_confirm"
        android:textColor="@color/color_317FFF_0760D4"
        android:textSize="@dimen/textSize16sp"
        android:textStyle="bold" />

</LinearLayout>


