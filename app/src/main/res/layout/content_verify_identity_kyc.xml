<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_F0F5FA"
    android:paddingBottom="14dp">

    <ImageView
        android:id="@+id/img_ic_kyc"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_id_card_kyc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="@string/kyc_valid"
        android:textColor="@color/color_BBBBBB_333333"
        android:textSize="@dimen/textSize14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_ic_kyc"
        app:layout_constraintStart_toEndOf="@+id/img_ic_kyc"
        app:layout_constraintTop_toTopOf="@+id/img_ic_kyc"
        tools:text="有效证件" />

    <TextView
        android:id="@+id/txv_title_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/kyc_type"
        android:textColor="@color/color_BBBBBB_333333"
        android:textSize="@dimen/textSize14sp"
        app:layout_constraintStart_toStartOf="@+id/img_ic_kyc"
        app:layout_constraintTop_toBottomOf="@+id/img_ic_kyc"
        tools:text="证件类型" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_type"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/bg_radius_4_edittext_unfocus"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txv_title_type"
        app:layout_constraintTop_toBottomOf="@+id/txv_title_type">


        <org.cxct.sportlottery.ui.component.StatusSpinnerView
            android:id="@+id/selector_type"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:defaultStatusText="请选择证件类型"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textGravity="left|center_vertical" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txv_title_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/kyc_num"
        android:textColor="@color/color_BBBBBB_333333"
        android:textSize="@dimen/textSize14sp"
        app:layout_constraintStart_toStartOf="@+id/cl_type"
        app:layout_constraintTop_toBottomOf="@+id/cl_type"
        tools:text="证件号码" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_num"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/bg_radius_4_edittext_unfocus"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txv_title_num"
        app:layout_constraintTop_toBottomOf="@+id/txv_title_num">

        <EditText
            android:id="@+id/ed_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:background="@null"
            android:hint="@string/kyc_enter_id_num"
            android:inputType="number"
            android:letterSpacing="0.05"
            android:textColor="@color/color_cccccc"
            android:textColorHint="@color/color_cccccc"
            android:textSize="@dimen/textSize12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:hint="请输入证件号码" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_etIdentityType"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_num">


        <RelativeLayout
            android:id="@+id/etIdentityType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/exo_white"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_14"
                android:text="@string/type_of_certificate"
                android:textColor="@color/color_414655"
                android:textSize="@dimen/textSize14sp" />

            <ImageView
                android:id="@+id/iv_recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_toEndOf="@+id/tv_title"
                android:src="@drawable/ic_recharge_copy_30_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_toEndOf="@+id/iv_recharge"
                android:text="@string/pls_file_type"
                android:textColor="@color/color_C9CFD7"
                android:textSize="@dimen/textSize14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_20"
                android:src="@drawable/ic_arrow_gray" />
        </RelativeLayout>


        <View
            android:id="@+id/identityTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="@id/etIdentityType"
            app:layout_constraintTop_toTopOf="@id/etIdentityType" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_pic"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/bg_radius_4_kyc_selected_frame"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_etIdentityType"
        tools:background="@drawable/bg_radius_4_edittext_focus_ff9200">

        <View
            android:id="@+id/pic_frame"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_radius_0_edittext_unfocus_dashgap"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_pic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_id_card_demo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/btn_add_pic"
            android:layout_width="54dp"
            android:layout_height="26dp"
            android:background="@drawable/bg_radius_2_button_2b87ff"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_plus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="@string/kyc_add"
                android:textColor="@color/home_card_text_color"
                android:textSize="@dimen/textSize12sp"
                android:textStyle="bold"
                tools:text="添加" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/img_tri"
        android:layout_width="22dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_check_cart"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/cl_num"
        app:layout_constraintTop_toBottomOf="@+id/cl_num" />

    <TextView
        android:id="@+id/tvUploadTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/ic_tip_red"
        android:drawablePadding="@dimen/margin_4"
        android:text="@string/upload_tips"
        android:textColor="@color/color_D65752"
        android:textSize="@dimen/textSize12sp"
        app:layout_constraintStart_toStartOf="@+id/cl_pic"
        app:layout_constraintTop_toBottomOf="@+id/cl_pic" />

    <TextView
        android:id="@+id/tvUploadTip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:drawableLeft="@drawable/ic_tip_red"
        android:drawablePadding="@dimen/margin_4"
        android:text="@string/upload_photo_tips"
        android:textColor="@color/color_D65752"
        android:textSize="@dimen/textSize12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvUploadTip"
        app:layout_constraintTop_toBottomOf="@+id/tvUploadTip"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>