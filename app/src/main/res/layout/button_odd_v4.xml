<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/odd_button_v4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_button_odd_bg"
    android:maxWidth="100dp"
    android:maxHeight="50dp">

    <TextView
        android:id="@+id/odd_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/selector_button_odd_top_text2"
        android:textSize="@dimen/textSize13sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/odd_bottom_text"
        app:layout_constraintEnd_toStartOf="@id/odd_top_text"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="spUsage"
        tools:text="U"
        tools:textColor="@color/colorGrayLight"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/odd_top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:textColor="@color/selector_button_odd_top_text"
        android:textSize="@dimen/textSize14sp"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@id/odd_type_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/odd_type_text"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="spUsage"
        tools:text="0/0.5"
        tools:textColor="@color/colorRedDark"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/odd_bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:textColor="@color/selector_button_odd_bottom_text"
        android:textSize="@dimen/textSize15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/odd_type_text"
        tools:ignore="spUsage"
        tools:text="1.067"
        tools:textColor="@color/colorBlack" />

    <ImageView
        android:id="@+id/odd_lock_v4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_button_odd_bg_lock"
        android:scaleType="center"
        android:src="@drawable/ic_iconlock"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="contentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>