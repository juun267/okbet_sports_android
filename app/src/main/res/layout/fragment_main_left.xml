<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        android:orientation="vertical"
        tools:background="@drawable/bg_home_menu_left">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_24"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="@dimen/margin_50"
                android:text="@string/setting"
                android:textColor="@color/color_FFF3E1"
                android:textSize="24dp" />
            <TextView
                android:id="@+id/iv_menu_back"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:drawableEnd="@drawable/ic_back"
                android:textColor="@color/color_FFF3E1"
                android:textSize="24dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lin_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp">

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:src="@drawable/ic_message" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:text="@string/my_message"
                        android:textColor="@color/color_2b2b2b_ffffff"
                        android:textSize="@dimen/textSize14sp" />

                    <TextView
                        android:id="@+id/tv_message_count"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_16"
                        android:layout_marginLeft="-4dp"
                        android:layout_marginTop="-8dp"
                        android:background="@drawable/bg_red_radius_8"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:minWidth="@dimen/margin_16"
                        android:paddingHorizontal="@dimen/margin_4"
                        android:text="2"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="@dimen/textSize12sp" />

                    <androidx.legacy.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_arrow_gray_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="64dp"
                    android:alpha="0.1"
                    android:background="@color/color_FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_odds_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp">

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:src="@drawable/ic_odd_type" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_10"
                        android:layout_weight="1"
                        android:text="@string/left_menu_odds_type_setting"
                        android:textColor="@color/color_2b2b2b_ffffff"
                        android:textSize="@dimen/textSize14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:src="@drawable/selector_arrow_right_up" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="64dp"
                    android:alpha="0.1"
                    android:background="@color/color_FFFFFF" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_odds_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="26dp"
                    android:visibility="gone"
                    tools:itemCount="4"
                    tools:listitem="@layout/item_odds_type"
                    tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_betting_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp">

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:src="@drawable/ic_betting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_10"
                        android:layout_weight="1"
                        android:text="@string/betting_setting"
                        android:textColor="@color/color_2b2b2b_ffffff"
                        android:textSize="@dimen/textSize14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:src="@drawable/selector_arrow_right_up" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="64dp"
                    android:alpha="0.1"
                    android:background="@color/color_FFFFFF" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_odds_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="26dp"
                    android:visibility="gone"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_odds_type"
                    tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp">

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:src="@drawable/ic_language" />

                    <TextView
                        android:id="@+id/tv_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_10"
                        android:layout_weight="1"
                        android:text="@string/language_en"
                        android:textColor="@color/color_2b2b2b_ffffff"
                        android:textSize="@dimen/textSize14sp" />

                    <ImageView
                        android:id="@+id/iv_language"
                        android:layout_width="@dimen/margin_24"
                        android:layout_height="@dimen/margin_24"
                        android:layout_marginRight="@dimen/margin_10"
                        tools:src="@drawable/ic_flag_cn" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:src="@drawable/selector_arrow_right_up" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="64dp"
                    android:alpha="0.1"
                    android:background="@color/color_FFFFFF" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="26dp"
                    android:visibility="gone"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_language"
                    tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_appearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp">

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:src="@drawable/ic_skin" />

                    <TextView
                        android:id="@+id/tv_appearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_10"
                        android:layout_weight="1"
                        android:text="@string/skin_mode"
                        android:textColor="@color/color_2b2b2b_ffffff"
                        android:textSize="@dimen/textSize14sp" />

                    <CheckBox
                        android:id="@+id/cb_appearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/selector_skin_switch" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="64dp"
                    android:alpha="0.1"
                    android:background="@color/color_FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp">

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:src="@drawable/ic_customer_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_10"
                        android:layout_weight="1"
                        android:text="@string/btn_service"
                        android:textColor="@color/color_2b2b2b_ffffff"
                        android:textSize="@dimen/textSize14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_arrow_gray_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="64dp"
                    android:alpha="0.1"
                    android:background="@color/color_FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp">

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:src="@drawable/ic_problem" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_10"
                        android:layout_weight="1"
                        android:text="@string/faqs"
                        android:textColor="@color/color_2b2b2b_ffffff"
                        android:textSize="@dimen/textSize14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_arrow_gray_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="64dp"
                    android:alpha="0.1"
                    android:background="@color/color_FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_timezone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp">

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:src="@drawable/ic_timezone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_10"
                        android:layout_weight="1"
                        android:text="@string/timezone_change"
                        android:textColor="@color/color_2b2b2b_ffffff"
                        android:textSize="@dimen/textSize14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_arrow_gray_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="64dp"
                    android:alpha="0.1"
                    android:background="@color/color_FFFFFF" />
            </LinearLayout>
        </LinearLayout>

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="@dimen/margin_68" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_affiliate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:layout_marginVertical="@dimen/margin_10"
                    android:text="@string/btm_navigation_affiliate"
                    android:textColor="@color/color_2b2b2b_ffffff"
                    android:textSize="@dimen/textSize12sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/margin_12"
                    android:alpha="0.4"
                    android:background="@color/color_FFFFFF" />

                <TextView
                    android:id="@+id/tv_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:layout_marginVertical="@dimen/margin_10"
                    android:text="@string/contact"
                    android:textColor="@color/color_2b2b2b_ffffff"
                    android:textSize="@dimen/textSize12sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/margin_12"
                    android:alpha="0.4"
                    android:background="@color/color_FFFFFF" />

                <TextView
                    android:id="@+id/tv_about_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:layout_marginVertical="@dimen/margin_10"
                    android:text="@string/about_us"
                    android:textColor="@color/color_2b2b2b_ffffff"
                    android:textSize="@dimen/textSize12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_responsible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:layout_marginVertical="@dimen/margin_10"
                    android:text="@string/responsible"
                    android:textColor="@color/color_2b2b2b_ffffff"
                    android:textSize="@dimen/textSize12sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/margin_12"
                    android:alpha="0.4"
                    android:background="@color/color_FFFFFF" />

                <TextView
                    android:id="@+id/tv_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:layout_marginVertical="@dimen/margin_10"
                    android:text="@string/terms_conditions"
                    android:textColor="@color/color_2b2b2b_ffffff"
                    android:textSize="@dimen/textSize12sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/margin_12"
                    android:alpha="0.4"
                    android:background="@color/color_FFFFFF" />

                <TextView
                    android:id="@+id/tv_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:layout_marginVertical="@dimen/margin_10"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/color_2b2b2b_ffffff"
                    android:textSize="@dimen/textSize12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>