<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_egame">

        <include
            android:id="@+id/lin_toolbar"
            layout="@layout/view_toolbar_home" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tab_home"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="@dimen/margin_15"
            tools:itemCount="6"
            tools:listitem="@layout/item_tab_home" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.legacy.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    />
                <ImageView
                    android:id="@+id/iv_elec_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:src="@drawable/ic_elec_title" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:gravity="bottom">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_slot_second"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="50dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_second_game_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/color_2b2b2b_ffffff"
                        android:textSize="12sp"
                        tools:text="游戏名称" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/color_2b2b2b_ffffff"
                        android:textSize="10sp"
                        android:text="@string/total_reward_amount" />

                    <TextView
                        android:id="@+id/tv_second_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:minWidth="60dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_white_radius_10"
                        android:fontFamily="@font/din_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="10dp"
                    tools:text="P123.343"
                    android:textColor="@color/color_F73C6C"
                    android:textSize="13sp" />
            </LinearLayout>
        </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_slot_first"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="60dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_first_game_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/color_2b2b2b_ffffff"
                        android:textSize="12sp"
                        tools:text="游戏名称" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/color_2b2b2b_ffffff"
                        android:textSize="10sp"
                        android:text="@string/total_reward_amount" />

                    <TextView
                        android:id="@+id/tv_first_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:minWidth="60dp"
                        android:paddingHorizontal="10dp"
                        android:layout_marginTop="5dp"
                        android:includeFontPadding="false"
                    android:gravity="center"
                    android:background="@drawable/bg_white_radius_10"
                    tools:text="P123.343"
                    android:textSize="13sp"
                    android:textColor="@color/color_F1A932"
                    android:fontFamily="@font/din_bold" />
            </LinearLayout>
        </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_slot_third"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="45dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_third_game_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        tools:text="游戏名称"
                        android:textColor="@color/color_2b2b2b_ffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/total_reward_amount"
                        android:textColor="@color/color_2b2b2b_ffffff"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_third_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_white_radius_10"
                        android:fontFamily="@font/din_bold"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:minWidth="60dp"
                        android:paddingHorizontal="10dp"
                        android:textColor="@color/color_0789F5"
                        android:textSize="13sp"
                        tools:text="P123.343" />
            </LinearLayout>
        </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_12"
        android:background="@color/color_E1EAF2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_F1F5FA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="18dp"
            android:layout_marginHorizontal="@dimen/margin_15"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="SpUsage, ContentDescription">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/ic_hot_recommended" />

            <TextView
                android:id="@+id/tv_hot_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="@string/hot_elec_game"
                android:textAllCaps="true"
                android:textColor="@color/color_414655"
                android:textSize="@dimen/textSize14sp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_elec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            tools:itemCount="6"
            tools:listitem="@layout/item_home_elec"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/lin_empty_game"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_slot_empty" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:textSize="15sp"
                android:textColor="@color/color_A7B2C4"
                android:text="@string/dont_have_game" />
        </LinearLayout>
    </LinearLayout>
        </androidx.core.widget.NestedScrollView>
</LinearLayout>
</LinearLayout>
