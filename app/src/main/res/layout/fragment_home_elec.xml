<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:background="@color/background"
    android:orientation="vertical">

    <include
        android:id="@+id/lin_toolbar"
        layout="@layout/view_toolbar_home" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tab_home"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="@dimen/margin_15"
        tools:itemCount="6"
        tools:listitem="@layout/item_tab_home" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="5dp"
        android:src="@drawable/ic_elec_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:src="@drawable/bg_slot_second"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="50dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/color_2b2b2b_ffffff"
                    android:textSize="12sp"
                    android:text="@string/total_reward_amount" />

                <TextView
                    android:id="@+id/tv_second_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_white_radius_10"
                    android:fontFamily="@font/din_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="10dp"
                    android:text="P123.343"
                    android:textColor="@color/color_F73C6C"
                    android:textSize="13sp" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="-10dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:src="@drawable/bg_slot_first"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="50dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/color_2b2b2b_ffffff"
                    android:textSize="12sp"
                    android:text="@string/total_reward_amount" />

                <TextView
                    android:id="@+id/tv_first_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginTop="5dp"
                    android:includeFontPadding="false"
                    android:gravity="center"
                    android:background="@drawable/bg_white_radius_10"
                    android:text="P123.343"
                    android:textSize="13sp"
                    android:textColor="@color/color_F1A932"
                    android:fontFamily="@font/din_bold" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="-10dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:src="@drawable/bg_slot_third"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="50dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/color_2b2b2b_ffffff"
                    android:textSize="12sp"
                    android:text="@string/total_reward_amount" />

                <TextView
                    android:id="@+id/tv_third_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginTop="5dp"
                    android:includeFontPadding="false"
                    android:gravity="center"
                    android:background="@drawable/bg_white_radius_10"
                    android:text="P123.343"
                    android:textSize="13sp"
                    android:textColor="@color/color_0789F5"
                    android:fontFamily="@font/din_bold" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_12"
        android:background="@color/color_E1EAF2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_F1F5FA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="18dp"
            android:layout_marginHorizontal="@dimen/margin_15"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="SpUsage, ContentDescription">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/ic_hot_recommended" />

            <TextView
                android:id="@+id/tv_hot_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="@string/hot_elec_game"
                android:textAllCaps="true"
                android:textColor="@color/color_414655"
                android:textSize="@dimen/textSize14sp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_elec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp" />
    </LinearLayout>
</LinearLayout>
