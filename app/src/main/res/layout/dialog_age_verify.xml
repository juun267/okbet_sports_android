<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_15"
        android:background="@drawable/bg_age_verify"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_30"
        android:gravity="top">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_logo_21"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="@dimen/margin_12"
            android:text="Please read our Reponsible Gaming \n guidelines carefully:"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:id="@+id/llContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/ivCheck1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/selector_login_checked"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="left"
                    android:lineSpacingExtra="3dp"
                    android:text="I am over 21 years of age. "
                    android:textColor="@color/color_0D2245"
                    android:textColorLink="@color/color_025BE8"
                    android:textSize="@dimen/textSize12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/ivCheck2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/selector_login_checked"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="left"
                    android:lineSpacingExtra="3dp"
                    android:text="I am not a government official, or employee connected directly with the operation of the Government or any of its agencies, member of the Armed Forces of the Philippines, including the Army, Navy, Air Force, or the Philippine National Police. "
                    android:textColor="@color/color_0D2245"
                    android:textColorLink="@color/color_025BE8"
                    android:textSize="@dimen/textSize12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/ivCheck3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/selector_login_checked"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="left"
                    android:lineSpacingExtra="3dp"
                    android:text="I am not a Gaming Employment License (GEL) holder."
                    android:textColor="@color/color_0D2245"
                    android:textColorLink="@color/color_025BE8"
                    android:textSize="@dimen/textSize12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/ivCheck4"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/selector_login_checked"/>

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="left"
                    android:lineSpacingExtra="3dp"
                    android:text="I have read and agree to OKBet's Terms &amp; Conditions."
                    android:textColor="@color/color_0D2245"
                    android:textColorLink="@color/color_025BE8"
                    android:textSize="@dimen/textSize12sp" />

            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cbAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_30"
            android:layout_marginTop="@dimen/margin_12"
            android:drawableLeft="@drawable/selector_login_checked"
            android:drawablePadding="@dimen/margin_5"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="3dp"
            android:text="@string/dialog_age_verify_hint"
            android:textColor="@color/color_0D2245"
            android:textColorLink="@color/color_025BE8"
            android:textSize="@dimen/textSize12sp" />

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="@dimen/margin_16"
            android:background="@drawable/selector_button_default"
            android:gravity="center"
            android:text="@string/dialog_age_verify_confirm"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/textSize16sp" />

        <TextView
            android:id="@+id/btn_exit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="@dimen/margin_16"
            android:background="@drawable/bg_gray_radius_8_stroke_6c7ba8"
            android:gravity="center"
            android:text="@string/dialog_age_verify_exit"
            android:textColor="@color/color_6C7BA8"
            android:textSize="@dimen/textSize16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5"
            android:layout_marginHorizontal="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@color/color_E3E8EE" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="26dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/img_pagcor_h" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:adjustViewBounds="true"
                android:src="@drawable/img_keep21_h" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
