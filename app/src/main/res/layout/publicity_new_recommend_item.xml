<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="SpUsage, ContentDescription">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvBlock"
        android:layout_width="285dp"
        android:layout_height="136dp"
        android:layout_marginVertical="@dimen/margin_10"
        app:cardBackgroundColor="@color/color_202020_FCFCFC"
        app:cardCornerRadius="@dimen/margin_6"
        app:cardElevation="@dimen/margin_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_game_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/teamInfoBlock"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/oddsBlock"
                app:layout_constraintTop_toBottomOf="@id/cl_game">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_home_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="@dimen/margin_9"
                        android:scaleType="centerInside"
                        tools:src="@drawable/bg_recommend_game_default" />

                    <TextView
                        android:id="@+id/tv_home_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_10"
                        android:layout_marginBottom="8dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:textColor="@color/color_BBBBBB_333333"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="Atleticon Nacional" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvVs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="@string/verse_upper"
                            android:textColor="@color/color_BBBBBB_333333"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            tools:visibility="gone"/>

                        <LinearLayout
                            android:id="@+id/blockScore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvHomeScore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingStart="4dp"
                                android:paddingEnd="4dp"
                                android:includeFontPadding="false"
                                android:textColor="@color/color_317FFF_0760D4"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                tools:text="1" />

                            <TextView
                                android:id="@+id/tvScore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:text="@string/colon"
                                android:textColor="@color/color_317FFF_0760D4"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvAwayScore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="4dp"
                                android:paddingEnd="4dp"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:textColor="@color/color_317FFF_0760D4"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                tools:text="2" />
                        </LinearLayout>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_game_play_cate_code_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:textColor="@color/color_999999_999999"
                        android:textSize="@dimen/textSize12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Handicap" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_away_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="@dimen/margin_9"
                        android:scaleType="centerInside"
                        tools:src="@drawable/bg_recommend_game_default" />

                    <TextView
                        android:id="@+id/tv_away_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_10"
                        android:layout_marginBottom="8dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:textColor="@color/color_BBBBBB_333333"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="Junior Barranquilla" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvLeagueName"
                android:layout_width="110dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:textColor="@color/color_BBBBBB_333333"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/cl_game"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Mogolia,1st Leag Mogolia,1st Leag" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/blockNormalGame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/ivLiveIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tvGameStatus"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvGameStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="4dp"
                        android:textColor="@color/color_999999_999999"
                        android:textSize="@dimen/textSize12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="2ND" />

                    <TextView
                        android:id="@+id/tv_game_play_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="4dp"
                        android:textColor="@color/color_999999_999999"
                        android:textSize="@dimen/textSize12sp"
                        app:layout_constraintStart_toEndOf="@id/tvGameStatus"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="09:15" />

                    <TextView
                        android:id="@+id/tvGameSpt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/color_999999_999999"
                        android:textSize="@dimen/textSize12sp"
                        app:layout_constraintStart_toEndOf="@id/tv_game_play_time"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="/5" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <include
                    android:id="@+id/contentBaseballStatus"
                    layout="@layout/content_baseball_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvPlayCateCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_6"
                    android:layout_marginEnd="@dimen/margin_6"
                    android:background="@drawable/bg_publicity_recommend_count"
                    android:drawablePadding="1dp"
                    android:gravity="start"
                    android:minWidth="37dp"
                    android:padding="0dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="2dp"
                    android:textColor="@color/color_FFFFFF_FFFFFF"
                    android:textSize="@dimen/textSize12sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_arrow_right_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="120" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/oddsBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/teamInfoBlock">

                <org.cxct.sportlottery.ui.game.widget.OddsButtonPublicity
                    android:id="@+id/oddBtn1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="7dp"
                    android:layout_weight="1" />

                <org.cxct.sportlottery.ui.game.widget.OddsButtonPublicity
                    android:id="@+id/oddBtn2"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>