<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".ui.game.menu.LeftMenuFragment"
    tools:ignore="SpUsage,RtlSymmetry,ContentDescription">

        <TextView
            android:id="@+id/tv_odds_type"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawablePadding="10dp"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:text="@string/left_menu_odds_type_setting"
            android:textColor="@color/colorBlackLight"
            app:drawableStartCompat="@drawable/ic_menu_odds_type" />

        <TextView
            android:id="@+id/tv_appearance"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawablePadding="10dp"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:text="@string/appearance"
            android:textColor="@color/colorBlackLight"
            app:drawableStartCompat="@drawable/ic_night_mode" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/colorWhite6"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/txv_news_center"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:singleLine="true"
            android:text="@string/infomation_center"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ct_game_rule"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawablePadding="10dp"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:text="@string/game_rule"
            android:textColor="@color/colorBlackLight"
            app:drawableStartCompat="@drawable/ic_menu_game_rule2" />

</LinearLayout>