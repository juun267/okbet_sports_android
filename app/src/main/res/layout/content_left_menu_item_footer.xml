<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_191919_FCFCFC"
    android:orientation="vertical"
    tools:context=".ui.game.menu.LeftMenuFragment"
    tools:ignore="SpUsage,RtlSymmetry,ContentDescription">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/color_2B2B2B_e2e2e2"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_odds_type"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawablePadding="10dp"
        android:gravity="start|center_vertical"
        android:paddingStart="20dp"
        android:text="@string/left_menu_odds_type_setting"
        android:textColor="@color/color_BBBBBB_333333"
        android:textSize="@dimen/textSize14sp"
        app:drawableStartCompat="@drawable/ic_setting" />



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/color_1F1F1F_E2E2E2"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:singleLine="true"
        android:text="@string/infomation_center"
        android:textColor="@color/color_BBBBBB_333333"
        android:textSize="@dimen/textSize14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ct_game_rule"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawablePadding="10dp"
        android:gravity="start|center_vertical"
        android:paddingStart="20dp"
        android:text="@string/game_rule"
        android:textColor="@color/color_BBBBBB_333333"
        android:textSize="@dimen/textSize14sp"
        app:drawableStartCompat="@drawable/icon_game_rule" />

    <TextView
        android:id="@+id/ct_news"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawablePadding="10dp"
        android:gravity="start|center_vertical"
        android:paddingStart="20dp"
        android:text="@string/news"
        android:textColor="@color/color_BBBBBB_333333"
        android:textSize="@dimen/textSize14sp"
        app:drawableStartCompat="@drawable/ic_news" />

</LinearLayout>