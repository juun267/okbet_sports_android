<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpUsage">

    <data>
        <variable
            name="row"
            type="org.cxct.sportlottery.network.bet.settledDetailList.Row" />

<!--        <variable-->
<!--            name="matchOdd"-->
<!--            type="org.cxct.sportlottery.network.bet.MatchOdd" />-->


    </data>

    <LinearLayout
        android:id="@+id/linear_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="14dp"
        app:layout_constraintBottom_toTopOf="@id/btn_back_to_top"
        app:layout_constraintTop_toBottomOf="@id/divider">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/total"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize14sp" />

        <TextView
            android:id="@+id/tv_bet_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            app:moneyFormat="@{row.totalAmount}"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize14sp"
            tools:text="9,999,587.000 RMB" />

        <TextView
            android:id="@+id/tv_status_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/colorRedLight"
            android:textSize="@dimen/textSize14sp"
            app:moneyFormat="@{row.rebateAmount}"
            app:moneyColor="@{row.rebateAmount}"
            tools:text="-9,999,587.000 RMB" />

    </LinearLayout>
</layout>
