<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpUsage">

    <data>
        <variable
            name="other"
            type="org.cxct.sportlottery.network.bet.settledDetailList.Other" />

<!--        <variable-->
<!--            name="matchOdd"-->
<!--            type="org.cxct.sportlottery.network.bet.MatchOdd" />-->


    </data>

    <LinearLayout
        android:id="@+id/linear_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="14dp"
        app:layout_constraintBottom_toTopOf="@id/btn_back_to_top"
        app:layout_constraintTop_toBottomOf="@id/divider">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/total"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize14sp" />

        <TextView
            android:id="@+id/tv_status_money"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/colorRedLight"
            android:textSize="@dimen/textSize14sp"
            android:textStyle="bold"
            app:moneyFormat="@{other.win}"
            app:moneyColor="@{other.win}"
            tools:text="-9,999,587.000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginStart="4dp"
            android:textColor="@color/colorRedLight"
            android:textSize="@dimen/textSize14sp"
            android:textStyle="bold"
            android:text="@string/bet_info_list_rmb"/>

    </LinearLayout>
</layout>
