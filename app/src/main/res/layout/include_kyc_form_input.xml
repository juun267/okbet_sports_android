<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_16"
    android:background="@drawable/bg_gray_radius_8_f9fafd"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="12dp">

    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_667085"
        android:textSize="@dimen/textSize14sp"
        tools:text="label"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <EditText
            android:id="@+id/etInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:maxLines="1"
            android:textSize="@dimen/textSize16sp"
            android:textStyle="bold"
            android:textColorHint="@color/color_66050B18"
            tools:text="input"/>

        <ImageView
            android:id="@+id/ivClear"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="bottom|right"
            android:src="@drawable/iv_clear_blue"
            android:visibility="gone"
            tools:visibility="visible"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_input_empty"
        android:textColor="@color/color_F23C3B"
        android:textSize="@dimen/textSize12sp" />
</LinearLayout>