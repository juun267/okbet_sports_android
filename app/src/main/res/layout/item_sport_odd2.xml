<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="166dp"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_D4E1F1"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:id="@+id/lin_match"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="16dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/frBottom" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/llLeftPanel"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginLeft="12dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/league_odd_match_favorite"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/selector_star_v4"
                    tools:ignore="ContentDescription"
                    tools:visibility="visible" />

                <LinearLayout
                    android:id="@+id/linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="1dp">

                    <TextView
                        android:id="@+id/leagueOddMatchStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="@dimen/margin_5"
                        android:textColor="@color/color_6D7693"
                        android:textSize="10sp"
                        tools:text="比赛延期"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/league_odd_match_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_5"
                        android:textColor="@color/color_6D7693"
                        android:textFontWeight="700"
                        android:textSize="10sp"
                        tools:text="00:43"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/league_neutral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_n"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/ivOT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_ot"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/league_spt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/color_6C7BA8"
                        android:textSize="@dimen/textSize10sp"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/barrier"
                        tools:text="5盘3胜"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_peroid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/color_6C7BA8"
                        android:textSize="@dimen/textSize10sp"
                        android:visibility="gone" />

                </LinearLayout>

                <include
                    android:id="@+id/content_baseball_status"
                    layout="@layout/content_baseball_status"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="4dp" >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/league_odd_match_name_home"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:textColor="@color/color_0D2245"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintEnd_toStartOf="@+id/rl_icon"
                            app:layout_constraintHorizontal_bias="0"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:text="芬兰芬兰芬兰芬兰芬兰芬兰" />

                        <RelativeLayout
                            android:id="@+id/rl_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" >

                            <ImageView
                                android:id="@+id/ic_attack_h"
                                android:layout_width="4dp"
                                android:layout_height="4dp"
                                android:layout_marginTop="3dp"
                                android:layout_centerInParent="true"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/bg_green_dot" />


                            <ImageView
                                android:id="@+id/ic_attack_tn_h"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="3dp"
                                android:src="@drawable/bg_green_dot" />
                        </RelativeLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>




                    <LinearLayout
                        android:id="@+id/lin_home_round_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        tools:visibility="visible">

                        <TextView
                            android:id="@+id/league_odd_match_total_score_home_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_4"
                            android:fontFamily="@font/din_pro_medium"
                            android:includeFontPadding="false"
                            android:textColor="@color/color_6D7693"
                            android:textSize="12sp"
                            android:textFontWeight="700"
                            tools:text="1"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/league_odd_match_score_home_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:fontFamily="@font/din_pro_medium"
                            android:includeFontPadding="false"
                            android:textColor="@color/color_6D7693"
                            android:textSize="12sp"
                            android:textFontWeight="700"
                            tools:text="0"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/league_odd_match_point_home_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:fontFamily="@font/din_pro_medium"
                            android:includeFontPadding="false"
                            android:textColor="@color/color_6D7693"
                            android:textSize="12sp"
                            android:textFontWeight="700"
                            tools:text="0"
                            tools:visibility="visible" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/league_odd_match_score_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/din_pro_medium"
                        android:paddingStart="5dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/color_414655"
                        android:textSize="@dimen/textSize14sp"
                        android:visibility="gone"
                        tools:text="0" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="4dp" >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/league_odd_match_name_away"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:textColor="@color/color_0D2245"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintEnd_toStartOf="@+id/rl_away_icon"
                            app:layout_constraintHorizontal_bias="0"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="俄罗斯" />

                        <RelativeLayout
                            android:id="@+id/rl_away_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <ImageView
                                android:id="@+id/ic_attack_c"
                                android:layout_width="4dp"
                                android:layout_height="4dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/bg_green_dot" />

                            <ImageView
                                android:id="@+id/ic_attack_tn_c"
                                android:layout_width="4dp"
                                android:layout_height="4dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/bg_green_dot" />
                        </RelativeLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <LinearLayout
                        android:id="@+id/lin_away_round_score"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        tools:visibility="visible">


                        <TextView
                            android:id="@+id/league_odd_match_total_score_away_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_4"
                            android:fontFamily="@font/din_pro_medium"
                            android:textFontWeight="700"
                            android:includeFontPadding="false"
                            android:textColor="@color/color_6D7693"
                            android:textSize="12sp"
                            tools:text="1"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/league_odd_match_score_away_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:fontFamily="@font/din_pro_medium"
                            android:includeFontPadding="false"
                            android:textColor="@color/color_6D7693"
                            android:textSize="12sp"
                            android:textFontWeight="700"
                            tools:text="0"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/league_odd_match_point_away_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:fontFamily="@font/din_pro_medium"
                            android:includeFontPadding="false"
                            android:textColor="@color/color_6D7693"
                            android:textSize="12sp"
                            android:textFontWeight="700"
                            tools:text="0"
                            tools:visibility="visible" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/league_odd_match_score_away"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="5dp"
                        android:fontFamily="@font/din_pro_medium"
                        android:textColor="@color/color_414655"
                        android:textSize="@dimen/textSize14sp"
                        android:visibility="gone"
                        tools:text="0" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_cs_text_layout"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/tv_correct_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/color_select_cs_tab"
                    android:textSize="@dimen/textSize12sp"
                    app:autoSizeMaxTextSize="@dimen/textSize12sp"
                    app:autoSizeMinTextSize="@dimen/textSize8sp"
                    tools:text="abc" />

                <TextView
                    android:id="@+id/tv_correct_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textColor="@color/color_select_cs_tab"
                    android:textSize="@dimen/textSize12sp"
                    app:autoSizeMaxTextSize="@dimen/textSize12sp"
                    app:autoSizeMinTextSize="@dimen/textSize8sp"
                    tools:text="abc" />

                <TextView
                    android:id="@+id/tv_correct_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textColor="@color/color_select_cs_tab"
                    android:textSize="@dimen/textSize12sp"
                    app:autoSizeMaxTextSize="@dimen/textSize12sp"
                    app:autoSizeMinTextSize="@dimen/textSize8sp"
                    tools:text="abc" />

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_league_odd_btn_pager_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frBottom"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_weight="1"
            android:paddingLeft="6dp"
            android:paddingRight="7dp">

            <ImageView
                android:id="@+id/iv_live"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/ic_live_with_anchor"
                android:visibility="gone"
                tools:ignore="ContentDescription"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/ic_video"
                android:visibility="gone"
                tools:ignore="ContentDescription"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv_animation"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="6dp"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:src="@drawable/ic_action"
                android:visibility="gone"
                tools:ignore="ContentDescription"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/league_odd_match_chart"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/ic_chart_data"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/league_corner_kicks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_kicks"
                android:textStyle="bold"
                android:layout_marginStart="6dp"
                android:textColor="@color/color_6C7BA8"
                android:textSize="12sp"
                android:gravity="bottom"
                tools:text="1-5" />

            <TextView
                android:id="@+id/tvYellowCards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:gravity="bottom"
                android:drawableLeft="@drawable/bg_sport_card_yellow"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/color_6C7BA8"
                tools:text=" 1"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvRedCards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:gravity="bottom"
                android:drawableLeft="@drawable/bg_sport_card_red"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/color_6C7BA8"
                tools:text=" 1"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_peroids_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textStyle="bold"
                android:textColor="@color/color_535D76"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="1-1 2-2 3-3"
                tools:visibility="visible" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center"
            android:orientation="horizontal">

            <org.cxct.sportlottery.view.indicator.RadiusIndicator
                android:id="@+id/hIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="3dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/leagueOddMatchPlayCount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="14dp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:textColor="@color/color_025BE8"
            android:textSize="12sp"
            tools:text="120+ >" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>