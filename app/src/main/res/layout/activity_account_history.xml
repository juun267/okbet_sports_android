<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.accountHistory.AccountHistoryActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- toolBar -->
        <include
            android:id="@+id/account_history_toolbar"
            layout="@layout/view_toolbar_main"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/account_history_message"
            layout="@layout/view_message"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/account_history_toolbar" />

        <org.cxct.sportlottery.ui.common.NotificationView
            android:id="@+id/view_notification"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/account_history_message"
            app:layout_constraintTop_toTopOf="@id/account_history_message" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/account_history_container"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/account_history_bottom_navigation"
            app:layout_constraintTop_toBottomOf="@id/view_notification"
            app:navGraph="@navigation/account_history_navigation"
            tools:layout="@layout/fragment_account_history" />

        <!--根據需求先隱藏，確定不用可刪-->
        <!--20220406 只有宣傳頁、主頁需顯示-->
        <!--<org.cxct.sportlottery.ui.common.ServiceFloatingButton
            android:visibility="gone"
            android:id="@+id/btn_floating_service"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="14dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintBottom_toTopOf="@id/account_history_bottom_navigation" />-->

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/account_history_bottom_navigation"
            layout="@layout/view_bottom_navigation_sport" />

        <!-- 投注單 -->
        <FrameLayout
            android:id="@+id/fl_bet_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 右側導覽列 -->
    <include layout="@layout/view_nav_right" />

    <org.cxct.sportlottery.ui.common.RedEnvelopeFloatingButton
        android:id="@+id/btn_floating_red_envelope"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible" />

</androidx.drawerlayout.widget.DrawerLayout>



