<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.accountHistory.AccountHistoryActivity">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- toolBar -->
            <include
                android:id="@+id/acc_history_toolbar"
                layout="@layout/view_toolbar_main"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/acc_history_message"
                layout="@layout/view_message"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/acc_history_toolbar" />

            <org.cxct.sportlottery.ui.common.NotificationView
                android:id="@+id/view_notification"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@id/acc_history_message"
                app:layout_constraintTop_toTopOf="@id/acc_history_message" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/account_history_container"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@id/account_history_bottom_navigation"
                app:layout_constraintTop_toBottomOf="@id/view_notification"
                app:navGraph="@navigation/account_history_navigation"
                tools:layout="@layout/fragment_home" />

            <include
                android:id="@+id/account_history_bottom_navigation"
                layout="@layout/view_bottom_navigation_sport" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 右側導覽列 -->
        <include layout="@layout/view_nav_right" />

    </androidx.drawerlayout.widget.DrawerLayout>

    <!-- 投注單 -->
    <FrameLayout
        android:id="@+id/fl_bet_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
