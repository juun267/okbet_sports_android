<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_blue"
    tools:context=".ui.profileCenter.money_transfer.transfer.MoneyTransferSubFragment">

    <include
        android:id="@+id/layout_balance"
        layout="@layout/view_account_balance_2"/>

    <include
        android:id="@+id/out_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        layout="@layout/custom_spinner"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_icon_transfer"
        />

    <include
        android:id="@+id/in_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        layout="@layout/custom_spinner"/>

    <!--    <org.cxct.sportlottery.ui.component.SpinnerWithTitleAtStart-->
    <!--        android:id="@+id/in_account"-->
    <!--        android:layout_margin="15dp"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_width="match_parent"-->
    <!--        app:spinnerTitle="@string/in_account"-->
    <!--        app:titleText="@string/in_account"-->
    <!--        />-->

    <org.cxct.sportlottery.ui.login.LoginEditText
        android:id="@+id/et_transfer_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        app:cvTitle="@string/transfer_money"
        app:cvHint="@string/please_input_money"
        app:cvInputType="number" />


    <Button
        android:id="@+id/btn_transfer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_margin="15dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_square_shape_4dp_menu_blue"
        android:maxWidth="100dp"
        android:text="@string/confirm_transform"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/linear_layout"
        app:layout_constraintTop_toTopOf="parent" />



</LinearLayout>
