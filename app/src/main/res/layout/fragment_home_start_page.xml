<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_blue"
    tools:context="org.cxct.sportlottery.ui.home2.HomeStartPageFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:elevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!-- Banner ads -->
            <com.stx.xhb.xbanner.XBanner
                android:id="@+id/xBanner"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                app:AutoPlayTime="3000"
                app:layout_constraintBottom_toTopOf="@id/ll_announce"
                app:layout_constraintDimensionRatio="w,375:125"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:pointsVisibility="false" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_banner_arrow_left"
                app:layout_constraintBottom_toBottomOf="@id/xBanner"
                app:layout_constraintStart_toStartOf="@id/xBanner"
                app:layout_constraintTop_toTopOf="@id/xBanner" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="9dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_banner_arrow_right"
                app:layout_constraintBottom_toBottomOf="@id/xBanner"
                app:layout_constraintEnd_toEndOf="@id/xBanner"
                app:layout_constraintTop_toTopOf="@id/xBanner" />

            <!-- 公告輪播跑馬燈 -->
            <LinearLayout
                android:id="@+id/ll_announce"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/xBanner">

                <ImageView
                    android:id="@+id/iv_broadcast_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_announce" />

                <org.cxct.sportlottery.ui.common.AutoScrollRecyclerView
                    android:id="@+id/rv_marquee"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    app:speed_dp_sec="60dp"
                    tools:itemCount="1"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/content_marquee" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 遊戲類別列表 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:gravity="center"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:orientation="horizontal">

                <org.cxct.sportlottery.ui.home2.HomeStartTab
                    android:id="@+id/tab_sport"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cvTitle="@string/sport"
                    app:cvIcon="@drawable/selector_home_start_tab_sport"/>

                <org.cxct.sportlottery.ui.home2.HomeStartTab
                    android:id="@+id/tab_lottery"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cvTitle="@string/lottery"
                    app:cvIcon="@drawable/selector_home_start_tab_lottery"/>

                <org.cxct.sportlottery.ui.home2.HomeStartTab
                    android:id="@+id/tab_live"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cvTitle="@string/live"
                    app:cvIcon="@drawable/selector_home_start_tab_live"/>

                <org.cxct.sportlottery.ui.home2.HomeStartTab
                    android:id="@+id/tab_poker"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cvTitle="@string/poker"
                    app:cvIcon="@drawable/selector_home_start_tab_poker"/>

                <org.cxct.sportlottery.ui.home2.HomeStartTab
                    android:id="@+id/tab_slot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cvTitle="@string/slot"
                    app:cvIcon="@drawable/selector_home_start_tab_slot"/>

                <org.cxct.sportlottery.ui.home2.HomeStartTab
                    android:id="@+id/tab_fishing"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cvTitle="@string/fishing"
                    app:cvIcon="@drawable/selector_home_start_tab_fishing"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>