<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linContent"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@drawable/bg_white_radius_8"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/ivBenefits"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_circle_f1f4fc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/tvBenefitsName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/ivBenefits"
        app:layout_constraintStart_toEndOf="@+id/ivBenefits"
        app:layout_constraintEnd_toStartOf="@+id/tvAction"
        android:layout_marginLeft="12dp"
        android:maxLines="1"
        android:fontFamily="@font/helvetica_normal"
        android:textSize="12sp"
        android:textColor="@color/color_A7B2C4"
        android:gravity="left|top"
        android:text="upgrade gifts"/>

    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvBenefitsName"
        app:layout_constraintEnd_toStartOf="@+id/tvAction"
        android:layout_marginTop="28dp"
        android:maxLines="1"
        android:fontFamily="@font/helvetica_bold"
        android:textSize="16sp"
        android:textColor="@color/color_0D2245"
        android:text="999,999,900"/>
    <TextView
        android:id="@+id/tvAction"
        android:layout_width="88dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="@+id/ivBenefits"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="14sp"
        android:gravity="center"
        android:text="claim"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tvWeeklySurplus"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingHorizontal="6dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="4dp"
        android:lines="1"
        android:textSize="10sp"
        android:textColor="@color/color_FFFFFF"
        android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>