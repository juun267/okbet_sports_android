<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:ignore="MissingDefaultResource">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="484dp"
    android:layout_margin="@dimen/margin_18"
    android:orientation="vertical"
    android:background="@drawable/bg_white_radius_16">
    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="@dimen/margin_24"
        android:layout_height="@dimen/margin_24"
        android:src="@drawable/ic_close_deduct"
        android:layout_marginRight="@dimen/margin_14"
        android:layout_marginTop="@dimen/margin_14"
        android:layout_gravity="right"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16"
        android:layout_marginHorizontal="@dimen/margin_12"
        android:layout_marginTop="-10dp"
        android:gravity="center_horizontal"
        android:textSize="@dimen/textSize18sp"
        android:textStyle="bold"
        android:textColor="@color/color_0D2245"
        android:text="@string/P232"/>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="@dimen/margin_36"
         android:layout_marginHorizontal="@dimen/margin_18"
         android:paddingHorizontal="@dimen/margin_12"
         android:background="@color/color_F3F9FF">
         <TextView
             android:layout_width="75dp"
             android:layout_height="match_parent"
             android:gravity="center"
             android:textColor="@color/color_0D2245"
             android:textSize="@dimen/textSize14sp"
             android:text="@string/J652"/>
         <TextView
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:layout_marginHorizontal="@dimen/margin_12"
             android:gravity="center"
             android:textColor="@color/color_0D2245"
             android:textSize="@dimen/textSize14sp"
             android:text="@string/P233"/>
         <TextView
             android:layout_width="75dp"
             android:layout_height="match_parent"
             android:gravity="center"
             android:textColor="@color/color_0D2245"
             android:textSize="@dimen/textSize14sp"
             android:text="@string/status"/>
     </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRecord"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/margin_18"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:itemCount="8"
        tools:listitem="@layout/item_reward_history" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_44"
        android:layout_marginHorizontal="@dimen/margin_18"
        android:layout_marginBottom="@dimen/margin_15"
        android:background="@drawable/button_radius_8_bet_button"
        android:textStyle="bold"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/textSize16sp"
        android:text="@string/btn_confirm"/>
</LinearLayout>
</LinearLayout>

