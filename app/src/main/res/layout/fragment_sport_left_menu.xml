<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivTopCover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_sport_left2_top"
        android:layout_height="138dp"/>

    <ImageView
        android:id="@+id/ivClose"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_sport_left_close"
        android:layout_marginRight="4dp"
        android:layout_marginTop="54dp"
        android:scaleType="centerCrop"
        android:layout_width="46dp"
        android:layout_height="46dp"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivUserCover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="62dp"
        android:layout_marginStart="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_person_avatar"
        app:riv_oval="true" />


    <TextView
        android:id="@+id/tvUserName"
        app:layout_constraintLeft_toRightOf="@+id/ivUserCover"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="70dp"
        android:paddingLeft="10dp"
        android:text="User_324212"
        android:textSize="14sp"
        android:textColor="@color/color_BEC7DC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    .
    <TextView
        android:id="@+id/tvLogin"
        app:layout_constraintLeft_toRightOf="@+id/ivUserCover"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="81dp"
        android:paddingLeft="10dp"
        android:text="Login/Register"
        android:textStyle="bold"
        android:visibility="gone"
        android:textSize="16sp"
        android:textColor="@color/color_FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvUserBalance"
        app:layout_constraintLeft_toRightOf="@+id/ivUserCover"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="96dp"
        android:paddingLeft="10dp"
        android:text="â‚± 95,5455,21"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/color_FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/llayoutTab"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="138dp"
        android:paddingLeft="31dp"
        android:paddingRight="31dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linearBetting"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvTabBetting"
                android:text="@string/B001"
                android:layout_width="wrap_content"
                android:textColor="@color/color_025BE8"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/ivTabBetting"
                android:src="@drawable/ic_tab_indicator"
                android:layout_width="26dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvTabInPlay"
                android:text="@string/home_tab_in_play"
                android:layout_width="wrap_content"
                android:paddingTop="16dp"
                android:textColor="@color/color_6D7693"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textStyle="normal"
                android:paddingBottom="8dp"
                android:textSize="14dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/ivTabInPlay"
                android:src="@drawable/ic_tab_indicator"
                android:layout_width="26dp"
                android:visibility="invisible"
                android:layout_gravity="center_horizontal"
                android:layout_height="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearOthers"
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvTabOthers"
                android:text="@string/other"
                android:layout_width="wrap_content"
                android:paddingTop="16dp"
                android:textColor="@color/color_6D7693"
                android:paddingBottom="8dp"
                android:textStyle="normal"
                android:textSize="14dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/ivTabOthers"
                android:src="@drawable/ic_tab_indicator"
                android:layout_width="26dp"
                android:visibility="invisible"
                android:layout_gravity="center_horizontal"
                android:layout_height="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvLine"
        app:layout_constraintTop_toBottomOf="@+id/llayoutTab"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:background="@color/color_EEF3FC"
        android:layout_marginTop="3dp"
        android:layout_marginHorizontal="12dp"
        android:layout_height="0.5dp"/>

    <FrameLayout
        android:id="@+id/frameContent"
        app:layout_constraintTop_toTopOf="@+id/tvLine"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="188dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>