<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/bg_sport_left_top"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/margin_12"
        android:paddingTop="30dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivUserCover"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_person_avatar"
            app:riv_border_color="@color/color_BEC7DC"
            app:riv_border_width="1dp"
            app:riv_oval="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_8"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_6"
                android:text="User_324212"
                android:textColor="@color/color_6D7693"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login/Register"
                android:textColor="@color/color_313F56"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvUserBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚± 95,5455,21"
                android:textColor="@color/color_313F56"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_circle_home2" />

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_sport_left_close" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llayoutTab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_48"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/margin_12">
        <LinearLayout
            android:id="@+id/linearBetting"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/linTabBetting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvTabBetting"
                    android:text="@string/B001"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_025BE8"
                    android:textSize="14dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvTabBettingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_4"
                    android:textColor="@color/color_025BE8"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    tools:text="108"
                   />
            </LinearLayout>


            <ImageView
                android:id="@+id/ivTabBetting"
                android:src="@drawable/bg_blue_indicate_radius_2"
                android:layout_width="80dp"
                android:layout_height="3dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linTabInPlay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvTabInPlay"
                android:text="@string/N711"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/color_6D7693"
                android:fontFamily="@font/helvetica_normal"
                android:gravity="center"
                android:textStyle="normal"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/ivTabInPlay"
                android:src="@drawable/bg_blue_indicate_radius_2"
                android:layout_width="80dp"
                android:layout_height="3dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearOthers"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tvTabOthers"
                android:text="@string/setting_center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/color_6D7693"
                android:fontFamily="@font/helvetica_normal"
                android:textStyle="normal"
                android:textSize="14dp"
              />
            <ImageView
                android:id="@+id/ivTabOthers"
                android:src="@drawable/bg_blue_indicate_radius_2"
                android:layout_width="80dp"
                android:layout_height="3dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvLine"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/color_F1F3FA" />

    <FrameLayout
        android:id="@+id/frameContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>