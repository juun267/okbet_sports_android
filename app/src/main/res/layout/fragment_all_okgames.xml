<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include
        android:id="@+id/include_games_all"
        layout="@layout/include_view_okgames_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!--part-1-->

    <!--part-2-->

    <!--part-3-->


    <include
        android:id="@+id/include3"
        layout="@layout/include_part3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <!--part-4-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="18dp"
        android:paddingBottom="8dp"
        android:paddingVertical="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_okgame_p" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hot Match"
            android:textColor="@color/color_0D2245"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_6D7693"
            android:textSize="@dimen/textSize14sp"
            android:text="@string/see_more" />

        <ImageView
            android:layout_width="@dimen/margin_16"
            android:layout_height="@dimen/margin_16"
            android:src="@drawable/ic_game_gray_arrow_right" />
    </LinearLayout>
    <org.cxct.sportlottery.ui.maintab.games.view.HotGameView
        android:id="@+id/hot_game_view"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"/>
    <!--part-5-->
    <include
        android:id="@+id/include5"
        layout="@layout/include_view_payment_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp" />


</LinearLayout>
