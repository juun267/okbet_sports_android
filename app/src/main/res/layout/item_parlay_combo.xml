<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/color_141414_F3F4F5"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_28"
        android:paddingRight="@dimen/margin_28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_FFFFFF_000000"
            android:textSize="@dimen/margin_14"
            android:textStyle="bold"
            tools:text="項次 1" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffe44438"
            android:textSize="@dimen/textSize14sp"
            tools:text="输 -4,000" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvComboDetailItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutTitle"
        tools:itemCount="3"
        tools:listitem="@layout/item_parlay_combo_detail" />

</androidx.constraintlayout.widget.ConstraintLayout>