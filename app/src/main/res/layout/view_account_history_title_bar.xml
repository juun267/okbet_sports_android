<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite1"
    android:orientation="vertical"
    tools:context="org.cxct.sportlottery.ui.main.accountHistory.next.AccountHistoryNextFragment"
    tools:ignore="SpUsage">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/soccer_account"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:padding="16dp"
        android:src="@drawable/ic_arrow_left_game_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/colorBlackLight" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/account_history_overview"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/textSize14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_bg"
        app:layout_constraintTop_toTopOf="parent" />

    <org.cxct.sportlottery.ui.component.StatusSelectorView
        android:id="@+id/status_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="8dp"
        app:backgroundFrame="@drawable/frame_color_silver_light_stroke"
        app:defaultStatusText="@string/all_sport"
        app:horizontalChainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/iv_bg" />

    <TextView
        android:id="@+id/tvUsTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_10"
        android:drawablePadding="@dimen/margin_6"
        android:text="@string/text_us_east_time"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/textSize12sp"
        app:drawableLeftCompat="@drawable/ic_info_white"
        app:drawableStartCompat="@drawable/ic_info_white"
        app:drawableTint="@color/colorGray"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_selector" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorBlue"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvUsTime">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@string/date"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/bet_amount"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/available_amount"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/win_lose"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

