<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="10dp"
    app:layoutDescription="@xml/line_detail_scene">

    <org.cxct.sportlottery.view.floatingbtn.MovableAdsorptionLinearLayout
        android:id="@+id/movable_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginTop="6dp"
                android:src="@drawable/ic_lucky_wheel" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="@dimen/margin_9"
                android:layout_gravity="right"
                android:src="@drawable/ic_close_float" />
        </FrameLayout>
    </org.cxct.sportlottery.view.floatingbtn.MovableAdsorptionLinearLayout>

</androidx.constraintlayout.motion.widget.MotionLayout>