<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_44"
    android:paddingHorizontal="@dimen/margin_12"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/J652"
        android:textColor="@color/color_6D7693"
        android:textSize="@dimen/textSize12sp" />

    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/margin_12"
        android:gravity="center"
        android:text="@string/P233"
        android:textColor="@color/color_0D2245"
        android:textSize="@dimen/textSize14sp" />


    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/status"
        android:textColor="@color/color_BEC7DC"
        android:textSize="@dimen/textSize14sp" />
</LinearLayout>
