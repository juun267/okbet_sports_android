<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_edf3f9"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:paddingVertical="12dp"
            android:textSize="@dimen/textSize14sp"
            android:textColor="@color/color_0D2245"
            android:text="@string/P243"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_edf3f9"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize14sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/color_025BE8"
            android:text="@string/P244"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="20dp"
            android:textSize="@dimen/textSize16sp"
            android:textColor="@color/color_0D2245"
            android:textStyle="bold"
            android:text="@string/P248"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gray_radius_8_f9fafd"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginHorizontal="12dp"
            android:paddingVertical="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imgLayout2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="3dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/color_667085"
                    android:text="@string/P252"/>

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:lineSpacingExtra="6dp"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/color_0D2245"/>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/imgLayout2"
                android:layout_width="112dp"
                android:layout_height="70dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/ivImg2"
                    android:layout_width="112dp"
                    android:layout_height="70dp"
                    android:src="@drawable/img_identity_upload"/>

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize14sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/color_025BE8"
            android:text="@string/P245"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="20dp"
            android:textSize="@dimen/textSize16sp"
            android:textColor="@color/color_0D2245"
            android:textStyle="bold"
            android:text="@string/B463"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:background="@drawable/bg_gray_radius_8_f9fafd"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginHorizontal="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imgLayout3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:textSize="@dimen/textSize12sp"
                android:textColor="@color/color_667085"
                android:text="@string/P254"/>


            <FrameLayout
                android:id="@+id/imgLayout3"
                android:layout_width="112dp"
                android:layout_height="70dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/ivImg3"
                    android:layout_width="112dp"
                    android:layout_height="70dp"
                    android:src="@drawable/img_identity_scan"/>

            </FrameLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize14sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/color_025BE8"
            android:text="@string/P246"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="20dp"
            android:textSize="@dimen/textSize16sp"
            android:textColor="@color/color_0D2245"
            android:textStyle="bold"
            android:text="@string/P283"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:background="@drawable/bg_gray_radius_8_f9fafd"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ivImg1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/color_667085"
                    android:text="@string/P322_1"/>


            </LinearLayout>


            <ImageView
                android:id="@+id/ivImg1"
                android:layout_width="112dp"
                android:layout_height="70dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/img_identity_handle_id"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="50dp"
        android:background="@drawable/bg_blue_radius_8"
        android:textSize="@dimen/textSize16sp"
        android:textColor="@color/white"
        android:text="@string/P258"/>

</LinearLayout>
</androidx.core.widget.NestedScrollView>