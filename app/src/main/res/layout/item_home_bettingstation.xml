<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="179dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="@dimen/margin_8"
    app:cardBackgroundColor="@color/color_F7FAFE">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivCover"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="179:115"
            android:scaleType="centerCrop" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_8">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_0D2245"
            android:textSize="@dimen/textSize14sp"
            android:lines="1"
            android:ellipsize="end"
            tools:text="OKBet supports Miss Grand PH for the upcoming. Max  lines..." />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:lines="2"
            android:ellipsize="end"
            tools:text="Feb 12, 202310:16AM"
            android:textColor="@color/color_6D7693"
            android:textSize="@dimen/textSize12sp" />
        <TextView
            android:id="@+id/tvMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12"
            android:drawableLeft="@drawable/ic_home_call"
            android:lines="1"
            android:drawablePadding="@dimen/margin_4"
            android:textColor="@color/color_0F61E2"
            android:textSize="@dimen/textSize14sp"
            android:textFontWeight="500"
            tools:text="09167313767" />
    </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/ivLocation"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="93dp"
        android:layout_marginRight="@dimen/margin_6"
        android:layout_gravity="right"
        android:src="@drawable/ic_home_location"/>
    
</androidx.cardview.widget.CardView>