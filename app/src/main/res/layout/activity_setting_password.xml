    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_32"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/colorBlackLight"
            app:tabTextColor="@color/colorGray"
            app:tabIndicatorFullWidth="false"
            app:tabIndicator="@drawable/custom_tab_indicator"
            app:tabPaddingStart="25dp"
            app:tabPaddingEnd="25dp"
            app:tabRippleColor="@null">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_login_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_password"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_withdrawal_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/withdrawal_password"/>

        </com.google.android.material.tabs.TabLayout>


    </LinearLayout>

    <org.cxct.sportlottery.ui.login.LoginEditText
        android:id="@+id/et_current_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="15dp"
        app:cvHint="@string/hint_current_login_password"
        app:cvInputType="textPassword"
        app:cvTitle="@string/current_login_password" />

    <org.cxct.sportlottery.ui.login.LoginEditText
