<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray11"
    android:orientation="vertical"
    tools:context=".ui.profileCenter.changePassword.SettingPasswordActivity">

    <RelativeLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@drawable/bg_gradient_dark">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:background="@drawable/effect_ripple_circle_blue_light"
            android:contentDescription="@null"
            android:src="@drawable/ic_back_main" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/setting_password"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize16sp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_light"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/transparent"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/frame_4dp_white"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/btn_login_password"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/effect_select_bg_white_transparent"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="@string/login_password"
                    android:textColor="@color/color_select_primary_white"
                    android:textSize="@dimen/textSize16sp" />

                <RadioButton
                    android:id="@+id/btn_withdrawal_password"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/effect_select_bg_white_transparent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/withdrawal_password"
                    android:textColor="@color/color_select_primary_white"
                    android:textSize="@dimen/textSize16sp" />

            </RadioGroup>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <org.cxct.sportlottery.ui.login.LoginEditText
        android:id="@+id/et_current_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        app:cvHint="@string/hint_current_password"
        app:cvInputType="textPassword"
        app:cvTitle="@string/current_password" />

    <org.cxct.sportlottery.ui.login.LoginEditText
        android:id="@+id/et_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cvHint="@string/hint_new_password"
        app:cvInputType="textPassword"
        app:cvTitle="@string/new_password" />

    <org.cxct.sportlottery.ui.login.LoginEditText
        android:id="@+id/et_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cvHint="@string/hint_confirm_new_password"
        app:cvInputType="textPassword"
        app:cvTitle="@string/confirm_password" />

    <Button
        android:id="@+id/btn_confirm"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_radius_5_button_dusk"
        android:minWidth="135dp"
        android:minHeight="36dp"
        android:text="@string/btn_confirm"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize14sp" />

</LinearLayout>