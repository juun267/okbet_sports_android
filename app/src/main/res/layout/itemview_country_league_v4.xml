<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/colorWhite">

    <androidx.legacy.widget.Space
        android:id="@+id/space"
        android:layout_width="10dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/country_league_choose"
        app:layout_constraintBottom_toBottomOf="@id/country_league_choose"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/country_league_choose"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginStart="10dp"
        android:scaleType="center"
        android:src="@drawable/selector_item_country_league_choose_v4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/space"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/country_league_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/textSize14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/country_league_divider"
        app:layout_constraintStart_toEndOf="@id/country_league_choose"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="澳大利亚甲组联赛-附加赛" />

    <View
        android:id="@+id/country_league_divider"
        android:layout_width="1dp"
        android:layout_height="14dp"
        android:layout_marginEnd="55dp"
        android:background="@color/colorGrayLight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/country_league_pin"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/country_league_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="5dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/textSize14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/country_league_pin"
        app:layout_constraintStart_toEndOf="@id/country_league_divider"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="257" />

    <ImageView
        android:id="@+id/country_league_pin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="4dp"
        android:padding="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/selector_item_country_league_pin_v4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>