<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="@color/gray11"
    android:paddingStart="10dp"
    android:paddingTop="5dp"
    android:paddingEnd="10dp"
    android:paddingBottom="5dp">

    <View
        android:id="@+id/ll_start_date"
        android:layout_width="135dp"
        android:layout_height="32dp"
        android:background="@drawable/spinner_gray_5dp"
        app:layout_constraintEnd_toStartOf="@id/date_selector_until"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:hint="@string/start_date"
        android:textColorHint="@color/gray12"
        android:textColor="@color/textGray"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/ll_start_date"
        app:layout_constraintStart_toStartOf="@id/ll_start_date"
        app:layout_constraintTop_toTopOf="@id/ll_start_date" />

    <TextView
        android:id="@+id/date_selector_until"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:text="@string/finance_log_selector_until"
        android:textColor="@color/textGray"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_start_date"
        app:layout_constraintEnd_toStartOf="@id/ll_end_date"
        app:layout_constraintStart_toEndOf="@id/ll_start_date" />

    <View
        android:id="@+id/ll_end_date"
        android:layout_width="135dp"
        android:layout_height="32dp"
        android:background="@drawable/spinner_gray_5dp"
        app:layout_constraintEnd_toStartOf="@id/btn_search"
        app:layout_constraintStart_toEndOf="@id/date_selector_until"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:hint="@string/end_date"
        android:textSize="13sp"
        android:textColorHint="@color/gray12"
        android:textColor="@color/textGray"
        app:layout_constraintBottom_toBottomOf="@id/ll_end_date"
        app:layout_constraintStart_toStartOf="@id/ll_end_date"
        app:layout_constraintTop_toTopOf="@id/ll_end_date" />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:background="@drawable/bg_radius_5_button_dusk"
        android:text="@string/inquire"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ll_end_date" />

</androidx.constraintlayout.widget.ConstraintLayout>