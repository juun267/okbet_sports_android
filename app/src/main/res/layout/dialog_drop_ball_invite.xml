<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_12"
            android:background="@drawable/bg_dialog_drop_ball">
            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="@dimen/margin_24"
                android:layout_height="@dimen/margin_24"
                android:layout_margin="@dimen/margin_6"
                android:layout_gravity="right"
                android:src="@drawable/ic_dialog_drop_ball_close"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginHorizontal="@dimen/margin_20">
                <TextView
                    android:id="@+id/tvFacebook"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="@dimen/margin_15"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_share_db_fb"
                    android:drawablePadding="@dimen/margin_4"
                    android:textSize="@dimen/textSize10sp"
                    android:textColor="@color/color_FFFFFF"
                    android:text="Facebook"/>
                <TextView
                    android:id="@+id/tvMessenger"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="@dimen/margin_15"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_share_messenger"
                    android:drawablePadding="@dimen/margin_4"
                    android:textSize="@dimen/textSize10sp"
                    android:textColor="@color/color_FFFFFF"
                    android:text="Messenger"/>
                <TextView
                    android:id="@+id/tvInstagram"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="@dimen/margin_15"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_share_instagram"
                    android:drawablePadding="@dimen/margin_4"
                    android:textSize="@dimen/textSize10sp"
                    android:textColor="@color/color_FFFFFF"
                    android:text="Instagram"/>
                <TextView
                    android:id="@+id/tvViber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="@dimen/margin_15"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_share_viber"
                    android:drawablePadding="@dimen/margin_4"
                    android:textSize="@dimen/textSize10sp"
                    android:textColor="@color/color_FFFFFF"
                    android:text="Viber"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="@dimen/margin_20">
                <TextView
                    android:id="@+id/tvCopyLink"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="@dimen/margin_15"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_share_db_link"
                    android:drawablePadding="@dimen/margin_4"
                    android:textSize="@dimen/textSize10sp"
                    android:textColor="@color/color_FFFFFF"
                    android:text="Copy Link"/>

                <TextView
                    android:id="@+id/tvSms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="@dimen/margin_15"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_share_db_sms"
                    android:drawablePadding="@dimen/margin_4"
                    android:textSize="@dimen/textSize10sp"
                    android:textColor="@color/color_FFFFFF"
                    android:text="Send SMS"/>
                <TextView
                    android:id="@+id/tvMore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="@dimen/margin_15"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_share_db_more"
                    android:drawablePadding="@dimen/margin_4"
                    android:textSize="@dimen/textSize10sp"
                    android:textColor="@color/color_FFFFFF"
                    android:text="More"/>
                <TextView
                    android:id="@+id/tvSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="@dimen/margin_15"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_share_db_save"
                    android:drawablePadding="@dimen/margin_4"
                    android:textSize="@dimen/textSize10sp"
                    android:textColor="@color/color_FFFFFF"
                    android:text="Save Image"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_share_dropball_title" />

    </FrameLayout>

</LinearLayout>