<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite1"
    android:clickable="true"
    android:focusable="true"
    tools:context=".ui.game.v3.GameOutrightFragment">

    <org.cxct.sportlottery.ui.game.v3.GameFilterRow
        android:id="@+id/outright_filter_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/outright_info_block"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite2"
        app:layout_constraintTop_toBottomOf="@id/outright_filter_row" />

    <TextView
        android:id="@+id/outright_league_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/textSize14sp"
        app:layout_constraintStart_toStartOf="@id/outright_info_block"
        app:layout_constraintTop_toTopOf="@id/outright_info_block"
        tools:text="欧洲冠军杯2020/2021" />

    <TextView
        android:id="@+id/outright_league_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="6dp"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/textSize12sp"
        app:layout_constraintBottom_toBottomOf="@id/outright_info_block"
        app:layout_constraintStart_toStartOf="@id/outright_info_block"
        tools:text="03/03" />

    <TextView
        android:id="@+id/outright_league_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="6dp"
        android:textColor="@color/colorRedDark"
        android:textSize="@dimen/textSize12sp"
        app:layout_constraintBottom_toBottomOf="@id/outright_info_block"
        app:layout_constraintStart_toEndOf="@id/outright_league_date"
        tools:text="23:00" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/outright_league_odd_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/outright_info_block"
        tools:itemCount="3"
        tools:listitem="@layout/itemview_outright_oddv3" />

</androidx.constraintlayout.widget.ConstraintLayout>