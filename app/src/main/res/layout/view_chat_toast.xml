<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    tools:ignore="PrivateResource,SpUsage">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp">

        <eightbitlab.com.blurview.BlurView
            android:id="@+id/bv_block"
            android:layout_width="320dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_chat_toast"
            app:blurOverlayColor="@color/color_chat_toast_background">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_toast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_chat_warning"
                android:drawablePadding="6dp"
                android:textColor="@color/color_chat_toast_text"
                android:textSize="@dimen/textSize12sp"
                tools:text="您已被禁止聊天" />

        </eightbitlab.com.blurview.BlurView>

    </androidx.cardview.widget.CardView>

</FrameLayout>