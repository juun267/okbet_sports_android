<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_131932_F0F5FA"
    tools:ignore="SpUsage">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/bg_bet_record_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/toolBarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/view_status_bar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_bar_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_scrollFlags="scroll|enterAlways"
            tools:ignore="SpUsage,RtlSymmetry,ContentDescription">

            <ImageView
                android:id="@+id/iv_menu_left"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="18dp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:scaleType="fitStart"
                android:src="@drawable/icon_menu"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginStart="@dimen/margin_18"
                android:layout_marginBottom="3dp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:scaleType="fitStart"
                android:src="@drawable/logo_okbet_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_menu_left"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/cl_bet_all_sports"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:minWidth="90dp"
                android:layout_marginEnd="13dp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/selector_bg_home_tab_menu">

                <TextView
                    android:id="@+id/tv_all_sports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="13dp"
                    android:text="@string/all_sport"
                    android:textSize="@dimen/textSize14sp"
                        android:textColor="@color/selector_blue_white" />

                    <ImageView
                        android:id="@+id/iv_all_sports_arrow"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/selector_blue_white_arrow" />
                </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBarContainer">

        <LinearLayout
            android:id="@+id/bet_tab"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:paddingBottom="15dp"
            android:layout_marginHorizontal="14dp"
            android:elevation="3dp"
            android:background="@drawable/bg_bet_record_tab_1"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_tab_settled"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/settled_order"
                android:textColor="@color/color_FFFFFF_414655"
                android:textFontWeight="500"
                android:textSize="@dimen/textSize14sp" />

            <TextView
                android:id="@+id/tv_tab_not_settled"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/not_settled"
                android:textColor="@color/color_6C7BA8_6C7BA8"
                android:textFontWeight="500"
                android:textSize="@dimen/textSize14sp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="14dp"
            android:layout_marginBottom="@dimen/margin_14"
            android:layout_marginTop="-10dp"
            android:paddingTop="20dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/color_bbbbbb_ffffff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bet_tab"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/cl_bet_sheet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="vertical"
                    tools:context="org.cxct.sportlottery.ui.main.accountHistory.next.AccountHistoryNextFragment"
                    tools:ignore="SpUsage">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp">

                        <View
                            android:layout_width="30dp"
                            android:layout_height="0.5dp"
                            android:background="@color/color_6C7BA8_A7B2C4" />

                        <TextView
                            android:id="@+id/tvUsTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="4dp"
                            android:drawablePadding="@dimen/margin_6"
                            android:text="@string/text_us_east_time_bet_record"
                            android:textColor="@color/color_6C7BA8_A7B2C4"
                            android:textSize="@dimen/textSize12sp" />

                        <View
                            android:layout_width="30dp"
                            android:layout_height="0.5dp"
                            android:background="@color/color_6C7BA8_A7B2C4" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/settled_title_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvUsTime">

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@color/color_131932_F3F9FF"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:gravity="center"
                        android:text="@string/date"
                        android:textColor="@color/color_6C7BA8_6C7BA8"
                        android:textSize="@dimen/textSize12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_marginStart="7dp"
                        android:gravity="center"
                        android:text="@string/bet_amount"
                        android:textColor="@color/color_6C7BA8_6C7BA8"
                        android:textSize="@dimen/textSize12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_marginStart="7dp"
                        android:text="@string/available_amount"
                        android:textColor="@color/color_6C7BA8_6C7BA8"
                        android:textSize="@dimen/textSize12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/win_lose"
                        android:layout_marginStart="7dp"
                        android:textColor="@color/color_6C7BA8_6C7BA8"
                        android:textSize="@dimen/textSize12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/sm_settled_tab_refresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="14dp"
            android:layout_marginBottom="18dp"
            tools:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_bet_sheet"
            app:srlDragRate="0.3"
            app:srlEnableLoadMore="true"
            app:srlEnablePureScrollMode="true">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_record_settled"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_account_history" />

        </com.scwang.smart.refresh.layout.SmartRefreshLayout>

        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/sm_unsettled_tab_refresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="14dp"
            android:paddingBottom="18dp"
            android:clipToPadding="false"
            android:visibility="gone"
            tools:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_bet_sheet"
            app:srlDragRate="0.3"
            app:srlEnableLoadMore="true"
            app:srlEnablePureScrollMode="true">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_record_unsettled"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/content_match_record" />

        </com.scwang.smart.refresh.layout.SmartRefreshLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
