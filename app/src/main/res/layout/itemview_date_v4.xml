<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="63dp"
    android:layout_height="56dp"
    android:background="@drawable/shape_date_item_bg_v4"
    tools:context="org.cxct.sportlottery.ui.game.hall.adapter.DateAdapter"
    tools:ignore="SpUsage">

    <TextView
        android:id="@+id/date_text_week"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="@drawable/shape_date_item_bg_week_v4"
        android:ellipsize="end"
        android:gravity="center"
        android:textAllCaps="true"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize12sp"
        android:fontFamily="@font/din_regular"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TUE" />

    <TextView
        android:id="@+id/date_text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textAllCaps="true"
        android:textColor="@color/selector_date_item_text_v4"
        android:textSize="@dimen/textSize16sp"
        android:fontFamily="@font/din_regular"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_text_week"
        app:layout_constraintBottom_toBottomOf="@id/date_text_other"
        tools:text="08/02" />

    <TextView
        android:id="@+id/date_text_other"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_date_item_bg_other_v4"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/selector_date_item_text_v4"
        android:textSize="@dimen/textSize14sp"
        tools:text="所有日期"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>