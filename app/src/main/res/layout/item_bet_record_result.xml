<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpUsage">

    <data>

        <variable
            name="row"
            type="org.cxct.sportlottery.network.bet.list.Row" />

        <variable
            name="clickListener"
            type="org.cxct.sportlottery.ui.profileCenter.sportRecord.ItemClickListener" />

        <variable
            name="TextUtil"
            type="org.cxct.sportlottery.util.TextUtil" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:onClick="@{() -> clickListener.onClick(row)}"
        android:orientation="horizontal"
        android:paddingHorizontal="4dp"
        android:paddingVertical="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize12sp"
                app:autoSizeMaxTextSize="@dimen/textSize12sp"
                app:autoSizeMinTextSize="@dimen/textSize8sp"
                app:dateTime="@{row.addTime}"
                tools:text="2020/12/12 19:58:22" />

            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:gravity="center"
                android:maxEms="11"
                android:text="@{row.orderNo}"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize12sp"
                tools:text="b0000036120 91822030128" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_parlay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@{TextUtil.replaceParlayByC(row.parlayType)}"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize12sp" />

            <LinearLayout
                android:id="@+id/ll_rows_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_play_cate_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@{row.matchOdds.size() > 0 ? row.matchOdds.get(0).playCateName : null}"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="@dimen/textSize12sp"
                    app:autoSizeMaxTextSize="@dimen/textSize12sp"
                    app:autoSizeMinTextSize="@dimen/textSize8sp"
                    tools:text="独赢" />

                <TextView
                    android:id="@+id/tv_home_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@{row.matchOdds.size() > 0 ? row.matchOdds.get(0).playName : null}"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="@dimen/textSize12sp"
                    app:autoSizeMaxTextSize="@dimen/textSize12sp"
                    app:autoSizeMinTextSize="@dimen/textSize8sp"
                    tools:text="曼联" />

                <TextView
                    android:id="@+id/tv_odds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@{row.matchOdds.size() > 0 ? String.format(@string/at_symbol, row.matchOdds.get(0).odds) : null}"
                    android:textColor="@color/red2"
                    android:textSize="@dimen/textSize12sp"
                    app:autoSizeMaxTextSize="@dimen/textSize12sp"
                    app:autoSizeMinTextSize="@dimen/textSize8sp"
                    tools:text="\u00404.3" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_bet_total_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@{TextUtil.format(row.totalAmount)}"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize12sp"
            tools:text="1,000.00" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_win_lose_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/textSize12sp"
                app:moneyColor="@{row.win}"
                app:profitFormatInRecord="@{row.win}"
                tools:text="+1,060.00"
                tools:textColor="@color/green" />

            <TextView
                android:id="@+id/tv_bet_status2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize12sp"
                app:status="@{row.status}"
                tools:text="全赢" />

        </LinearLayout>
    </LinearLayout>
</layout>
