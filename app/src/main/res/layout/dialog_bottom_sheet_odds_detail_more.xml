<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mainViewModel"
            type="org.cxct.sportlottery.ui.main.MainViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:orientation="vertical">

        <RelativeLayout
            tools:ignore="UselessParent"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/bottom_sheet_top_bar_background">

            <TextView
                android:id="@+id/tv_close"
                tools:ignore="RtlSymmetry"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/bottom_sheet_close"
                android:textColor="@color/bottom_sheet_top_bar_close_text"
                android:textSize="14sp" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/content_odds_detail_more"/>


    </LinearLayout>

</layout>