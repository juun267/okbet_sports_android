<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="org.cxct.sportlottery.ui.results.SettlementItem" />
    </data>

    <LinearLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        tools:context="org.cxct.sportlottery.ui.results.SettlementRvAdapter">

        <LinearLayout
            android:id="@+id/block_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/expandable_results_settlement"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="30dp">

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/textSize16sp"
                    tools:text="Miền Bắc" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_first_half"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/first_half_game"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/textSize14sp"
                    tools:text="@string/first_half_game" />

                <TextView
                    android:id="@+id/tv_second_half"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/second_half_game"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/textSize14sp"
                    tools:text="@string/second_half_game" />

                <TextView
                    android:id="@+id/tv_full_game"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/full_game"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/textSize14sp"
                    tools:text="@string/full_game" />

                <TextView
                    android:id="@+id/tv_end_game"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/game_result"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/textSize14sp"
                    tools:text="@string/game_result" />

            </LinearLayout>

        </LinearLayout>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/block_drawer_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:el_duration="500"
            app:el_expanded="false"
            app:el_parallax="0.5"
            tools:el_expanded="true">

            <androidx.recyclerview.widget.RecyclerView
            android:overScrollMode="never"
                android:id="@+id/rv_game_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="5"
                tools:listitem="@layout/content_game_result_rv" />

        </net.cachapa.expandablelayout.ExpandableLayout>

    </LinearLayout>
</layout>