<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="horizontal">

    <org.cxct.sportlottery.ui.game.bottomNavigation.BottomNavigationItem
        android:id="@+id/navigation_sport"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:btiIcon="@drawable/ic_soccer"
        app:btiTitle="@string/sport" />

    <org.cxct.sportlottery.ui.game.bottomNavigation.BottomNavigationItem
        android:id="@+id/navigation_game"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:btiIcon="@drawable/ic_btn_game_time_v4"
        app:btiTitle="@string/label_sport_game" />

    <LinearLayout
        android:id="@+id/item_bet_list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorBlue"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bet_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/bet_info_list_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize12sp" />
    </LinearLayout>

    <org.cxct.sportlottery.ui.game.bottomNavigation.BottomNavigationItem
        android:id="@+id/navigation_account_history"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:btiIcon="@drawable/ic_btm_account"
        app:btiTitle="@string/label_account_history" />

    <org.cxct.sportlottery.ui.game.bottomNavigation.BottomNavigationItem
        android:id="@+id/navigation_transaction_status"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:btiIcon="@drawable/ic_btm_deal"
        app:btiTitle="@string/label_transaction_status" />

</LinearLayout>