<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/button_odd_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_button_radius_4_odds_publicity"
    tools:ignore="SpUsage,ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="5dp"
        tools:ignore="SpUsage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_horizontal_4dp"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:paddingHorizontal="1dp"
                android:textColor="@color/selector_button_odd_top_text2"
                android:textSize="@dimen/textSize14sp"
                tools:text="1"
                tools:textColor="@color/color_7F7F7F_999999" />

            <TextView
                android:id="@+id/tv_spread"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:paddingHorizontal="1dp"
                android:textColor="@color/selector_button_odd_top_text"
                android:textSize="@dimen/textSize14sp"
                tools:text="-0/0.5"
                tools:textColor="@color/color_F75452_b73a20" />

            <TextView
                android:id="@+id/tv_odds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingHorizontal="1dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/selector_button_odd_bottom_text_publicity"
                android:textSize="@dimen/textSize14sp"
                android:textStyle="bold"
                tools:text="1.067" />

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/img_odd_lock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_radius_4_button_odds_lock"
        android:scaleType="center"
        android:src="@drawable/ic_iconlock"
        android:visibility="gone" />

    <TextView
        android:id="@+id/img_odd_unknown"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_radius_4_button_odds_lock"
        android:gravity="center"
        android:textSize="@dimen/textSize12sp"
        android:textColor="@color/color_7F7F7F_999999"
        android:text="@string/unknown_data"
        android:visibility="gone" />

</FrameLayout>