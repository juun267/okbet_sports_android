<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite1"
    android:padding="14dp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_id_card"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/img_face_scan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_corner_radius="10dp"
                android:src="@drawable/picture_image_placeholder" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_radius_10_button_bottom_corner"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/identity_card"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSize12sp"
                app:layout_constraintBottom_toBottomOf="@+id/img_id_card"
                app:layout_constraintEnd_toEndOf="@+id/img_id_card"
                app:layout_constraintStart_toStartOf="@id/img_id_card" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_face_scan"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/img_id_card"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_corner_radius="10dp"
                android:src="@drawable/picture_image_placeholder" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_radius_10_button_bottom_corner"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/face_scan_result"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSize12sp"
                app:layout_constraintBottom_toBottomOf="@+id/img_face_scan"
                app:layout_constraintEnd_toEndOf="@+id/img_face_scan"
                app:layout_constraintStart_toStartOf="@id/img_face_scan" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_identity_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/identity_id"
            app:cvInputType="text"
            app:cvTitle="@string/identity_id" />

        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_identity_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/identity_last_name"
            app:cvInputType="text"
            app:cvTitle="@string/identity_last_name" />

        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_identity_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/identity_first_name"
            app:cvInputType="text"
            app:cvTitle="@string/identity_first_name" />

        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_identity_other_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/identity_other_name"
            app:cvInputType="text"
            app:cvTitle="@string/identity_other_name" />

        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_identity_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/identity_country"
            app:cvInputType="text"
            app:cvTitle="@string/identity_country" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_recharge_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:autoSizeMaxTextSize="13dp"
                    android:autoSizeMinTextSize="6dp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/identity_birth"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="@dimen/textSize13sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorWhite6" />


                <TextView
                    android:id="@+id/txv_recharge_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="start|center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="@dimen/textSize12sp"
                    app:autoSizeMaxTextSize="@dimen/textSize12sp"
                    app:autoSizeMinTextSize="@dimen/textSize8sp"
                    app:autoSizeTextType="uniform"
                    tools:text="2020-13-25 19:35:35 (GMT+8)" />

                <ImageView
                    android:id="@+id/ic_calendar"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_calendar_v4" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_identity_marital_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/identity_marital_status"
            app:cvInputType="text"
            app:cvTitle="@string/identity_marital_status" />

        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_identity_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/identity_sex"
            app:cvInputType="text"
            app:cvTitle="@string/identity_sex" />

        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_identity_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/identity_work"
            app:cvInputType="text"
            app:cvTitle="@string/identity_work" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:background="@drawable/bg_radius_20_button_dusk"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="9dp"
            android:text="@string/submit"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

</ScrollView>