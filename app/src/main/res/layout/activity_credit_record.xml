<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_141414_F3F4F5"
    tools:context=".ui.profileCenter.creditrecord.CreditRecordActivity"
    tools:ignore="spUsage">


    <include
        android:id="@+id/top_bar"
        layout="@layout/view_base_tool_bar_no_drawer"/>

    <View
        android:id="@+id/credit_record_remain_border"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/top_bar" />

    <View
        android:id="@+id/credit_record_quota_border"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/credit_record_remain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/credit_record_remain"
        android:textColor="@color/color_BBBBBB_333333"
        android:textSize="@dimen/textSize14sp"
        app:layout_constraintBottom_toBottomOf="@id/credit_record_remain_border"
        app:layout_constraintStart_toStartOf="@id/credit_record_remain_border"
        app:layout_constraintTop_toTopOf="@id/credit_record_remain_border" />

    <TextView
        android:id="@+id/credit_record_remain_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/color_317FFF_0760D4"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/credit_record_remain_border"
        app:layout_constraintStart_toEndOf="@id/credit_record_remain"
        app:layout_constraintTop_toTopOf="@id/credit_record_remain_border"
        tools:text="15 æ—¥" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/credit_record_deactivate"
        android:textColor="@color/color_F75452_E23434"
        android:textSize="@dimen/textSize14sp"
        app:layout_constraintBottom_toBottomOf="@id/credit_record_remain_border"
        app:layout_constraintStart_toStartOf="@id/credit_record_remain_border"
        app:layout_constraintTop_toTopOf="@id/credit_record_remain_border"
        tools:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_212121_ededed"
        app:layout_constraintTop_toTopOf="@id/credit_record_quota_border" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/credit_record_quota"
        app:layout_constraintBottom_toBottomOf="@id/credit_record_quota_border"
        app:layout_constraintEnd_toStartOf="@id/credit_record_quota_amount"
        app:layout_constraintTop_toTopOf="@id/credit_record_quota_border" />

    <TextView
        android:id="@+id/credit_record_quota_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:textColor="@color/color_08dc6e_08dc6e"
        android:textSize="@dimen/textSize12sp"
        app:layout_constraintBottom_toBottomOf="@id/credit_record_quota_border"
        app:layout_constraintEnd_toEndOf="@id/credit_record_quota_border"
        app:layout_constraintTop_toTopOf="@id/credit_record_quota_border"
        tools:text="+34,752.000" />

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toTopOf="@id/credit_record_quota_border"
        app:layout_constraintTop_toBottomOf="@id/credit_record_remain_border"
        app:srlDragRate="0.3"
        app:srlEnableLoadMore="true"
        app:srlEnablePureScrollMode="true">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/credit_record_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="5"
            tools:listitem="@layout/itemview_credit_record" />

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>