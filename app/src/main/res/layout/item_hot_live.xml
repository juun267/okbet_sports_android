<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_8"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/iv_triangle_left"
        android:src="@drawable/icon_triangle_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="6dp"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/iv_triangle_left"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_skin_select_money_type_effect_main_light_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_team_logo1"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/margin_20"
                android:src="@drawable/icon_team_sign"/>
            <TextView
                android:id="@+id/tv_team_name1"
                android:layout_marginTop="@dimen/margin_6"
                android:layout_marginStart="@dimen/dp_4"
                android:textColor="@color/color_025BE8"
                android:textSize="@dimen/margin_12"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                tools:text="皇家马德里皇..."/>
            <TextView
                android:id="@+id/tv_team_score1"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/dp_10"
                android:textColor="@color/color_025BE8"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:textSize="@dimen/textSize16sp"
                android:gravity="end"
                android:layout_height="wrap_content"
                tools:text="3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_team_logo2"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/margin_20"
                android:src="@drawable/icon_team_sign"/>
            <TextView
                android:id="@+id/tv_team_name2"
                android:layout_marginTop="@dimen/margin_6"
                android:layout_marginStart="@dimen/dp_4"
                android:textColor="@color/color_025BE8"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textSize="@dimen/textSize12sp"
                android:layout_height="wrap_content"
                tools:text="皇家马德里皇..."/>
            <TextView
                android:id="@+id/tv_team_score2"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:textColor="@color/color_025BE8"
                android:gravity="end"
                android:textSize="@dimen/textSize16sp"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                tools:text="3"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>