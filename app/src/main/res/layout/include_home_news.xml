<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/margin_12">

        <ImageView
            android:layout_width="@dimen/margin_24"
            android:layout_height="@dimen/margin_24"
            android:src="@drawable/ic_cate_news" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_4"
            android:textSize="@dimen/textSize16sp"
            android:textColor="@color/color_0D2245"
            android:text="NEWS" />
    </LinearLayout>

    <org.cxct.sportlottery.view.CustomTabLayout
        android:id="@+id/tabNews"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF"
        android:layout_marginTop="1dp"
        app:firstTabText="OKBet"
        app:secondTabText="Sports" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_home_news"
        tools:itemCount="5" />
</LinearLayout>