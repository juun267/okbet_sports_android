<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llRootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@+id/cLBottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <org.cxct.sportlottery.widget.ParlayFloatingWindow
            android:id="@+id/parlayFloatWindow"
            android:visibility="gone"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/cLBottom"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cLBottom"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp">

            <org.cxct.sportlottery.widget.bottomnavigationview.BottomNavigationViewEx
                android:id="@+id/bottom_navigation_view"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bg_icon_bottom_bar"
                app:elevation="4dp"
                app:itemIconSize="30dp"
                app:itemTextColor="@color/main_tab_text_selector"
                app:labelVisibilityMode="labeled"
                app:layout_constraintBottom_toBottomOf="parent"
                app:menu="@menu/main_menu_navigation" />

            <View
                android:id="@+id/space1"
                android:background="@drawable/bg_gradient_bottom_sheet_shadow"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_view" />



            <LinearLayout
                android:id="@+id/ll_home_back"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:elevation="6dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/bottom_navigation_view"
                app:layout_constraintTop_toTopOf="@+id/bottom_navigation_view">

                <ImageView
                    android:id="@+id/iv_home_back"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_6"
                    android:src="@drawable/icon01_arrow_back" />

                <TextView
                    android:id="@+id/tv_home_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/home_back"
                    android:textColor="@color/color_025BE8"
                    android:textSize="@dimen/textSize10sp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- 投注單列表 & 快捷投注單 -->
    <FrameLayout
        android:id="@+id/fl_bet_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="gone" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/left_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/transparent"
        android:outlineAmbientShadowColor="@color/transparent"
        android:outlineSpotShadowColor="@color/transparent"
        android:tag="LEFT"
        tools:layout="@layout/fragment_main_left" />

</androidx.drawerlayout.widget.DrawerLayout>