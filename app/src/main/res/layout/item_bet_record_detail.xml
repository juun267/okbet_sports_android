<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="row"
            type="org.cxct.sportlottery.network.bet.list.Row" />

        <variable
            name="clickListener"
            type="org.cxct.sportlottery.ui.bet_record.search.result.ItemClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:onClick="@{() -> clickListener.onClick(row)}"
        android:layout_marginHorizontal="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/textSize12sp"
                android:text="@string/league_name"
                app:autoSizeMinTextSize="@dimen/textSize8sp"
                app:autoSizeMaxTextSize="@dimen/textSize12sp"
                android:textColor="@color/gray3"/>

            <TextView
                android:id="@+id/tv_league"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="16dp"
                android:textSize="@dimen/textSize12sp"
                android:textColor="@color/gray6"
                tools:text="超级联赛"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/textSize12sp"
                android:text="@string/game_match"
                app:autoSizeMinTextSize="@dimen/textSize8sp"
                app:autoSizeMaxTextSize="@dimen/textSize12sp"
                android:textColor="@color/gray3"/>

            <TextView
                android:id="@+id/tv_match"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="16dp"
                android:textSize="@dimen/textSize12sp"
                android:textColor="@color/gray6"
                tools:text="(主) 泰拉维  vs  库塔伊西鱼雷 (客)"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/textSize12sp"
                android:text="@string/play_type"
                app:autoSizeMinTextSize="@dimen/textSize8sp"
                app:autoSizeMaxTextSize="@dimen/textSize12sp"
                android:textColor="@color/gray3"/>

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="16dp"
                android:textSize="@dimen/textSize12sp"
                android:textColor="@color/gray6"
                tools:text="独赢"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/textSize12sp"
                android:text="@string/game_odds"
                app:autoSizeMinTextSize="@dimen/textSize8sp"
                app:autoSizeMaxTextSize="@dimen/textSize12sp"
                android:textColor="@color/gray3"/>

            <TextView
                android:id="@+id/tv_odds_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="16dp"
                android:textSize="@dimen/textSize12sp"
                android:textColor="@color/gray6"
                tools:text="泰拉雅"
                />

            <TextView
                android:id="@+id/tv_odds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/textSize12sp"
                android:textColor="@color/red2"
                tools:text="\@3.45"
                />
        </LinearLayout>

        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray10"/>
    </LinearLayout>
</layout>
