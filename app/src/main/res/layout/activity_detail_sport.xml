                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:text="MC"
                            android:textColor="@color/color_BEC7DC"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@+id/ivVideo"
                            app:layout_constraintEnd_toStartOf="@+id/ivVideo"
                            app:layout_constraintTop_toTopOf="@+id/ivVideo" />

                        <ImageView
                            android:id="@+id/ivLiveStream"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="5dp"
                            app:layout_constraintBottom_toBottomOf="@+id/tvLiveStream"
                            app:layout_constraintEnd_toStartOf="@+id/tvLiveStream"
                            app:layout_constraintTop_toTopOf="@+id/tvLiveStream"
                            tools:srcCompat="@drawable/icon_live_stream" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <!-- 这边必须使用ToolBar -->
                <androidx.appcompat.widget.Toolbar
