                            android:paddingEnd="5dp"
                            app:layout_constraintBottom_toBottomOf="@+id/tvAnim"
                            app:layout_constraintEnd_toStartOf="@+id/tvAnim"
                            app:layout_constraintTop_toTopOf="@+id/tvAnim"
                            app:layout_constraintVertical_bias="1.0"
                            tools:srcCompat="@drawable/icon_animation" />

                        <TextView
                            android:id="@+id/tvVideo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:text="Video"
                            android:textColor="@color/color_BEC7DC"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@+id/ivAnim"
                            app:layout_constraintEnd_toStartOf="@+id/ivAnim"
