<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F4F5"
    tools:context=".ui.feedback.FeedbackSubmitFragment">

    <!-- Tab bar-->
    <RelativeLayout
        android:id="@+id/block_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_frame_6dp_white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_sugession"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_frame_6dp_white_select_effect_left"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/feedback_tabName_problem"
                android:textColor="@color/selector_text_effect_main_light_color"
                android:textSize="@dimen/textSize16sp" />

            <TextView
                android:id="@+id/btn_record"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_frame_6dp_white_select_effect_right"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/feedback_tabName_record"
                android:textColor="@color/selector_text_effect_main_light_color"
                android:textSize="@dimen/textSize16sp" />

        </LinearLayout>

    </RelativeLayout>

    <EditText
        android:id="@+id/et_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_feedback_input"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/textSize14sp"
        android:gravity="top|left"
        android:padding="15dp"
        android:hint="@string/feedback_hint" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/bg_5dp_radius_button_blue3"
        android:gravity="center"
        android:text="@string/btn_submit"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize16sp" />

</LinearLayout>