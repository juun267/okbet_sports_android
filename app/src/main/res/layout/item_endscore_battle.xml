<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:showDividers="end">

        <ImageView
            android:id="@+id/league_odd_match_favorite"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:padding="7dp"
            android:src="@drawable/selector_star_v4"
            tools:ignore="ContentDescription"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            tools:visibility="visible">

            <TextView
                android:id="@+id/league_odd_match_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:textColor="@color/color_6C7BA8"
                android:textSize="@dimen/textSize10sp"
                tools:text="比赛延期"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/league_odd_match_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:fontFamily="@font/din_regular"
                android:textColor="@color/color_414655"
                android:textFontWeight="700"
                android:textSize="@dimen/textSize10sp"
                tools:text="00:43"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/league_neutral"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_n"
                android:visibility="gone"
                tools:ignore="ContentDescription"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/league_corner_kicks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_kicks"
                android:fontFamily="@font/din_regular"
                android:paddingEnd="5dp"
                android:textColor="@color/color_6C7BA8"
                android:textSize="@dimen/textSize10sp"
                android:visibility="gone"
                tools:text="1-5"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/league_spt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_6C7BA8"
                android:textSize="@dimen/textSize10sp"
                android:visibility="gone"
                tools:text="5盘3胜"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_peroid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_6C7BA8"
                android:textSize="@dimen/textSize10sp"
                android:visibility="gone"
                tools:text="第二盘"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_261B3A98"/>

    <LinearLayout
        android:id="@+id/llMatchInfo"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivHomeLogo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="18dp"/>

            <TextView
                android:id="@+id/tvHomeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color_535D76"
                android:textStyle="bold"
                android:textSize="13sp"
                android:maxLines="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:paddingRight="5dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivAwayLogo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="18dp"/>

            <TextView
                android:id="@+id/tvAwayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color_535D76"
                android:textStyle="bold"
                android:textSize="13sp"
                android:maxLines="1"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>