<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_select_bank_card"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="20dp">

    <ImageView
        android:id="@+id/iv_bank_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_bank_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_bank_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/textSize14sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bank_icon"
        app:layout_constraintStart_toEndOf="@+id/iv_bank_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_bank_icon"
        tools:text="@string/selected_bank_card" />


    <ImageView
        android:id="@+id/img_tick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="@dimen/textSize8sp"
        android:src="@drawable/ic_tick"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bank_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_bank_icon"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>