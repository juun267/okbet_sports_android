<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_0E131F"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/bg_endcard_banner">
     <RadioGroup
         android:id="@+id/rgTab"
         android:layout_width="200dp"
         android:layout_height="@dimen/margin_36"
         android:orientation="horizontal"
         android:gravity="center_vertical"
         android:layout_marginRight="@dimen/margin_12"
         android:layout_gravity="center_vertical|right">
       <RadioButton
           android:id="@+id/rbtnSettled"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:button="@null"
           android:background="@drawable/selector_radio_blue_dark"
           android:gravity="center"
           android:textSize="@dimen/sp_14"
           android:textColor="@color/color_FFFFFF"
           android:text="@string/H021"/>
         <RadioButton
             android:id="@+id/rbtnUnSettle"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:layout_marginLeft="@dimen/margin_8"
             android:button="@null"
             android:background="@drawable/selector_radio_blue_dark"
             android:gravity="center"
             android:textSize="@dimen/sp_14"
             android:textColor="@color/color_FFFFFF"
             android:text="@string/H009"/>
     </RadioGroup>
   </FrameLayout>

    <FrameLayout
        android:id="@+id/flContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>