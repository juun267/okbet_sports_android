<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_0E131F"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:background="@drawable/bg_endcard_banner">
     <RadioGroup
         android:id="@+id/rgTab"
         android:layout_width="200dp"
         android:layout_height="44dp"
         android:padding="4dp"
         android:orientation="horizontal"
         android:gravity="center_vertical"
         android:layout_marginRight="@dimen/margin_12"
         android:layout_gravity="center_vertical|right"
         android:background="@drawable/bg_radio_stroke">
       <RadioButton
           android:id="@+id/rbtnSettled"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:checked="true"
           android:button="@null"
           android:background="@drawable/selector_radio_blue_dark"
           android:gravity="center"
           android:textSize="@dimen/sp_14"
           android:textColor="@color/color_date_gray_white"
           android:text="@string/settled"/>
         <RadioButton
             android:id="@+id/rbtnUnSettle"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:button="@null"
             android:background="@drawable/selector_radio_blue_dark"
             android:gravity="center"
             android:textSize="@dimen/sp_14"
             android:textColor="@color/color_date_gray_white"
             android:text="@string/not_settled"/>
     </RadioGroup>
   </FrameLayout>
    <LinearLayout
        android:id="@+id/linSettledMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rgDate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingHorizontal="@dimen/margin_12"
        android:background="@color/color_202839"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical|right">
        <RadioButton
            android:id="@+id/rbtnToday"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:button="@null"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:paddingHorizontal="@dimen/margin_12"
            android:textColor="@color/color_6d7693_ffffff"
            android:text="@string/home_tab_today"/>
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/color_314363"
            android:layout_marginHorizontal="@dimen/margin_16"/>
        <RadioButton
            android:id="@+id/rbtnYesterday"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:paddingHorizontal="@dimen/margin_12"
            android:textColor="@color/color_6d7693_ffffff"
            android:text="@string/I023"/>
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/color_314363"
            android:layout_marginHorizontal="@dimen/margin_16"/>
        <RadioButton
            android:id="@+id/rbtnLast"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:paddingHorizontal="@dimen/margin_12"
            android:textColor="@color/color_6d7693_ffffff"
            android:text="@string/P128"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/margin_12"
        android:layout_marginTop="2dp"
        android:background="@color/color_1A202E">
     <LinearLayout
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:gravity="center"
         android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/color_6D7693"
            android:textSize="@dimen/textSize12sp"
            android:text="@string/N943"/>
         <TextView
             android:id="@+id/tvTotalValue"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:lines="1"
             android:ellipsize="end"
             android:layout_marginTop="@dimen/margin_4"
             android:textColor="@color/color_BEC7DC"
             android:textSize="@dimen/textSize14sp"
             tools:text="1,000,000.00"/>

     </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/color_6D7693"
                android:textSize="@dimen/textSize12sp"
                android:text="@string/N942"/>
            <TextView
                android:id="@+id/tvTotalbet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/margin_4"
                android:textColor="@color/color_BEC7DC"
                android:textSize="@dimen/textSize14sp"
                tools:text="27"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/color_6D7693"
                android:textSize="@dimen/textSize12sp"
                android:text="@string/H026"/>
            <TextView
                android:id="@+id/tvReward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/margin_4"
                android:textColor="@color/color_BEC7DC"
                android:textSize="@dimen/textSize14sp"
                tools:text="1,000,000.00"/>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBetRecord"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_4"
        android:orientation="vertical"
        tools:listitem="@layout/item_endcard_record"
        tools:itemCount="3"/>
</LinearLayout>