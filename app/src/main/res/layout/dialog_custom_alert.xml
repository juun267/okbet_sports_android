<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    tools:context="org.cxct.sportlottery.ui.common.CustomAlertDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2B3B4B"
            android:gravity="center"
            android:minHeight="40dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize16sp"
            tools:text="標題" />

        <ScrollView
            android:id="@+id/sv_block_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/gray6"
                android:textSize="@dimen/textSize14sp"
                tools:text="訊息" />

        </ScrollView>

        <View
            android:id="@+id/line_h"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_negative"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/effect_ripple_rectangle_blue_light"
                android:text="@string/btn_cancel"
                android:textColor="@color/main"
                android:textSize="@dimen/textSize14sp" />

            <View
                android:id="@+id/line_v"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/light_gray" />

            <Button
                android:id="@+id/btn_positive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/effect_ripple_rectangle_blue_light"
                android:text="@string/btn_confirm"
                android:textColor="@color/main"
                android:textSize="@dimen/textSize14sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>