<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_FFFFFF">

    <LinearLayout
        android:id="@+id/lin_sport_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/color_F3F9FF"
            android:paddingHorizontal="@dimen/margin_15"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_sport"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_home_football_sel" />

        <TextView
            android:id="@+id/tv_sport_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="@dimen/margin_10"
            android:textColor="@color/color_025BE8"
            android:textSize="@dimen/textSize14sp"
            tools:text="@string/soccer" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/selector_arrow_blue_double" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_E8EFFD" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_league"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF"
        android:paddingHorizontal="@dimen/margin_14"
        tools:listitem="@layout/item_sport_favorite"
        tools:itemCount="1" />
</LinearLayout>


