<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_above="@+id/constrainBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <org.cxct.sportlottery.view.SportNodeView
                android:id="@+id/nodeHandicap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <org.cxct.sportlottery.view.SportNodeView
                android:id="@+id/nodeBetRule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <org.cxct.sportlottery.view.SportNodeView
                android:id="@+id/nodeLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:text="@string/other"
                android:textColor="@color/color_000000"
                android:textSize="14sp" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="40dp"
                android:foreground="@drawable/fg_ripple">

                <ImageView
                    android:id="@+id/ivTutorial"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="14dp"
                    android:src="@drawable/ic_betting_tutorial"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="Betting Tutorial"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/ivTutorial"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_bet_arrow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/color_EEF3FC"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constrainNews"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:foreground="@drawable/fg_ripple">

                <ImageView
                    android:id="@+id/ivAnnouncement"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="14dp"
                    android:src="@drawable/ic_event_announcement"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="@string/LT054COPY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/ivAnnouncement"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_bet_arrow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/color_EEF3FC"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constrainResults"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:foreground="@drawable/fg_ripple">

                <ImageView
                    android:id="@+id/ivResults"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="14dp"
                    android:src="@drawable/ic_other_result"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="@string/game_result"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/ivResults"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_bet_arrow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/color_EEF3FC"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constrainRules"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:foreground="@drawable/fg_ripple">

                <ImageView
                    android:id="@+id/ivRules"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="14dp"
                    android:src="@drawable/ic_sports_rules"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="@string/N947"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/ivRules"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_bet_arrow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/color_EEF3FC"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainBottom"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@color/color_F9FAFD"
        android:layout_height="68dp">


        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="12dp"
            android:text="Appearance Setting"
            android:textColor="@color/color_000000"
            android:textSize="14sp" />

        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp"
            android:layout_marginEnd="12dp"
            android:layout_width="160dp"
            android:layout_height="32dp">

            <TextView
                android:id="@+id/tvDay"
                android:textSize="12sp"
                android:textColor="@color/color_FFFFFF"
                android:text="Day"
                android:background="@color/color_025BE8"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="32dp"/>


            <TextView
                android:id="@+id/tvNight"
                android:textSize="12sp"
                android:textColor="@color/color_000000"
                android:text="Night"
                android:layout_gravity="right"
                android:background="@color/color_e0e3ee"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="32dp"/>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>