<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_FCFDFF"
    android:foreground="@drawable/fg_ripple"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_E1EDFF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_league_logo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="11dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_league_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/textSize14sp"
        tools:text="欧洲足球锦标赛2020" />

    <ImageView
        android:id="@+id/iv_league_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="7dp"
        android:padding="5dp"
        android:src="@drawable/selector_filter_arrow" />

        <TextView
            android:id="@+id/tvNum"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:minWidth="@dimen/margin_26"
            android:gravity="center"
            android:layout_marginRight="12dp"
            android:paddingHorizontal="@dimen/margin_4"
            android:src="@drawable/selector_filter_arrow"
            android:background="@drawable/bg_blue_radius_10_stroke"
            android:textSize="@dimen/textSize12sp"
            android:textStyle="bold"
            android:textColor="@color/color_025BE8"
            android:visibility="gone"
            tools:text="99" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_E1EDFF"/>
</LinearLayout>