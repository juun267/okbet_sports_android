<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/block_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlueLight"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/frame_4dp_white"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/tab_bank_card"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/effect_select_bg_white_transparent"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="@string/bank_card"
                    android:textColor="@color/color_select_primary_white"
                    android:textSize="@dimen/textSize14sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite" />

                <RadioButton
                    android:id="@+id/tab_crypto"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/effect_select_bg_white_transparent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/crypto"
                    android:textColor="@color/color_select_primary_white"
                    android:textSize="@dimen/textSize14sp" />

            </RadioGroup>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

