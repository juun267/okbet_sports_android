    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingTop="12dp"
        android:paddingEnd="24dp"
        android:paddingBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/now_balance"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize14sp"
            tools:text="19940.000" />

        <TextView
            android:id="@+id/tv_currency_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            tools:text="PHP"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp">
        <!-- 選擇銀行 -->
        <LinearLayout
            android:id="@+id/ll_select_bank"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_square_shape_4dp_white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/tv_channel_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:text="@string/select_bank"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize13sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/colorWhite6" />

            <ImageView
                android:id="@+id/iv_bank_card_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_bank_default" />

            <TextView
                android:id="@+id/tv_select_bank_card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="28dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="@string/select_bank"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize12sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_margin="11dp"
                android:src="@drawable/ic_arrow_down_gray" />
        </LinearLayout>
        <!-- 提款金額 -->
        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_withdrawal_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/hint_please_enter_withdraw_amount"
            app:cvInputType="number"
            app:cvTitle="@string/withdraw_amount" />
        <!-- 提款提示 -->
        <TextView
            android:id="@+id/tv_hint_withdraw_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/withdraw_handling_fee_hint"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/textSize12sp" />
        <!-- 提款虛擬幣所需餘提示 -->
        <TextView
            android:id="@+id/tv_hint_withdraw_crypto_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/withdraw_crypto_amount_hint"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/textSize12sp" />
        <!-- 提款虛擬幣手續費提示 -->
        <TextView
            android:id="@+id/tv_hint_withdraw_crypto_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/withdraw_crypto_fee_hint"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/textSize12sp" />
        <!-- 扣除金额 -->
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/ll_commission"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/effect_edittext_bg"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="12dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:text="@string/commission_deducted_amount"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize13sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/colorWhite6" />

            <TextView
                android:id="@+id/tv_commission"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="@color/colorRedDark"
                android:textSize="@dimen/textSize12sp" />

            <TextView
                android:enabled="false"
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/selector_commission_detail_button"
                android:gravity="center"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:text="@string/commission_detail"
                android:textColor="@color/selector_blue_light_gray"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/btn_info"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:contentDescription="@null"
                android:gravity="center"
                android:src="@drawable/icon_info" />


        </LinearLayout>
        <!-- 提款密碼 -->
        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_withdrawal_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cvHint="@string/hint_four_number_password"
            app:cvInputType="numberPassword"
            app:cvTitle="@string/withdraw_password" />

        <TextView
            android:id="@+id/btn_withdraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_radius_20_button_dusk"
            android:letterSpacing="0.2"
            android:paddingVertical="9dp"
            android:text="@string/submit"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize16sp" />
    </LinearLayout>
</LinearLayout>