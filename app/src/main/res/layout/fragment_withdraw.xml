<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="org.cxct.sportlottery.ui.withdraw.WithdrawFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="org.cxct.sportlottery.ui.common.CustomTabLayout">

        <com.google.android.material.tabs.TabLayout
            app:tabTextAppearance="@style/NoUppercaseTab"
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:tabIndicator="@drawable/custom_tab_indicator"
            app:tabIndicatorFullWidth="false"
            app:tabMode="fixed"
            app:tabPaddingEnd="25dp"
            app:tabPaddingStart="25dp"
            app:tabRippleColor="@null"
            app:tabSelectedTextColor="@color/color_e5e5e5_333333"
            app:tabTextColor="@color/color_A3A3A3_666666">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bank_card" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/crypto" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ewallet" />

        </com.google.android.material.tabs.TabLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="0dp"
            android:background="@color/color_191919_EEEFF0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_191919_FCFCFC"
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingTop="12dp"
        android:paddingEnd="24dp"
        android:paddingBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/now_balance"
            android:textColor="@color/color_e5e5e5_333333"
            android:textSize="@dimen/textSize14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/color_e5e5e5_333333"
            android:textSize="@dimen/textSize14sp"
            tools:text="19940.000" />

        <TextView
            android:id="@+id/tv_currency_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/color_e5e5e5_333333"
            android:textSize="@dimen/textSize14sp"
            tools:text="PHP" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp">
        <!-- 選擇銀行 -->
        <LinearLayout
            android:id="@+id/ll_select_bank"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_square_shape_4dp_white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/tv_channel_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:text="@string/select_bank"
                android:textColor="@color/color_e5e5e5_333333"
                android:textSize="@dimen/textSize13sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/color_191919_EEEFF0" />

            <ImageView
                android:id="@+id/iv_bank_card_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_bank_default" />

            <TextView
                android:id="@+id/tv_select_bank_card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="28dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="@string/select_bank"
                android:textColor="@color/color_e5e5e5_333333"
                android:textSize="@dimen/textSize12sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_margin="11dp"
                android:src="@drawable/ic_arrow_down_gray" />
        </LinearLayout>
        <!-- 提款金額 -->
        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_withdrawal_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/hint_please_enter_withdraw_amount"
            app:cvInputType="number"
            app:cvTitle="@string/withdraw_amount" />
        <!-- 提款提示 -->
        <TextView
            android:id="@+id/tv_hint_withdraw_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/withdraw_handling_fee_hint"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/textSize12sp" />
        <!-- 提款虛擬幣所需餘提示 -->
        <TextView
            android:id="@+id/tv_hint_withdraw_crypto_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/withdraw_crypto_amount_hint"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/textSize12sp" />
        <!-- 提款虛擬幣手續費提示 -->
        <TextView
            android:id="@+id/tv_hint_withdraw_crypto_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/withdraw_crypto_fee_hint"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/textSize12sp" />
        <!-- 扣除金额 -->
        <LinearLayout
            android:id="@+id/ll_commission"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/effect_edittext_bg"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="12dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:text="@string/commission_deducted_amount"
                android:textColor="@color/color_e5e5e5_333333"
                android:textSize="@dimen/textSize13sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/color_191919_EEEFF0" />

            <TextView
                android:id="@+id/tv_commission"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/colorRedDark"
                android:textSize="@dimen/textSize12sp" />

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/selector_commission_detail_button"
                android:enabled="false"
                android:gravity="center"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:text="@string/commission_detail"
                android:textColor="@color/selector_blue_light_gray"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/btn_info"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:contentDescription="@null"
                android:gravity="center"
                android:src="@drawable/icon_info" />


        </LinearLayout>
        <!-- 提款密碼 -->
        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_withdrawal_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cvHint="@string/hint_four_number_password"
            app:cvInputType="numberPassword"
            app:cvTitle="@string/withdraw_password" />

        <TextView
            android:id="@+id/btn_withdraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_radius_20_button_dusk"
            android:letterSpacing="0.2"
            android:paddingVertical="9dp"
            android:text="@string/submit"
            android:textAlignment="center"
            android:textColor="@color/color_191919_FCFCFC"
            android:textSize="@dimen/textSize16sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.04" />

            <TextView
                android:id="@+id/tv_dot_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:paddingBottom="5dp"
                android:text="·"
                android:textColor="@color/colorRed"
                android:textSize="12dp"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_notification_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:paddingBottom="5dp"
                android:text="@string/initial_withdrawal_needs_credited"
                android:textColor="@color/colorRed"
                android:textSize="12dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_dot_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:text="·"
                android:textColor="@color/colorRed"
                android:textSize="12dp"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_dot_1"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_notification_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="@string/make_sure_valid_account"
                android:textColor="@color/colorRed"
                android:textSize="12dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_notification_1"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>