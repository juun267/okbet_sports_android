<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingTop="12dp"
        android:paddingEnd="24dp"
        android:paddingBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/now_balance"
            android:textColor="@color/textColorDark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorDark"
            android:text="0"
            android:textSize="14sp"
            tools:text="19940.000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/currency"
            android:textColor="@color/textColorDark"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp">
        <!-- 選擇銀行 -->
        <LinearLayout
            android:id="@+id/ll_select_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_bank_list_selector"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/select_bank"
                android:textColor="@color/gray4"
                android:textSize="@dimen/textSize13sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@color/bright_gray" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_bank_default" />

            <TextView
                android:id="@+id/tv_select_bank_card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="28dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="@string/select_bank"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/textSize12sp" />
        </LinearLayout>
        <!-- 提款金額 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_frame_5dp"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/withdraw_amount"
                android:textColor="@color/gray4"
                android:textSize="@dimen/textSize13sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@color/bright_gray" />

            <EditText
                android:id="@+id/edit_withdraw_amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:background="@color/transparent"
                android:gravity="start|center_vertical"
                android:hint="@string/hint_please_enter_withdraw_amount"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/textSize12sp" />

            <TextView
                android:id="@+id/btn_withdraw_all"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:text="@string/withdraw_all"
                android:textColor="@color/blue3"
                android:textSize="@dimen/textSize13sp" />
        </LinearLayout>
        <!-- 提款提示 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/withdraw_handling_fee_hint"
            android:textColor="@color/orangeRed"
            android:textSize="@dimen/textSize12sp" />
        <!-- 提款密碼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_frame_5dp"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/withdraw_password"
                android:textColor="@color/gray4"
                android:textSize="@dimen/textSize13sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@color/bright_gray" />

            <EditText
                android:id="@+id/edit_withdraw_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:maxLength="4"
                android:inputType="numberPassword"
                android:background="@color/transparent"
                android:gravity="start|center_vertical"
                android:hint="@string/hint_four_number_password"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/textSize12sp" />
        </LinearLayout>
    </LinearLayout>
    <!--  按鈕  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/blue3"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/btn_withdraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="64dp"
                android:paddingTop="8dp"
                android:paddingEnd="64dp"
                android:paddingBottom="8dp"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize16sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/blue4"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="64dp"
                android:paddingTop="8dp"
                android:paddingEnd="64dp"
                android:paddingBottom="8dp"
                android:text="@string/reset"
                android:textColor="@color/gray4"
                android:textSize="@dimen/textSize16sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>