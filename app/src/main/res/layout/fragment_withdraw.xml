<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlueLight"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingTop="6dp"
        android:paddingEnd="10dp"
        android:paddingBottom="6dp">

        <TextView
            android:id="@+id/tab_bank_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_select_money_tab_left"
            android:gravity="center"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="@string/bank_card"
            android:textColor="@color/color_select_money_tab_text"
            android:textSize="@dimen/textSize14sp" />

        <TextView
            android:id="@+id/tab_crypto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_select_money_tab_right"
            android:gravity="center"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="@string/crypto"
            android:textColor="@color/color_select_money_tab_text"
            android:textSize="@dimen/textSize14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingTop="12dp"
        android:paddingEnd="24dp"
        android:paddingBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/now_balance"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize14sp" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize14sp"
            tools:text="19940.000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/currency"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp">
        <!-- 選擇銀行 -->
        <LinearLayout
            android:id="@+id/ll_select_bank"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/frame_bank_list_selector"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/tv_channel_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:gravity="start|center_vertical"
                android:text="@string/select_bank"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize13sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:layout_marginEnd="12dp"
                android:background="@color/bright_gray" />

            <ImageView
                android:id="@+id/iv_bank_card_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_bank_default" />

            <TextView
                android:id="@+id/tv_select_bank_card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="28dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="@string/select_bank"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize12sp" />
        </LinearLayout>
        <!-- 提款金額 -->
        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_withdrawal_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/hint_please_enter_withdraw_amount"
            app:cvInputType="number"
            app:cvTitle="@string/withdraw_amount" />
        <!-- 提款提示 -->
        <TextView
            android:id="@+id/tv_hint_withdraw_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/withdraw_handling_fee_hint"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/textSize12sp" />
        <!-- 提款密碼 -->
        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_withdrawal_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cvHint="@string/hint_four_number_password"
            app:cvInputType="textPassword"
            app:cvTitle="@string/withdraw_password" />
    </LinearLayout>
    <!--  按鈕  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorBlue"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/btn_withdraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:letterSpacing="0.2"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@string/submit"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize16sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>