<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@drawable/corner_bottom_rectangle"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:id="@+id/ll_content2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_bet_range2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/corner_bottom_left_rectangle"
            tools:backgroundTint="@color/color_141414_F3F4F5">

            <TextView
                android:id="@+id/tv_bet_min2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textColor="@color/color_DDDDDD_000000"
                android:textSize="@dimen/textSize13sp"
                tools:text="100" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tilde"
                android:textColor="@color/color_A3A3A3_666666"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_bet_max2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textColor="@color/color_DDDDDD_000000"
                android:textSize="@dimen/textSize13sp"
                tools:text="100" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/tv_rebates_rate2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textColor="@color/color_DDDDDD_000000"
            android:textSize="@dimen/textSize13sp"
            tools:background="@color/color_141414_F3F4F5"
            tools:backgroundTint="@color/color_141414_F3F4F5"
            tools:text="1%" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/tv_rebates2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/corner_bottom_right_rectangle"
            android:gravity="center"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textColor="@color/color_DDDDDD_000000"
            android:textSize="@dimen/textSize13sp"
            tools:backgroundTint="@color/color_141414_F3F4F5"
            tools:text="100" />

    </LinearLayout>
</LinearLayout>