<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingVertical="2dp"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:background="@drawable/bg_parlay_float_window">

    <TextView
        android:id="@+id/tv_bet_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="@string/str_bet_parlay"
        android:textColor="@color/color_025BE8"
        android:textStyle="bold"
        android:textSize="@dimen/textSize14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/tv_bet_list_count"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/bg_parlay_circle_float"
        android:gravity="center"
        android:fontFamily="@font/din_pro_medium"
        android:textColor="@color/color_FFFFFF_FFFFFF"
        android:textSize="@dimen/textSize12sp"
        app:autoSizeStepGranularity="1dp"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="@dimen/textSize12sp"
        app:autoSizeMinTextSize="@dimen/textSize8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_bet_list"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10" />


</androidx.constraintlayout.widget.ConstraintLayout>