<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:id="@+id/flContentFloating"
    android:background="@drawable/bg_rect_ffffff"
    android:layout_height="40dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingVertical="3dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_parlay_float_window">

        <TextView
            android:id="@+id/tv_bet_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="6dp"
            android:text="@string/str_bet_parlay"
            android:textColor="@color/color_025BE8"
            android:textStyle="bold"
            android:textSize="@dimen/textSize14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpUsage" />

        <View
            android:id="@+id/view3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_parlay_circle_float"
            app:layout_constraintBottom_toBottomOf="@id/tv_bet_list_count"
            app:layout_constraintEnd_toEndOf="@id/tv_bet_list_count"
            app:layout_constraintStart_toStartOf="@id/tv_bet_list_count"
            app:layout_constraintTop_toTopOf="@id/tv_bet_list_count" />

        <TextView
            android:id="@+id/tv_bet_list_count"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:fontFamily="@font/din_pro_medium"
            android:textColor="@color/color_FFFFFF_FFFFFF"
            android:textSize="@dimen/textSize13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_bet_list"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="10" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>