<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingTop="100dp">

    <View
        android:id="@+id/bg_top"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#FAFAFA"
        app:layout_constraintBottom_toTopOf="@+id/bg_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txv_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/other_link"
        android:textColor="@color/color_333333"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txv_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/about_us"
        android:textColor="@color/color_999999"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/txv_other"
        app:layout_constraintTop_toBottomOf="@+id/txv_other" />

    <TextView
        android:id="@+id/txv_gaming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/responsible"
        android:textColor="@color/color_999999"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/txv_about"
        app:layout_constraintTop_toBottomOf="@+id/txv_about" />

    <TextView
        android:id="@+id/txv_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/terms_conditions"
        android:textColor="@color/color_999999"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/txv_gaming"
        app:layout_constraintTop_toBottomOf="@+id/txv_gaming" />

    <TextView
        android:id="@+id/txv_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/privacy_policy"
        android:textColor="@color/color_999999"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/guideline_vrt"
        app:layout_constraintTop_toTopOf="@+id/txv_about" />

    <TextView
        android:id="@+id/txv_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/btm_navigation_language"
        android:textColor="@color/color_999999"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/guideline_vrt"
        app:layout_constraintTop_toBottomOf="@+id/txv_policy" />

    <ImageView
        android:id="@+id/img_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:src="@drawable/img_flag"
        app:layout_constraintBottom_toBottomOf="@+id/txv_language"
        app:layout_constraintStart_toEndOf="@+id/txv_language"
        app:layout_constraintTop_toTopOf="@+id/txv_language" />

    <TextView
        android:id="@+id/txv_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/help"
        android:textColor="@color/color_333333"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/txv_other"
        app:layout_constraintTop_toBottomOf="@+id/txv_terms" />

    <TextView
        android:id="@+id/txv_faq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/faqs"
        android:textColor="@color/color_999999"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/txv_help"
        app:layout_constraintTop_toBottomOf="@+id/txv_help" />

    <TextView
        android:id="@+id/txv_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/live_chat"
        android:textColor="@color/color_999999"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/txv_faq"
        app:layout_constraintTop_toBottomOf="@+id/txv_faq" />

    <TextView
        android:id="@+id/txv_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingBottom="12dp"
        android:text="@string/contact"
        android:textColor="@color/color_999999"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/txv_chat"
        app:layout_constraintTop_toBottomOf="@+id/txv_chat" />

    <!--    android:background="#fff3f4f5"-->


    <View
        android:id="@+id/bg_bottom"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/colorWhite1"
        app:layout_constraintBottom_toBottomOf="@+id/txv_copyright"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txv_btm_hint" />

    <TextView
        android:id="@+id/txv_btm_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="17dp"
        android:gravity="center_horizontal"
        android:paddingTop="16dp"
        android:text="@string/btm_navigation_hint"
        android:textColor="@color/color_999999"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txv_contact"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/img_pagcor_mark"
        android:layout_width="149dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_pagcor_mark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txv_btm_hint"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txv_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:text="@string/btm_navigation_copyright"
        android:textColor="@color/color_AAAAAA"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_pagcor_mark" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vrt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55" />

</androidx.constraintlayout.widget.ConstraintLayout>