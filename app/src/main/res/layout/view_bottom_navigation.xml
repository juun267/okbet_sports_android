<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="SpUsage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_212223_F1F7FE">

        <TextView
            android:id="@+id/txv_partner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:includeFontPadding="false"
            android:text="@string/official_partner"
            android:textAllCaps="true"
            android:textColor="@color/color_BCBCBC_666666"
            android:textSize="@dimen/textSize10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_partner"
            android:layout_width="114dp"
            android:layout_height="48dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/ic_mpbl_ogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txv_partner" />

        <TextView
            android:id="@+id/txv_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:includeFontPadding="false"
            android:paddingVertical="12dp"
            android:paddingStart="16dp"
            android:text="@string/other_link"
            android:textColor="@color/color_BBBBBB_333333"
            android:textSize="@dimen/textSize12sp"
            app:layout_constraintTop_toBottomOf="@+id/img_partner" />

        <ImageView
            android:id="@+id/iv_other_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_bottom_nav_arrow_up"
            app:layout_constraintBottom_toBottomOf="@+id/txv_other"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txv_other" />

        <View
            android:id="@+id/line_other"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/color_3b3b3b_e6e6e6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txv_other"
            app:layout_constraintTop_toBottomOf="@+id/txv_other" />

        <LinearLayout
            android:id="@+id/ll_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="10dp"
            android:paddingStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/line_other">

            <TextView
                android:id="@+id/txv_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingBottom="18dp"
                android:text="@string/about_us"
                android:textColor="@color/color_8F8F8F_999999"
                android:textSize="@dimen/textSize12sp" />

            <TextView
                android:id="@+id/txv_gaming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingBottom="18dp"
                android:text="@string/responsible"
                android:textColor="@color/color_8F8F8F_999999"
                android:textSize="@dimen/textSize12sp" />

            <TextView
                android:id="@+id/txv_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingBottom="18dp"
                android:text="@string/terms_conditions"
                android:textColor="@color/color_8F8F8F_999999"
                android:textSize="@dimen/textSize12sp" />

            <TextView
                android:id="@+id/txv_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/privacy_policy"
                android:textColor="@color/color_8F8F8F_999999"
                android:textSize="@dimen/textSize12sp" />

            <!-- 20220719 新版Footer隱藏代理加盟 -->
            <TextView
                android:id="@+id/txv_affiliate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:includeFontPadding="false"
                android:text="@string/btm_navigation_affiliate"
                android:textColor="@color/color_7F7F7F_999999"
                android:textSize="@dimen/textSize12sp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/txv_help"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:includeFontPadding="false"
            android:paddingVertical="12dp"
            android:paddingStart="16dp"
            android:text="@string/help"
            android:textColor="@color/color_BBBBBB_333333"
            android:textSize="@dimen/textSize12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_other" />

        <ImageView
            android:id="@+id/iv_help_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_bottom_nav_arrow_down"
            app:layout_constraintBottom_toBottomOf="@+id/txv_help"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txv_help" />

        <View
            android:id="@+id/line_help"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/color_3b3b3b_e6e6e6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txv_help"
            app:layout_constraintTop_toBottomOf="@+id/txv_help" />

        <LinearLayout
            android:id="@+id/ll_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="10dp"
            android:paddingStart="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/line_help"
            tools:visibility="visible">

            <TextView
                android:id="@+id/txv_faq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingBottom="18dp"
                android:text="@string/faqs"
                android:textColor="@color/color_7F7F7F_999999"
                android:textSize="@dimen/textSize12sp"
                app:layout_constraintStart_toStartOf="@+id/txv_help"
                app:layout_constraintTop_toBottomOf="@+id/txv_help"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/txv_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingBottom="18dp"
                android:text="@string/live_chat"
                android:textColor="@color/color_7F7F7F_999999"
                android:textSize="@dimen/textSize12sp"
                app:layout_constraintStart_toStartOf="@+id/txv_faq"
                app:layout_constraintTop_toBottomOf="@+id/txv_faq"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/txv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/contact"
                android:textColor="@color/color_7F7F7F_999999"
                android:textSize="@dimen/textSize12sp"
                app:layout_constraintStart_toStartOf="@+id/txv_chat"
                app:layout_constraintTop_toBottomOf="@+id/txv_chat" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:paddingStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_help">

            <TextView
                android:id="@+id/txv_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/btm_navigation_language"
                android:textColor="@color/color_BBBBBB_333333"
                android:textSize="@dimen/textSize12sp" />

            <ImageView
                android:id="@+id/img_flag"
                android:layout_width="18dp"
                android:layout_height="12dp"
                android:layout_marginStart="7dp"
                android:src="@drawable/img_flag" />
        </LinearLayout>

        <View
            android:id="@+id/line_language"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/color_3b3b3b_e6e6e6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/ll_language"
            app:layout_constraintTop_toBottomOf="@+id/ll_language" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/ll_pagcor_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/color_242527_F1F7FE"
        android:orientation="vertical"
        tools:visibility="visible">

        <TextView
            android:id="@+id/txv_btm_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="63dp"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:lineSpacingExtra="4dp"
            android:text="@string/btm_navigation_hint"
            android:textColor="@color/color_BCBCBC_666666"
            android:textSize="12dp"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/img_pagcor_mark"
            android:layout_width="149dp"
            android:layout_height="30dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/ic_pagcor_mark"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/txv_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingBottom="20dp"
            android:text="@string/btm_navigation_copyright"
            android:textAllCaps="true"
            android:textColor="@color/color_8F8F8F_999999"
            android:textSize="@dimen/textSize12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomPaddingViewLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_242527_F1F7FE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_pagcor_container">

        <View
            android:id="@+id/betListBarPaddingView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bet_list_bar_height" />

        <View
            android:id="@+id/bottomNavBarPaddingView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_nav_bar_height" />
    </LinearLayout>

</LinearLayout>
