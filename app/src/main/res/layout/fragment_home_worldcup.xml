<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_worldcup"
    android:orientation="vertical"
    android:id="@+id/rootView">

    <ImageView
        android:id="@+id/ivBg"
        android:layout_width="match_parent"
        android:layout_height="295dp"
        android:scaleType="centerCrop"/>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="142dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tab_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tool_bar_height"
        android:clipToPadding="false"
        tools:itemCount="6"
        tools:listitem="@layout/item_tab_home" />

    <include
        android:id="@+id/lin_toolbar"
        layout="@layout/view_toolbar_home" />
</FrameLayout>
