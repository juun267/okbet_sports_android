<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.bet_record.BetRecordActivity">

    <data>
        <variable name="activity"
            type="org.cxct.sportlottery.ui.bet_record.BetRecordActivity"/>

        <variable
            name="betRecordViewModel"
            type="org.cxct.sportlottery.ui.bet_record.BetRecordViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <org.cxct.sportlottery.ui.common.ToolBarView
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="@string/bet_record"
            app:fragmentNavGraph="@navigation/bet_record_navigation"/>

    </LinearLayout>
</layout>