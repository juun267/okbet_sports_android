<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/color_FFFFFF"
        android:layout_height="40dp">


        <TextView
            android:id="@+id/tvUnsettled"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:textColor="@color/color_000000"
            android:textSize="16sp"
            android:paddingRight="35dp"
            android:gravity="center_vertical|right"
            android:text="@string/not_settled"
            app:layout_constraintRight_toLeftOf="@+id/tvSettled"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>


        <TextView
            android:id="@+id/tvSettled"
            app:layout_constraintLeft_toRightOf="@+id/tvUnsettled"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:paddingStart="35dp"
            android:textColor="@color/color_6D7693"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="@string/settled"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>


        <ImageView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:contentDescription="@null"
            android:paddingHorizontal="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_union" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <FrameLayout
        android:id="@+id/frameContainer"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>