<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F0F5FA"
    tools:context=".ui.profileCenter.identity.VerifyStatusFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/margin_15"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="@dimen/margin_15"
        android:background="@drawable/ic_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="@dimen/margin_15"
            android:text="@string/kyc_verify_successful"
            android:textColor="@color/color_414655"
            android:textSize="@dimen/textSize18sp"
            android:gravity="center"
            android:visibility="invisible"
            tools:text="@string/kyc_you_wait"
            tools:visibility="visible" />


        <ImageView
            android:id="@+id/img_status"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/ic_done"
            android:visibility="invisible"
            tools:src="@drawable/ic_icon_timev_01"
            tools:visibility="visible" />


        <LinearLayout
            android:id="@+id/btn_kyc_verify"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="20dp"
            android:gravity="center"
            android:background="@drawable/bg_theme_radius_22">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_customer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/home_card_text_color"
                android:textSize="@dimen/textSize14sp"
                android:text="@string/kyc_contact_service_hilight" />
        </LinearLayout>

        <include
            android:id="@+id/btn_service"
            layout="@layout/content_verify_identity_kyc_service_gray" />

    </LinearLayout>

</FrameLayout>