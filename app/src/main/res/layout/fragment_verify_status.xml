<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_191919_FCFCFC"
    tools:context=".ui.profileCenter.identity.VerifyStatusFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/color_000000_FCFCFC"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_status"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:background="@null"
            android:contentDescription="@null"
            android:visibility="invisible"
            tools:visibility="visible"
            android:src="@drawable/ic_done"
            tools:src="@drawable/ic_waiting_time"/>

        <TextView
            android:id="@+id/txv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/color_BBBBBB_333333"
            android:textSize="@dimen/textSize14sp"
            android:visibility="invisible"
            tools:visibility="visible"
            android:text="@string/kyc_verify_successful"
            tools:text="@string/kyc_service_verify" />


        <Button
            android:id="@+id/btn_kyc_verify"
            android:layout_width="124dp"
            android:layout_height="34dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_radius_4_gradient_fca635_ffddb1_ffb048"
            android:drawableLeft="@drawable/ic__service_head"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:text="@string/live_chat"
            android:textColor="@color/home_card_text_color"
            android:textSize="@dimen/textSize14sp"
            tools:text="@string/live_chat" />

        <include
            android:id="@+id/btn_service"
            layout="@layout/content_verify_identity_kyc_service" />

    </LinearLayout>

</FrameLayout>