<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F0F5FA"
    tools:context=".ui.profileCenter.identity.VerifyStatusFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_15"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="@dimen/margin_15"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:contentPaddingBottom="20dp"
        app:contentPaddingTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_status"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:contentDescription="@null"
                android:src="@drawable/ic_done"
                android:visibility="invisible"
                tools:src="@drawable/ic_icon_timev_01"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/txv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="@dimen/margin_15"
                android:gravity="center"
                android:text="@string/kyc_verify_successful"
                android:textColor="@color/color_DB6372"
                android:textSize="@dimen/textSize18sp"
                android:visibility="invisible"
                tools:text="Thank you for verifying with us, please kindly wait up to 24 hours for us to process your request."
                tools:visibility="visible" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>