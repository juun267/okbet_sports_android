<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_root"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/color_191919_FCFCFC"
    tools:context=".view.statusSelector.StatusSelectorView"
    tools:background="@drawable/frame_color_silver_light_stroke">

    <TextView
        android:id="@+id/tv_selected"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/color_AEAEAE_404040"
        android:textSize="@dimen/textSize14sp"
        android:paddingHorizontal="14dp"
        app:autoSizeMaxTextSize="@dimen/textSize14sp"
        app:autoSizeMinTextSize="@dimen/textSize8sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toStartOf="@id/img_arrow"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/all_order_status" />

    <ImageView
        android:id="@+id/img_arrow"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/ic_arrow_gray"
        app:layout_constraintBottom_toBottomOf="@id/tv_selected"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/tv_selected"
        app:layout_constraintTop_toTopOf="@id/tv_selected" />


</androidx.constraintlayout.widget.ConstraintLayout>