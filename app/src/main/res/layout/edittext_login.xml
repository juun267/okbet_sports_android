<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="org.cxct.sportlottery.ui.login.LoginEditText">

    <LinearLayout
        android:id="@+id/block_editText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/effect_edittext_bg"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/gray4"
            android:textSize="@dimen/textSize13sp"
            app:autoSizeMaxTextSize="13dp"
            app:autoSizeMinTextSize="6dp"
            app:autoSizeTextType="uniform"
            tools:text="@string/login_account" />

        <View
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:layout_margin="10dp"
            android:background="@color/bright_gray" />

        <EditText
            android:id="@+id/et_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autofillHints="no"
            android:background="@null"
            android:inputType="text"
            android:textColor="@color/gray4"
            android:textColorHint="@color/bright_gray"
            android:textSize="@dimen/textSize12sp"
            tools:hint="@string/please_input_account" />

        <LinearLayout
            android:id="@+id/btn_eye"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center">

            <CheckBox
                android:id="@+id/cb_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/effect_visible_eye"
                android:clickable="false" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/block_verification_code"
            android:layout_width="80dp"
            android:layout_height="30dp">

            <ProgressBar
                android:id="@+id/pb_verification_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_verification_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray1"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:textColor="@color/orangeyRed"
        android:textSize="@dimen/textSize12sp"
        app:drawableStartCompat="@drawable/ic_error_tip"
        tools:text="@string/please_input_account" />

</LinearLayout>