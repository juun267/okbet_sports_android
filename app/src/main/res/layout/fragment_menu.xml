<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_191919_FCFCFC"
    android:orientation="vertical"
    tools:context=".ui.menu.MenuFragment"
    tools:layout_gravity="end"
    tools:layout_width="300dp"
    tools:ignore="SpUsage" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gredient_blue"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_head"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_avatar_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ellipsize="marquee"
            android:letterSpacing="0.1"
            android:singleLine="true"
            android:textColor="@color/color_FFFFFF_FFFFFF"
            android:textSize="@dimen/textSize14sp"
            app:layout_constraintBottom_toTopOf="@id/tv_money"
            app:layout_constraintEnd_toStartOf="@id/btn_close"
            app:layout_constraintStart_toEndOf="@+id/iv_head"
            app:layout_constraintTop_toTopOf="@+id/iv_head"
            tools:text="Player001"/>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:letterSpacing="0.1"
            android:textColor="@color/color_FFFFFF_FFFFFF"
            android:textSize="@dimen/textSize16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/iv_head"
            app:layout_constraintEnd_toStartOf="@id/btn_close"
            app:layout_constraintStart_toEndOf="@+id/iv_head"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            tools:text="â‚±0.00" />

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/ic_close_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <org.cxct.sportlottery.ui.menu.MenuItem
                android:id="@+id/tv_recharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cvIcon="@drawable/ic_profile_center_recharge"
                app:cvTitle="@string/recharge" />

            <org.cxct.sportlottery.ui.menu.MenuItem
                android:id="@+id/tv_withdraw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cvIcon="@drawable/ic_profile_center_withdraw"
                app:cvTitle="@string/withdraw" />

            <org.cxct.sportlottery.ui.menu.MenuItem
                android:id="@+id/menu_profile_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cvIcon="@drawable/ic_menu_profile_center"
                app:cvTitle="@string/profile_center" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@color/color_191919_EEEFF0"
                android:layout_marginVertical="2dp"
                app:layout_constraintBottom_toBottomOf="parent" />

            <org.cxct.sportlottery.ui.menu.MenuItem
                android:id="@+id/menu_odds_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cvIcon="@drawable/ic_setting"
                app:arrowSymbolVisibility="visible"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginVertical="2dp"
                android:background="@color/color_191919_EEEFF0"
                app:layout_constraintBottom_toBottomOf="parent" />

            <org.cxct.sportlottery.ui.menu.MenuItem
                android:id="@+id/menu_my_favorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cvIcon="@drawable/ic_star_v4"
                app:cvTitle="@string/my_favorite" />

            <org.cxct.sportlottery.ui.menu.MenuItem
                android:id="@+id/menu_other_bet_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cvIcon="@drawable/ic_menu_other_bet_record"
                app:cvTitle="@string/other_bet_record" />

            <org.cxct.sportlottery.ui.menu.MenuItem
                android:id="@+id/menu_member_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cvIcon="@drawable/ic_menu_member_level"
                app:cvTitle="@string/member_level" />

            <org.cxct.sportlottery.ui.menu.MenuItem
                android:id="@+id/menu_game_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cvIcon="@drawable/img_menu_champ"
                app:cvTitle="@string/game_settlement" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginVertical="2dp"
                android:background="@color/color_191919_EEEFF0"
                app:layout_constraintBottom_toBottomOf="parent" />

            <org.cxct.sportlottery.ui.menu.MenuItem
                android:id="@+id/menu_game_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cvIcon="@drawable/ic_menu_game_rule"
                app:cvTitle="@string/game_rule" />

            <org.cxct.sportlottery.ui.menu.MenuItem
                android:id="@+id/menu_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cvIcon="@drawable/ic_flag_cn"
                app:cvTitle="@string/language_cn" />

            <org.cxct.sportlottery.ui.menu.MenuItem
                android:id="@+id/menu_version_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cvIcon="@drawable/ic_menu_version_update"
                app:cvTitle="@string/version_update" />

            <org.cxct.sportlottery.ui.menu.MenuItem
                android:id="@+id/btn_sign_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cvIcon="@drawable/img_logout"
                app:cvTitle="@string/sign_out" />

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_gravity="end"
            android:text="@string/label_version"
            android:textColor="@color/color_A3A3A3_666666"
            android:textSize="@dimen/textSize12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </FrameLayout>

</LinearLayout>