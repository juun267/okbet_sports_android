<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_191919_FCFCFC"
    android:orientation="vertical"
    tools:context=".ui.menu.MenuFragment"
    tools:layout_gravity="end"
    tools:layout_width="300dp"
    tools:ignore="SpUsage" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gredient_blue"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_head"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_avatar_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:ellipsize="marquee"
            android:letterSpacing="0.1"
            android:singleLine="true"
            android:textColor="@color/color_FFFFFF_FFFFFF"
            android:textSize="@dimen/textSize14sp"
            app:layout_constraintBottom_toTopOf="@id/tv_money"
            app:layout_constraintEnd_toStartOf="@id/btn_close"
            app:layout_constraintStart_toEndOf="@+id/iv_head"
            app:layout_constraintTop_toTopOf="@+id/iv_head"
            tools:text="Player001"/>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:letterSpacing="0.1"
            android:textSize="@dimen/textSize14sp"
            android:textColor="@color/color_FFFFFF_FFFFFF"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/iv_head"
            app:layout_constraintEnd_toStartOf="@id/btn_close"
            app:layout_constraintStart_toEndOf="@+id/iv_head"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            tools:text="â‚± 0.00" />

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginEnd="14dp"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/ic_close_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <org.cxct.sportlottery.ui.menu.MenuItem
                android:id="@+id/tv_recharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cvIcon="@drawable/ic_profile_center_recharge"
                app:cvTitle="@string/recharge" />

            <org.cxct.sportlottery.ui.menu.MenuItem
                android:id="@+id/tv_withdraw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cvIcon="@drawable/ic_profile_center_withdraw"
                app:cvTitle="@string/withdraw" />

            <org.cxct.sportlottery.ui.menu.MenuItem
                android:id="@+id/menu_profile_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cvIcon="@drawable/ic_menu_profile_center"
                app:cvTitle="@string/profile_center" />

            <org.cxct.sportlottery.ui.menu.MenuItem
                android:id="@+id/menu_version_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cvIcon="@drawable/ic_menu_version_update"
                app:cvTitle="@string/version_update" />

            <org.cxct.sportlottery.ui.menu.MenuItem
                android:id="@+id/btn_sign_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cvIcon="@drawable/img_logout"
                app:cvTitle="@string/sign_out" />

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_gravity="end"
            android:text="@string/label_version"
            android:textColor="@color/color_909090_666666"
            android:textSize="@dimen/textSize12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </FrameLayout>

</LinearLayout>