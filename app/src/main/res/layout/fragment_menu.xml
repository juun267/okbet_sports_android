<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_light"
    android:orientation="vertical"
    tools:context=".ui.menu.MenuFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_dark"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_head"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_avatar_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize14sp"
            app:layout_constraintBottom_toTopOf="@id/tv_money"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_head"
            app:layout_constraintTop_toTopOf="@+id/iv_head"
            tools:text="Player001" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="￥0.00"
            android:textColor="@color/pumpkinOrange"
            android:textSize="@dimen/textSize16sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_head"
            app:layout_constraintStart_toEndOf="@+id/iv_head"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <org.cxct.sportlottery.ui.menu.MenuItem
                android:id="@+id/menu_profile_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cvTitle="@string/profile_center" />

            <org.cxct.sportlottery.ui.menu.MenuItem
                android:id="@+id/menu_member_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cvTitle="@string/member_level" />

            <org.cxct.sportlottery.ui.menu.MenuItem
                android:id="@+id/menu_game_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cvTitle="@string/game_settlement" />

            <org.cxct.sportlottery.ui.menu.MenuItem
                android:id="@+id/menu_version_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cvTitle="@string/version_update" />

            <org.cxct.sportlottery.ui.menu.MenuItem
                android:id="@+id/menu_sign_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cvIcon="@drawable/ic_logout"
                app:cvTitle="@string/sign_out" />

            <org.cxct.sportlottery.ui.menu.MenuItem
                android:id="@+id/menu_third_game_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cvIcon="@drawable/ic_logout"
                app:cvTitle="第三方遊戲測試" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/btn_change_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingEnd="10dp"
        android:paddingBottom="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_language_set" />

        <TextView
            android:id="@+id/tv_language"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_weight="1"
            android:text="@string/language_cn"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize12sp" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:gravity="end"
            android:text="@string/label_version"
            android:textColor="@color/textGrayLight"
            android:textSize="@dimen/textSize12sp" />

    </LinearLayout>

</LinearLayout>