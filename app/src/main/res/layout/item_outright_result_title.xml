<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/divider_color_white6"
    android:orientation="vertical"
    android:showDividers="end">

    <LinearLayout
        android:id="@+id/ll_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_262626_edf4ff"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_arrow_down_dark" />

        <TextView
            android:id="@+id/tv_season"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:textStyle="bold"
            android:textColor="@color/color_e5e5e5_333333"
            android:textSize="@dimen/textSize14sp"
            tools:text="@string/league" />

        <TextView
            android:id="@+id/tv_title_winner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@string/winner"
            android:textStyle="bold"
            android:textColor="@color/color_e5e5e5_333333"
            android:textSize="@dimen/textSize14sp"
            tools:text="@string/winner" />


    </LinearLayout>
</LinearLayout>