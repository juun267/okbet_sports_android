<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_14"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/iv_logo_handicap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/icon_soft"
        android:layout_marginStart="@dimen/margin_13"
        android:layout_width="@dimen/margin_24"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_hot_handicap"
        android:textStyle="bold"
        android:text="@string/hot_gaming_electronics"
        android:layout_marginStart="@dimen/margin_8"
        android:textColor="@color/color_D2E4FF_414655"
        app:layout_constraintTop_toTopOf="@+id/iv_logo_handicap"
        app:layout_constraintBottom_toBottomOf="@+id/iv_logo_handicap"
        android:textSize="@dimen/textSize14sp"
        app:layout_constraintStart_toEndOf="@+id/iv_logo_handicap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_hot_elect"
        app:layout_constraintTop_toTopOf="@+id/iv_logo_handicap"
        app:layout_constraintBottom_toBottomOf="@+id/iv_logo_handicap"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_elect_find_more"
            android:textColor="@color/color_025BE8"
            android:textSize="@dimen/textSize12sp"
            android:layout_marginEnd="@dimen/margin_5"
            android:text="@string/home_all_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginEnd="@dimen/margin_14"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_arrow03_blue"
            android:layout_width="@dimen/margin_14"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:clipToPadding="false"
        android:paddingStart="10dp"
        android:id="@+id/rv_egame"
        android:layout_marginTop="@dimen/margin_20"
        android:paddingBottom="@dimen/margin_15"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo_handicap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
</androidx.constraintlayout.widget.ConstraintLayout>