<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ui.bet_record.search.BetRecordSearchFragment">

    <TextView
        android:id="@+id/tv_calendar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="開始日期"
        android:gravity="center"
        android:background="@color/gray7"
        android:paddingVertical="4dp"/>

    <com.archit.calendardaterangepicker.customviews.DateRangeCalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:calendar_tag="Test"
        custom:date_selection_mode="free_range"
        custom:disable_date_color="#ABABAB"
        custom:editable="true"
        custom:selected_date_color="@color/blue3"
        custom:default_date_color="@color/blue3"
        custom:range_date_color="@color/blue3"
        custom:week_color="@color/blue3"
        custom:enable_time_selection="false"
        custom:range_color="@color/blue_transparent_40"
        custom:selected_date_circle_color="@color/blue2"
        custom:text_size_date ="16dp"
        custom:text_size_title ="16dp"
        custom:week_offset="0"/>

</LinearLayout>