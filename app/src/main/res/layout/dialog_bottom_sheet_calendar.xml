<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="org.cxct.sportlottery.view.DateRangeSearchView">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_20"
        custom:cardBackgroundColor="@color/color_FFFFFF"
        custom:cardCornerRadius="4dp"
        android:background="@drawable/bg_white_date_picker">

        <TextView
            android:id="@+id/tv_calendar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_191919_FCFCFC"
            android:gravity="center"
            android:minHeight="40dp"
            android:paddingVertical="4dp"
            android:textColor="@color/color_BBBBBB_333333"
            android:textSize="@dimen/textSize16sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="開始日期" />


        <com.archit.calendardaterangepicker.customviews.DateRangeCalendarView
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_bbbbbb_ffffff"
            custom:date_selection_mode="free_range"
            custom:default_date_color="@color/color_535D76"
            custom:disable_date_color="@color/color_A7B2C4"
            custom:editable="true"
            custom:enable_time_selection="false"
            custom:range_color="@color/color_E8EFFD"
            custom:range_date_color="@color/color_535D76"
            custom:selected_date_circle_color="@color/color_025BE8"
            custom:selected_date_color="@color/color_FFFFFF"
            custom:text_size_date="14sp"
            custom:text_size_title="14sp"
            custom:text_size_week="14sp"
            custom:title_color="@color/color_535D76"
            custom:week_color="@color/color_535D76"
            custom:week_offset="0"
            custom:header_bg="@color/color_bbbbbb_ffffff" />
    </androidx.cardview.widget.CardView>
</LinearLayout>

