<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="@color/transparent_black_70">
    
    <LinearLayout
        android:id="@+id/linCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/margin_8"
        android:background="@drawable/bg_invite_qrcode">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_30"
            android:src="@drawable/ic_okbet_logo_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/textSize16sp"
            android:textStyle="bold"
            android:text="Invite Your Friends"/>
        <ImageView
            android:id="@+id/ivQRCode"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="@dimen/margin_20"
            android:layout_margin="@dimen/margin_20"
            android:background="@drawable/bg_white_radius_12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/textSize14sp"
            android:textStyle="bold"
            android:text="SCAN ME"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_40">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_12"
            android:background="@drawable/bg_white_radius_24_top">
            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="@dimen/margin_20"
                android:layout_height="@dimen/margin_20"
                android:layout_margin="@dimen/margin_15"
                android:padding="@dimen/margin_3"
                android:layout_gravity="right"
                android:src="@drawable/ic_close_dark"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginHorizontal="@dimen/margin_16">
                <TextView
                    android:id="@+id/tvFacebook"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_share_facebook"
                    android:drawablePadding="@dimen/margin_6"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/color_0D2245"
                    android:text="Facebook"/>
                <TextView
                    android:id="@+id/tvMessenger"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_share_messenger"
                    android:drawablePadding="@dimen/margin_6"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/color_0D2245"
                    android:text="Messenger"/>
                <TextView
                    android:id="@+id/tvInstagram"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_share_instagram"
                    android:drawablePadding="@dimen/margin_6"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/color_0D2245"
                    android:text="Instagram"/>
                <TextView
                    android:id="@+id/tvViber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_share_viber"
                    android:drawablePadding="@dimen/margin_6"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/color_0D2245"
                    android:text="Viber"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_20"
                android:layout_marginHorizontal="@dimen/margin_16">
                <TextView
                    android:id="@+id/tvCopyLink"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_share_copylink"
                    android:drawablePadding="@dimen/margin_6"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/color_0D2245"
                    android:text="Copy Link"/>
                <TextView
                    android:id="@+id/tvSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_share_save"
                    android:drawablePadding="@dimen/margin_6"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/color_0D2245"
                    android:text="Save Image"/>
                <TextView
                    android:id="@+id/tvSms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_share_sms"
                    android:drawablePadding="@dimen/margin_6"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/color_0D2245"
                    android:text="Send SMS"/>
                <TextView
                    android:id="@+id/tvMore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_share_more"
                    android:drawablePadding="@dimen/margin_6"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/color_0D2245"
                    android:text="More"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_invite_title"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="Invite Friends"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/textSize16sp"
            android:textStyle="bold" />


    </FrameLayout>

</LinearLayout>