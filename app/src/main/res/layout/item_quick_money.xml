<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="@dimen/margin_5"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/selector_quick_money"
        android:textSize="@dimen/textSize18sp"
        android:textColor="@color/color_black_blue"
        tools:text="1000" />
    <TextView
        android:id="@+id/tvTips"
        android:layout_width="34dp"
        android:layout_height="23dp"
        android:layout_gravity="right"
        android:layout_marginTop="-3dp"
        android:layout_marginRight="2dp"
        android:paddingTop="@dimen/margin_1"
        android:paddingBottom="4dp"
        android:paddingHorizontal="@dimen/margin_3"
        android:gravity="center"
        android:background="@drawable/ic_tips_yellow"
        android:text="10%"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/textSize12sp"/>
</FrameLayout>
