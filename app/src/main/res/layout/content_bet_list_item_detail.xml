<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpUsage,ContentDescription,HardcodedText">

    <data>

        <variable
            name="matchOdd"
            type="org.cxct.sportlottery.network.bet.info.MatchOdd" />

        <variable
            name="parlayOdd"
            type="org.cxct.sportlottery.network.bet.info.ParlayOdd" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingStart="6dp"
        android:paddingTop="9dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/iv_red_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/oval_red_6dp"
            android:visibility="invisible"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_odds_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:letterSpacing="0.1"
                        android:text="@{matchOdd.playName}"
                        android:textColor="@color/colorBlackLight"
                        android:textSize="@dimen/textSize14sp"
                        android:textStyle="bold"
                        tools:text="皇家马德里" />

                    <TextView
                        android:id="@+id/tv_odds_spread"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:text="@{matchOdd.spread}"
                        android:textColor="@color/colorRedDark"
                        android:textSize="@dimen/textSize14sp"
                        android:textStyle="bold"
                        tools:text="+0/0.5" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:text="\＠"
                        android:textColor="@color/colorBlackLight"
                        android:textSize="@dimen/textSize14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_odds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlackLight"
                        android:textSize="@dimen/textSize14sp"
                        android:textStyle="bold"
                        tools:text="1.85" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_close_gray" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/tv_match"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.05"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/textSize13sp"
                    tools:text="纽卡斯尔  v  切尔西" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/iv_delete"
                android:layout_toEndOf="@+id/iv_bet_type"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize13sp"
                android:textStyle="bold"
                tools:text="让球" />

        </LinearLayout>
    </LinearLayout>

</layout>



