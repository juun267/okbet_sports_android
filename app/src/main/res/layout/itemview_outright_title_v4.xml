<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/outright_info_block"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_141414_f3f3f3"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingVertical="10dp">

    <TextView
        android:id="@+id/outright_league_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center"
        android:lineHeight="24dp"
        android:lineSpacingExtra="4dp"
        android:maxLines="2"
        android:paddingHorizontal="24dp"
        android:textColor="@color/color_BBBBBB_333333"
        android:textSize="@dimen/textSize16sp"
        android:textStyle="bold"
        tools:text="欧洲冠军杯2020/2021" />

    <TextView
        android:id="@+id/outright_league_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:includeFontPadding="false"
        android:textColor="@color/color_909090_666666"
        android:textSize="@dimen/textSize12sp"
        tools:text="23:00 03/03" />

    <!--<TextView
        android:id="@+id/outright_league_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        android:includeFontPadding="false"
        android:textColor="@color/color_909090_666666"
        android:textSize="@dimen/textSize12sp"

        tools:text="23:00" />-->

</LinearLayout>