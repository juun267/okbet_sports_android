<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF"
    android:orientation="vertical">

    <!--    <TextView-->
    <!--        android:background="@color/color_F8F9FD"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="10dp"/>-->
    <LinearLayout
        android:id="@+id/linearTop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_bet_win"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvParlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingHorizontal="10dp"
            android:text="title"
            android:textColor="@color/color_6D7693"
            android:textFontWeight="500"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bet_receipt_bet_quota"
            android:textColor="@color/color_6D7693"
            android:textSize="12sp"
            android:visibility="gone" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_F8F9FD" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerUnsettled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_F8F9FD"
        tools:listitem="@layout/item_bet_list" />


</LinearLayout>