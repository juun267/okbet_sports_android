<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF">

    <TextView
        android:background="@color/color_F8F9FD"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:id="@+id/linearTop"
        android:orientation="horizontal"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_bet_win"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tvParlay"
            android:textColor="@color/color_6D7693"
            android:textSize="16sp"
            android:paddingHorizontal="10dp"
            android:text="title"
            android:maxLines="1"
            android:ellipsize="end"
            android:textFontWeight="500"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="@string/bet_receipt_bet_quota"
            android:textColor="@color/color_6D7693"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tvBetTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:paddingRight="10dp"
            android:visibility="gone"
            android:maxLines="1"
            android:text=" â‚± 100.00"
            android:textColor="@color/color_000000"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerUnsettled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_F8F9FD"
        tools:listitem="@layout/item_bet_list" />

</LinearLayout>