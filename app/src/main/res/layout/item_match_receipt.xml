<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="org.cxct.sportlottery.ui.game.betList.receipt.BetReceiptDiffAdapter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="SpUsage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/top_space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_14" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/margin_8"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/color_80334266_E3E8EE"
            android:layout_marginHorizontal="@dimen/margin_14"
            android:layout_marginBottom="@dimen/margin_14">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="9dp"
                android:background="@drawable/bg_square_shape_8dp_blue_stroke_white_solid">
<!--                <LinearLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="@dimen/margin_24"-->
<!--                    android:orientation="horizontal"-->
<!--                    android:gravity="center_vertical"-->
<!--                    android:id="@+id/layoutTitle"-->
<!--                    app:layout_constraintTop_toTopOf="parent"-->
<!--                    android:background="@drawable/bg_gradient_0066d1_0079fa">-->
<!--                    <ImageView-->
<!--                        android:layout_width="@dimen/margin_12"-->
<!--                        android:layout_height="@dimen/margin_12"-->
<!--                        android:gravity="center_vertical"-->
<!--                        android:src="@drawable/icon_recept"-->
<!--                        app:tint="@color/white"-->
<!--                        android:layout_marginStart="@dimen/margin_8"-->
<!--                        />-->
<!--                    <TextView-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="@string/bet_list_single"-->
<!--                        android:layout_weight="1"-->
<!--                        android:gravity="center_vertical"-->
<!--                        android:textColor="@color/white"-->
<!--                        android:textSize="@dimen/textSize12sp"-->
<!--                        android:layout_marginStart="@dimen/margin_4"/>-->
<!--                </LinearLayout>-->

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.60" />

                <TextView
                    android:id="@+id/tv_bet_status_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="11dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/topContainer"
                    android:textSize="@dimen/textSize12sp"
                    android:visibility="gone"
                    android:drawablePadding="6dp"
                    tools:drawableStart="@drawable/ic_bet_check_tip"
                    tools:text="@string/bet_info_add_bet_success"
                    tools:textColor="@color/color_1D9F51_1D9F51" />

                <TextView
                    android:id="@+id/tv_match_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FFFFFF_414655"
                    android:textSize="@dimen/textSize12sp"
                    android:layout_marginStart="10dp"
                    android:drawablePadding="7dp"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/icon_bet_blue_tip"
                    app:layout_constraintEnd_toEndOf="@+id/guideline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/topContainer"
                    tools:text="让球" />

                <LinearLayout
                    android:id="@+id/topContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_bet_slip_shape_top_8dp_blue_stroke_no_bottom_stroke"
                    android:paddingVertical="6dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="11dp"
                    app:layout_constraintTop_toTopOf="parent">

                <!--playName + spread + @ + odds + (oddsType)--> <!--old-->
                <!--playName + spread--> <!--new-->
                <TextView
                    android:id="@+id/tv_play_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/color_FFFFFF_414655"
                    android:textSize="@dimen/textSize15sp"
                    tools:text="日本奥运队 1.5/2" />

                    <TextView
                        android:id="@+id/tv_odds"
                        android:textSize="@dimen/textSize16sp"
                        android:textColor="@color/color_025BE8_025BE8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="\@ 0.89"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_league"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_6C7BA8_6C7BA8"
                    android:textSize="@dimen/textSize12sp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_match_type"
                    tools:text="奥林匹克运动会2020男子足球(在日本)D组特别投注" />

                <!--homeName v awayName 字串過長需換行顯示，故合併為1個textView-->
                <TextView
                    android:id="@+id/tv_team_names"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_6C7BA8_6C7BA8"
                    android:textSize="@dimen/textSize12sp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_league"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    tools:text="日本奥运队 v 纽西兰奥运队" />

                <include
                    android:id="@+id/match_receipt_bet_layout"
                    layout="@layout/view_match_receipt_bet"
                    android:visibility="visible"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_team_names" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>