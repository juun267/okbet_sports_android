<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/color_1D1F2D_FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="SpUsage"
    tools:context=".ui.feedback.record.FeedbackListAdapter">

    <LinearLayout
       android:layout_marginHorizontal="@dimen/margin_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/color_FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="4dp"
            android:textColor="@color/color_FFFFFF_414655"
            android:textSize="@dimen/textSize12sp"
            android:text="@string/not_reply_yet"
            tools:text="2020-12-12 19:58:00" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingHorizontal="4dp"
            android:gravity="center"
            android:textColor="@color/color_FFFFFF_414655"
            android:textSize="@dimen/textSize12sp"
            tools:text="testasdfasdfadf" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="4dp"
            android:gravity="center"
            android:textColor="@color/color_FFFFFF_414655"
            android:textSize="@dimen/textSize12sp"
            tools:text="@string/status" />

    </LinearLayout>

</LinearLayout>