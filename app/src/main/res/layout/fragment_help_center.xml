<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite1"
    android:divider="@drawable/divider_straight"
    android:showDividers="middle|end"
    android:dividerPadding="1dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_contact_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_info_contact_us" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:textSize="@dimen/textSize12sp"
            android:textColor="@color/colorBlackLight"
            android:text="@string/contact_us" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:rotation="-90"
            android:src="@drawable/ic_arrow_gray" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_game_rule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_info_game_rules" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:textSize="@dimen/textSize12sp"
            android:textColor="@color/colorBlackLight"
            android:text="@string/game_rule" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:rotation="-90"
            android:src="@drawable/ic_arrow_gray" />
    </LinearLayout>
</LinearLayout>