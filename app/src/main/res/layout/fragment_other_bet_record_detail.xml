<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite1"
    tools:context=".ui.profileCenter.otherBetRecord.detail.OtherBetRecordDetailFragment">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite3"
        android:orientation="horizontal"
        android:paddingVertical="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.25"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/game_name"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize12sp"  />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/bet_money"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize12sp"  />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/profit_and_loss"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize12sp"  />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/log_detail_trans_num_sub2"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize12sp"  />
    </LinearLayout>


    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/view_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:srlDragRate="0.3"
        app:srlEnableLoadMore="true"
        app:layout_constraintBottom_toTopOf="@id/layout_total"
        app:layout_constraintTop_toBottomOf="@id/linearLayout5"
        app:srlEnablePureScrollMode="true">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_other_bet_record_detail" />
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
    <ImageView
        android:id="@+id/iv_scroll_to_top"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/bg_circle_gray6_alpha50"
        android:padding="14dp"
        android:src="@drawable/ic_scroll_to_top"
        app:layout_constraintBottom_toTopOf="@+id/layout_total"
        app:layout_constraintStart_toStartOf="parent" />


    <include
        android:id="@+id/layout_total"
        layout="@layout/view_total_record"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>