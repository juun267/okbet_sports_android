<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_141414_F3F4F5"
    tools:content="org.cxct.sportlottery.ui.finance.RechargeLogFragment">

    <org.cxct.sportlottery.ui.component.DateRangeSearchView
        android:id="@+id/date_range_selector"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_191919_FCFCFC"
        app:layout_constraintTop_toBottomOf="@id/date_range_selector">

        <org.cxct.sportlottery.ui.component.StatusSelectorView
            android:id="@+id/selector_order_status"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            app:arrowAtEnd="true"
            app:defaultBottomSheetTitleText="@string/choose_order"
            app:defaultStatusText="@string/all_order_status"
            app:layout_constraintTop_toBottomOf="@id/date_range_selector" />

        <org.cxct.sportlottery.ui.component.StatusSelectorView
            android:id="@+id/selector_method_status"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            app:arrowAtEnd="true"
            app:defaultBottomSheetTitleText="@string/choose_method"
            app:defaultStatusText="@string/recharge_channel_all"
            app:layout_constraintTop_toBottomOf="@id/date_range_selector" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rech_log_column"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/color_262626_edf4ff"
        app:layout_constraintTop_toBottomOf="@id/linearLayout">

        <TextView
            android:id="@+id/rech_log_order_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingStart="2dp"
            android:maxLines="1"
            android:text="@string/recharge_log_order_time"
            android:textColor="@color/color_e5e5e5_333333"
            android:textSize="@dimen/textSize12sp"/>

        <TextView
            android:id="@+id/rech_log_recharge_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/recharge_log_recharge_amount"
            android:textColor="@color/color_e5e5e5_333333"
            android:textSize="@dimen/textSize12sp"/>

        <TextView
            android:id="@+id/recg_log_channel_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/recharge_log_channel_type"
            android:textColor="@color/color_e5e5e5_333333"
            android:textSize="@dimen/textSize12sp"/>

        <TextView
            android:id="@+id/rech_log_order_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/recharge_log_order_state"
            android:textColor="@color/color_e5e5e5_333333"
            android:textSize="@dimen/textSize12sp"/>
    </LinearLayout>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/list_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rech_log_column"
        app:srlDragRate="0.3"
        app:srlEnableLoadMore="true"
        app:srlEnablePureScrollMode="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                tools:listitem="@layout/view_item_recharge_log" />

            <include
                android:id="@+id/view_no_record"
                layout="@layout/view_no_record"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rech_log_column"
                tools:visibility="gone" />

        </FrameLayout>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    <ImageView
        android:id="@+id/iv_scroll_to_top"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/bg_circle_gray6_alpha50"
        android:padding="14dp"
        android:src="@drawable/ic_scroll_to_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>