<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray11">

    <org.cxct.sportlottery.ui.component.DateRangeSelectorComponent
        android:id="@+id/date_range_selector"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:layout_constraintTop_toTopOf="parent" />

    <org.cxct.sportlottery.ui.component.OrderStatusSelectorComponent
        android:id="@+id/order_status_selector"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@id/date_range_selector" />

    <View
        android:id="@+id/rech_log_column"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/order_status_selector" />

    <TextView
        android:id="@+id/rech_log_order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:gravity="center"
        android:maxLines="1"
        android:minWidth="68dp"
        android:text="@string/recharge_log_order_time"
        android:textColor="@color/gray4"
        app:autoSizeMaxTextSize="@dimen/textSize12sp"
        app:autoSizeMinTextSize="@dimen/textSize8sp"
        app:layout_constraintBottom_toBottomOf="@id/rech_log_column"
        app:layout_constraintEnd_toStartOf="@id/rech_log_recharge_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/rech_log_column" />

    <TextView
        android:id="@+id/rech_log_recharge_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:gravity="center"
        android:maxLines="1"
        android:minWidth="72dp"
        android:text="@string/recharge_log_recharge_amount"
        android:textColor="@color/gray4"
        app:autoSizeMaxTextSize="@dimen/textSize12sp"
        app:autoSizeMinTextSize="@dimen/textSize8sp"
        app:layout_constraintBottom_toBottomOf="@id/rech_log_column"
        app:layout_constraintEnd_toStartOf="@id/recg_log_channel_type"
        app:layout_constraintStart_toEndOf="@id/rech_log_order_time"
        app:layout_constraintTop_toTopOf="@id/rech_log_column" />

    <TextView
        android:id="@+id/recg_log_channel_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:gravity="center"
        android:maxLines="1"
        android:minWidth="60dp"
        android:text="@string/recharge_log_channel_type"
        android:textColor="@color/gray4"
        app:autoSizeMaxTextSize="@dimen/textSize12sp"
        app:autoSizeMinTextSize="@dimen/textSize8sp"
        app:layout_constraintBottom_toBottomOf="@id/rech_log_column"
        app:layout_constraintEnd_toStartOf="@id/rech_log_order_state"
        app:layout_constraintStart_toEndOf="@id/rech_log_recharge_amount"
        app:layout_constraintTop_toTopOf="@id/rech_log_column" />

    <TextView
        android:id="@+id/rech_log_order_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="14dp"
        android:gravity="center"
        android:maxLines="1"
        android:minWidth="52dp"
        android:text="@string/recharge_log_order_state"
        android:textColor="@color/gray4"
        app:autoSizeMaxTextSize="@dimen/textSize12sp"
        app:autoSizeMinTextSize="@dimen/textSize8sp"
        app:layout_constraintBottom_toBottomOf="@id/rech_log_column"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/recg_log_channel_type"
        app:layout_constraintTop_toTopOf="@id/rech_log_column" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/list_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rech_log_column">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <ImageView
        android:id="@+id/list_no_record_img"
        android:layout_width="190dp"
        android:layout_height="125dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_imgnorecord"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rech_log_column" />

    <TextView
        android:id="@+id/list_no_record_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/finance_list_no_record"
        android:textColor="@color/gray4"
        android:textSize="@dimen/textSize14sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/list_no_record_img"
        app:layout_constraintStart_toStartOf="@id/list_no_record_img"
        app:layout_constraintTop_toBottomOf="@id/list_no_record_img" />

</androidx.constraintlayout.widget.ConstraintLayout>