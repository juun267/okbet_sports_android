<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/colorWhite"
    android:paddingStart="14dp"
    android:paddingTop="8dp"
    android:paddingEnd="14dp"
    android:paddingBottom="8dp"
    tools:context="org.cxct.sportlottery.ui.finance.RechargeLogAdapter">

    <TextView
        android:id="@+id/rech_log_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="68dp"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/textSize12sp"
        app:layout_constraintBottom_toTopOf="@id/rech_log_time"
        app:layout_constraintEnd_toStartOf="@id/rech_log_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2020-12-12" />

    <TextView
        android:id="@+id/rech_log_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="68dp"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/textSize12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/rech_log_date"
        app:layout_constraintStart_toStartOf="@id/rech_log_date"
        app:layout_constraintTop_toBottomOf="@id/rech_log_date"
        tools:text="11:43:39" />

    <TextView
        android:id="@+id/rech_log_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:gravity="center"
        android:minWidth="72dp"
        android:textColor="@color/colorBlackLight"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rech_log_type"
        app:layout_constraintStart_toEndOf="@id/rech_log_date"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1,000,000.00" />

    <TextView
        android:id="@+id/rech_log_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:gravity="center"
        android:minWidth="60dp"
        android:textColor="@color/colorBlackLight"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rech_log_state"
        app:layout_constraintStart_toEndOf="@id/rech_log_amount"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="支付宝转帐" />

    <TextView
        android:id="@+id/rech_log_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:gravity="center"
        android:minWidth="52dp"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/textSize12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rech_log_type"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="处理中" />

</androidx.constraintlayout.widget.ConstraintLayout>