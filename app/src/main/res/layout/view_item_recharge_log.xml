<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="4dp"
    tools:context="org.cxct.sportlottery.ui.finance.RechargeLogAdapter">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rech_log_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize12sp"
            tools:text="2020-12-12" />

        <TextView
            android:id="@+id/rech_log_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize12sp"
            tools:text="11:43:39" />
    </LinearLayout>

    <TextView
        android:id="@+id/rech_log_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:minWidth="72dp"
        android:textColor="@color/colorBlackLight"
        android:textSize="12sp"
        tools:text="1,000,000.00" />

    <TextView
        android:id="@+id/rech_log_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:minWidth="60dp"
        android:textColor="@color/colorBlackLight"
        android:textSize="12sp"
        tools:text="@string/recharge_channel_alipay" />

    <TextView
        android:id="@+id/rech_log_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:minWidth="52dp"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/textSize12sp"
        tools:text="@string/recharge_state_processing" />

</LinearLayout>