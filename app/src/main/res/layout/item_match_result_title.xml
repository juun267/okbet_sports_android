<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_margin_bottom"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/transparent" />

    <LinearLayout
        android:id="@+id/block_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/expandable_results_settlement"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="30dp">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxLines="1"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/textSize16sp"
                tools:text="Miền Bắc" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_first_half"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/first_half_game"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/textSize14sp"
                tools:text="@string/first_half_game" />

            <TextView
                android:id="@+id/tv_second_half"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/second_half_game"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/textSize14sp"
                tools:text="@string/second_half_game" />

            <TextView
                android:id="@+id/tv_full_game"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/full_game"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/textSize14sp"
                tools:text="@string/full_game" />

            <TextView
                android:id="@+id/tv_end_game"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/game_result"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/textSize14sp"
                tools:text="@string/game_result" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>