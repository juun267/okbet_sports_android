<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_tab"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:paddingHorizontal="12dp">


    <TextView
        android:id="@+id/tv_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="45dp"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/selector_odd_category_text_v4"
        android:textSize="@dimen/textSize14sp"
        tools:ignore="SpUsage"
        tools:text="14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/img_icon"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@drawable/bg_matchtype_indicator_detail"
        android:layout_gravity="bottom|center_horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/tv_tab"
        app:layout_constraintRight_toRightOf="@+id/tv_tab"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

