<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="org.cxct.sportlottery.ui.maintab.accountHistory.next.AccountHistoryNextAdapter"
    tools:ignore="SpUsage">

    <data>

        <variable
            name="row"
            type="org.cxct.sportlottery.network.bet.settledDetailList.Row" />

        <variable
            name="matchOdd"
            type="org.cxct.sportlottery.network.bet.settledDetailList.MatchOdd" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/topView"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_item_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_square_shape_8dp_blue_stroke_white_solid"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/topContainer"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="@drawable/bg_shape_top_8dp_blue_stroke_no_bottom_stroke"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/color_FFFFFF_414655"
                    android:textSize="@dimen/textSize14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/topContainer"
                    app:layout_constraintStart_toStartOf="@+id/topContainer"
                    app:layout_constraintTop_toTopOf="@+id/topContainer"
                    tools:text="单串-足球" />

<!--                <TextView-->
<!--                    android:id="@+id/tv_bet_result"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="24dp"-->
<!--                    android:background="@drawable/bg_square_shape_8dp_green"-->
<!--                    android:gravity="center"-->
<!--                    android:paddingHorizontal="10dp"-->
<!--                    android:text="@string/undone"-->
<!--                    android:textColor="@color/color_FFFFFF_FFFFFF"-->
<!--                    android:textSize="@dimen/textSize12sp"-->
<!--                    android:visibility="gone"-->
<!--                    app:betReceiptStatus="@{row.status}"-->
<!--                    app:betResultCancelBy="@{row.cancelledBy}"-->
<!--                    app:hideByStatus="@{row.status}"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintTop_toTopOf="parent"-->
<!--                    tools:visibility="visible" />-->

                <LinearLayout
                    android:id="@+id/leagueContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="9dp"
                    android:gravity="center_vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/topContainer">

                    <ImageView
                        android:id="@+id/iv_country"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="4dp"
                        app:svgDrawable="@{matchOdd.categoryIcon}" />

                    <TextView
                        android:id="@+id/tv_playName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:text="@{matchOdd.leagueName}"
                        android:textColor="@color/color_6C7BA8_A7B2C4"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="德国甲组联赛" />

                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_6C7BA8_A7B2C4"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="08/12 10:30" />
                </LinearLayout>

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="6dp"
                    android:background="@color/color_E8EFFD"
                    app:layout_constraintTop_toBottomOf="@+id/leagueContainer" />

                <LinearLayout
                    android:id="@+id/bottomContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/line">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_fake"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textSize14sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/viewLeftLine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_detail_odd_title_line"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_fake"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_fake" />

                        <TextView
                            android:id="@+id/tv_team_names_singles"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="23dp"
                            android:textColor="@color/color_9BB3D9_535D76"
                            android:textSize="@dimen/textSize14sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/viewLeftLine"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="密尔沃基雄鹿 VS 亚特兰大老鹰" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tv_game_type_play_cate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="15dp"
                        android:drawablePadding="5dp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/color_6C7BA8_6C7BA8"
                        android:textSize="@dimen/textSize12sp"
                        app:drawableEndCompat="@drawable/ic_right_arrow_gray"
                        app:drawableTint="@color/color_6C7BA8_A7B2C4"
                        tools:text="篮球 滚球 全场让分【欧洲盘】" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_191919_FCFCFC"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="10dp"
                        android:visibility="gone"
                        tools:ignore="SpUsage">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/list_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never"
                            android:scrollbars="none"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0"
                            tools:itemCount="2"
                            tools:listitem="@layout/item_account_history_next_context_listview_score" />

                        <TextView
                            android:id="@+id/tv_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/color_909090_666666"
                            android:textSize="@dimen/textSize12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/list_score"
                            app:layout_constraintTop_toBottomOf="@id/list_score"
                            app:layout_constraintVertical_bias="0"
                            tools:text="(5-26)" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!--playName spread @ odd-->
                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="2dp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/color_9BB3D9_535D76"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="密尔沃基雄鹿 6.5 \@ 1.860" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/bg_square_shape_2dp_gray"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="13dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/bet_info_bet_quota"
                                android:textAlignment="viewStart"
                                android:textColor="@color/color_9BB3D9_535D76"
                                android:textSize="@dimen/textSize12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/colon"
                                android:textAlignment="viewStart"
                                android:textColor="@color/color_9BB3D9_535D76"
                                android:textSize="@dimen/textSize12sp" />

                            <TextView
                                android:id="@+id/tv_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/color_9BB3D9_535D76"
                                android:textSize="@dimen/textSize12sp"
                                android:textStyle="bold"
                                app:moneyFormat="@{row.totalAmount}"
                                tools:text="50.000" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="7dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_9BB3D9_535D76"
                                android:textSize="@dimen/textSize12sp"
                                app:betDetailStatusColor="@{row.status}"
                                app:betReceiptStatus="@{row.status}"
                                app:betResultCancelBy="@{row.cancelledBy}"
                                tools:text="@string/win" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/colon"
                                android:textColor="@color/color_9BB3D9_535D76"
                                android:textSize="@dimen/textSize12sp"
                                app:hideByStatus="@{row.status}" />

                            <TextView
                                android:id="@+id/tv_win_lose_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_DB6372"
                                android:textSize="@dimen/textSize12sp"
                                android:textStyle="bold"
                                app:hideByStatus="@{row.status}"
                                app:moneyColor="@{row.win}"
                                app:moneyFormat="@{row.win}"
                                tools:text="9,999,999.000" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/color_80334266_E3E8EE" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_ticket"
                            android:layout_marginRight="3dp"/>

                        <LinearLayout
                            android:id="@+id/ll_copy_bet_order"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{row.orderNo}"
                                android:textAlignment="viewStart"
                                android:textColor="@color/color_A5A9B3"
                                android:textSize="@dimen/textSize10sp"
                                tools:text="b000003612091822030128" />

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_marginStart="4dp"
                                android:src="@drawable/ic_copy" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_clock"
                            android:layout_marginRight="3dp"/>

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/color_A5A9B3"
                            android:textSize="@dimen/textSize10sp"
                            app:dateTimeNoYear="@{row.addTime}"
                            tools:text="08/12 11:31" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>
