<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    tools:ignore="SpUsage,HardcodedText">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_bet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_button_radius_0_bet">

        <TextView
            android:id="@+id/tv_bet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bet_info_list_bet"
            android:textColor="@color/selector_gray_white"
            android:textSize="@dimen/textSize13sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_quota"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tv_quota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/selector_gray_white"
            android:textSize="@dimen/textSize14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_rmb"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_bet" />

        <TextView
            android:id="@+id/tv_rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/bet_info_list_rmb"
            android:textColor="@color/selector_gray_white"
            android:textSize="@dimen/textSize14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_quota"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_quota"
            app:layout_constraintTop_toTopOf="@id/tv_quota" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tv_accept_odds_change"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlue"
        android:gravity="center"
        android:text="@string/bet_info_accept_odds_change"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textSize13sp"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSilverLight"
        android:gravity="center"
        android:text="@string/btn_login"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/textSize13sp"
        android:visibility="gone" />


</androidx.constraintlayout.widget.ConstraintLayout>