<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:background="@color/color_141414_F3F4F5"
    tools:context=".ui.money.recharge.OnlinePayFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_141414_F3F4F5"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 帳號 -->
        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_recharge_online_payer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/edt_hint_payer"
            app:cvInputType="text"
            app:cvEms="20"
            app:cvTitle="@string/title_payer" />


        <!-- 充值金額 -->
        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_recharge_online_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/edt_hint_deposit_money"
            app:cvInputType="number"
            app:cvTitle="@string/title_deposit_money" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/color_191919_FCFCFC"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/ll_pay_gap"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pay_gap_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/title_pay_gap"
                    android:textColor="@color/color_FFFFFF_000000"
                    android:textSize="@dimen/textSize13sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/color_191919_EEEFF0" />

                <ImageView
                    android:id="@+id/iv_gap_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_bank_default" />

                <TextView
                    android:id="@+id/txv_pay_gap"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="9dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="@color/color_e5e5e5_333333"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/textSize14sp" />

                <ImageView
                    android:id="@+id/iv_click_pay_gap"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_gray" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_pay_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="@color/color_191919_FCFCFC"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/title_pay_bank"
                    android:textColor="@color/color_FFFFFF_000000"
                    android:textSize="@dimen/textSize13sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/color_191919_EEEFF0" />
                
                <ImageView
                    android:id="@+id/iv_bank_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_bank_default" />

                <TextView
                    android:id="@+id/txv_pay_bank"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="9dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="@color/color_e5e5e5_333333"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/textSize14sp" />

                <ImageView
                    android:id="@+id/iv_click_pay_bank"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_gray" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/ll_fee_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/title_fee_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_E44438_e44438"
                android:textSize="@dimen/textSize12sp"
                tools:text="@string/title_fee_rate" />

            <TextView
                android:id="@+id/tv_fee_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_E44438_e44438"
                android:textSize="@dimen/textSize12sp"
                tools:text="0.500" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/percent"
                android:textColor="@color/color_E44438_e44438"
                android:textSize="@dimen/textSize12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fee_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/title_fee_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_E44438_e44438"
                android:textSize="@dimen/textSize12sp"
                tools:text="@string/title_fee_amount" />

            <TextView
                android:id="@+id/tv_fee_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_E44438_e44438"
                android:textSize="@dimen/textSize12sp"
                tools:text="12.000" />

            <TextView
                android:id="@+id/tv_currency_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/color_E44438_e44438"
                tools:text="PHP"
                android:textSize="@dimen/textSize12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_tips"
                android:textColor="@color/color_E44438_e44438"
                android:textSize="@dimen/textSize12sp" />

            <TextView
                android:id="@+id/tv_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/money_recharge_hint1"
                android:textColor="@color/color_E44438_e44438"
                android:textSize="@dimen/textSize12sp" />
        </LinearLayout>


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_radius_20_button_dusk"
            android:gravity="center"
            android:text="@string/btn_submit"
            android:textColor="@color/color_191919_FCFCFC"
            android:textSize="@dimen/textSize16sp"
            android:textStyle="bold"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>

</ScrollView>