<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="SpUsage, ContentDescription">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvBlock"
        android:layout_width="285dp"
        android:layout_height="136dp"
        android:layout_marginVertical="@dimen/margin_10"
        app:cardCornerRadius="@dimen/margin_6"
        app:cardElevation="@dimen/margin_3"
        app:cardBackgroundColor="@color/color_202020_FCFCFC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_game_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/teamInfoBlock"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/oddsBlock"
                app:layout_constraintTop_toBottomOf="@id/cl_game">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_home_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="@dimen/margin_9"
                        android:scaleType="centerInside"
                        tools:src="@drawable/bg_recommend_game_default" />

                    <TextView
                        android:id="@+id/tv_home_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_10"
                        android:layout_marginBottom="8dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:textColor="@color/color_BBBBBB_333333"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="Atleticon Nacional" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_11"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="@string/verse_upper"
                        android:textColor="@color/color_BBBBBB_333333"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_game_play_cate_code_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:textColor="@color/color_999999_999999"
                        android:textSize="@dimen/textSize12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Handicap" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_away_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="@dimen/margin_9"
                        android:scaleType="centerInside"
                        tools:src="@drawable/bg_recommend_game_default" />

                    <TextView
                        android:id="@+id/tv_away_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_10"
                        android:layout_marginBottom="8dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:textColor="@color/color_BBBBBB_333333"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="Junior Barranquilla" />
                </LinearLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivLiveIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tvGameStatus"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvGameStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="4dp"
                    android:textColor="@color/color_999999_999999"
                    android:textSize="@dimen/textSize12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="2ND" />

                <TextView
                    android:id="@+id/tv_game_play_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="4dp"
                    android:textColor="@color/color_999999_999999"
                    android:textSize="@dimen/textSize12sp"
                    app:layout_constraintStart_toEndOf="@id/tvGameStatus"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="09:15" />

                <TextView
                    android:id="@+id/tvGameSpt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/color_999999_999999"
                    android:textSize="@dimen/textSize12sp"
                    app:layout_constraintStart_toEndOf="@id/tv_game_play_time"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="/5" />

                <TextView
                    android:id="@+id/tvLeagueName"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/color_BBBBBB_333333"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Mogolia,1st Leag Mogolia,1st Leag" />

                <TextView
                    android:id="@+id/tvPlayCateCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_6"
                    android:layout_marginEnd="@dimen/margin_6"
                    android:background="@drawable/bg_publicity_recommend_count"
                    android:drawablePadding="1dp"
                    android:gravity="start"
                    android:minWidth="37dp"
                    android:padding="0dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="2dp"
                    android:textColor="@color/color_FFFFFF_FFFFFF"
                    android:textSize="@dimen/textSize12sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_arrow_right_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="120" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/oddsBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/teamInfoBlock">

                <org.cxct.sportlottery.ui.game.widget.OddsButtonPublicity
                    android:id="@+id/oddBtn1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="7dp"
                    android:layout_weight="1" />

                <org.cxct.sportlottery.ui.game.widget.OddsButtonPublicity
                    android:id="@+id/oddBtn2"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clVsBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_6"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_vs_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivVS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            app:layout_constraintEnd_toEndOf="@+id/iv_vs_bar"
            app:layout_constraintStart_toStartOf="@+id/iv_vs_bar"
            app:layout_constraintTop_toTopOf="@+id/iv_vs_bar" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_1"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/margin_6"
            app:layout_constraintBottom_toBottomOf="@+id/iv_vs_bar"
            app:layout_constraintEnd_toEndOf="@+id/iv_vs_bar"
            app:layout_constraintStart_toStartOf="@+id/iv_vs_bar"
            app:layout_constraintTop_toTopOf="@+id/iv_vs_bar">

            <TextView
                android:id="@+id/tv_home_score"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/color_BCBCBC_666666"
                android:textSize="@dimen/textSize12sp"
                tools:text="12" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_away_score"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/color_BCBCBC_666666"
                android:textSize="@dimen/textSize12sp"
                tools:text="18" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clNoVsBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_6"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_no_vs_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>