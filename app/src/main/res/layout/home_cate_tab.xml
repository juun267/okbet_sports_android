<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    tools:layout_gravity="center_vertical"
    tools:layout_width="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textAllCaps="true"
        android:textColor="@color/color_select_blue_black"
        android:textSize="@dimen/textSize15sp"
        app:autoSizeMaxTextSize="15dp"
        app:autoSizeMinTextSize="2dp"
        app:autoSizeTextType="uniform"
        tools:text="全部" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/margin_4"
        android:maxLines="1"
        android:textColor="@color/color_select_white_gray"
        android:textSize="@dimen/textSize12sp"
        android:fontFamily="@font/helvetica_bold"
        app:autoSizeMaxTextSize="12dp"
        app:autoSizeMinTextSize="2dp"
        app:autoSizeTextType="uniform"
        tools:text="643" />

</LinearLayout>