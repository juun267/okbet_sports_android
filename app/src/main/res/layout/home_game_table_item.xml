<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.game.home.gameTable.RvGameTableAdapter">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_score1"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:paddingStart="18dp"
            android:paddingEnd="4dp"
            android:textColor="@color/colorRedDark"
            android:textSize="@dimen/textSize18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="0" />

        <TextView
            android:id="@+id/tv_score2"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="18dp"
            android:paddingEnd="4dp"
            android:textColor="@color/colorRedDark"
            android:textSize="@dimen/textSize18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_score1"
            tools:text="0" />

        <TextView
            android:id="@+id/team1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textSize15sp"
            app:layout_constraintEnd_toStartOf="@id/block_time"
            app:layout_constraintStart_toEndOf="@id/tv_score1"
            app:layout_constraintTop_toTopOf="@id/tv_score1"
            tools:text="皇家馬德里" />

        <TextView
            android:id="@+id/team2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textSize15sp"
            app:layout_constraintEnd_toStartOf="@id/block_time"
            app:layout_constraintStart_toEndOf="@id/tv_score2"
            app:layout_constraintTop_toTopOf="@id/tv_score2"
            tools:text="利物浦" />

        <LinearLayout
            android:id="@+id/block_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/tv_score2"
            app:layout_constraintEnd_toStartOf="@id/home_list_arrow"
            app:layout_constraintTop_toTopOf="@id/tv_score1">

            <TextView
                android:id="@+id/tv_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorGrayLight"
                android:textSize="@dimen/textSize13sp"
                tools:text="上半场" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:textColor="@color/colorGrayLight"
                android:textSize="@dimen/textSize13sp"
                tools:text="02:29" />

        </LinearLayout>

        <ImageView
            android:id="@+id/home_list_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_arrow_right_black"
            app:layout_constraintBottom_toBottomOf="@id/tv_score2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_score1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/line_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:background="@color/colorWhite5" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/line_item">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_footer_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWhite6"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textSize15sp"
                tools:text="所有 足球 滾球" />

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/colorSilver"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_footer_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textSize15sp"
                    app:drawableEndCompat="@drawable/ic_arrow_right_black"
                    tools:text="2" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/line_footer"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:background="@color/colorGrayLight" />

</LinearLayout>