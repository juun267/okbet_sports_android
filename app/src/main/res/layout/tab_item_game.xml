<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:layout_gravity="center_horizontal"
    tools:layout_height="56dp"
    tools:layout_width="56dp"
    >
    <!--    android:background="@drawable/selector_home_game_tab"-->
    <!--    android:background="@drawable/ic_baseline_assistant_24"-->

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:contentDescription="@null"
        tools:src="@drawable/ic_more_on" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:textColor="@color/gray6"
        android:textSize="@dimen/textSize12sp"
        app:autoSizeMinTextSize="6dp"
        app:autoSizeTextType="uniform"
        tools:text="彩票" />
