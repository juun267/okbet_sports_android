<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smart.refresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:srlDragRate="0.3"
    android:background="@color/color_191919_FCFCFC"
    app:srlEnableLoadMore="true"
    app:srlEnablePureScrollMode="true">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_191919_FCFCFC"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/block_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical"
            tools:context=".ui.transactionStatus.TransactionStatusFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_transaction_record"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:src="@drawable/ic_arrow_left"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    android:text="@string/label_transaction_status"
                    android:textColor="@color/color_e5e5e5_333333"
                    android:textSize="@dimen/textSize14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <org.cxct.sportlottery.ui.component.StatusSpinnerView
                    android:id="@+id/bet_type_selector"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="8dp"
                    android:layout_weight="1"
                    app:arrowSrc="@drawable/ic_arrow_color_gray"
                    app:backgroundFrame="@drawable/frame_color_silver_light_stroke"
                    app:defaultBottomSheetTitleText="@string/choose_bet_state"
                    app:defaultStatusText="@string/waiting"
                    app:horizontalChainStyle="spread"
                    app:textGravity="start|center_vertical" />

                <org.cxct.sportlottery.ui.component.StatusSpinnerView
                    android:id="@+id/game_type_selector"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginVertical="8dp"
                    android:layout_weight="1"
                    app:arrowSrc="@drawable/ic_arrow_color_gray"
                    app:backgroundFrame="@drawable/frame_color_silver_light_stroke"
                    app:defaultBottomSheetTitleText="@string/choose_bet_state"
                    app:defaultStatusText="@string/all_sport"
                    app:horizontalChainStyle="spread"
                    app:textGravity="start|center_vertical" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="1"
                tools:listitem="@layout/content_parlay_record" />

            <include
                android:id="@+id/view_back_to_top"
                layout="@layout/view_back_to_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</com.scwang.smart.refresh.layout.SmartRefreshLayout>