<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_radius_8_commission_info_dialog">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="詳細说明"
            android:textSize="@dimen/textSize16sp"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:layout_width="@dimen/textSize16sp"
            android:layout_height="@dimen/textSize16sp"
            android:src="@drawable/icon_info"
            app:layout_constraintTop_toTopOf="@+id/tv_title"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title"
            app:layout_constraintEnd_toStartOf="@+id/tv_title"
            android:layout_marginEnd="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorWhite6"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.04"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1."
                    android:textSize="12dp"
                    android:textColor="@color/colorBlackLight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_desc_1"/>

                <TextView
                    android:id="@+id/tv_desc_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="本公司為防止非常態性提款，存款後須達成有效打碼後方可正常提款"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlackLight"
                    app:layout_constraintStart_toEndOf="@+id/guideline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2."
                    android:textSize="12dp"
                    android:textColor="@color/colorBlackLight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_desc_1"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/tv_desc_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="當未達有效打碼時，提款需扣除未完成打碼量的20%，做為提前提款手續費，計算方式為  未完成打碼量 x 20%扣除比例 = 扣除金額"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlackLight"
                    app:layout_constraintStart_toEndOf="@+id/guideline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_desc_1"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3."
                    android:textSize="12dp"
                    android:textColor="@color/colorBlackLight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_desc_2"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/tv_desc_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="當第一筆充值未提款前，充值第二筆，則兩筆的「要求打碼量」、「已完成打碼量」將會進行加總，此時需同時完成第一筆與第二筆的要求打碼量，提款才不會產生扣除金額"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlackLight"
                    app:layout_constraintStart_toEndOf="@+id/guideline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_desc_2"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4."
                    android:textSize="12dp"
                    android:textColor="@color/colorBlackLight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_desc_3"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/tv_desc_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="提款後已完成打碼量將重新計算，不可累計"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlackLight"
                    app:layout_constraintStart_toEndOf="@+id/guideline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_desc_3"/>



            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EX."
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/colorBlackLight"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[情况一]"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/colorBlackLight"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第一筆 充值1000 已完成打碼2000 —> 此時進行提款"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/colorBlackLight"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第二筆 充值2000 已完成打碼1000 —> 此時尚需打碼1000方可不產生提款扣除金額"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/colorBlackLight"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="因第一筆已提款，將不列入計算，只以第二筆充值計算"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/colorBlackLight"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值2000-已完成打碼1000=10000 未完成打碼"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/colorBlackLight"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="此時提款需扣除金額  未完成打碼1000 x 20%扣除比例 = 200扣除金額"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/colorBlackLight"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[情況二]"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/colorBlackLight"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第一筆 充值1000 已完成打碼2000 —> 此時不提款，進行第二筆充值"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/colorBlackLight"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第二筆 充值2000 已完成打碼1000 —> 此時提款不會被收取扣除金額"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/colorBlackLight"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="因兩筆充值會一起計算，所以會依以下計算方式確認已達成有效打碼"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/colorBlackLight"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值(1000+2000)-已完成打碼(2000+1000)=0 未完成打碼"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/colorBlackLight"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="此時將不會產生扣除金額"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/colorBlackLight"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[情況三]"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/colorBlackLight"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第一筆 充值1000 已完成打碼500 —> 此時不提款，進行第二筆充值"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/colorBlackLight"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第二筆 充值2000 已完成打碼1000 —> 此時尚需打碼1500方可不產生提款扣除金額"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/colorBlackLight"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="因兩筆充值會一起計算，所以會依以下計算方式確認已達成有效打碼"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/colorBlackLight"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值(1000+2000)-已完成打碼(500+1000)=1500 未完成打碼"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/colorBlackLight"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="此時提款需扣除金額  未完成打碼1500 x 20%扣除比例 = 300扣除金額"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/colorBlackLight"
                    />


            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E2E2"/>

    <TextView
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认"
        android:textSize="@dimen/textSize14sp"
        android:textColor="@color/colorBlue"
        android:gravity="center"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"/>

</LinearLayout>