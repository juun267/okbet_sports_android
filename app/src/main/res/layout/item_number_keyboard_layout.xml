<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/color_060F20"
    android:orientation="vertical"
    android:padding="@dimen/margin_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tvLimit"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/margin_4"
            android:text="@string/edt_hint_deposit_money_new"
            android:textColor="@color/white"
            android:gravity="center_vertical"/>
        <ImageView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_close"
            android:padding="@dimen/margin_10"
            app:tint="@color/colorSilverLight"
            android:id="@+id/ivKeyboardClose"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingVertical="@dimen/margin_2">

        <TextView
            android:id="@+id/tvPlus1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_white"
            android:gravity="center"
            android:text="+25"
            android:textColor="@color/color_060F20"
            android:textSize="@dimen/textSize14sp" />

        <TextView
            android:id="@+id/tvPlus2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_white"
            android:gravity="center"
            android:text="+50"
            android:textColor="@color/color_060F20"
            android:textSize="@dimen/textSize14sp" />

        <TextView
            android:id="@+id/tvPlus3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_white"
            android:gravity="center"
            android:text="+75"
            android:textColor="@color/color_060F20"
            android:textSize="@dimen/textSize14sp" />

        <TextView
            android:id="@+id/tvPlus4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_white"
            android:gravity="center"
            android:text="+100"
            android:textColor="@color/color_060F20"
            android:textSize="@dimen/textSize14sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingVertical="@dimen/margin_4">

        <TextView
            android:id="@+id/tvNum1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />
        <TextView
            android:id="@+id/tvNum2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_4"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />
        <TextView
            android:id="@+id/tvNum3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_4"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />
        <TextView
            android:id="@+id/tvNum4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_4"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />
        <TextView
            android:id="@+id/tvNum5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_4"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />
        <TextView
            android:id="@+id/tvNum6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_4"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />
        <TextView
            android:id="@+id/tvNum7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_4"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />
        <TextView
            android:id="@+id/tvNum8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_4"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />
        <TextView
            android:id="@+id/tvNum9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_4"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingVertical="@dimen/margin_4"
        android:background="@color/color_060F20">

        <TextView
            android:id="@+id/tvNum0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />

        <TextView
            android:id="@+id/tvDot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:text="."
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />

        <TextView
            android:id="@+id/tvMax"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:text="Max"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />

        <ImageView
            android:id="@+id/tvDel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:padding="@dimen/margin_8"
            android:src="@drawable/ic_delete" />
    </LinearLayout>


</LinearLayout>
