<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="108dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_frame_4dp_dark"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_3"
    android:paddingTop="@dimen/margin_3"
    android:paddingEnd="@dimen/margin_3"
    android:paddingBottom="@dimen/margin_3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvMax"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c8288"
            android:gravity="center"
            android:text="@string/keyboard_max"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />


        <TextView
            android:id="@+id/tvPlus1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c8288"
            android:gravity="center"
            android:text="+25"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/tvPlus2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c8288"
            android:gravity="center"
            android:text="+50"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/tvPlus3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c8288"
            android:gravity="center"
            android:text="+75"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp"
            android:visibility="gone"
            tools:visibility="visible"/>


        <ImageView
            android:id="@+id/tvClear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_weight="1"
            android:background="@drawable/bg_button_keyboard"
            android:gravity="center"
            android:padding="@dimen/margin_6"
            android:scaleType="centerInside"
            android:src="@drawable/ic_close_dark" />

        <TextView
            android:id="@+id/tvPlus4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_marginEnd="@dimen/margin_3"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_white"
            android:gravity="center"
            android:text="+100"
            android:textColor="@color/color_060F20"
            android:textSize="@dimen/textSize14sp"
            android:visibility="gone" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvNum1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:background="@drawable/bg_radius_4_button_fffdfe"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/textSize14sp" />

        <TextView
            android:id="@+id/tvNum2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_fffdfe"
            android:textColor="@color/color_333333"
            android:gravity="center"
            android:text="2"
            android:textSize="@dimen/textSize14sp" />

        <TextView
            android:id="@+id/tvNum3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_fffdfe"
            android:textColor="@color/color_333333"
            android:gravity="center"
            android:text="3"
            android:textSize="@dimen/textSize14sp" />

        <TextView
            android:id="@+id/tvNum4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_fffdfe"
            android:textColor="@color/color_333333"
            android:gravity="center"
            android:text="4"
            android:textSize="@dimen/textSize14sp" />

        <TextView
            android:id="@+id/tvNum5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_fffdfe"
            android:textColor="@color/color_333333"
            android:gravity="center"
            android:text="5"
            android:textSize="@dimen/textSize14sp" />

        <TextView
            android:id="@+id/tvNum6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_fffdfe"
            android:textColor="@color/color_333333"
            android:gravity="center"
            android:text="6"
            android:textSize="@dimen/textSize14sp" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/color_060F20"
        android:layout_marginTop="3dp">

        <TextView
            android:id="@+id/tvNum7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_fffdfe"
            android:textColor="@color/color_333333"
            android:gravity="center"
            android:text="7"
            android:textSize="@dimen/textSize14sp" />

        <TextView
            android:id="@+id/tvNum8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_fffdfe"
            android:textColor="@color/color_333333"
            android:gravity="center"
            android:text="8"
            android:textSize="@dimen/textSize14sp" />

        <TextView
            android:id="@+id/tvNum9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_fffdfe"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/textSize14sp" />




        <TextView
            android:id="@+id/tvNum0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_fffdfe"
            android:textColor="@color/color_333333"
            android:gravity="center"
            android:text="0"
            android:textSize="@dimen/textSize14sp" />

        <TextView
            android:id="@+id/tvDot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_fffdfe"
            android:textColor="@color/color_333333"
            android:gravity="center"
            android:text="."
            android:textSize="@dimen/textSize14sp" />



        <ImageView
            android:id="@+id/tvDel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_weight="1"
            android:background="@drawable/bg_button_keyboard"
            android:gravity="center"
            android:padding="@dimen/margin_6"
            android:scaleType="centerInside"
            android:src="@drawable/ic_delete" />
    </LinearLayout>


</LinearLayout>
