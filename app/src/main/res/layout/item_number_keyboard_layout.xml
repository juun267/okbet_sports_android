<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="98dp"
    android:background="@color/color_060F20"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_5"
    android:paddingEnd="@dimen/margin_5"
    android:paddingTop="@dimen/margin_8"
    android:paddingBottom="@dimen/margin_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingVertical="@dimen/margin_3">

        <TextView
            android:id="@+id/tvPlus1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_white"
            android:gravity="center"
            android:text="+25"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_marginEnd="@dimen/margin_3"
            android:visibility="gone"
            android:textColor="@color/color_060F20"
            android:textSize="@dimen/textSize14sp" />

        <TextView
            android:id="@+id/tvPlus2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_marginEnd="@dimen/margin_3"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_white"
            android:gravity="center"
            android:text="+50"
            android:visibility="gone"
            android:textColor="@color/color_060F20"
            android:textSize="@dimen/textSize14sp" />

        <TextView
            android:id="@+id/tvPlus3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_marginEnd="@dimen/margin_3"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_white"
            android:gravity="center"
            android:text="+75"
            android:visibility="gone"
            android:textColor="@color/color_060F20"
            android:textSize="@dimen/textSize14sp" />

        <TextView
            android:id="@+id/tvPlus4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_marginEnd="@dimen/margin_3"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_white"
            android:gravity="center"
            android:text="+100"
            android:visibility="gone"
            android:textColor="@color/color_060F20"
            android:textSize="@dimen/textSize14sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingVertical="@dimen/margin_3">

        <TextView
            android:id="@+id/tvNum1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:text="1"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_marginEnd="@dimen/margin_3"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />
        <TextView
            android:id="@+id/tvNum2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_marginEnd="@dimen/margin_3"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />
        <TextView
            android:id="@+id/tvNum3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_marginEnd="@dimen/margin_3"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />
        <TextView
            android:id="@+id/tvNum4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_marginEnd="@dimen/margin_3"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />
        <TextView
            android:id="@+id/tvNum5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_marginEnd="@dimen/margin_3"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />
        <TextView
            android:id="@+id/tvNum6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_marginEnd="@dimen/margin_3"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />
        <TextView
            android:id="@+id/tvNum7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_marginEnd="@dimen/margin_3"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />
        <TextView
            android:id="@+id/tvNum8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_marginEnd="@dimen/margin_3"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />
        <TextView
            android:id="@+id/tvNum9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_marginEnd="@dimen/margin_3"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingVertical="@dimen/margin_3"
        android:background="@color/color_060F20">

        <TextView
            android:id="@+id/tvNum0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_marginEnd="@dimen/margin_3"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />

        <TextView
            android:id="@+id/tvDot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_marginEnd="@dimen/margin_3"            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:text="."
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />

        <TextView
            android:id="@+id/tvMax"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_marginEnd="@dimen/margin_3"            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:text="@string/keyboard_max"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14sp" />

        <ImageView
            android:id="@+id/tvDel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_marginEnd="@dimen/margin_3"            android:layout_weight="1"
            android:background="@drawable/bg_radius_4_button_7c7c7c"
            android:gravity="center"
            android:padding="@dimen/margin_6"
            android:src="@drawable/ic_delete" />
    </LinearLayout>


</LinearLayout>
