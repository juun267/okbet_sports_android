<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/bg_white_radius_8"
        android:layout_margin="@dimen/margin_18"
        android:paddingHorizontal="@dimen/margin_15"
        android:paddingVertical="@dimen/margin_12">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/J095"
            android:textStyle="bold"
            android:textSize="@dimen/textSize18sp"
            android:textColor="@color/color_0D2245" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginVertical="@dimen/margin_15"
            android:textSize="@dimen/textSize12sp"
            android:textColor="@color/color_6D7693"
            android:text="Lorem ipsum dolor sit amet, consectetur adipisc ing elit. Aenean euismod bibendum laoreet. Proin gravida dolor sit amet lacus accumsan et viverra justo commodo. Proin sodales pulvinar tempor. Cum sociis natoqu luctus pharetra vulputate, felis tellus mollis orci, sed rhoncus sapien nunc eget."/>
        <Button
            android:id="@+id/btnClose"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="@dimen/margin_5"
            android:background="@drawable/selector_button_default"
            android:text="@string/bottom_sheet_close"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/textSize17sp"
            android:textAllCaps="false" />
    </LinearLayout>
</LinearLayout>

