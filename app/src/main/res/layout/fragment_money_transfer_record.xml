<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_blue"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.profileCenter.money_transfer.MoneyTransferActivity">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray11"
        android:orientation="horizontal"
        android:paddingVertical="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_bet_status">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:maxLines="1"
            app:autoSizeMaxTextSize="@dimen/textSize12sp"
            app:autoSizeMinTextSize="@dimen/textSize8sp"
            android:gravity="center"
            android:text="@string/time"
            android:textColor="@color/gray4" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:maxLines="1"
            app:autoSizeMaxTextSize="@dimen/textSize12sp"
            app:autoSizeMinTextSize="@dimen/textSize8sp"
            android:text="@string/money"
            android:textColor="@color/gray4" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            app:autoSizeMaxTextSize="@dimen/textSize12sp"
            app:autoSizeMinTextSize="@dimen/textSize8sp"
            android:gravity="center"
            android:text="@string/transfer_platform"
            android:textColor="@color/gray4" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            app:autoSizeMaxTextSize="@dimen/textSize12sp"
            app:autoSizeMinTextSize="@dimen/textSize8sp"
            android:gravity="center"
            android:text="@string/status"
            android:textColor="@color/gray4" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
            android:overScrollMode="never"
        android:id="@+id/rv_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:itemCount="2"
        tools:listitem="@layout/item_money_transfer_history"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</LinearLayout>

