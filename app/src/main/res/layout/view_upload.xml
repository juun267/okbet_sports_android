<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/effect_edittext_bg"
    android:paddingStart="20dp"
    android:paddingTop="10dp"
    android:paddingEnd="20dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tv_upload_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/textSize13sp"
        app:layout_constraintBottom_toTopOf="@id/bg_upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/upload_title" />

    <View
        android:id="@+id/bg_upload"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_square_shape_5dp_crypto_pay_screen_shot"
        app:layout_constraintBottom_toTopOf="@id/tv_upload_tips"
        app:layout_constraintTop_toBottomOf="@id/tv_upload_title" />

    <ImageView
        android:id="@+id/iv_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_shape"
        app:layout_constraintBottom_toTopOf="@id/tv_upload"
        app:layout_constraintEnd_toEndOf="@id/bg_upload"
        app:layout_constraintStart_toStartOf="@id/bg_upload"
        app:layout_constraintTop_toTopOf="@id/bg_upload"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="@string/title_click_upload_pic"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/textSize12sp"
        app:layout_constraintBottom_toBottomOf="@id/bg_upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_upload" />

    <TextView
        android:id="@+id/tv_upload_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/textSize12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bg_upload"
        tools:text="@string/upload_tips" />

    <ImageView
        android:id="@+id/iv_selected_media"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/tv_upload_tips"
        app:layout_constraintTop_toBottomOf="@id/tv_upload_title"
        />
</androidx.constraintlayout.widget.ConstraintLayout>