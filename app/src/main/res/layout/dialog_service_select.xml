<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal"
    tools:background="@color/transparent_black_50"
    tools:context="org.cxct.sportlottery.ui.common.ServiceSelectDialog">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="0.5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:id="@+id/top_bar1"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/colorPrimaryDark" />

            <ImageView
                android:layout_width="62dp"
                android:layout_height="80dp"
                android:layout_margin="12dp"
                android:src="@drawable/service_human" />

            <Button
                android:id="@+id/btn_service1"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_radius_5_button_dusk"
                android:text="@string/online_service1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize14sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:id="@+id/top_bar2"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/colorPrimaryDark" />

            <ImageView
                android:layout_width="62dp"
                android:layout_height="80dp"
                android:layout_margin="12dp"
                android:src="@drawable/service_human" />

            <Button
                android:id="@+id/btn_service2"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_radius_5_button_dusk"
                android:text="@string/online_service2"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize14sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:src="@drawable/ic_close" />

</LinearLayout>
