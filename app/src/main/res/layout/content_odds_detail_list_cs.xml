<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius_5_colorwhite"
    android:orientation="vertical">

    <include layout="@layout/content_odds_detail_list_item" />

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorWhite6"/>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#EEEEEE"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_home_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="主隊"
                android:textColor="@color/textColorDark"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="和局"
                android:textColor="@color/colorGrayLight"
                android:textSize="@dimen/textSize14sp" />

            <TextView
                android:id="@+id/tv_away_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="客隊"
                android:textColor="@color/text_brownish_gray"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_straight"
            android:orientation="horizontal"
            android:showDividers="middle">

            <androidx.recyclerview.widget.RecyclerView
                android:overScrollMode="never"
                android:id="@+id/rv_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:overScrollMode="never"
                android:id="@+id/rv_draw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:overScrollMode="never"
                android:id="@+id/rv_away"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical|end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:text="其他比分"
                android:textColor="@color/text_brownish_gray"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/tv_odds"
                    style="@style/OddsButton"
                    android:layout_width="56dp"
                    android:layout_height="50dp" />

                <ImageView
                    android:id="@+id/iv_disable_cover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/tv_odds"
                    android:layout_alignTop="@+id/tv_odds"
                    android:layout_alignEnd="@+id/tv_odds"
                    android:layout_alignBottom="@+id/tv_odds"
                    android:background="@drawable/bg_radius_4_button_disable"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:src="@drawable/ic_lock_odd"
                    android:visibility="gone" />

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>

