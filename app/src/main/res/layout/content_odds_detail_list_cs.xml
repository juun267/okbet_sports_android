<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius_5_colorwhite"
    android:orientation="vertical"
    tools:ignore="HardcodedText,SpUsage">

    <include layout="@layout/content_odds_detail_list_item" />

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorWhite6" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:divider="@drawable/divider_straight"
            android:orientation="horizontal"
            android:showDividers="middle">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorWhite6"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                tools:listitem="@layout/content_type_cs_item" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_draw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorWhite6"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                tools:itemCount="5"
                tools:listitem="@layout/content_type_cs_item" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_away"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorWhite6"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                tools:listitem="@layout/content_type_cs_item" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorWhite6" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="61dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_cs_other_3_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.666" />

            <TextView
                android:id="@+id/tv_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:gravity="center"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline_cs_other_3_list"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText,SpUsage" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_cs_other_2_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <TextView
                android:id="@+id/tv_odds"
                style="@style/OddsButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="5dp"
                android:maxLines="1"
                app:autoSizeMaxTextSize="@dimen/textSize15sp"
                app:autoSizeMinTextSize="@dimen/textSize8sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_cs_other_3_list"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_disable_cover"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_radius_4_button_disable"
                android:paddingStart="24dp"
                android:paddingTop="12dp"
                android:paddingEnd="24dp"
                android:paddingBottom="12dp"
                android:src="@drawable/ic_lock_odd"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/tv_odds"
                app:layout_constraintEnd_toEndOf="@+id/tv_odds"
                app:layout_constraintStart_toStartOf="@+id/tv_odds"
                app:layout_constraintTop_toTopOf="@+id/tv_odds" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</LinearLayout>

