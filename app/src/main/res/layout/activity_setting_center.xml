<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 資金明細 -->
    <org.cxct.sportlottery.ui.common.CustomTopToolbar
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/custom_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@+id/custom_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@color/color_FFFFFF">

            <TextView
                android:id="@+id/tv_odds_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:gravity="center_vertical"
                android:paddingHorizontal="14dp"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_detail_odd_title_line"
                android:textSize="16sp"
                android:textColor="@color/color_414655"
                android:textStyle="bold"
                android:text="@string/ou_odd" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_E3E8EE" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_odds_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@color/color_FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:gravity="center_vertical"
                android:paddingHorizontal="14dp"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_detail_odd_title_line"
                android:textSize="16sp"
                android:textColor="@color/color_414655"
                android:textStyle="bold"
                android:text="@string/langugae_setting" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_E3E8EE" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@color/color_FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingHorizontal="14dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_50"
                    android:layout_weight="1"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_detail_odd_title_line"
                    android:textSize="16sp"
                    android:textColor="@color/color_414655"
                    android:textStyle="bold"
                    android:text="@string/str_bet_way" />

                <TextView
                    android:id="@+id/tvOddsChangedTips"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:drawableEnd="@drawable/ic_arrow_right_blue"
                    android:text="@string/str_odds_description"
                    android:drawablePadding="5dp"
                    android:textColor="@color/color_025BE8" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_E3E8EE" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_betway"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_15" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_btn_service"
        android:src="@drawable/icon_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/margin_14"
       android:layout_marginBottom="55dp"/>
</RelativeLayout>