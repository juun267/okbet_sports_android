<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_191919_FCFCFC"
    android:orientation="vertical"
    tools:context=".ui.menu.MenuLeftFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_141414_F3F4F5"
            android:minHeight="44dp">

            <TextView
                android:id="@+id/btn_lobby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:singleLine="true"
                android:text="@string/games_lobby"
                android:textColor="@color/color_BBBBBB_333333"
                android:textSize="@dimen/textSize14sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_close"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:contentDescription="@null"
                android:padding="11dp"
                android:src="@drawable/ic_close_menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <org.cxct.sportlottery.ui.menu.MenuLeftItem
            android:id="@+id/menu_sport_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvIcon="@drawable/ic_menu_left_sport_game"
            app:cvTitle="@string/sport_game" />

        <org.cxct.sportlottery.ui.menu.MenuLeftItem
            android:id="@+id/menu_in_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvTitle="@string/label_in_play_games"
            tools:cvCount="351" />

        <org.cxct.sportlottery.ui.menu.MenuLeftItem
            android:id="@+id/menu_date_row_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvTitle="@string/date_row_today"
            tools:cvCount="77777" />

        <org.cxct.sportlottery.ui.menu.MenuLeftItem
            android:id="@+id/menu_early"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvTitle="@string/home_tab_early"
            tools:cvCount="33" />

        <org.cxct.sportlottery.ui.menu.MenuLeftItem
            android:id="@+id/menu_parlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvTitle="@string/home_tab_parlay"
            tools:cvCount="168" />

        <org.cxct.sportlottery.ui.menu.MenuLeftItem
            android:id="@+id/menu_champion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvTitle="@string/home_tab_outright"
            tools:cvCount="2578" />

        <org.cxct.sportlottery.ui.menu.MenuLeftItem
            android:id="@+id/menu_soccer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvIcon="@drawable/ic_menu_left_soccer"
            app:cvTitle="@string/soccer" />

        <org.cxct.sportlottery.ui.menu.MenuLeftItem
            android:id="@+id/menu_basketball"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvIcon="@drawable/ic_menu_left_basketball"
            app:cvTitle="@string/basketball" />

        <org.cxct.sportlottery.ui.menu.MenuLeftItem
            android:id="@+id/menu_tennis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvIcon="@drawable/ic_menu_left_tennis"
            app:cvTitle="@string/tennis" />

        <org.cxct.sportlottery.ui.menu.MenuLeftItem
            android:id="@+id/menu_badminton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvIcon="@drawable/ic_menu_left_badminton"
            app:cvTitle="@string/badminton" />

        <org.cxct.sportlottery.ui.menu.MenuLeftItem
            android:id="@+id/menu_volleyball"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvIcon="@drawable/ic_menu_left_volleyball"
            app:cvTitle="@string/volleyball" />

        <org.cxct.sportlottery.ui.menu.MenuLeftItem
            android:id="@+id/menu_cg_lottery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvIcon="@drawable/ic_menu_left_lottery_game"
            app:cvTitle="@string/cg_lottery" />

        <org.cxct.sportlottery.ui.menu.MenuLeftItem
            android:id="@+id/menu_live_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvIcon="@drawable/ic_menu_left_live_game"
            app:cvTitle="@string/live_game" />

        <org.cxct.sportlottery.ui.menu.MenuLeftItem
            android:id="@+id/menu_poker_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvIcon="@drawable/ic_menu_left_poker_game"
            app:cvTitle="@string/poker_game" />

        <org.cxct.sportlottery.ui.menu.MenuLeftItem
            android:id="@+id/menu_slot_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvIcon="@drawable/ic_menu_left_slot_game"
            app:cvTitle="@string/slot_game" />

        <org.cxct.sportlottery.ui.menu.MenuLeftItem
            android:id="@+id/menu_fish_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvIcon="@drawable/ic_menu_left_fish_game"
            app:cvTitle="@string/fish_game" />

    </LinearLayout>

</ScrollView>