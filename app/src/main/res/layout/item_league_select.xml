<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_28"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/color_2b2b2b_ffffff"
    app:cardCornerRadius="@dimen/margin_10"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_14"
            android:src="@drawable/effect_login_select_checkbox" />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="1dp"
            android:background="@drawable/bg_circle_stroke_team_log"
            android:src="@drawable/ic_country" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/margin_5"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="@color/color_535D76"
            tools:text="德国巴伐利亚地区联赛" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginRight="8dp"
            android:paddingHorizontal="4dp"
            android:fontFamily="@font/din_bold"
            android:singleLine="true"
            android:gravity="center"
            android:minWidth="14dp"
            android:background="@drawable/bg_red_radius_10"
            android:textColor="@color/color_FFFFFF"
            android:textSize="10sp"
            tools:text="99" />
    </LinearLayout>

</androidx.cardview.widget.CardView>