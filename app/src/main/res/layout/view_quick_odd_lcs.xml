<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="spUsage">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/color_212121_ededed"
        app:layout_constraintBottom_toBottomOf="@id/quick_odd_lcs"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/quick_odd_lcs_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/quick_odd_lcs_tab_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="@string/full_game"
            android:textColor="@color/selector_tab_text_color_light_gray"
            android:textSize="@dimen/textSize16sp"
            android:checked="true"
            android:visibility="visible"
            tools:visibility="visible" />

        <!--    目前只有全場的資料，上半場隱藏    -->
<!--        <RadioButton-->
<!--            android:id="@+id/quick_odd_lcs_tab_2"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:button="@null"-->
<!--            android:layout_marginStart="16dp"-->
<!--            android:text="@string/first_half_game"-->
<!--            android:textColor="@color/selector_tab_text_color_light_gray"-->
<!--            android:textSize="@dimen/textSize16sp"-->
<!--            android:visibility="gone"-->
<!--            tools:visibility="visible" />-->
    </RadioGroup>

    <LinearLayout
        android:id="@+id/quick_odd_lcs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/quick_odd_lcs_tab"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:orientation="vertical"
            tools:itemCount="7"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/content_type_grid_item_lcs" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_draw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            tools:itemCount="4"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/content_type_grid_item_lcs" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_away"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:orientation="vertical"
            tools:itemCount="6"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/content_type_grid_item_lcs" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>