<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="spUsage">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/color_212121_ededed"
        app:layout_constraintBottom_toBottomOf="@id/quick_odd_lcs"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/quick_odd_lcs_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicator="@drawable/custom_quick_indicator"
        app:tabIndicatorFullWidth="true"
        app:tabMode="fixed"
        app:tabPaddingEnd="0dp"
        app:tabPaddingStart="0dp"
        app:tabRippleColor="@null"
        app:tabSelectedTextColor="@color/color_BBBBBB_333333"
        app:tabTextAppearance="@style/NoUppercaseTab"
        app:tabTextColor="@color/color_7F7F7F_999999">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/first_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout="@layout/item_quick_tab" />

<!--    目前只有全場的資料，上半場隱藏    -->
<!--        <com.google.android.material.tabs.TabItem-->
<!--            android:id="@+id/second_tab"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout="@layout/item_quick_tab" />-->

    </com.google.android.material.tabs.TabLayout>

    <LinearLayout
        android:id="@+id/quick_odd_lcs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_191919_FCFCFC"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/quick_odd_lcs_tab"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:orientation="vertical"
            tools:itemCount="7"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/content_type_grid_item_lcs" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_draw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            tools:itemCount="4"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/content_type_grid_item_lcs" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_away"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:orientation="vertical"
            tools:itemCount="6"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/content_type_grid_item_lcs" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>