<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardCover"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_width="145dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    android:foreground="@drawable/fg_ripple">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivCover"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="145:162"
            android:scaleType="centerCrop"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/transparent"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/margin_9"
        app:cardElevation="0dp">
        <eightbitlab.com.blurview.BlurView
            android:id="@+id/blurView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_48"
            android:layout_gravity="bottom">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_48"
                android:paddingHorizontal="@dimen/margin_12"
                android:gravity="center"
                android:orientation="vertical"
                android:background="#4D333333">
                <TextView
                    android:id="@+id/tvGameName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="three card pokerthre"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/textSize14sp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:ellipsize="end"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivGameIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_16"
                        android:layout_marginRight="@dimen/margin_4"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_okgames_nodata" />

                    <TextView
                        android:id="@+id/tvGameType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- casino -"
                        android:textColor="@color/color_99FFFFFF"
                        android:textSize="@dimen/textSize10sp"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>
               
            </LinearLayout>
        </eightbitlab.com.blurview.BlurView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvJackpot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_15"
        android:layout_marginTop="-8dp"
        android:layout_gravity="top"
        android:background="@color/transparent"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/margin_8"
        app:cardElevation="0dp"
        android:visibility="gone"
        tools:visibility="visible">
        <eightbitlab.com.blurview.BlurView
            android:id="@+id/blurview_jackpot"
            android:layout_width="match_parent"
            android:paddingTop="8dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/tvJackPot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="3dp"
                android:gravity="center"
                android:background="#4D000000"
                android:text="three card pokerthre"
                android:textColor="#FFE500"
                android:textSize="@dimen/textSize12sp"
                android:maxLines="1"
                android:textStyle="bold"
                android:visibility="visible"
                android:ellipsize="end"/>
        </eightbitlab.com.blurview.BlurView>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/linMaintenance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/transparent_black_70">
        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/ic_home_maintenance"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12"
            android:gravity="center_horizontal"
            android:textSize="@dimen/textSize16sp"
            android:textColor="@color/color_FFFFFF"
            android:text="@string/N257"/>

    </LinearLayout>

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurview_More"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4D333333"
            android:gravity="center"
            android:textSize="@dimen/textSize18sp"
            android:textColor="@color/color_FFFFFF"
            android:textStyle="bold"
            android:text="@string/N702"/>
    </eightbitlab.com.blurview.BlurView>
</androidx.cardview.widget.CardView>