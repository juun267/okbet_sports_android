<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@color/color_F7FAFE"
    tools:parentTag="androidx.cardview.widget.CardView">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp">

        <org.cxct.sportlottery.view.OKVideoPlayer
            android:id="@+id/videoPlayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <View
            android:id="@+id/vCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_mini_game_cover"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_minigame_jackpot"/>

        <org.cxct.sportlottery.view.ScrollingDigitalAnimation
            android:id="@+id/tvJackPotAmount"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="110dp"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:fontFamily="@font/helvetica_bold"
            android:textSize="24sp"
            android:textColor="@color/red"
            android:text="$99"/>

        <TextView
            android:id="@+id/tvBetToWin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="14dp"
            android:paddingHorizontal="6dp"
            android:paddingVertical="4dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="$5 To Win"/>

    </androidx.cardview.widget.CardView>


    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="bottom"
        android:src="@drawable/ic_minigame_dice"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="44dp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:textColor="@color/color_313F56"
        android:textSize="14sp"
        android:text="Color Game"/>


</merge>