<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_game"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_191919_FCFCFC"
    android:orientation="vertical"
    tools:ignore="spUsage,ContentDescription,RtlSymmetry">

    <View
        android:id="@+id/v_top"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color_1F1F1F_e6e6e6"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_game_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="12dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_game_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="45dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_game_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="105dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_game_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="165dp" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="@id/guide_content"
        app:layout_constraintStart_toStartOf="@id/guide_game_start"
        app:layout_constraintBottom_toBottomOf="@id/guide_game_top"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/league_odd_match_favorite"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="@dimen/margin_10"
                android:src="@drawable/selector_star_v4"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/league_odd_match_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:textColor="@color/color_6C7BA8"
                android:textSize="@dimen/textSize10sp"
                tools:text="比赛延期" />

            <TextView
                android:id="@+id/league_odd_match_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:fontFamily="@font/helvetica_bold"
                android:textStyle="bold"
                android:textColor="@color/color_6C7BA8"
                android:textSize="@dimen/textSize10sp"
                tools:text="00:43" />

            <ImageView
                android:id="@+id/league_neutral"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_n"
                android:visibility="gone"
                tools:visibility="visible"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/league_odd_spt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="5dp"
                android:textColor="@color/color_6C7BA8"
                android:textSize="@dimen/textSize10sp"
                android:visibility="gone"
                tools:text="/5"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/league_corner_kicks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="5dp"
                android:drawableLeft="@drawable/ic_kicks"
                android:textColor="@color/color_6C7BA8"
                android:textSize="@dimen/textSize10sp"
                android:visibility="gone"
                tools:text="1-5"
                tools:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/league_spt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_6C7BA8"
            android:textSize="@dimen/textSize10sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/barrier"
            tools:text="5盘3胜"
            tools:visibility="visible" />

    </LinearLayout>

    <include
        android:id="@+id/content_baseball_status"
        layout="@layout/content_baseball_status"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@id/guide_game_top"
        app:layout_constraintEnd_toEndOf="@id/guide_content"
        app:layout_constraintStart_toStartOf="@id/guide_game_start"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@+id/guide_game_start"
        app:layout_constraintTop_toBottomOf="@+id/guide_game_top"
        app:layout_constraintBottom_toTopOf="@+id/guide_game_center"
        app:layout_constraintRight_toLeftOf="@+id/guide_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_home_team_logo"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/ic_country" />

            <TextView
                android:id="@+id/league_odd_match_name_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="@color/color_535D76"
                android:textSize="@dimen/textSize14sp"
                tools:text="俄罗斯" />

            <TextView
                android:id="@+id/league_odd_match_cards_home"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:minWidth="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_sport_card_red"
                android:paddingHorizontal="1dp"
                android:layout_marginLeft="@dimen/margin_5"
                android:textColor="@color/color_FCFCFC"
                android:textSize="@dimen/textSize8sp"
                android:includeFontPadding="true"
                android:gravity="center"
                android:visibility="invisible"
                tools:text="1"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/ic_attack_h"
                android:layout_width="2dp"
                android:layout_height="14dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_baseball_attack"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/league_odd_match_score_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:textColor="@color/color_414655"
                android:textSize="16sp"
                android:fontFamily="@font/helvetica"
                tools:text="999" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/league_odd_match_total_score_home_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_F75452_E23434"
                android:textSize="@dimen/textSize14sp"
                android:visibility="gone"
                tools:text="1"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/league_odd_match_score_home_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textColor="@color/color_BBBBBB_333333"
                android:textSize="@dimen/textSize14sp"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/league_odd_match_total_score_home_bottom"
                app:layout_constraintTop_toTopOf="@+id/league_odd_match_total_score_home_bottom"
                tools:text="0"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/league_odd_match_point_home_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textColor="@color/color_909090_666666"
                android:textSize="@dimen/textSize14sp"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/league_odd_match_score_home_bottom"
                app:layout_constraintTop_toTopOf="@+id/league_odd_match_total_score_home_bottom"
                tools:text="0"
                tools:visibility="visible" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@+id/guide_game_start"
        app:layout_constraintTop_toBottomOf="@+id/guide_game_center"
        app:layout_constraintBottom_toTopOf="@+id/guide_game_bottom"
        app:layout_constraintRight_toLeftOf="@+id/guide_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_away_team_logo"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/ic_country" />

            <TextView
                android:id="@+id/league_odd_match_name_away"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="@color/color_535D76"
                android:textSize="@dimen/textSize14sp"
                tools:text="芬兰" />

            <TextView
                android:id="@+id/league_odd_match_cards_away"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:minWidth="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_sport_card_red"
                android:paddingHorizontal="1dp"
                android:includeFontPadding="true"
                android:gravity="center"
                android:textColor="@color/color_FCFCFC"
                android:textSize="@dimen/textSize8sp"
                android:visibility="invisible"
                tools:text="1"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/ic_attack_c"
                android:layout_width="2dp"
                android:layout_height="14dp"
                android:layout_marginRight="@dimen/margin_5"
                android:src="@drawable/ic_baseball_attack"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/league_odd_match_score_away"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:textColor="@color/color_414655"
                android:textSize="16sp"
                android:fontFamily="@font/helvetica"
                tools:text="999" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/league_odd_match_total_score_away_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_F75452_E23434"
                android:textSize="@dimen/textSize14sp"
                android:visibility="gone"
                tools:text="0"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/league_odd_match_score_away_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textColor="@color/color_BBBBBB_333333"
                android:textSize="@dimen/textSize14sp"
                android:visibility="gone"
                tools:text="0"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/league_odd_match_point_away_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textColor="@color/color_909090_666666"
                android:textSize="@dimen/textSize14sp"
                android:visibility="gone"
                tools:text="0"
                tools:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@+id/guide_game_start"
        app:layout_constraintTop_toBottomOf="@+id/guide_game_bottom"
        app:layout_constraintBottom_toTopOf="@id/league_odd_quick_cate_divider"
        app:layout_constraintRight_toLeftOf="@+id/guide_content">

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_video"
            android:visibility="gone"
            tools:ignore="ContentDescription"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/iv_animation"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:src="@drawable/ic_action"
            android:visibility="gone"
            tools:ignore="ContentDescription"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/league_odd_match_play_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:fontFamily="@font/helvetica_bold"
            android:textColor="@color/color_6C7BA8"
            android:textSize="@dimen/textSize12sp"
            tools:text="120+>" />

        <androidx.legacy.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/league_odd_match_chart"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_chart_data"
            android:layout_marginRight="5dp"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_league_odd_btn_pager_main"
        android:layout_width="0dp"
        android:layout_height="225dp"
        android:nestedScrollingEnabled="false"
        android:orientation="horizontal"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@id/league_odd_quick_cate_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guide_content"
        app:layout_constraintTop_toTopOf="@+id/v_top"
        tools:itemCount="5"
        tools:listitem="@layout/itemview_odd_btn_2x2_v6" />

    <LinearLayout
        android:id="@+id/ll_cs_text_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_191919_FCFCFC"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/guide_game_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guide_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_correct_1"
            android:layout_width="wrap_content"
            android:minWidth="70dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/color_6C7BA8"
            android:textSize="@dimen/textSize14sp"
            tools:text="abc" />

        <TextView
            android:id="@+id/tv_correct_2"
            android:layout_width="wrap_content"
            android:minWidth="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_6C7BA8"
            android:textSize="@dimen/textSize14sp"
            android:maxLines="1"
            tools:text="abc" />

    </LinearLayout>

    <View
        android:id="@+id/league_odd_quick_cate_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_1F1F1F_e6e6e6"
        app:layout_constraintTop_toBottomOf="@id/rv_league_odd_btn_pager_main"
        app:layout_constraintBottom_toTopOf="@id/vs_league_quick" />

    <!-- 快選元件 -->
    <ViewStub
        android:id="@+id/vs_league_quick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorOrange"
        android:layout="@layout/itemview_league_quick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/league_odd_quick_cate_divider"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>