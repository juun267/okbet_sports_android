<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal"
    tools:context=".ui.chat.ChatMessageAdapter">

    <!-- 20200630 紀錄問題：RoundedImageView 若圖片比例不是正方形，android:scaleType="centerInside" 屬性出來會是橢圓形-->
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_head"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:scaleType="centerCrop"
        android:src="@drawable/chat_avatar"
        app:riv_corner_radius="4dp"
        app:riv_oval="true" />

    <LinearLayout
        android:id="@+id/block_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="30dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textSize="@dimen/textSize12sp"
                android:layout_gravity="center_vertical"
                android:maxWidth="150dp"
                android:maxEms="7"
                android:singleLine="false"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/colorChatHeadName"
                tools:text="一二三四五六七" />

            <ImageView
                android:id="@+id/iv_level"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:scaleType="fitCenter"
                tools:src="@drawable/chat_icon_member01" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/vg_content_layout"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_bubble_speech_bottom"
                    android:minWidth="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <LinearLayout
                    android:layout_weight="9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="200dp"
                    android:orientation="vertical"
                    android:layout_marginStart="7dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="7dp"
                        android:lineSpacingMultiplier="0.9"
                        android:textColor="@android:color/white"
                        tools:text="遊戲:  重慶時時彩"
                        android:visibility="gone" />

                    <include layout="@layout/include_chat_bet_lottery" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="28dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <Button
                                android:id="@+id/btn_good"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                tools:text="(100)"
                                android:paddingStart="20dp"
                                android:textAllCaps="false"
                                android:drawablePadding="0dp"
                                android:drawableLeft="@drawable/ic_like"
                                android:background="@drawable/follow_bet_bottom_left"
                                android:textColor="@color/press_gray_white_effect" />
                        </RelativeLayout>


                        <Button
                            android:id="@+id/btn_give"
                            android:layout_width="0dp"
                            android:layout_height="28dp"
                            android:layout_marginStart="0.5dp"
                            android:layout_weight="1"
                            android:background="@drawable/follow_bet_bottom_right"
                            android:textAllCaps="false"
                            android:text="@string/reward"
                            android:textColor="@color/press_gray_white_effect" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:paddingStart="6dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textColor="#a0a0a0"
                android:textSize="@dimen/textSize10sp"
                tools:text="10:35:10" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>

