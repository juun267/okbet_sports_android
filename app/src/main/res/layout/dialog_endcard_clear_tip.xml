<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/color_1B2E39">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="@dimen/margin_44"
           android:background="@color/color_2F4553"
           android:gravity="center"
           android:textStyle="bold"
           android:textColor="@color/color_FFFFFF"
           android:textSize="@dimen/textSize18sp"
           android:text="@string/KYC055"/>

       <View
           android:layout_width="match_parent"
           android:layout_height="@dimen/margin_0.5"
           android:background="@color/color_3A586D"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/margin_16"
           android:layout_marginTop="@dimen/margin_20"
           android:lineHeight="20dp"
           android:textColor="@color/color_BEC7DC"
           android:textSize="@dimen/textSize14sp"
           android:text="@string/P355"/>
       <CheckBox
           android:id="@+id/cbOkIknow"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:button="@drawable/selector_check_okay"
           android:paddingLeft="@dimen/margin_8"
           android:layout_marginTop="@dimen/margin_16"
           android:layout_gravity="center_horizontal"
           android:textSize="@dimen/textSize14sp"
           android:textColor="@color/color_FFFFFF"
           android:text="@string/P356"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/margin_24"
           android:layout_marginBottom="@dimen/margin_28"
           android:layout_marginHorizontal="@dimen/margin_12">
           <Button
               android:id="@+id/btnBet"
               android:layout_width="0dp"
               android:layout_height="44dp"
               android:layout_weight="1"
               android:foreground="@drawable/fg_ripple"
               android:background="@drawable/bg_darkblue_radius_8_3f5b6b"
               android:textSize="@dimen/textSize18sp"
               android:textColor="@color/color_FFFFFF"
               android:text="@string/P357"/>
           <Button
               android:id="@+id/btnConfirm"
               android:layout_width="0dp"
               android:layout_height="44dp"
               android:layout_weight="1"
               android:layout_marginLeft="@dimen/margin_10"
               android:foreground="@drawable/fg_ripple"
               android:background="@drawable/selector_button_default_darkblue"
               android:textSize="@dimen/textSize18sp"
               android:textColor="@color/color_FFFFFF"
               android:text="@string/P358"/>
       </LinearLayout>

   </LinearLayout>

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="@dimen/margin_24"
        android:layout_height="@dimen/margin_24"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_10"
        android:tint="@color/color_213743"
        android:src="@drawable/ic_endcard_result_close"/>
</androidx.cardview.widget.CardView>
