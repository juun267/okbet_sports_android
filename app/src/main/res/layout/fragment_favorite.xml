<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:adjustViewBounds="true"
        android:src="@drawable/bg_collection_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/view_status_bar" />

        <LinearLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_bar_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_scrollFlags="scroll|enterAlways"
            tools:ignore="SpUsage,RtlSymmetry,ContentDescription">

            <ImageView
                android:id="@+id/iv_menu_left"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="18dp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:scaleType="fitStart"
                android:src="@drawable/icon_menu" />

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginBottom="3dp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:scaleType="fitStart"
                android:src="@drawable/logo_okbet_color" />

            <include
                android:id="@+id/lin_search"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_26"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/margin_15"
                layout="@layout/view_search_white"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/cl_bet_all_sports"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:minWidth="90dp"
                android:layout_marginEnd="13dp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/selector_bg_home_tab_menu">

                <TextView
                    android:id="@+id/tv_all_sports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="13dp"
                    android:text="@string/all_sport"
                    android:textSize="@dimen/textSize14sp"
                    android:textColor="@color/selector_blue_white" />

                <ImageView
                    android:id="@+id/iv_all_sports_arrow"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="6dp"
                    android:duplicateParentState="true"
                    android:src="@drawable/selector_blue_white_arrow" />
            </LinearLayout>
        </LinearLayout>

        <org.cxct.sportlottery.widget.RadiusCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rcv_topLeftRadiu="20dp"
            app:rcv_topRightRadiu="20dp"
            app:rcv_bottomLeftRadiu="0dp"
            app:rcv_bottomRightRadiu="0dp"
            app:cardBackgroundColor="@color/color_F3F9FF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/color_F3F9FF">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/favorite_game_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:visibility="gone"
                    tools:itemCount="1"
                    tools:listitem="@layout/item_favorite"
                    tools:visibility="visible" />

                <include
                    android:id="@+id/fl_no_game"
                    layout="@layout/view_favorite_empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />
            </LinearLayout>

        </org.cxct.sportlottery.widget.RadiusCardView>

    </LinearLayout>
</FrameLayout>