<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="spUsage">

    <View
        android:id="@+id/outright_info_block"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/outright_league_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:singleLine="true"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/textSize16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/outright_league_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/outright_info_block"
        app:layout_constraintTop_toTopOf="@id/outright_info_block"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="欧洲冠军杯2020/2021" />

    <TextView
        android:id="@+id/outright_league_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/textSize12sp"
        app:layout_constraintBottom_toBottomOf="@+id/outright_info_block"
        app:layout_constraintEnd_toStartOf="@+id/outright_league_time"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/outright_league_name"
        app:layout_constraintTop_toBottomOf="@+id/outright_league_name"
        tools:text="03/03" />

    <TextView
        android:id="@+id/outright_league_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/textSize12sp"
        app:layout_constraintBottom_toBottomOf="@+id/outright_league_date"
        app:layout_constraintEnd_toEndOf="@+id/outright_league_name"
        app:layout_constraintStart_toEndOf="@id/outright_league_date"
        app:layout_constraintTop_toBottomOf="@+id/outright_league_name"
        tools:text="23:00" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/outright_league_odd_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/outright_info_block"
        tools:itemCount="3"
        tools:listitem="@layout/itemview_outright_oddv3" />

</androidx.constraintlayout.widget.ConstraintLayout>