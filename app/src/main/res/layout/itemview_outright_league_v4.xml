<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="spUsage,UnusedAttribute">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/outright_info_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_141414_f3f3f3"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/outright_league_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineHeight="24dp"
            android:lineSpacingExtra="4dp"
            android:paddingHorizontal="24dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/color_BBBBBB_333333"
            android:textSize="@dimen/textSize16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/outright_league_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/outright_info_block"
            app:layout_constraintTop_toTopOf="@id/outright_info_block"
            app:layout_constraintVertical_chainStyle="spread"
            tools:text="欧洲冠军杯2020/2021" />

        <TextView
            android:id="@+id/outright_league_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/color_909090_666666"
            android:textSize="@dimen/textSize12sp"
            app:layout_constraintBottom_toBottomOf="@+id/outright_info_block"
            app:layout_constraintEnd_toStartOf="@+id/outright_league_time"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/outright_league_name"
            app:layout_constraintTop_toBottomOf="@+id/outright_league_name"
            tools:text="03/03" />

        <TextView
            android:id="@+id/outright_league_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:includeFontPadding="false"
            android:textColor="@color/color_909090_666666"
            android:textSize="@dimen/textSize12sp"
            app:layout_constraintBottom_toBottomOf="@+id/outright_league_date"
            app:layout_constraintEnd_toEndOf="@+id/outright_league_name"
            app:layout_constraintStart_toEndOf="@id/outright_league_date"
            app:layout_constraintTop_toBottomOf="@+id/outright_league_name"
            tools:text="23:00" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/outright_league_odd_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:nestedScrollingEnabled="false"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/outright_info_block"
        tools:itemCount="3"
        tools:listitem="@layout/itemview_outright_odd_v4" />

</androidx.constraintlayout.widget.ConstraintLayout>