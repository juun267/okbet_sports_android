<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ui.component.StatusSelectorView"
    tools:background="@drawable/frame_color_silver_light_stroke">

    <TextView
        android:id="@+id/tv_name"
        android:paddingStart="@dimen/margin_6"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:singleLine="true"
        android:textColor="@color/color_79839F_6C7BA8"
        android:textSize="@dimen/textSize12sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/all_order_status" />

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        android:src="@drawable/ic_arrow_gray"
        app:layout_constraintBottom_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toEndOf="@id/tv_name"
        app:layout_constraintTop_toTopOf="@id/tv_name" />

</androidx.constraintlayout.widget.ConstraintLayout>