<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:background="@drawable/shape_odd_category_bg_v4"
    android:paddingStart="22dp"
    android:paddingEnd="22dp">

    <TextView
        android:id="@+id/play_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:textColor="@color/selector_odd_category_text_v4"
        android:textSize="@dimen/textSize12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/play_category_name"
        app:layout_constraintEnd_toStartOf="@id/play_arrow"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="spUsage"
        tools:text="主要市场" />

    <TextView
        android:id="@+id/play_category_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:gravity="start"
        android:singleLine="true"
        android:textColor="@color/selector_odd_category_text_v4"
        android:textSize="@dimen/textSize12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/play_arrow"
        app:layout_constraintStart_toStartOf="@id/play_name"
        app:layout_constraintTop_toBottomOf="@id/play_name"
        tools:text="独赢"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/play_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selector_ic_arrow_gray_blue_v4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/play_name"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>