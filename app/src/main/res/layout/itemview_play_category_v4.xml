<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="44dp"
    android:background="@drawable/shape_odd_category_bg_v4"
    android:paddingStart="22dp"
    android:paddingEnd="22dp"
    tools:context="org.cxct.sportlottery.ui.game.hall.adapter.PlayCategoryAdapter"
    tools:ignore="spUsage">

    <TextView
        android:id="@+id/play_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="@color/selector_odd_category_text_v4"
        android:textSize="@dimen/textSize12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/play_category_name"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="主要市场" />

    <TextView
        android:id="@+id/play_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:singleLine="true"
        android:textColor="@color/selector_odd_category_text_v4"
        android:textSize="@dimen/textSize12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/play_arrow"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/play_name"
        app:layout_constraintTop_toBottomOf="@id/play_name"
        tools:text="独赢"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="play_category_name, play_name" />

    <ImageView
        android:id="@+id/play_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@drawable/selector_ic_arrow_gray_blue_v4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/barrier"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>