<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F5"
    android:orientation="vertical"
    tools:context=".ui.feedback.record.FeedbackRecordListFragment">
    <!-- Tab bar-->

    <org.cxct.sportlottery.ui.component.DateRangeSearchView
        android:id="@+id/date_range_selector"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <org.cxct.sportlottery.ui.component.StatusSelectorView
        android:id="@+id/status_selector"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:defaultStatusText="@string/all_status" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3F4F5"
        android:gravity="center"
        android:minHeight="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/feedback_last_reply_time"
            android:textColor="@color/colorGrayDark"
            android:textSize="@dimen/textSize12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/feedback_content_description"
            android:textColor="@color/colorGrayDark"
            android:textSize="@dimen/textSize12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/status"
            android:textColor="@color/colorGrayDark"
            android:textSize="@dimen/textSize12sp" />

    </LinearLayout>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srlDragRate="0.3"
        app:srlEnableLoadMore="true"
        app:srlEnablePureScrollMode="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_pay_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:overScrollMode="never"
                tools:itemCount="5"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/content_feedback_record_list_rv"
                tools:orientation="vertical"
                tools:visibility="visible" />

        </FrameLayout>

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>


</LinearLayout>