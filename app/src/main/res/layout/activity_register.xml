                <org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes
                    android:id="@+id/et_verification_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:iconSignifier="@drawable/ic_login_verify"
                    app:singleText="@string/verification_code">

                    <org.cxct.sportlottery.widget.boundsEditText.ExtendedEditText
                        android:id="@+id/eet_verification_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="@dimen/textSize14sp" />

                </org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes>

                <LinearLayout
                    android:id="@+id/llCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:minWidth="80dp"
                    android:orientation="horizontal">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/ivVerification"
                        android:layout_width="109dp"
                        android:layout_height="40dp"
                        android:minHeight="32dp"
                        android:scaleType="fitXY"
                        android:text="@string/get_verification_code"
                        app:riv_corner_radius="8dp" />

                    <ImageView
                        android:id="@+id/ivReturn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_return" />

                </LinearLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clAgreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/block_valid_code">
                <TextView
                    android:id="@+id/tvDutyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_please_read"                    android:textColor="@color/colorBlackLight"
                    android:textSize="@dimen/textSize13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/tvDuty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_responsibilities"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/textSize13sp"
                    app:layout_constraintStart_toEndOf="@+id/tvDutyTitle"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ã€‚"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="@dimen/textSize13sp"
                    app:layout_constraintStart_toEndOf="@+id/tvDuty"
                    app:layout_constraintTop_toTopOf="parent" />
                <CheckBox
                    android:id="@+id/cbPrivacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:button="@drawable/effect_login_select_checkbox"
                    android:checked="true"
                    android:paddingLeft="4dp"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="@dimen/textSize13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvDutyTitle" />
                <TextView
                    android:id="@+id/tvPrivacy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/colorBlackLight"
                    android:textColorLink="@color/colorBlue"
                    android:textSize="@dimen/textSize13sp"
                    android:gravity="left"
                    app:layout_constraintStart_toEndOf="@+id/cbPrivacy"
                    app:layout_constraintTop_toBottomOf="@+id/tvDutyTitle"
                    app:layout_constraintEnd_toEndOf="@+id/clAgreement"/>


                <CheckBox
                    android:id="@+id/cbAgreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:button="@drawable/effect_login_select_checkbox"
                    android:checked="true"
                    android:paddingLeft="4dp"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="@dimen/textSize13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cbPrivacy" />

                <TextView
                    android:id="@+id/tvAgreement"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/colorBlackLight"
                    android:textColorLink="@color/colorBlue"
                    android:textSize="@dimen/textSize13sp"
                    android:gravity="left"
                    app:layout_constraintStart_toEndOf="@+id/cbAgreement"
                    app:layout_constraintTop_toBottomOf="@+id/cbPrivacy"
                    app:layout_constraintEnd_toEndOf="@+id/clAgreement"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

