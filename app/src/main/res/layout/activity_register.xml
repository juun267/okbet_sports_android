                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/textSize14sp" />

            </org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes>

            <org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes
                android:id="@+id/et_we_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:hintText="@string/hint_we_chat_number"
                app:iconSignifier="@drawable/ic_login_wechat"
                app:labelText="@string/we_chat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_mail">

                <org.cxct.sportlottery.widget.boundsEditText.ExtendedEditText
                    android:id="@+id/eet_we_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/textSize14sp" />

            </org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes>

            <org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes
                android:id="@+id/et_zalo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:hintText="@string/hint_zalo"
                app:iconSignifier="@drawable/ic_login_zalo"
                app:labelText="@string/zalo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_we_chat">

                <org.cxct.sportlottery.widget.boundsEditText.ExtendedEditText
                    android:id="@+id/eet_zalo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/textSize14sp" />

            </org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes>

            <org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes
                android:id="@+id/et_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:hintText="@string/hint_facebook"
                app:iconSignifier="@drawable/ic_login_facebook"
                app:labelText="@string/facebook"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_zalo">

                <org.cxct.sportlottery.widget.boundsEditText.ExtendedEditText
                    android:id="@+id/eet_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/textSize14sp" />

            </org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes>

            <org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes
                android:id="@+id/et_whats_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:hintText="@string/hint_whats_app"
                app:iconSignifier="@drawable/ic_login_whatsapp"
                app:labelText="@string/whats_app"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_facebook">

                <org.cxct.sportlottery.widget.boundsEditText.ExtendedEditText
                    android:id="@+id/eet_whats_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/textSize14sp" />

            </org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes>

            <org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes
                android:id="@+id/et_telegram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:hintText="@string/hint_telegram"
                app:iconSignifier="@drawable/ic_login_telegram"
                app:labelText="@string/telegram"
                app:layout_constraintStart_toStartOf="parent"
