<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.login.signUp.RegisterActivity">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="16dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_arrow_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_login_card"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <View
                android:id="@+id/view"
                android:layout_width="6dp"
                android:layout_height="26dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_login_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/label_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="@string/btn_register"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/view"
                app:layout_constraintStart_toEndOf="@+id/view"
                app:layout_constraintTop_toTopOf="@+id/view" />

            <org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes
                android:id="@+id/et_recommend_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:hintText="@string/hint_recommend_code"
                app:iconSignifier="@drawable/ic_login_recommend"
                app:labelText="@string/recommend_code"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_register">

                <org.cxct.sportlottery.widget.boundsEditText.ExtendedEditText
                    android:id="@+id/eet_recommend_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="@dimen/textSize14sp"
                    android:textStyle="bold" />

            </org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes>


            <org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes
                android:id="@+id/et_member_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:hintText="@string/hint_member_account"
                app:iconSignifier="@drawable/ic_login_account"
                app:labelText="@string/member_account"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_recommend_code">

                <org.cxct.sportlottery.widget.boundsEditText.ExtendedEditText
                    android:id="@+id/eet_member_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/textSize14sp" />

            </org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes>

            <org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes
                android:id="@+id/et_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:endIcon="@drawable/ic_eye_close"
                app:hintText="@string/hint_register_password"
                app:iconSignifier="@drawable/ic_login_password"
                app:labelText="@string/login_password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_member_account">

                <org.cxct.sportlottery.widget.boundsEditText.ExtendedEditText
                    android:id="@+id/eet_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textSize="@dimen/textSize14sp" />

            </org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes>

            <org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:endIcon="@drawable/ic_eye_close"
                app:hintText="@string/hint_confirm_password"
                app:iconSignifier="@drawable/ic_login_password"
                app:labelText="@string/confirm_password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_login_password">

                <org.cxct.sportlottery.widget.boundsEditText.ExtendedEditText
                    android:id="@+id/eet_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textSize="@dimen/textSize14sp" />

            </org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes>

            <org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes
                android:id="@+id/et_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:hintText="@string/hint_real_name"
                app:iconSignifier="@drawable/ic_login_name"
                app:labelText="@string/real_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_confirm_password">

                <org.cxct.sportlottery.widget.boundsEditText.ExtendedEditText
                    android:id="@+id/eet_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/textSize14sp" />

            </org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes>

            <org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes
                android:id="@+id/et_withdrawal_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:endIcon="@drawable/ic_eye_close"
                app:hintText="@string/hint_withdrawal_pwd"
                app:iconSignifier="@drawable/ic_login_withdraw_number"
                app:labelText="@string/withdrawal_pwd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_full_name">

                <org.cxct.sportlottery.widget.boundsEditText.ExtendedEditText
                    android:id="@+id/eet_withdrawal_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="numberPassword"
                    android:maxLines="1"
                    android:maxLength="4"
                    android:textSize="@dimen/textSize14sp" />

            </org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes>

            <org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes
                android:id="@+id/et_qq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:hintText="@string/hint_qq_number"
                app:iconSignifier="@drawable/ic_login_qq"
                app:labelText="@string/qq_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_withdrawal_pwd">

                <org.cxct.sportlottery.widget.boundsEditText.ExtendedEditText
                    android:id="@+id/eet_qq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/textSize14sp" />

            </org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes>

            <org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:hintText="@string/hint_phone_number"
                app:iconSignifier="@drawable/ic_login_phone_number"
                app:labelText="@string/phone_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_qq">

                <org.cxct.sportlottery.widget.boundsEditText.ExtendedEditText
                    android:id="@+id/eet_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textSize="@dimen/textSize14sp" />

            </org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes>

            <LinearLayout
                android:id="@+id/block_sms_valid_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_phone">

                <org.cxct.sportlottery.widget.boundsEditText.TextFieldBoxes
                    android:id="@+id/et_sms_valid_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:hintText="@string/hint_verification_code_by_sms"
