<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".ui.menu.ChangeLanguageDialog">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/language_setting"
        android:textColor="@color/textColorDark"
        android:textSize="@dimen/textSize16sp" />

    <Button
        android:id="@+id/btn_chinese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/effect_ripple_rectangle_blue_light"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/language_cn"
        android:textColor="@color/textColorDark"
        android:textSize="@dimen/textSize14sp" />

    <Button
        android:id="@+id/btn_english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/effect_ripple_rectangle_blue_light"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/language_en"
        android:textColor="@color/textColorDark"
        android:textSize="@dimen/textSize14sp" />

</LinearLayout>