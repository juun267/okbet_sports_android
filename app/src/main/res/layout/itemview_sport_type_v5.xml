<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="64dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/select_sport_type_v5"
            android:minWidth="64dp">

            <ImageView
                android:id="@+id/sport_type_img"
                android:layout_width="0dp"
                android:layout_height="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/selector_sport_type_item_img_ft_v4"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/sport_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/selector_sport_type_item_text_v5"
                android:textSize="@dimen/textSize12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/sport_type_img"
                app:layout_constraintEnd_toStartOf="@+id/sport_count_text"
                app:layout_constraintStart_toEndOf="@+id/sport_type_img"
                app:layout_constraintTop_toTopOf="@+id/sport_type_img"
                tools:text="足球" />

            <TextView
                android:id="@+id/sport_count_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/selector_sport_type_item_text_v5"
                android:textSize="@dimen/textSize12sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/sport_type_img"
                app:layout_constraintTop_toTopOf="@+id/sport_type_img"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="120" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>