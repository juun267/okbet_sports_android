<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="14dp"
    android:paddingTop="15dp"
    android:paddingEnd="14dp"
    android:background="@color/colorWhite1"
    tools:context=".ui.profileCenter.identity.CredentialsFragment">


    <org.cxct.sportlottery.ui.component.UploadImageView
        android:id="@+id/view_identity_doc"
        android:layout_width="match_parent"
        android:layout_height="193dp"
        app:layout_constraintTop_toTopOf="parent" />

    <org.cxct.sportlottery.ui.component.UploadImageView
        android:id="@+id/view_identity_photo"
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/view_identity_doc" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_radius_20_button_dusk"
        android:letterSpacing="0.2"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:text="@string/submit"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textSize16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/btn_reset"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/view_identity_photo" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_radius_20_button_hollow"
        android:letterSpacing="0.2"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:text="@string/upload_media_reset"
        android:textAllCaps="true"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/textSize16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_submit"
        app:layout_constraintTop_toBottomOf="@id/view_identity_photo" />
</androidx.constraintlayout.widget.ConstraintLayout>