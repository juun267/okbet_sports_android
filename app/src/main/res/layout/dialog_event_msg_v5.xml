<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="335dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:background="@android:drawable/screen_background_dark_transparent">

    <ImageView
        android:id="@+id/img_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/bg_news_top_v5"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        android:src="@drawable/bg_square_shape_8dp_white_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_top" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4.5dp"
        android:layout_marginEnd="4.5dp"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toStartOf="@id/img_arrow_right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/img_arrow_left"
        app:layout_constraintTop_toBottomOf="@id/img_top"
        tools:itemCount="3"
        tools:listitem="@layout/content_news_tab_rv"
        tools:orientation="horizontal" />

    <View
        android:id="@+id/btn_arrow_left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/rv_tab"
        app:layout_constraintBottom_toBottomOf="@+id/rv_tab"
        app:layout_constraintEnd_toStartOf="@+id/rv_tab"/>


    <ImageView
        android:id="@+id/img_arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="82dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_triangle_left"
        app:layout_constraintBottom_toBottomOf="@id/rv_tab"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/rv_tab" />

    <View
        android:id="@+id/btn_arrow_right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/rv_tab"
        app:layout_constraintBottom_toBottomOf="@+id/rv_tab"
        app:layout_constraintStart_toEndOf="@+id/rv_tab" />

    <ImageView
        android:id="@+id/img_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="82dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_triangle_right"
        app:layout_constraintBottom_toBottomOf="@id/rv_tab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/rv_tab" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_content"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:overScrollMode="never"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/indicator_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_tab"
        tools:itemCount="1"
        tools:listitem="@layout/content_news_item_rv"
        tools:orientation="horizontal" />

    <me.relex.circleindicator.CircleIndicator2
        android:id="@+id/indicator_view"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginBottom="15dp"
        app:ci_drawable="@drawable/ic_indicator_selected_news"
        app:ci_drawable_unselected="@drawable/ic_indicator_unselected_news"
        app:ci_animator="@anim/scale_with_alpha"
        app:ci_height="6dp"
        app:ci_width="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_circle_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>