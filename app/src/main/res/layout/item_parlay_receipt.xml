<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    tools:ignore="SpUsage">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_191919_FCFCFC">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_24"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:id="@+id/layoutTitle"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/bg_gradient_0066d1_0079fa">
                    <ImageView
                        android:layout_width="@dimen/margin_12"
                        android:layout_height="@dimen/margin_12"
                        android:gravity="center_vertical"
                        android:src="@drawable/icon_recept"
                        app:tint="@color/white"
                        android:layout_marginStart="@dimen/margin_8"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/home_tab_parlay"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize12sp"
                        android:layout_marginStart="@dimen/margin_4"/>


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_bet_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="11dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layoutTitle"
                    android:textSize="@dimen/textSize12sp"
                    android:visibility="visible"
                    android:drawablePadding="6dp"
                    tools:text="已确认"
                    tools:textColor="@color/color_1D9F51_1D9F51"
                    tools:drawableStart="@drawable/ic_bet_lock_tip"
                    tools:drawableTint="@color/color_1D9F51_1D9F51" />

                <TextView
                    android:id="@+id/tv_play_name_parlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_BBBBBB_333333"
                    android:textSize="@dimen/textSize15sp"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/margin_12"
                    android:layout_marginTop="@dimen/margin_12"
                    app:layout_constraintEnd_toStartOf="@+id/tv_match_at"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layoutTitle"
                    tools:text="3串1" />

                <TextView
                    android:id="@+id/tv_match_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="\@"
                    android:textColor="@color/color_BBBBBB_333333"
                    android:textSize="@dimen/textSize15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/tv_match_odd_parlay"
                    app:layout_constraintStart_toEndOf="@+id/tv_play_name_parlay"
                    app:layout_constraintTop_toTopOf="@id/tv_play_name_parlay" />

                <TextView
                    android:id="@+id/tv_match_odd_parlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/color_BBBBBB_333333"
                    android:textSize="@dimen/textSize15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/tv_match_at"
                    app:layout_constraintTop_toTopOf="@id/tv_play_name_parlay"
                    tools:text="0.89" />

                <include
                    layout="@layout/view_match_receipt_bet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="@dimen/margin_12"
                    android:layout_marginEnd="@dimen/margin_12"
                    android:layout_marginBottom="@dimen/margin_16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_play_name_parlay" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>




</FrameLayout>