<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_161B28">

    <TextView
        android:id="@+id/tvQuarter"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="115"
        android:gravity="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        tools:text="Q1"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/textSize14sp" />

    <View
        android:layout_width="@dimen/margin_0.5"
        android:layout_height="match_parent"
        android:background="@color/color_1A2334" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="80"
        android:gravity="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        tools:text="0-1"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/textSize14sp" />

    <View
        android:layout_width="@dimen/margin_0.5"
        android:layout_height="match_parent"
        android:background="@color/color_1A2334" />

    <TextView
        android:id="@+id/tvWinAmount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="170"
        android:gravity="center"
        android:fontFamily="@font/inter_bold"
        android:textFontWeight="500"
        tools:text="â‚± 895.64"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/textSize14sp" />
</LinearLayout>