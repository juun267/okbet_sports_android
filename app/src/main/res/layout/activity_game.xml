<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.game.GameActivity">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:elevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    app:layout_scrollFlags="scroll">

                    <!-- toolBar -->
                    <include layout="@layout/view_toolbar_main" />

                    <!-- 公告輪播跑馬燈 -->
                    <RelativeLayout
                        android:id="@+id/cl_message"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <include layout="@layout/view_message" />
                        <org.cxct.sportlottery.ui.common.NotificationView
                            android:id="@+id/view_notification"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </RelativeLayout>

                    <!-- 遊戲類別列表 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btn_menu_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_menu_left_side" />

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tabLayout"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            app:tabGravity="fill"
                            app:tabIndicatorHeight="0dp"
                            app:tabMode="fixed">

                            <com.google.android.material.tabs.TabItem
                                android:id="@+id/tab_all"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout="@layout/home_cate_tab" />

                            <com.google.android.material.tabs.TabItem
                                android:id="@+id/tab_inPlay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout="@layout/home_cate_tab" />

                            <com.google.android.material.tabs.TabItem
                                android:id="@+id/tab_today"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout="@layout/home_cate_tab" />

                            <com.google.android.material.tabs.TabItem
                                android:id="@+id/tab_early"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout="@layout/home_cate_tab" />

                            <com.google.android.material.tabs.TabItem
                                android:id="@+id/tab_parlay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout="@layout/home_cate_tab" />

                            <com.google.android.material.tabs.TabItem
                                android:id="@+id/tab_outright"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout="@layout/home_cate_tab" />

                        </com.google.android.material.tabs.TabLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorWhite2" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/game_container"
                    android:name="androidx.navigation.fragment.NavHostFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:navGraph="@navigation/game_navigation"
                    tools:layout="@layout/fragment_home" />
            </LinearLayout>



        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <!-- 左側導覽列 -->
        <include layout="@layout/view_nav_left" />

        <!-- 右側導覽列 -->
        <include layout="@layout/view_nav_right" />

    </androidx.drawerlayout.widget.DrawerLayout>

</layout>
