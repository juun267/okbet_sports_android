<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.game.GameActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <!-- toolBar -->
        <include
            android:id="@+id/game_toolbar"
            layout="@layout/view_toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 公告輪播跑馬燈 -->
        <include
            android:id="@+id/game_message"
            layout="@layout/view_message"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/game_toolbar" />

        <org.cxct.sportlottery.ui.common.NotificationView
            android:id="@+id/view_notification"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/game_message"
            app:layout_constraintTop_toTopOf="@id/game_message" />

        <ImageView
            android:id="@+id/btn_menu_left"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@color/colorWhite1"
            android:contentDescription="@null"
            android:padding="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_menu_left_side"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_notification" />

        <!-- 遊戲類別列表 -->
        <include
            layout="@layout/view_game_tab_match_type_v4"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="56dp"
            app:layout_constraintTop_toBottomOf="@id/view_notification" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/game_container"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/game_bottom_navigation"
            app:layout_constraintTop_toBottomOf="@id/btn_menu_left"
            app:navGraph="@navigation/game_navigation"
            tools:layout="@layout/fragment_home" />

        <Button
            android:id="@+id/game_submit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorOrangeLight"
            android:text="@string/button_league_submit"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/game_bottom_navigation"
            tools:visibility="visible" />

        <include
            android:id="@+id/game_bottom_navigation"
            layout="@layout/view_bottom_navigation_sport"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- 投注單 -->
        <FrameLayout
            android:id="@+id/fl_bet_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--左側邊攔v4-->
    <FrameLayout
        android:id="@+id/fl_left_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 右側導覽列 -->
    <include layout="@layout/view_nav_right" />

</androidx.drawerlayout.widget.DrawerLayout>