<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.game.GameActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_141414_F3F4F5">

        <!-- toolBar -->
        <include
            android:id="@+id/game_toolbar"
            layout="@layout/view_toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 公告輪播跑馬燈 -->
        <include
            android:id="@+id/game_message"
            layout="@layout/view_message"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/game_toolbar" />

        <org.cxct.sportlottery.ui.common.NotificationView
            android:id="@+id/view_notification"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/game_message"
            app:layout_constraintTop_toTopOf="@id/game_message" />

        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/sub_drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_message">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_141414_F3F4F5">

                <!-- 遊戲類別列表 -->
                <ImageView
                    android:id="@+id/btn_menu_left"
                    android:layout_width="58dp"
                    android:layout_height="53dp"
                    android:background="@color/color_141414_F3F4F5"
                    android:contentDescription="@null"
                    android:elevation="1dp"
                    android:paddingStart="16dp"
                    android:paddingTop="14dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="14dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_side_icon_v2"
                    app:layout_constraintBottom_toTopOf="@id/game_container"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/game_container"
                    android:name="androidx.navigation.fragment.NavHostFragment"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_menu_left"
                    app:navGraph="@navigation/game_navigation"
                    tools:layout="@layout/fragment_home" />

                <include
                    layout="@layout/view_game_tab_match_type_v4"
                    android:layout_width="0dp"
                    android:layout_height="53dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btn_menu_left"
                    app:layout_constraintTop_toBottomOf="@id/view_notification" />

                <include
                    android:id="@+id/game_bottom_navigation"
                    layout="@layout/view_bottom_navigation_sport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent" />

<!--                &lt;!&ndash; 快捷投注單 &ndash;&gt;-->
<!--                &lt;!&ndash; 因左邊選單需在快捷注單上層 故在此將快捷注單獨立顯示&ndash;&gt;-->
<!--                <FrameLayout-->
<!--                    android:id="@+id/fl_fast_bet"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    app:layout_constraintBottom_toBottomOf="parent"-->
<!--                    tools:visibility="gone" />-->

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--左側邊攔v4-->
            <com.google.android.material.navigation.NavigationView
                android:id="@+id/nav_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fl_left_menu"
                    android:name="org.cxct.sportlottery.ui.game.menu.LeftMenuFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:visibility="visible" />
            </com.google.android.material.navigation.NavigationView>

        </androidx.drawerlayout.widget.DrawerLayout>

        <!-- 投注單列表 & 快捷投注單 -->
        <FrameLayout
            android:id="@+id/fl_bet_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 右側導覽列 -->
    <include layout="@layout/view_nav_right" />

</androidx.drawerlayout.widget.DrawerLayout>