<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_bet_menu"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/margin_11"
        android:layout_marginStart="@dimen/margin_15"
        android:src="@drawable/bet_list_menu"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/margin_11"
        android:layout_marginStart="@dimen/margin_11"
        android:src="@drawable/okbet_login_logo"
        android:layout_toRightOf="@+id/iv_bet_menu" />

</RelativeLayout>