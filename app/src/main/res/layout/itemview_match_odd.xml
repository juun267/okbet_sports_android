<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/match_odd_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/match_odd_home_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSize14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="洪都拉斯普羅格雷索" />

        <TextView
            android:id="@+id/match_odd_vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/verse"
            android:textSize="@dimen/textSize12sp"
            app:layout_constraintBaseline_toBaselineOf="@id/match_odd_home_name"
            app:layout_constraintStart_toEndOf="@id/match_odd_home_name" />

        <TextView
            android:id="@+id/match_odd_away_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSize14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/match_odd_count"
            app:layout_constraintStart_toEndOf="@id/match_odd_vs"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="伊斯柏纳" />

        <TextView
            android:id="@+id/match_odd_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:textColor="@color/textGray"
            android:textSize="@dimen/textSize12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="4" />

        <ImageView
            android:id="@+id/match_odd_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:padding="7dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_arrow_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/match_odd_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/match_odd_layout"
        tools:el_expanded="true">

        <include
            android:id="@+id/match_odd_ou_hdp"
            layout="@layout/play_category_ou_hdp" />

        <include
            android:id="@+id/match_odd_1x2"
            layout="@layout/play_category_1x2"
            android:visibility="gone" />

    </net.cachapa.expandablelayout.ExpandableLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/match_odd_expand"
        android:background="@color/light_gray"/>

</androidx.constraintlayout.widget.ConstraintLayout>