<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_000000"
    android:orientation="vertical"
    tools:ignore="UseAppTint">


        <RelativeLayout
            android:id="@+id/web_view_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_live_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_stream_loading" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/text_cant_play"
                android:textColor="@color/color_317FFF_0760D4"
                android:textSize="@dimen/margin_14" />

            <!-- Media Layout -->
            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/player_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                tools:visibility="visible"
                app:use_controller="false" />

            <WebView
                android:id="@+id/web_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_025BE8"
                android:overScrollMode="never" />
            <!--根據需求，先隱藏賽事動畫-->

        </RelativeLayout>


    <LinearLayout
        android:id="@+id/cl_control"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_gravity="right"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_animation"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_anime_trans"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_video_trans"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/iv_live"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_live_trans"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/margin_15"
        android:layout_marginHorizontal="@dimen/margin_15">

        <ImageView
            android:id="@+id/iv_sound"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="@dimen/margin_5"
            android:src="@drawable/ic_sound" />

        <androidx.legacy.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_fullscreen"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="@dimen/margin_5"
            android:src="@drawable/selector_fullscreen" />
    </LinearLayout>
</FrameLayout>