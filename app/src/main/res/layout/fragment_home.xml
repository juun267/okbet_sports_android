<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/background"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:padding="6dp"
        android:background="@drawable/fillet_5dp_white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_football"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/fillet_4dp_home_game_item_dark"
            app:layout_constraintEnd_toStartOf="@id/card_basketball"
            app:layout_constraintHorizontal_weight="1.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/label_football"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/game_football"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_football_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@id/label_football"
                app:layout_constraintEnd_toStartOf="@id/iv_football"
                app:layout_constraintStart_toEndOf="@id/label_football"
                app:layout_constraintTop_toTopOf="@id/label_football"
                tools:text="644" />

            <ImageView
                android:id="@+id/iv_football"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_football"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_basketball"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:background="@drawable/fillet_4dp_home_game_item_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/card_football"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/label_basketball"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/game_basketball"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_basketball_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@id/label_basketball"
                app:layout_constraintEnd_toStartOf="@id/iv_basketball"
                app:layout_constraintStart_toEndOf="@id/label_basketball"
                app:layout_constraintTop_toTopOf="@id/label_basketball"
                tools:text="644" />

            <ImageView
                android:id="@+id/iv_basketball"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_basketball"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/card_basketball">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <org.cxct.sportlottery.ui.home.HomeGameCard
                    android:id="@+id/card_game_soon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:hgCard_title="@string/game_soon"
                    tools:hgCard_count="13"
                    app:hgCard_icon="@drawable/ic_game_soon"/>

                <org.cxct.sportlottery.ui.home.HomeGameCard
                    android:id="@+id/card_tennis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    app:hgCard_title="@string/game_tennis"
                    tools:hgCard_count="72"
                    app:hgCard_icon="@drawable/ic_tennis"/>

                <org.cxct.sportlottery.ui.home.HomeGameCard
                    android:id="@+id/card_badminton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    app:hgCard_title="@string/game_badminton"
                    tools:hgCard_count="2"
                    app:hgCard_icon="@drawable/ic_badminton"/>

                <org.cxct.sportlottery.ui.home.HomeGameCard
                    android:id="@+id/card_volleyball"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    app:hgCard_title="@string/game_volleyball"
                    tools:hgCard_count="32"
                    app:hgCard_icon="@drawable/ic_volleyball"/>

            </LinearLayout>

        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/fillet_5dp_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TODO simon test 抽屜選單-->

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>