<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.game.home.HomeFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="gameViewModel"
            type="org.cxct.sportlottery.ui.game.GameViewModel" />
    </data>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlDragRate="0.3"
        app:srlEnableLoadMore="true"
        app:srlEnablePureScrollMode="true">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@drawable/fillet_5dp_white"
                    android:orientation="vertical"
                    android:padding="6dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/card_football"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="233"
                            android:background="@drawable/fillet_4dp_home_game_item"
                            android:visibility="@{gameViewModel.allFootballCount==0?View.GONE:View.VISIBLE}">

                            <TextView
                                android:id="@+id/label_en_ft"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="9dp"
                                android:alpha="0.25"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:text="FOOTBALL"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/textSize23sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:alpha="0.25"
                                android:maxLines="1"
                                android:text="世界顶级赛事"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/textSize12sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/label_en_ft" />

                            <ImageView
                                android:id="@+id/iv_football"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_game_football"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/label_football"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="9dp"
                                android:includeFontPadding="false"
                                android:text="@string/soccer"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/textSize20sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:id="@+id/tv_football_count"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:includeFontPadding="false"
                                android:text="@{gameViewModel.allFootballCount.toString()}"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/textSize22sp"
                                app:layout_constraintBottom_toBottomOf="@id/label_football"
                                app:layout_constraintEnd_toStartOf="@id/iv_football"
                                app:layout_constraintStart_toEndOf="@id/label_football"
                                app:layout_constraintTop_toTopOf="@id/label_football"
                                tools:text="644" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                            android:layout_width="6dp"
                            android:layout_height="match_parent"
                            android:visibility="@{gameViewModel.allFootballCount==0||gameViewModel.allBasketballCount==0?View.GONE:View.VISIBLE}" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/card_basketball"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="112"
                            android:background="@drawable/fillet_4dp_home_game_item"
                            android:visibility="@{gameViewModel.allBasketballCount==0?View.GONE:View.VISIBLE}">

                            <TextView
                                android:id="@+id/label_en_bk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="9dp"
                                android:alpha="0.25"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:text="BASKETBALL"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/textSize23sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/iv_basketball"
                                android:layout_width="53dp"
                                android:layout_height="100dp"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_basketball"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/label_basketball"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="@string/basketball"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/textSize20sp"
                                app:layout_constraintBottom_toTopOf="@id/tv_basketball_count"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@id/tv_basketball_count" />

                            <TextView
                                android:id="@+id/tv_basketball_count"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="6dp"
                                android:includeFontPadding="false"
                                android:text="@{gameViewModel.allBasketballCount.toString()}"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/textSize20sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:text="48" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        app:layout_constraintTop_toBottomOf="@id/card_basketball">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <org.cxct.sportlottery.ui.game.home.HomeGameCard
                                android:id="@+id/card_game_soon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cvCount="@{gameViewModel.asStartCount.toString()}"
                                app:cvIcon="@drawable/ic_game_soon"
                                app:cvTitle="@string/game_soon" />

                            <org.cxct.sportlottery.ui.game.home.HomeGameCard
                                android:id="@+id/card_tennis"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:visibility="@{gameViewModel.allTennisCount==0?View.GONE:View.VISIBLE}"
                                app:cvCount="@{gameViewModel.allTennisCount.toString()}"
                                app:cvIcon="@drawable/ic_game_tennis"
                                app:cvTitle="@string/tennis" />

                            <org.cxct.sportlottery.ui.game.home.HomeGameCard
                                android:id="@+id/card_badminton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:visibility="@{gameViewModel.allBadmintonCount==0?View.GONE:View.VISIBLE}"
                                app:cvCount="@{gameViewModel.allBadmintonCount.toString()}"
                                app:cvIcon="@drawable/ic_game_badminton"
                                app:cvTitle="@string/badminton" />

                            <org.cxct.sportlottery.ui.game.home.HomeGameCard
                                android:id="@+id/card_volleyball"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:visibility="@{gameViewModel.allVolleyballCount==0?View.GONE:View.VISIBLE}"
                                app:cvCount="@{gameViewModel.allVolleyballCount.toString()}"
                                app:cvIcon="@drawable/ic_game_volleyball"
                                app:cvTitle="@string/volleyball" />

                            <org.cxct.sportlottery.ui.game.home.HomeGameCard
                                android:id="@+id/card_lottery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                app:cvIcon="@drawable/ic_game_lottery"
                                app:cvTitle="@string/lottery" />

                            <org.cxct.sportlottery.ui.game.home.HomeGameCard
                                android:id="@+id/card_live"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                app:cvIcon="@drawable/ic_game_live"
                                app:cvTitle="@string/live" />

                            <org.cxct.sportlottery.ui.game.home.HomeGameCard
                                android:id="@+id/card_poker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                app:cvIcon="@drawable/ic_game_poker"
                                app:cvTitle="@string/poker" />

                            <org.cxct.sportlottery.ui.game.home.HomeGameCard
                                android:id="@+id/card_slot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                app:cvIcon="@drawable/ic_game_slot"
                                app:cvTitle="@string/slot" />

                            <org.cxct.sportlottery.ui.game.home.HomeGameCard
                                android:id="@+id/card_fishing"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                app:cvIcon="@drawable/ic_game_fishing"
                                app:cvTitle="@string/fishing" />

                            <org.cxct.sportlottery.ui.game.home.HomeGameCard
                                android:id="@+id/card_game_result"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                app:cvIcon="@drawable/ic_game_match_result"
                                app:cvTitle="@string/game_result" />

                            <org.cxct.sportlottery.ui.game.home.HomeGameCard
                                android:id="@+id/card_update"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                app:cvIcon="@drawable/ic_game_update"
                                app:cvTitle="@string/version_update" />

                        </LinearLayout>

                    </HorizontalScrollView>

                </LinearLayout>

                <RadioGroup
                    android:id="@+id/rg_table_bar"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@color/colorSilverLight" />

                    <RadioButton
                        android:id="@+id/rb_in_play"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:background="@null"
                        android:button="@null"
                        android:checked="true"
                        android:paddingHorizontal="10dp"
                        android:text="@string/home_tab_in_play"
                        android:textColor="@color/selector_blue_gray"
                        android:textSize="@dimen/textSize20sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/rb_soon"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:background="@null"
                        android:button="@null"
                        android:paddingHorizontal="10dp"
                        android:text="@string/game_soon"
                        android:textColor="@color/selector_blue_gray"
                        android:textSize="@dimen/textSize20sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@color/colorSilverLight" />

                </RadioGroup>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_game_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="3"
                    tools:listitem="@layout/home_game_table_4" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

</layout>