<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.game.home.HomeFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="gameViewModel"
            type="org.cxct.sportlottery.ui.game.GameViewModel" />
    </data>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlDragRate="0.3"
        app:srlEnableLoadMore="true"
        app:srlEnablePureScrollMode="true">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:fillViewport="true"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@drawable/fillet_5dp_white"
                    android:orientation="vertical"
                    android:padding="6dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/card_first_game"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="222"
                            android:background="@drawable/fillet_4dp_home_game_item_blue">

                            <TextView
                                android:id="@+id/label_en_first_game"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:alpha="0.25"
                                android:maxLines="1"
                                android:text="@string/goal_buster"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/textSize16sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/iv_first_game"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:contentDescription="@null"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:src="@drawable/ic_game_football" />

                            <!--paddingTop是為解決includeFontPadding造成的字體裁切問題-->
                            <TextView
                                android:id="@+id/label_first_game"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:includeFontPadding="false"
                                android:paddingTop="2dp"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/textSize16sp"
                                app:layout_constraintBottom_toTopOf="@+id/tv_first_game_count"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constrainedWidth="true"
                                tools:text="足球" />

                            <TextView
                                android:id="@+id/tv_first_game_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginBottom="10dp"
                                android:includeFontPadding="false"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/textSize16sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constrainedWidth="true"
                                tools:text="644" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                            android:layout_width="6dp"
                            android:layout_height="match_parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/card_second_game"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="158"
                            android:background="@drawable/fillet_4dp_home_game_item_blue">

                            <TextView
                                android:id="@+id/label_en_second_game"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:alpha="0.25"
                                android:maxLines="1"
                                android:text="@string/top_games"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/textSize16sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/iv_second_game"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:contentDescription="@null"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:src="@drawable/ic_game_basketball" />

                            <!--paddingTop是為解決includeFontPadding造成的字體裁切問題-->
                            <TextView
                                android:id="@+id/label_second_game"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/textSize16sp"
                                android:paddingTop="2dp"
                                app:layout_constraintBottom_toTopOf="@id/tv_second_game_count"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0"
                                app:layout_constraintStart_toStartOf="@id/tv_second_game_count"
                                app:layout_constrainedWidth="true"
                                tools:text="籃球" />

                            <TextView
                                android:id="@+id/tv_second_game_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginBottom="10dp"
                                android:includeFontPadding="false"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/textSize16sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constrainedWidth="true"
                                tools:text="48" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:scrollbars="none"
                        app:layout_constraintTop_toBottomOf="@id/card_second_game">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/special_block_game"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:divider="@drawable/divider_horizontal_6dp"
                                android:orientation="horizontal"
                                android:showDividers="middle|end" />

                            <org.cxct.sportlottery.ui.game.home.HomeGameCard
                                android:id="@+id/card_game_soon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                app:cvCount="@{gameViewModel.asStartCount.toString()}"
                                app:cvIcon="@drawable/ic_game_soon"
                                app:cvTitle="@string/game_soon" />

                            <LinearLayout
                                android:id="@+id/block_game"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:divider="@drawable/divider_horizontal_6dp"
                                android:orientation="horizontal"
                                android:showDividers="beginning|middle">

                            </LinearLayout>

                            <org.cxct.sportlottery.ui.game.home.HomeGameCard
                                android:id="@+id/card_lottery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                app:cvIcon="@drawable/ic_game_lottery"
                                app:cvTitle="@string/lottery" />

                            <org.cxct.sportlottery.ui.game.home.HomeGameCard
                                android:id="@+id/card_live"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                app:cvIcon="@drawable/ic_game_live"
                                app:cvTitle="@string/live" />

                            <org.cxct.sportlottery.ui.game.home.HomeGameCard
                                android:id="@+id/card_poker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                app:cvIcon="@drawable/ic_game_poker"
                                app:cvTitle="@string/poker" />

                            <org.cxct.sportlottery.ui.game.home.HomeGameCard
                                android:id="@+id/card_slot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                app:cvIcon="@drawable/ic_game_slot"
                                app:cvTitle="@string/slot" />

                            <org.cxct.sportlottery.ui.game.home.HomeGameCard
                                android:id="@+id/card_fishing"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                app:cvIcon="@drawable/ic_game_fishing"
                                app:cvTitle="@string/fishing" />

                            <org.cxct.sportlottery.ui.game.home.HomeGameCard
                                android:id="@+id/card_game_result"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                app:cvIcon="@drawable/ic_game_match_result"
                                app:cvTitle="@string/game_result" />

                            <org.cxct.sportlottery.ui.game.home.HomeGameCard
                                android:id="@+id/card_update"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                app:cvIcon="@drawable/ic_game_update"
                                app:cvTitle="@string/version_update" />

                        </LinearLayout>

                    </HorizontalScrollView>

                </LinearLayout>

                <RadioGroup
                    android:id="@+id/rg_table_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="56dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@color/color_404040_cccccc" />

                    <RadioButton
                        android:id="@+id/rb_in_play"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:background="@null"
                        android:button="@null"
                        android:checked="true"
                        android:paddingHorizontal="10dp"
                        android:text="@string/home_tab_in_play"
                        android:textAllCaps="true"
                        android:textColor="@color/selector_blue_gray_light"
                        android:textSize="@dimen/textSize20sp"/>

                    <RadioButton
                        android:id="@+id/rb_as_start"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:background="@null"
                        android:button="@null"
                        android:paddingHorizontal="10dp"
                        android:text="@string/game_soon"
                        android:textAllCaps="true"
                        android:textColor="@color/selector_blue_gray_light"
                        android:textSize="@dimen/textSize20sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@color/color_404040_cccccc" />

                </RadioGroup>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_game_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    tools:itemCount="1"
                    tools:listitem="@layout/home_game_table_4" />

                <LinearLayout
                    android:id="@+id/recommend_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="56dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/color_404040_cccccc" />

                    <TextView
                        android:id="@+id/tv_recommend"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:paddingHorizontal="16dp"
                        android:text="@string/label_match_recommend"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlue"
                        android:textSize="@dimen/textSize20sp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/color_404040_cccccc" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="1"
                    tools:listitem="@layout/home_recommend_item" />

                <LinearLayout
                    android:id="@+id/highlight_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="56dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/color_404040_cccccc" />

                    <TextView
                        android:id="@+id/tv_highlight"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:paddingHorizontal="16dp"
                        android:text="@string/label_highlight"
                        android:textColor="@color/colorBlue"
                        android:textSize="@dimen/textSize20sp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/color_404040_cccccc" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_highlight_sport_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:minHeight="60dp"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="4"
                    tools:listitem="@layout/itemview_sport_type_v4" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/highlight_titleBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:minHeight="48dp"
                    android:orientation="horizontal"
                    tools:background="@drawable/img_home_title_soccer_background">

                    <ImageView
                        android:id="@+id/highlight_iv_game_icon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="20dp"
                        android:contentDescription="@null"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/colorGray"
                        tools:src="@drawable/ic_soccer" />

                    <TextView
                        android:id="@+id/highlight_tv_game_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:textColor="@color/colorBlackLight"
                        android:textSize="@dimen/textSize18sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="@string/soccer" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_game_highlight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="1"
                    tools:listitem="@layout/home_highlight_item" />

                <include
                    android:id="@+id/view_btm_navigation"
                    layout="@layout/view_bottom_navigation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

</layout>