<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smart.refresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:srlDragRate="0.3"
    app:srlEnableLoadMore="true"
    app:srlEnablePureScrollMode="true"
    tools:context=".ui.game.outright.GameOutrightMoreFragment"
    tools:ignore="spUsage">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_141414_F3F4F5">

            <View
                android:id="@+id/outright_more_border"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/color_212121_ededed"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/outright_more_type_border"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:layout_constraintTop_toBottomOf="@id/outright_more_border" />

            <TextView
                android:id="@+id/outright_more_league"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/outright_more_date"
                app:layout_constraintEnd_toStartOf="@id/outright_more_close"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/outright_more_border"
                tools:text="英格兰超级联赛2021/2022" />

            <TextView
                android:id="@+id/outright_more_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/textSize12sp"
                app:layout_constraintBottom_toBottomOf="@id/outright_more_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/outright_more_league"
                tools:text="23 / 05 / 2022  11:00" />

            <ImageButton
                android:id="@+id/outright_more_close"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:background="@null"
                android:padding="2dp"
                android:src="@drawable/ic_close_menu_v4"
                app:layout_constraintBottom_toBottomOf="@id/outright_more_border"
                app:layout_constraintEnd_toEndOf="@id/outright_more_border"
                app:layout_constraintTop_toTopOf="@id/outright_more_border" />

            <TextView
                android:id="@+id/outright_more_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/textSize15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/outright_more_type_border"
                app:layout_constraintEnd_toEndOf="@id/outright_more_type_border"
                app:layout_constraintStart_toStartOf="@id/outright_more_type_border"
                app:layout_constraintTop_toTopOf="@id/outright_more_type_border"
                tools:text="最终首四名" />

            <ImageButton
                android:id="@+id/outright_more_more"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:background="@null"
                android:padding="2dp"
                android:src="@drawable/ic_icondocumentmore"
                app:layout_constraintBottom_toBottomOf="@id/outright_more_type_border"
                app:layout_constraintEnd_toEndOf="@id/outright_more_type_border"
                app:layout_constraintTop_toTopOf="@id/outright_more_type_border" />

            <View
                android:id="@+id/outright_more_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_1F1F1F_e6e6e6"
                app:layout_constraintTop_toBottomOf="@id/outright_more_type_border" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/outright_more_odd_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                android:orientation="vertical"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/outright_more_divider"
                tools:itemCount="3"
                tools:listitem="@layout/itemview_outright_odd_v4" />

            <include
                layout="@layout/view_bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/outright_more_odd_list" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</com.scwang.smart.refresh.layout.SmartRefreshLayout>