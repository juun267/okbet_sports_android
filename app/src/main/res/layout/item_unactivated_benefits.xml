<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="117dp"
    android:layout_height="100dp"
    android:layout_marginStart="8dp">

    <ImageView
        android:id="@+id/ivBenefits"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/tvBenefitsName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ivBenefits"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:fontFamily="@font/helvetica_normal"
        android:textSize="11sp"
        android:textColor="@color/color_A7B2C4"
        android:gravity="center_horizontal"
        android:text="upgrade gifts"/>

    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvBenefitsName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:fontFamily="@font/helvetica_bold"
        android:textSize="16sp"
        android:textColor="@color/color_0D2245"
        android:gravity="center_horizontal"
        android:text="999,999,900"/>

</androidx.constraintlayout.widget.ConstraintLayout>