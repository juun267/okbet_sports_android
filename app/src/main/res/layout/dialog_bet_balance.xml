<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="208dp"
    android:background="@color/color_FFFFFF"
    app:cardCornerRadius="12dp">

    <ImageView
        android:id="@+id/ivBetClose"
        android:src="@drawable/ic_bet_balance_close"
        android:layout_gravity="right"
        android:layout_width="40dp"
        android:padding="12dp"
        android:layout_height="40dp"/>

    <ImageView
        android:src="@drawable/ic_bet_balance_error"
        android:layout_marginTop="40dp"
        android:layout_width="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="48dp"/>

    <TextView
        android:text="@string/bet_info_bet_balance_insufficient"
        android:layout_width="match_parent"
        android:textSize="14sp"
        android:layout_marginTop="100dp"
        android:paddingHorizontal="12dp"
        android:gravity="center"
        android:textColor="@color/color_0D2245"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:id="@+id/tvDeposit"
        android:text="@string/J285"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/color_FFFFFF"
        android:layout_width="236dp"
        android:background="@drawable/bg_blue_radius_8"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140dp"
        android:layout_height="40dp"/>
</androidx.cardview.widget.CardView>
