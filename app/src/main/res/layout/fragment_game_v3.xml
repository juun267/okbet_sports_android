<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite1"
    tools:context=".ui.game.v3.GameV3Fragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sport_type_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite2"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="1"
        tools:listitem="@layout/itemview_sport_type" />

    <org.cxct.sportlottery.ui.game.widget.GameFilterRow
        android:id="@+id/game_filter_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sport_type_list"
        tools:layout="@layout/row_game_filter" />

    <TextView
        android:id="@+id/game_filter_game"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite4"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/date_row_league"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/textSize16sp"
        app:layout_constraintTop_toBottomOf="@id/game_filter_row" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/game_filter_type_list"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorWhite"
        android:paddingStart="10dp"
        android:paddingTop="6dp"
        android:paddingEnd="10dp"
        android:paddingBottom="6dp"
        app:layout_constraintTop_toBottomOf="@id/game_filter_game"
        tools:itemCount="1"
        tools:listitem="@layout/itemview_game_type2" />

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game_filter_type_list"
        app:srlDragRate="0.3"
        app:srlEnableLoadMore="true"
        app:srlEnablePureScrollMode="true">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/game_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:itemCount="1"
                    tools:listitem="@layout/itemview_game_league" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    <View
        android:id="@+id/game_filter_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorWhite6"
        app:layout_constraintTop_toBottomOf="@id/game_filter_game" />

    <View
        android:id="@+id/game_no_record_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sport_type_list"
        tools:visibility="gone" />

    <include
        android:id="@+id/game_no_record"
        layout="@layout/view_no_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="@id/game_no_record_bg"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>