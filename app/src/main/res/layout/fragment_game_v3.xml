<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:srlDragRate="0.3"
    app:srlEnableLoadMore="true"
    app:srlEnablePureScrollMode="true"
    tools:context=".ui.game.hall.GameV3Fragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/game_bg_layer2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/game_toolbar_v4"
            app:layout_constraintTop_toTopOf="@id/sport_type_list"
            tools:ignore="ContentDescription"
            tools:src="@drawable/soccer108" />

        <ImageView
            android:id="@+id/game_bg_layer3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/game_tab_odd_v4"
            app:layout_constraintTop_toTopOf="@id/sport_type_list"
            tools:ignore="ContentDescription"
            tools:src="@drawable/soccer140"
            tools:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sport_type_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constrainedWidth="true"
            tools:itemCount="1"
            tools:listitem="@layout/itemview_sport_type_v5" />

        <include
            android:id="@+id/game_toolbar_v4"
            layout="@layout/view_game_toolbar_v4"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/sport_type_list" />

        <include
            android:id="@+id/game_tab_odd_v4"
            layout="@layout/view_game_tab_odd_v4"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            app:layout_constraintTop_toBottomOf="@id/game_toolbar_v4" />

        <include
            android:id="@+id/game_match_category_pager"
            layout="@layout/view_match_category_v4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/game_tab_odd_v4" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/game_play_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/game_match_category_pager"
            tools:itemCount="1"
            tools:listitem="@layout/itemview_play_category_v4" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/game_filter_type_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/game_play_category"
            tools:itemCount="1"
            tools:listitem="@layout/itemview_date_v4"
            tools:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/game_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@id/game_filter_type_list"
            tools:itemCount="1"
            tools:listitem="@layout/itemview_league_v4" />

        <View
            android:id="@+id/game_no_record_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorWhite"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/game_filter_type_list"
            tools:visibility="gone" />

        <include
            android:id="@+id/game_no_record"
            layout="@layout/view_no_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/game_no_record_bg"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
