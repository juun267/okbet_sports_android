<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/color_F2F5FA"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="3dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_piece_blue" />

    <org.cxct.sportlottery.view.highLightTextView.HighlightTextView
        android:id="@+id/tvResultTittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:gravity="start"
        android:text="Lorem ipsum UFC dolor sit amet,"
        android:textColor="@color/color_535D76"
        android:textSize="@dimen/margin_14"
        app:highlightColor="@color/transparent"
        app:highlightRadius="0dp"
        app:highlightText="UFC"
        app:highlightTextColor="@color/color_025BE8" />
</LinearLayout>
