<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white">


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:textColor="@color/textColorDark"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_odds"
        style="@style/OddsButton"
        android:layout_width="64dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin" />

    <ImageView
        android:id="@+id/iv_disable_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_odds"
        android:layout_alignTop="@+id/tv_odds"
        android:layout_alignEnd="@+id/tv_odds"
        android:layout_alignBottom="@+id/tv_odds"
        android:background="@drawable/bg_radius_5_button_disable"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:src="@drawable/ic_lock_odd"
        android:visibility="gone" />


</RelativeLayout>