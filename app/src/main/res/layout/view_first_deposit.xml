<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/color_FFFFFF">
    
    
    <LinearLayout
        android:id="@+id/linNoChoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/margin_12"
        android:paddingVertical="@dimen/margin_20"
        android:gravity="center">
        <ImageView
            android:id="@+id/ivNoChooseCheck"
            android:layout_width="@dimen/margin_24"
            android:layout_height="@dimen/margin_24"
            android:src="@drawable/selector_radio_circle" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_12"
            android:textColor="@color/color_6D7693"
            android:textSize="@dimen/textSize14sp"
            android:text="I chose not to claim this reward."/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linChooseReward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/margin_12"
        android:gravity="center">
        <ImageView
            android:id="@+id/ivRewardCheck"
            android:layout_width="@dimen/margin_24"
            android:layout_height="@dimen/margin_24"
            android:src="@drawable/selector_radio_circle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_12"
            android:background="@drawable/bg_kapian">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="92"
                android:orientation="vertical"
                android:gravity="center">
               <TextView
                   android:id="@+id/tvPercent"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:includeFontPadding="false"
                   android:textSize="36sp"
                   android:textColor="@color/color_025BE8"
                   android:textStyle="bold"
                   android:text="10%"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/color_025BE8"
                    android:text="additional"/>
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/margin_1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/bg_line_dash_greenlight"
                android:adjustViewBounds="true"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="238"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="@dimen/margin_10">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center_vertical">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="#303C55"
                       android:textSize="@dimen/textSize14sp"
                       android:text="Capped At"/>
                   <TextView
                       android:id="@+id/tvRewardAmount"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:layout_marginHorizontal="@dimen/margin_5"
                       android:textColor="@color/color_F23C3B"
                       android:textSize="@dimen/textSize18sp"
                       android:textStyle="bold"
                       android:text="₱ 1,000"/>
                   <TextView
                       android:id="@+id/tvRewardTC"
                       android:layout_width="wrap_content"
                       android:layout_height="@dimen/margin_20"
                       android:gravity="center"
                       android:paddingHorizontal="@dimen/margin_5"
                       android:background="@drawable/bg_red_radius_22"
                       android:textColor="@color/color_FFFFFF"
                       android:textSize="@dimen/textSize12sp"
                       android:text="@string/login_terms_conditions"/>

               </LinearLayout>
                <TextView
                    android:id="@+id/tvRewardDesp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_6D7693"
                    android:textSize="@dimen/textSize12sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="*3 times turnover of rewards  *3 times turnover o*3 times turnover of "/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linReceiveExtra"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_44"
        android:layout_marginTop="@dimen/margin_20"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/margin_20"
        android:background="@drawable/bg_gradient_red_radius_8">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize16sp"
            android:textColor="@color/color_FFFFFF"
            android:text="You will receive an extra " />
        <TextView
            android:id="@+id/tvExtraAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize20sp"
            android:textStyle="bold"
            android:textColor="@color/color_FFFFFF"
            android:text="₱ 100" />
    </LinearLayout>




</LinearLayout>


