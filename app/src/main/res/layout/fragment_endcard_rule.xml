<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource"
    android:background="@color/color_0E131F">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linBack"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:foreground="@drawable/fg_ripple"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/margin_1"
        android:background="@color/color_1A202E">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_betrecord_image"
            android:layout_marginRight="@dimen/margin_24"/>
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/margin_24"
            android:layout_height="@dimen/margin_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/margin_12"
            android:padding="@dimen/margin_3"
            android:src="@drawable/ic_back_white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/ivBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/margin_4"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/textSize14sp"
            android:textColor="@color/color_FFFFFF"
            android:text="@string/P323"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <org.cxct.sportlottery.view.webView.OkWebView
        android:id="@+id/okWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_1A202E"
        android:layout_marginTop="8dp"/>
</LinearLayout>