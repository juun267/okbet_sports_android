<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="matchOdd"
            type="org.cxct.sportlottery.network.bet.info.MatchOdd" />

        <variable
            name="parlayOdd"
            type="org.cxct.sportlottery.network.bet.info.ParlayOdd" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite2"
        android:orientation="vertical"
        android:paddingTop="9dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/tv_parlay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="3串1" />

        <TextView
            android:id="@+id/tv_symbol_odd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:text="\@"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize15sp"
            app:layout_constraintStart_toEndOf="@+id/tv_parlay_type"
            app:layout_constraintTop_toTopOf="@+id/tv_parlay_type" />

        <TextView
            android:id="@+id/tv_parlay_odd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize15sp"
            app:layout_constraintStart_toEndOf="@+id/tv_symbol_odd"
            app:layout_constraintTop_toTopOf="@id/tv_parlay_type"
            tools:text="6.120" />

        <ImageView
            android:id="@+id/btn_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp"
            android:src="@drawable/ic_question_mark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/et_bet"
            android:layout_width="0dp"
            android:layout_marginStart="16dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="6"
            android:background="@drawable/effect_select_bet_edit_text_fill_color_white"
            android:hint="@string/bet_info_input_quota"
            android:inputType="number"
            android:maxLength="7"
            android:paddingStart="10dp"
            android:textColor="@color/colorBlackLight"
            android:textColorHint="@color/colorSilverLight"
            android:textSize="@dimen/textSize16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_parlay_type"
            app:layout_constraintWidth_percent="0.442" />


        <TextView
            android:id="@+id/tv_symbol_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="X"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize13sp"
            app:layout_constraintBottom_toBottomOf="@+id/et_bet"
            app:layout_constraintStart_toEndOf="@+id/et_bet"
            app:layout_constraintTop_toTopOf="@+id/et_bet" />

        <TextView
            android:id="@+id/tv_com_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize13sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_symbol_count"
            app:layout_constraintStart_toEndOf="@+id/tv_symbol_count"
            app:layout_constraintTop_toTopOf="@+id/tv_symbol_count"
            tools:text="1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_fifty_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:paddingTop="3dp"
            android:paddingEnd="16dp"
            android:paddingBottom="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/et_bet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/gl_fifty_percent"
            app:layout_constraintTop_toTopOf="@+id/et_bet">

            <TextView
                android:id="@+id/btn_maximum_limit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:text="@string/bet_info_check_maximum_limit"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/textSize12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/rl_input"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/ll_winnable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bet_info_win_quota"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/textSize12sp" />

                <TextView
                    android:id="@+id/tv_winnable_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/textSize12sp"
                    tools:text="9.720" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_max_bet_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_max_bet_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/textSize12sp"
                    tools:text="9.720" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bet_info_bet_quota"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/textSize12sp" />


            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorRedDark"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_bet"
            tools:text="投注额大于下注限额"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
