<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.game.home.highlight.RvHighlightAdapter"
    tools:ignore="SpUsage">

    <LinearLayout
        android:id="@+id/ll_highlight_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="28dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_game_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:minHeight="28dp"
            android:text="@string/home_tab_today"
            android:textColor="@color/color_A3A3A3_666666"
            android:textSize="@dimen/textSize12sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_play_type_highlight"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="28dp"
            android:text="@string/ou_hdp_hdp_title"
            android:textColor="@color/color_A3A3A3_666666"
            android:textSize="@dimen/textSize12sp"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/highlight_match_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="9dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/block_bottom"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_highlight_type"
        app:layout_constraintVertical_bias="0">

        <TextView
            android:id="@+id/testId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize18sp"
            android:textColor="@color/colorRedLight"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_game_name_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:minHeight="34dp"
            android:textColor="@color/color_FFFFFF_000000"
            android:textSize="@dimen/textSize15sp"
            tools:text="皇家馬德里" />

        <TextView
            android:id="@+id/tv_game_name_away"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:minHeight="34dp"
            android:textColor="@color/color_FFFFFF_000000"
            android:textSize="@dimen/textSize15sp"
            tools:text="利物浦" />

    </LinearLayout>

    <org.cxct.sportlottery.ui.game.widget.OddsButton
        android:id="@+id/btn_match_odd1"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/highlight_match_info"
        app:layout_constraintBottom_toBottomOf="@+id/highlight_match_info"
        app:layout_constraintEnd_toStartOf="@+id/btn_match_odd2"/>

    <org.cxct.sportlottery.ui.game.widget.OddsButton
        android:id="@+id/btn_match_odd2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toEndOf="@+id/btn_match_odd1"
        app:layout_constraintTop_toTopOf="@+id/highlight_match_info"
        app:layout_constraintEnd_toStartOf="@+id/btn_match_odd3"
        app:layout_constraintBottom_toBottomOf="@+id/highlight_match_info" />

    <org.cxct.sportlottery.ui.game.widget.OddsButton
        android:id="@+id/btn_match_odd3"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/btn_match_odd2"
        app:layout_constraintTop_toTopOf="@+id/highlight_match_info"
        app:layout_constraintBottom_toBottomOf="@+id/highlight_match_info"
        app:layout_constraintEnd_toEndOf="@+id/view_match_gap"
        tools:visibility="visible"/>

    <View
        android:id="@+id/view_match_gap"
        android:layout_width="12dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toEndOf="@+id/btn_match_odd3"
        app:layout_constraintTop_toTopOf="@+id/highlight_match_info"
        app:layout_constraintBottom_toBottomOf="@+id/highlight_match_info"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/block_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="34dp"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toTopOf="@id/line_bottom">

        <TextView
            android:id="@+id/tv_match_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_A3A3A3_666666"
            android:textSize="@dimen/textSize12sp"
            app:layout_constraintBottom_toBottomOf="@id/match_row"
            app:layout_constraintStart_toEndOf="@id/match_status"
            app:layout_constraintTop_toTopOf="@id/match_row"
            tools:text="90:31" />

        <ImageView
            android:id="@+id/iv_match_in_play"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_inplay_v4" />

        <ImageView
            android:id="@+id/iv_match_price"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_price_v4" />

        <TextView
            android:id="@+id/tv_match_play_type_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:drawablePadding="6dp"
            android:textColor="@color/color_A3A3A3_666666"
            android:textSize="@dimen/textSize12sp"
            android:textStyle="bold"
            app:drawableRightCompat="@drawable/ic_iconarrow"
            tools:text="54" />

        <View
            android:id="@+id/padding"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btn_chart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@null"
            app:tint="@color/color_A3A3A3_666666"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_chart" />

        <ImageView
            android:id="@+id/btn_star"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/selector_star_v4" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <View
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:background="@color/color_1F1F1F_e6e6e6"
        app:layout_constraintTop_toBottomOf="@+id/block_bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>