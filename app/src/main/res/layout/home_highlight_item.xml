<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.game.home.highlight.RvHighlightAdapter">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="9dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/block_bottom"
        app:layout_constraintEnd_toStartOf="@id/block_odd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <TextView
            android:id="@+id/tv_game_name_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:minHeight="43dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textSize15sp"
            tools:text="皇家馬德里" />

        <TextView
            android:id="@+id/tv_game_name_away"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:minHeight="43dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textSize15sp"
            tools:text="利物浦" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/block_odd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="9dp"
        android:gravity="center"
        android:minHeight="86dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/block_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <org.cxct.sportlottery.ui.game.widget.OddButton
            android:id="@+id/btn_match_odd1"
            android:layout_width="78dp"
            android:layout_height="48dp" />

        <org.cxct.sportlottery.ui.game.widget.OddButton
            android:id="@+id/btn_match_odd2"
            android:layout_width="78dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/block_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/line_bottom">

        <TextView
            android:id="@+id/tv_match_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/textSize12sp"
            app:layout_constraintBottom_toBottomOf="@id/match_row"
            app:layout_constraintStart_toEndOf="@id/match_status"
            app:layout_constraintTop_toTopOf="@id/match_row"
            tools:text="90:31" />

        <ImageView
            android:id="@+id/iv_match_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_home_game_schedule" />

        <TextView
            android:id="@+id/tv_match_play_type_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/textSize12sp"
            tools:text="54" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_iconarrow" />

        <View
            android:id="@+id/padding"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btn_chart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_home_chart" />

        <ImageView
            android:id="@+id/btn_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_home_star" />

    </LinearLayout>

    <View
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorSilverLight"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>