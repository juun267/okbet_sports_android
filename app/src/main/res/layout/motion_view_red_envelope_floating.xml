<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/margin_15"
    app:layoutDescription="@xml/line_detail_scene">

    <org.cxct.sportlottery.ui.common.MovableAdsorptionLinearLayout
        android:id="@+id/movable_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-8dp"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_toRightOf="@+id/rl_red_envelope"
                android:src="@drawable/float_btn_close" />

            <RelativeLayout
                android:id="@+id/rl_red_envelope"
                android:layout_width="@dimen/margin_68"
                android:layout_height="63dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/float_window">


                <TextView
                    android:id="@+id/tv_countdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="2dp"
                    android:text="60"
                    android:textColor="@color/color_FA0200"
                    android:textSize="16sp" />

            </RelativeLayout>
        </RelativeLayout>
    </org.cxct.sportlottery.ui.common.MovableAdsorptionLinearLayout>

</androidx.constraintlayout.motion.widget.MotionLayout>