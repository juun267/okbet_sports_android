<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_F0F5FA">

      <org.cxct.sportlottery.view.CustomTopToolbar
          android:id="@+id/toolBar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:topTitleText="@string/identity"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/color_FFFFFF"
            android:layout_gravity="center_horizontal"
            tools:visibility="visible"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_status"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="126dp"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:contentDescription="@null"
                android:src="@drawable/ic_kyc_liveness_fail" />

            <TextView
                android:id="@+id/txv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_24"
                android:layout_marginTop="36dp"
                android:gravity="center"
                android:text="@string/P287_1"
                android:textStyle="bold"
                android:textColor="@color/color_0D2245"
                android:textSize="@dimen/textSize18sp"/>

            <Button
                android:id="@+id/btnStart"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/selector_button_default"
                android:textSize="@dimen/textSize16sp"
                android:textColor="@color/white"
                android:text="@string/P288_1"/>
            <TextView
                android:id="@+id/tvhandheldId"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_gravity="right"
                android:layout_marginHorizontal="@dimen/margin_20"
                android:layout_marginTop="16dp"
                android:text="@string/P283"
                android:textColor="@color/color_025BE8"
                android:textSize="@dimen/textSize14sp" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/cl_live_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:textColor="@color/color_535D76"
                    android:text="@string/need_help"
                    android:textSize="@dimen/textSize12sp"/>

                <ImageView
                    android:layout_marginEnd="@dimen/dp_4"
                    android:layout_width="@dimen/margin_16"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_customer_service"/>

                <TextView
                    android:id="@+id/tv_live_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/color_025BE8"
                    android:text="@string/live_service"
                    android:textSize="@dimen/textSize12sp"/>
            </LinearLayout>


        </LinearLayout>


</LinearLayout>