<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="SpUsage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:orientation="horizontal"
        tools:ignore="SpUsage">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="24dp"
                android:background="@color/color_80334266_E3E8EE" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_80334266_E3E8EE" />

            <TextView
                android:id="@+id/tvHomeName"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:paddingEnd="3dp"
                android:textColor="@color/color_9BB3D9_535D76"
                android:textSize="@dimen/textSize14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_80334266_E3E8EE" />

            <TextView
                android:id="@+id/tvAwayName"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:paddingEnd="3dp"
                android:textColor="@color/color_9BB3D9_535D76"
                android:textSize="@dimen/textSize14sp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">

            <View
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="@color/color_80334266_E3E8EE" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="49dp"
                android:background="@color/color_80334266_E3E8EE" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="@string/section"
                android:textColor="@color/color_9BB3D9_535D76"
                android:textSize="@dimen/textSize12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_80334266_E3E8EE" />

            <HorizontalScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_weight="0.5">

                        <TextView
                            android:id="@+id/tvOne"
                            android:layout_width="42dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/first"
                            android:textColor="@color/color_9BB3D9_535D76"
                            android:textSize="@dimen/textSize12sp" />

                        <TextView
                            android:id="@+id/tvTwo"
                            android:layout_width="42dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/second"
                            android:textColor="@color/color_9BB3D9_535D76"
                            android:textSize="@dimen/textSize12sp" />

                        <TextView
                            android:id="@+id/tvThree"
                            android:layout_width="42dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/third"
                            android:textColor="@color/color_9BB3D9_535D76"
                            android:textSize="@dimen/textSize12sp" />

                        <TextView
                            android:id="@+id/tvFour"
                            android:layout_width="42dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/fourth"
                            android:textColor="@color/color_9BB3D9_535D76"
                            android:textSize="@dimen/textSize12sp" />

                        <TextView
                            android:id="@+id/tvOpt"
                            android:layout_width="42dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="OT"
                            android:textColor="@color/color_9BB3D9_535D76"
                            android:textSize="@dimen/textSize12sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_80334266_E3E8EE" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="34dp" >

                        <TextView
                            android:id="@+id/tv_home_first"
                            android:layout_width="42dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/color_6C7BA8_6C7BA8"
                            android:textSize="@dimen/textSize14sp"
                            tools:text="0" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_80334266_E3E8EE" />

                        <TextView
                            android:id="@+id/tv_home_second"
                            android:layout_width="42dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/color_6C7BA8_6C7BA8"
                            android:textSize="@dimen/textSize14sp"
                            tools:text="0" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_80334266_E3E8EE" />

                        <TextView
                            android:id="@+id/tv_home_third"
                            android:layout_width="42dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/color_6C7BA8_6C7BA8"
                            android:textSize="@dimen/textSize14sp"
                            tools:text="0" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_80334266_E3E8EE" />

                        <TextView
                            android:id="@+id/tv_home_fourth"
                            android:layout_width="42dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/color_6C7BA8_6C7BA8"
                            android:textSize="@dimen/textSize14sp"
                            tools:text="0" />

                        <View
                            android:id="@+id/vHomeOpt"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_80334266_E3E8EE" />

                        <TextView
                            android:id="@+id/tvHomeOpt"
                            android:layout_width="42dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/color_6C7BA8_6C7BA8"
                            android:textSize="@dimen/textSize14sp"
                            tools:text="0" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_80334266_E3E8EE" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="34dp">

                        <TextView
                            android:id="@+id/tv_away_first"
                            android:layout_width="42dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/color_6C7BA8_6C7BA8"
                            android:textSize="@dimen/textSize14sp"
                            tools:text="0" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_80334266_E3E8EE" />

                        <TextView
                            android:id="@+id/tv_away_second"
                            android:layout_width="42dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/color_6C7BA8_6C7BA8"
                            android:textSize="@dimen/textSize14sp"
                            tools:text="0" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_80334266_E3E8EE" />

                        <TextView
                            android:id="@+id/tv_away_third"
                            android:layout_width="42dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/color_6C7BA8_6C7BA8"
                            android:textSize="@dimen/textSize14sp"
                            tools:text="0" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_80334266_E3E8EE" />

                        <TextView
                            android:id="@+id/tv_away_fourth"
                            android:layout_width="42dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/color_6C7BA8_6C7BA8"
                            android:textSize="@dimen/textSize14sp"
                            tools:text="0" />

                        <View
                            android:id="@+id/vAwayOpt"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_80334266_E3E8EE" />

                        <TextView
                            android:id="@+id/tvAwayOpt"
                            android:layout_width="42dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/color_6C7BA8_6C7BA8"
                            android:textSize="@dimen/textSize14sp"
                            tools:text="0" />

                    </LinearLayout>


                </LinearLayout>

            </HorizontalScrollView>


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_80334266_E3E8EE" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:gravity="center"
                android:text="@string/total_score_over_time"
                android:textColor="@color/color_9BB3D9_535D76"
                android:textSize="@dimen/textSize12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_80334266_E3E8EE" />

            <TextView
                android:id="@+id/tv_home_over_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text=""
                android:textColor="@color/color_9BB3D9_535D76"
                android:textSize="@dimen/textSize14sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_80334266_E3E8EE" />

            <TextView
                android:id="@+id/tv_away_over_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text=""
                android:textColor="@color/color_9BB3D9_535D76"
                android:textSize="@dimen/textSize14sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_80334266_E3E8EE" />

</LinearLayout>