<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="26dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    app:cardBackgroundColor="@color/color_191919_FCFCFC"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp"
    tools:context="org.cxct.sportlottery.ui.profileCenter.identity.VerifyIdentityDialog">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/color_000000_FCFCFC"
        android:gravity="center_horizontal"
        android:minWidth="300dp"
        android:orientation="vertical"
        android:paddingBottom="48dp">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="end"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="14dp"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/ic_icon_close" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/ic_verify_identity_attention" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/kyc_verify_first"
            android:textColor="@color/color_BBBBBB_333333"
            android:textSize="@dimen/textSize14sp"
            tools:text="请先通过实名验证" />

        <Button
            android:id="@+id/btn_check"
            android:layout_width="124dp"
            android:layout_height="34dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_radius_4_gradient_3b78ff_0065e9"
            android:text="@string/kyc_go_verify"
            android:textColor="@color/home_card_text_color"
            android:textSize="@dimen/textSize14sp"
            tools:text="立即前往验证" />

        <include
            android:id="@+id/btn_service"
            layout="@layout/content_verify_identity_kyc_service" />

    </LinearLayout>


</androidx.cardview.widget.CardView>
