<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:id="@+id/linearTitle"
        android:layout_width="match_parent"
        android:paddingHorizontal="12dp"
        android:layout_height="wrap_content"
        android:paddingTop="18dp"
        android:paddingBottom="3dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_home_okgames_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OKGames"
            android:layout_weight="1"
            android:paddingLeft="4dp"
            android:textColor="@color/color_0D2245"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/textSize16sp"
            android:textStyle="bold" />



        <ImageView
            android:id="@+id/ivBackPage"
            android:src="@drawable/ic_home_okgames_left"
            android:layout_width="34dp"
            android:padding="5dp"
            android:layout_height="34dp"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center"
            android:background="@drawable/bg_home_okgames_page"
            android:layout_width="wrap_content"
            android:layout_height="24dp">

            <TextView
                android:id="@+id/tvPageIndex"
                android:text=""
                android:textColor="@color/color_025BE8"
                android:textSize="@dimen/textSize12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvPageSize"
                android:text=""
                android:textColor="@color/color_6D7693"
                android:textSize="@dimen/textSize12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/ivForwardPage"
            android:src="@drawable/ic_home_okgames_right"
            android:layout_width="34dp"
            android:padding="5dp"
            android:layout_height="34dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerGames"
        android:layout_below="@+id/linearTitle"
        android:layout_marginStart="12dp"

        android:layout_marginEnd="2dp"
        android:nestedScrollingEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</merge>