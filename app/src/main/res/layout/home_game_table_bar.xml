<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:minHeight="56dp"
    android:orientation="horizontal"
    tools:ignore="SpUsage">

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:background="@color/color_404040_cccccc" />

    <RadioButton
        android:id="@+id/rb_in_play"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:background="@null"
        android:button="@null"
        android:paddingHorizontal="10dp"
        android:text="@string/home_tab_in_play"
        android:textAllCaps="true"
        android:textColor="@color/selector_blue_gray_light"
        android:textSize="@dimen/textSize16sp" />

    <RadioButton
        android:id="@+id/rb_as_start"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:background="@null"
        android:button="@null"
        android:paddingHorizontal="10dp"
        android:text="@string/game_soon"
        android:textAllCaps="true"
        android:textColor="@color/selector_blue_gray_light"
        android:textSize="@dimen/textSize16sp" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:background="@color/color_404040_cccccc" />

</RadioGroup>