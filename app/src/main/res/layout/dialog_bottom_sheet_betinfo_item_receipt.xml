<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="RtlSymmetry,SpUsage"
    android:orientation="vertical"
    tools:context="org.cxct.sportlottery.ui.bet.list.receipt.BetInfoCarReceiptDialog">

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@drawable/bg_gradient_bottom_sheet_shadow" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_radius_8_white_top_only">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_24"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_gradient_0066d1_0079fa">
                    <ImageView
                        android:layout_width="@dimen/margin_12"
                        android:layout_height="@dimen/margin_12"
                        android:gravity="center_vertical"
                        android:src="@drawable/icon_recept"
                        app:tint="@color/white"
                        android:layout_marginStart="@dimen/margin_8"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/bet_list_single"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize12sp"
                        android:layout_marginStart="@dimen/margin_4"/>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1"
                    android:background="@color/colorWhite4" />

                <include
                    android:id="@+id/view_match_receipt"
                    layout="@layout/item_match_receipt"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </FrameLayout>




    <TextView
        android:id="@+id/tv_receipt_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/color_EAF4FE"
        android:paddingVertical="4dp"
        android:text="@string/bet_succeeded"
        android:textSize="@dimen/textSize13sp"
        android:textColor="@color/colorBlue" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/colorWhite4" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">
        <TextView
            android:id="@+id/btn_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_radius_4_117ecd_1053af"
            android:gravity="center"
            android:layout_margin="@dimen/margin_8"
            android:paddingVertical="14dp"
            android:textSize="@dimen/textSize13sp"
            android:text="@string/complete"
            android:textColor="@color/colorWhite" />

    </FrameLayout>

</LinearLayout>