<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="RtlSymmetry,SpUsage"
    android:orientation="vertical"
    tools:context="org.cxct.sportlottery.ui.bet.list.receipt.BetInfoCarReceiptDialog">

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@drawable/bg_gradient_bottom_sheet_shadow" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_radius_8_white_top_only">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_24"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:id="@+id/layoutTitle"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/bg_gradient_0066d1_0079fa">
                    <ImageView
                        android:layout_width="@dimen/margin_12"
                        android:layout_height="@dimen/margin_12"
                        android:gravity="center_vertical"
                        android:src="@drawable/icon_recept"
                        app:tint="@color/white"
                        android:layout_marginStart="@dimen/margin_8"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/bet_list_single"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize12sp"
                        android:layout_marginStart="@dimen/margin_4"/>


                </LinearLayout>
                <TextView
                    android:id="@+id/tv_match_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="@dimen/textSize13sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="@dimen/margin_12"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_play_content"
                    tools:text="让球" />

                <!--playName + spread + @ + odds + (oddsType)-->
                <TextView
                    android:id="@+id/tv_play_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="@dimen/textSize15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginStart="@dimen/margin_12"
                    android:layout_marginEnd="@dimen/margin_12"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layoutTitle"
                    tools:text="日本奥运队 1.5/2 @ 0.89 (歐洲盤)" />

                <TextView
                    android:id="@+id/tvLeague"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/textSize13sp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="@id/tv_play_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_match_type"
                    tools:text="奥林匹克运动会2020男子足球(在日本)D组特别投注" />

                <!--homeName v awayName 字串過長需換行顯示，故合併為1個textView-->
                <TextView
                    android:id="@+id/tv_team_names"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/textSize13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_play_content"
                    app:layout_constraintTop_toBottomOf="@+id/tvLeague"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    tools:text="日本奥运队 v 纽西兰奥运队" />

                <include
                    android:id="@+id/view_receipt_bet"
                    layout="@layout/view_match_receipt_bet"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="@dimen/margin_12"
                    android:layout_marginEnd="@dimen/margin_12"
                    android:layout_marginBottom="@dimen/margin_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_team_names" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

    </FrameLayout>




    <TextView
        android:id="@+id/tv_receipt_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/color_EAF4FE"
        android:paddingVertical="4dp"
        android:text="@string/bet_succeeded"
        android:textSize="@dimen/textSize13sp"
        android:visibility="gone"
        android:textColor="@color/colorBlue"
        tools:visibility="visible"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/colorWhite4" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">
        <TextView
            android:id="@+id/btn_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_radius_4_117ecd_1053af"
            android:gravity="center"
            android:layout_margin="@dimen/margin_8"
            android:paddingVertical="14dp"
            android:textSize="@dimen/textSize13sp"
            android:text="@string/complete"
            android:textColor="@color/colorWhite" />

    </FrameLayout>

</LinearLayout>