<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="292dp"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="2dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_hot_game_title" />

            <TextView
                android:id="@+id/tv_match_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/color_FFFFFF"
                android:textFontWeight="600"
                android:textSize="@dimen/textSize12sp" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="12dp"
            android:paddingRight="10dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_bank_default" />

            <TextView
                android:id="@+id/tv_home_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="7dp"
                android:text="asdfasdfasfasdfasdfasfasdfasdfasfasdfasdfasf"
                android:textColor="@color/color_303030"
                android:textSize="@dimen/textSize14sp" />

            <TextView
                android:id="@+id/tv_home_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="5"
                android:textColor="@color/color_303030"
                android:textSize="@dimen/textSize18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="38dp"
            android:paddingRight="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="7dp"
                android:paddingRight="12dp"
                android:text="VS"
                android:textColor="@color/color_303030"
                android:textFontWeight="510"
                android:textSize="@dimen/textSize14sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:background="@drawable/bg_blue_border_12"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:text="123sdf"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/textSize12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="123sdf"
                    android:textColor="@color/color_FF9143_ff9200"
                    android:textSize="@dimen/textSize12sp" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="12dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_bank_default" />

            <TextView
                android:id="@+id/tv_away_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="7dp"
                android:text="asdfasdfasfasdfasdfasfasdfasdfasfasdfasdfasf"
                android:textColor="@color/color_303030"
                android:textSize="@dimen/textSize14sp" />

            <TextView
                android:id="@+id/tv_away_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="5"
                android:textColor="@color/color_303030"
                android:textSize="@dimen/textSize18sp" />
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="88dp"
                android:minWidth="88dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@drawable/bg_hot_game_win"
                android:layout_height="34dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Win"
                    android:paddingRight="5dp"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/textSize12sp" />

                <ImageView
                    android:src="@drawable/ic_match_green_up"
                    android:layout_width="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:autoSizeMaxTextSize="@dimen/textSize14sp"
                    android:autoSizeMinTextSize="@dimen/textSize8sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical|right"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="23123123"
                    android:textColor="@color/color_4CC700"
                    android:textSize="@dimen/textSize14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="88dp"
                android:minWidth="88dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_gray_border_8"
                android:layout_height="34dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Draw"
                    android:paddingRight="5dp"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/textSize12sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:autoSizeMaxTextSize="@dimen/textSize14sp"
                    android:autoSizeMinTextSize="@dimen/textSize12sp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="4.2323355"
                    android:textStyle="bold"
                    android:textColor="@color/color_303030"
                    android:textSize="@dimen/textSize14sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="88dp"
                android:minWidth="88dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@drawable/bg_hot_game_lose"
                android:layout_height="34dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Lose"
                    android:paddingRight="5dp"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/textSize12sp" />
                <ImageView
                    android:src="@drawable/ic_match_red_down"
                    android:layout_width="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:autoSizeMaxTextSize="@dimen/textSize14sp"
                    android:autoSizeMinTextSize="@dimen/textSize12sp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="3.55"
                    android:textStyle="bold"
                    android:textColor="@color/color_F23C3B"
                    android:textSize="@dimen/textSize14sp" />
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>