<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite1"
    android:orientation="vertical"
    tools:context=".ui.money.recharge.MoneyRechargeActivity">

    <include
        layout="@layout/view_base_tool_bar_no_drawer"/>

    <LinearLayout
        android:id="@+id/block_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlueLight"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/frame_4dp_white"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/btn_transfer_pay"
                    android:text="@string/txv_transfer_pay"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/effect_select_bg_white_transparent"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:textColor="@color/color_select_primary_white"
                    android:textSize="@dimen/textSize16sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite" />

                <RadioButton
                    android:id="@+id/btn_online_pay"
                    android:text="@string/txv_online_pay"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/effect_select_bg_white_transparent"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/color_select_primary_white"
                    android:textSize="@dimen/textSize16sp" />

            </RadioGroup>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlDragRate="0.3"
        app:srlEnableLoadMore="true"
        app:srlEnablePureScrollMode="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite1"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_pay_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="15dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:visibility="gone"
                    tools:itemCount="5"
                    tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    tools:listitem="@layout/content_money_pay_type_rv"
                    tools:spanCount="2"
                    tools:visibility="visible" />

                    <FrameLayout
                        android:id="@+id/fl_pay_type_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        tools:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/block_no_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toBottomOf="@+id/block_tab"
                    tools:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_bank_no_type"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/ic_no_bank_type" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_bank_no_type"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="当前无该类充值渠道,详情请联系客服"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/textSize16sp" />

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>



</LinearLayout>