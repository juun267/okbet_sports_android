<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="RtlSymmetry,SpUsage">

    <data>

        <variable
            name="matchOdd"
            type="org.cxct.sportlottery.network.bet.info.MatchOdd" />

        <variable
            name="parlayOdd"
            type="org.cxct.sportlottery.network.bet.info.ParlayOdd" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <include
            android:id="@+id/bet_info_detail"
            layout="@layout/content_bet_info_item_detail"
            app:matchOdd="@{matchOdd}"
            app:parlayOdd="@{parlayOdd}" />

        <TextView
            android:id="@+id/tv_close_warning"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@color/colorRed"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:text="@string/bet_info_list_game_closed"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize13sp"
            android:visibility="visible"
            app:drawableStartCompat="@drawable/ic_warning_white" />

        <TextView
            android:id="@+id/tv_odd_change"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@color/colorRed"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:text="@string/bet_info_list_game_odds_changed"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize13sp"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/ic_warning_white"
            tools:ignore="RtlSymmetry"
            tools:visibility="visible" />

    </LinearLayout>

</layout>