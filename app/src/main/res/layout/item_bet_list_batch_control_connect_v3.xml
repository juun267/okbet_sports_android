<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpUsage">

    <data>

        <variable
            name="matchOdd"
            type="org.cxct.sportlottery.network.bet.info.MatchOdd" />

        <variable
            name="parlayOdd"
            type="org.cxct.sportlottery.network.bet.info.ParlayOdd" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_control_connect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_191919_FCFCFC"
            android:paddingBottom="10dp"
            app:layout_constraintHeight_default="wrap">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_parlay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_18"
                    android:drawablePadding="@dimen/margin_6"
                    android:textColor="@color/color_BBBBBB_333333"
                    android:textSize="@dimen/textSize15sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic_parlay"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="3ä¸²1" />

                <ImageView
                    android:id="@+id/btn_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_14"
                    android:padding="@dimen/margin_4"
                    android:src="@drawable/ic_question_mark"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_parlay_type"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_parlay_type" />

                <include
                    layout="@layout/content_bet_info_item_quota_detail_v2"
                    android:layout_width="0dp"
                    android:id="@+id/item_parlay_quota_detail"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_24"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/et_bet_parlay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_parlay_type"
                    app:parlayOdd="@{parlayOdd}" />

                <EditText
                    android:id="@+id/et_bet_parlay"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/et_bet_height"
                    android:layout_marginStart="@dimen/margin_18"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginEnd="17dp"
                    android:layout_weight="6"
                    android:background="@drawable/bg_radius_2_edittext_unfocus"
                    android:hint="@string/bet_info_input_quota"
                    android:inputType="numberDecimal"
                    android:letterSpacing="0.05"
                    android:maxLength="9"
                    android:paddingStart="10dp"
                    android:textColor="@color/color_BBBBBB_333333"
                    android:textColorHint="@color/color_404040_cccccc"
                    android:textSize="@dimen/textSize16sp"
                    app:layout_constraintBottom_toTopOf="@+id/ll_hint_container"
                    app:layout_constraintEnd_toStartOf="@+id/tv_symbol_count"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_parlay_type" />

                <TextView
                    android:id="@+id/tv_symbol_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textColor="@color/color_A0B4D4_060F20"
                    android:textSize="@dimen/textSize12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/et_bet_parlay"
                    app:layout_constraintEnd_toStartOf="@+id/tv_com_count"
                    app:layout_constraintTop_toTopOf="@+id/et_bet_parlay" />

                <TextView
                    android:id="@+id/tv_com_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_18"
                    android:textColor="@color/color_A0B4D4_060F20"
                    android:textSize="@dimen/textSize12sp"
                    app:layout_constraintBottom_toBottomOf="@id/et_bet_parlay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/et_bet_parlay"
                    tools:text="26" />

                <LinearLayout
                    android:id="@+id/ll_hint_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/layoutKeyBoard"
                    app:layout_constraintTop_toBottomOf="@+id/et_bet_parlay"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvBalanceInsufficientMessageParlay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_18"
                        android:includeFontPadding="false"
                        android:paddingTop="@dimen/margin_8"
                        android:text="@string/bet_info_bet_balance_insufficient"
                        android:textColor="@color/color_E44438_e44438"
                        android:textSize="@dimen/textSize13sp"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/tvErrorMessageParlay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_18"
                        android:includeFontPadding="false"
                        android:paddingTop="@dimen/margin_8"
                        android:textColor="@color/color_E44438_e44438"
                        android:textSize="@dimen/textSize13sp"
                        android:visibility="gone"
                        android:text="@string/bet_info_list_minimum_limit_amount"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/tvPleaseEnterCorrectAmountParlay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_18"
                        android:includeFontPadding="false"
                        android:paddingTop="@dimen/margin_8"
                        android:text="@string/please_enter_correct_amount"
                        android:textColor="@color/color_E44438_e44438"
                        android:textSize="@dimen/textSize13sp"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </LinearLayout>

                <org.cxct.sportlottery.util.KeyboardView
                    android:id="@+id/layoutKeyBoard"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/keyboard_height"
                    android:layout_marginHorizontal="@dimen/margin_18"
                    android:paddingTop="@dimen/margin_10"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:visibility="visible" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>


</layout>
