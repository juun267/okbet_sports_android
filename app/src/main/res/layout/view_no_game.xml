<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_no_game_boarder"
        android:layout_width="319dp"
        android:layout_height="312dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_no_game_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_no_game_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="223dp"
        android:maxHeight="137dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/img_no_game"
        app:layout_constraintTop_toBottomOf="@id/tv_no_game"
        app:layout_constraintEnd_toEndOf="@id/iv_no_game_boarder"
        app:layout_constraintStart_toStartOf="@id/iv_no_game_boarder" />


    <TextView
        android:id="@+id/tv_no_game"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="@string/no_game_description"
        android:textColor="@color/color_A3A3A3_666666"
        android:textSize="@dimen/textSize14sp"
        app:layout_constraintTop_toTopOf="@id/iv_no_game_boarder"
        app:layout_constraintEnd_toEndOf="@id/iv_no_game_img"
        app:layout_constraintStart_toStartOf="@id/iv_no_game_img" />



</androidx.constraintlayout.widget.ConstraintLayout>
