<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.profileCenter.identity.VerifyKYCFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_F0F5FA" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingHorizontal="14dp">

                <TextView
                    android:id="@+id/tvIdBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="@string/P491"
                    android:textColor="@color/color_BBBBBB_333333"
                    android:textSize="@dimen/textSize14sp" />

                <View
                    android:id="@+id/vIdBack"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_eeeeee" />

                <LinearLayout
                    android:id="@+id/llIdBack"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="25dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivIdBack"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:background="@color/color_F0F5FA"
                        android:src="@drawable/ic_icon_id01" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_rectangle_268"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/P198"
                            android:textColor="@color/home_card_text_color"
                            android:textSize="@dimen/textSize14sp" />

                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/tvSelf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="@string/P336"
                    android:textColor="@color/color_BBBBBB_333333"
                    android:textSize="@dimen/textSize14sp" />

                <View
                    android:id="@+id/vSelf"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_eeeeee" />

                <LinearLayout
                    android:id="@+id/llSelf"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="25dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivSelf"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:background="@color/color_F0F5FA"
                        android:src="@drawable/ic_icon_id01" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_rectangle_268"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/P198"
                            android:textColor="@color/home_card_text_color"
                            android:textSize="@dimen/textSize14sp" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvProof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="@string/P209"
                    android:textColor="@color/color_BBBBBB_333333"
                    android:textSize="@dimen/textSize14sp" />

                <View
                    android:id="@+id/vProof"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_eeeeee" />

                <LinearLayout
                    android:id="@+id/llProof"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="25dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivProof"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:background="@color/color_F0F5FA"
                        android:src="@drawable/ic_icon_id01" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_rectangle_268"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/P198"
                            android:textColor="@color/home_card_text_color"
                            android:textSize="@dimen/textSize14sp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_F2F9FF"
                android:drawableLeft="@drawable/bg_red_radius_2"
                android:drawablePadding="@dimen/margin_4"
                android:paddingVertical="5dp"
                android:paddingStart="14dp"
                android:text="@string/P338_1"
                android:textColor="@color/color_E23434"
                android:textSize="@dimen/textSize14sp"
                android:visibility="visible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvSubmit"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_margin="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/selector_button_default"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/submit"
                android:textColor="@color/color_FFFFFF_FFFFFF"
                android:textSize="@dimen/textSize16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_service"
                    android:textColor="@color/color_A5A9B3"
                    android:textSize="@dimen/textSize14sp" />

                <TextView
                    android:id="@+id/tv_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_service"
                    android:textColor="@color/color_025BE8"
                    android:textSize="@dimen/textSize14sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>