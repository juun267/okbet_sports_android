<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="44dp"
    android:background="@color/color_FFFFFF"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/margin_12"
        tools:ignore="SpUsage">


        <TextView
            android:id="@+id/tv_game_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica_normal"
            android:layout_marginRight="@dimen/margin_10"
            android:gravity="center_vertical"
            android:minHeight="20dp"
            android:textColor="@color/color_0D2245"
            android:textSize="@dimen/textSize14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/odd_detail_pin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="进球 : 大小进球 : 大小进球 " />

        <ImageView
            android:id="@+id/odd_detail_pin"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginRight="12dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/selector_item_country_league_pin_v4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/odd_detail_fold"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/odd_detail_fold"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/selector_filter_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

<!--        <View-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="0.5dp"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:background="@color/color_DFE8F2"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintLeft_toLeftOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/tv_game_name" />-->
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>


