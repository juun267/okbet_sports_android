<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linChooseReward"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingLeft="@dimen/margin_12"
    android:paddingRight="@dimen/margin_6">

    <ImageView
        android:id="@+id/ivRewardCheck"
        android:layout_width="@dimen/margin_24"
        android:layout_height="@dimen/margin_24"
        android:src="@drawable/selector_radio_circle" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_6"
        android:background="@drawable/selector_blue_radius_12"
        android:padding="@dimen/margin_6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bonus">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="92"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPercent"
                    tools:text="10%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textColor="@color/color_025BE8"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4"
                    android:lines="2"
                    android:gravity="center"
                    android:text="@string/P445"
                    android:textColor="@color/color_025BE8"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="238"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/margin_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/P278"
                        android:textColor="#303C55"
                        android:textSize="@dimen/textSize14sp" />

                    <TextView
                        android:id="@+id/tvCapped"
                        tools:text="â‚± 1,000"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_5"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:textColor="@color/color_F23C3B"
                        android:textSize="@dimen/textSize18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvRewardTC"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_20"
                        android:background="@drawable/bg_red_radius_22"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/margin_5"
                        android:text="@string/terms_conditions_short"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="@dimen/textSize12sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvRewardDesp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/P281"
                    android:textColor="@color/color_6D7693"
                    android:textSize="@dimen/textSize12sp" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>