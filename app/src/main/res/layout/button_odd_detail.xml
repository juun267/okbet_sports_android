<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/button_odd_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_button_radius_4_odds"
    tools:ignore="SpUsage,ContentDescription">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="4dp"
        tools:ignore="SpUsage">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_horizontal_4dp"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/selector_button_odd_top_text2"
                android:textSize="@dimen/textSize13sp"
                tools:text="义大利"
                tools:textColor="@color/color_8F8F8F_999999" />

            <TextView
                android:id="@+id/tv_spread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/selector_button_odd_top_text"
                android:textSize="@dimen/textSize13sp"
                tools:text="-0.5/1"
                tools:textColor="@color/color_F75452_b73a20" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_odds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/selector_button_odd_bottom_text"
            android:textSize="@dimen/textSize15sp"
            android:textStyle="bold"
            tools:text="1.067"
            android:includeFontPadding="false" />

    </LinearLayout>


    <ImageView
        android:id="@+id/img_odd_lock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_radius_4_button_odds_lock"
        android:scaleType="center"
        android:src="@drawable/ic_iconlock"
        android:visibility="gone" />

    <TextView
        android:id="@+id/img_odd_unknown"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_radius_4_button_odds_lock"
        android:gravity="center"
        android:textSize="@dimen/textSize12sp"
        android:text="@string/unknown_data"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>