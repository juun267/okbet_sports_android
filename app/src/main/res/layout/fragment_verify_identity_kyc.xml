<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F0F5FA"
    android:orientation="vertical"
    tools:context=".ui.profileCenter.identity.VerifyIdentityFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="vertical">

            <include
                android:id="@+id/identity_1st"
                layout="@layout/content_verify_identity_kyc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/identity_2nd"
                layout="@layout/content_verify_identity_kyc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_191919_FCFCFC"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_radius_4_selected_frame_2b2b2b_e2e2e2"
                    android:gravity="center"
                    android:text="@string/submit"
                    android:textAllCaps="true"
                    android:enabled="false"
                    android:textColor="@color/color_FFFFFF_FFFFFF"
                    android:textSize="@dimen/textSize16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_20"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/customer_service"
                        android:textColor="@color/color_A5A9B3"
                        android:textSize="@dimen/textSize14sp"/>

                    <TextView
                        android:id="@+id/tv_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_service"
                        android:textColor="@color/color_025BE8"
                        android:textSize="@dimen/textSize14sp"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


</LinearLayout>