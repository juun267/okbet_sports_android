<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F0F5FA"
    android:orientation="vertical"
    tools:context=".ui.profileCenter.identity.VerifyKYCFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_eeeeee"/>

        <FrameLayout
            android:id="@+id/frFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="5dp">

            <org.cxct.sportlottery.view.boundsEditText.TextFormFieldBoxes
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                app:hintText="@string/P185"
                app:isResponsiveIconColor="false"
                app:subLabelText="@string/P185"
                app:labelTextStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:primaryColor="@color/color_AFAFB1">

                <org.cxct.sportlottery.view.boundsEditText.ExtendedEditText
                    android:id="@+id/eetFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="14dp"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:maxEms="30"
                    android:textColor="@color/color_FFFFFF_DE000000"
                    android:textSize="@dimen/textSize14sp" />

            </org.cxct.sportlottery.view.boundsEditText.TextFormFieldBoxes>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frMiddleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp">

            <org.cxct.sportlottery.view.boundsEditText.TextFormFieldBoxes
                android:id="@+id/edtMiddleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintText="@string/P186"
                app:isResponsiveIconColor="false"
                app:subLabelText="@string/P186"
                app:labelTextStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:primaryColor="@color/color_AFAFB1">

                <org.cxct.sportlottery.view.boundsEditText.ExtendedEditText
                    android:id="@+id/eedtMiddleName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="14dp"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/color_FFFFFF_DE000000"
                    android:textSize="@dimen/textSize14sp" />

            </org.cxct.sportlottery.view.boundsEditText.TextFormFieldBoxes>

            <CheckBox
                android:id="@+id/cbNoMiddleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="20dp"
                android:text="@string/P188" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp">

            <org.cxct.sportlottery.view.boundsEditText.TextFormFieldBoxes
                android:id="@+id/edtLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintText="@string/P187"
                app:isResponsiveIconColor="false"
                app:subLabelText="@string/P187"
                app:labelTextStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:primaryColor="@color/color_AFAFB1">

                <org.cxct.sportlottery.view.boundsEditText.ExtendedEditText
                    android:id="@+id/eedtLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="14dp"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:maxEms="25"
                    android:textColor="@color/color_FFFFFF_DE000000"
                    android:textSize="@dimen/textSize14sp" />

            </org.cxct.sportlottery.view.boundsEditText.TextFormFieldBoxes>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/flBirthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp">

            <org.cxct.sportlottery.view.boundsEditText.TextFormFieldBoxes
                android:id="@+id/tb_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                app:hintText="@string/format_birth"
                app:isResponsiveIconColor="false"
                app:subLabelText="@string/J902"
                app:labelTextStyle="normal"
                app:primaryColor="@color/color_AFAFB1">

                <org.cxct.sportlottery.view.boundsEditText.ExtendedEditText
                    android:id="@+id/et_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:editable="false"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/color_FFFFFF_DE000000"
                    android:textSize="@dimen/textSize14sp" />

            </org.cxct.sportlottery.view.boundsEditText.TextFormFieldBoxes>

            <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <include
            android:id="@+id/identity_1st"
            layout="@layout/content_verify_identity_kyc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <include
            android:id="@+id/identity_2nd"
            layout="@layout/content_verify_identity_kyc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            tools:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="5dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_14"
                android:drawableLeft="@drawable/bg_red_radius_2"
                android:drawablePadding="@dimen/margin_4"
                android:text="@string/kyc_pick_upload_id"
                android:textColor="@color/color_E23434"
                android:textSize="@dimen/textSize14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_14"
                android:layout_marginTop="@dimen/margin_4"
                android:drawableLeft="@drawable/bg_red_radius_2"
                android:drawablePadding="@dimen/margin_4"
                android:text="@string/kyc_size_2_mb"
                android:textColor="@color/color_E23434"
                android:textSize="@dimen/textSize14sp"
                android:visibility="visible"
                tools:visibility="visible" />
        </LinearLayout>

        <include
            android:id="@+id/identityHead"
            layout="@layout/content_verify_identity_kyc_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_F2F9FF"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/selector_button_default"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/submit"
                android:textColor="@color/color_FFFFFF_FFFFFF"
                android:textSize="@dimen/textSize16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_service"
                    android:textColor="@color/color_A5A9B3"
                    android:textSize="@dimen/textSize14sp" />

                <TextView
                    android:id="@+id/tv_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_service"
                    android:textColor="@color/color_025BE8"
                    android:textSize="@dimen/textSize14sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>