<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_191919_FCFCFC"
    android:orientation="vertical"
    tools:context=".ui.profileCenter.identity.VerifyIdentityFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_141414_F3F4F5"
            android:orientation="vertical">

            <include
                android:id="@+id/identity_1st"
                layout="@layout/content_verify_identity_kyc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/identity_2nd"
                layout="@layout/content_verify_identity_kyc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_191919_FCFCFC"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_radius_4_selected_frame_2b2b2b_e2e2e2"
                    android:gravity="center"
                    android:text="@string/submit"
                    android:textAllCaps="true"
                    android:enabled="false"
                    android:textColor="@color/color_FFFFFF_FFFFFF"
                    android:textSize="@dimen/textSize16sp" />

                <include
                    android:id="@+id/btn_service"
                    layout="@layout/content_verify_identity_kyc_service" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>