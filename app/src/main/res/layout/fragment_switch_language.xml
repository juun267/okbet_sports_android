<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="126dp"
        android:background="@color/color_191919_FCFCFC"
        android:clickable="true"
        android:gravity="top"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_48"
            android:background="@color/color_191919_EEEFF0"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_8">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_8"
                android:src="@drawable/ic_icon_back_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_chose_language"
                android:textColor="@color/color_BBBBBB_333333"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/margin_16"
                android:layout_height="@dimen/margin_16"
                android:layout_marginLeft="@dimen/margin_10"
                android:src="@drawable/ic_icon_flag" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEnglish"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_54"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_20"
            android:paddingRight="@dimen/margin_16"
            android:visibility="gone">


            <TextView
                android:id="@+id/tvEnglish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/language_en"
                android:textSize="@dimen/textSize14sp" />

            <ImageView
                android:layout_width="@dimen/margin_40"
                android:layout_height="@dimen/margin_26"
                android:src="@drawable/ic_flat_en" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/color_212121_ededed" />

        <LinearLayout
            android:id="@+id/llChina"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_54"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_20"
            android:paddingRight="@dimen/margin_16"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvChina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/language_cn"
                android:textSize="@dimen/textSize14sp" />

            <ImageView
                android:layout_width="@dimen/margin_40"
                android:layout_height="@dimen/margin_26"
                android:src="@drawable/ic_flat_cn" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/color_212121_ededed" />

        <LinearLayout
            android:id="@+id/llVietnam"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_54"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_20"
            android:paddingRight="@dimen/margin_16"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvVietnam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/language_vi"
                android:textSize="@dimen/textSize14sp" />

            <ImageView
                android:layout_width="@dimen/margin_40"
                android:layout_height="@dimen/margin_26"
                android:src="@drawable/ic_flat_vn" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/color_2B2B2B_e2e2e2" />

    </LinearLayout>

</LinearLayout>



