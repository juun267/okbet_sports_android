<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_game_title"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/color_181E2A"
    android:gravity="center">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="1dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivToolbarHomeLogo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_toolbar_home_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_weight="1"
            android:alpha="0.6"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:textColor="@color/color_FFFFFF_FFFFFF"
            android:textSize="@dimen/textSize12sp"
            tools:text="義大利" />

        <TextView
            android:id="@+id/tv_toolbar_home_score"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:background="@color/color_434C65"
            android:fontFamily="@font/helvetica_normal"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/textSize16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linNoStart"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/color_434C65"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:lines="1"
            android:text="@string/verse_upper"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/textSize16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:lines="1"
            android:text="@string/N938"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/color_6C7BA8"
            android:textSize="@dimen/textSize12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="12dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_toolbar_away_score"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:background="@color/color_434C65"
            android:fontFamily="@font/helvetica_normal"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/textSize16sp" />

        <TextView
            android:id="@+id/tv_toolbar_away_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:alpha="0.6"
            android:ellipsize="end"
            android:gravity="end|center_vertical"
            android:maxLines="1"
            android:paddingEnd="10dp"
            android:textColor="@color/color_FFFFFF_FFFFFF"
            android:textSize="@dimen/textSize12sp"
            tools:text="義大利" />

        <ImageView
            android:id="@+id/ivToolbarAwayLogo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            tools:src="@mipmap/ic_launcher" />
    </LinearLayout>
</LinearLayout>

