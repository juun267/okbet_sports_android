<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F0F5FA"
    android:orientation="vertical"
    tools:context=".ui.profileCenter.nickname.ModifyProfileInfoActivity">

    <org.cxct.sportlottery.view.CustomTopToolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="@dimen/margin_15"
        android:orientation="vertical"
        android:background="@color/color_FFFFFF">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="facebook"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMessenger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="messenger"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnInstagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instagram"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSystem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="System"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnViber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Viber"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sms"/>

    </LinearLayout>

</LinearLayout>