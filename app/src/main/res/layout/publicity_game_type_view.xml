<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="14dp"
    android:layout_marginEnd="14dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp"
    tools:ignore="SpUsage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvSportType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_half_orange_half_blue"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="18dp"
            android:paddingBottom="5dp"
            android:textColor="@color/color_FFFFFFFF"
            android:textSize="@dimen/textSize12sp"
            app:drawableStartCompat="@drawable/img_soccer_white"
            tools:text="@string/soccer" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_gradient_0066d1_0079fa"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/tvGameType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:textColor="@color/color_FFFFFFFF"
                android:textSize="@dimen/textSize12sp"
                tools:text="@string/home_tab_in_play" />

            <TextView
                android:id="@+id/tvMatchNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FFFFFFFF"
                android:textSize="@dimen/textSize12sp"
                tools:text="123" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>