<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="14dp"
    android:layout_marginEnd="14dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp"
    tools:ignore="SpUsage, ContentDescription">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/bg_radius_4_gradient_blue_blue"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/blockSportType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_right_hypotenuse_orange"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivSportType"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                tools:src="@drawable/img_soccer_white" />

            <TextView
                android:id="@+id/tvSportType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:textColor="@color/color_FFFFFF_FFFFFF"
                android:textSize="@dimen/textSize12sp"
                tools:text="@string/soccer" />
        </LinearLayout>

        <ImageView
            android:id="@+id/viewHypotenuse"
            android:layout_width="9dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_left_top_triangle_orange"
            app:layout_constraintBottom_toBottomOf="@id/blockSportType"
            app:layout_constraintStart_toEndOf="@id/blockSportType"
            app:layout_constraintTop_toTopOf="@id/blockSportType" />


        <TextView
            android:id="@+id/tvGameType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:textColor="@color/color_FFFFFF_FFFFFF"
            android:textSize="@dimen/textSize12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/viewHypotenuse"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/home_tab_in_play" />

        <TextView
            android:id="@+id/tvMatchNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="@color/color_FFFFFF_FFFFFF"
            android:textSize="@dimen/textSize12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="123" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>