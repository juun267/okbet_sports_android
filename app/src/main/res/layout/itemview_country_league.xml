<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/country_league_border"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/country_league_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:textColor="@color/colorBlockLight"
        android:textSize="@dimen/textSize16sp"
        app:layout_constraintBottom_toBottomOf="@id/country_league_border"
        app:layout_constraintEnd_toStartOf="@id/country_league_odd_count"
        app:layout_constraintStart_toStartOf="@id/country_league_border"
        app:layout_constraintTop_toTopOf="@id/country_league_border"
        tools:text="英格兰超级联赛" />

    <TextView
        android:id="@+id/country_league_odd_count"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorWhite6"
        android:gravity="center"
        android:textColor="@color/colorBlockLight"
        android:textSize="@dimen/textSize15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/country_league_border"
        app:layout_constraintEnd_toEndOf="@id/country_league_border"
        app:layout_constraintTop_toTopOf="@id/country_league_border"
        tools:text="1" />

</androidx.constraintlayout.widget.ConstraintLayout>