<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_14">

    <ImageView
        android:id="@+id/iv_logo_handicap"
        android:layout_width="@dimen/margin_24"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_13"
        android:src="@drawable/icon_live"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_hot_handicap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        android:text="@string/hot_live_match"
        android:textColor="@color/color_D2E4FF_414655"
        android:textSize="@dimen/textSize14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_logo_handicap"
        app:layout_constraintStart_toEndOf="@+id/iv_logo_handicap"
        app:layout_constraintTop_toTopOf="@+id/iv_logo_handicap" />

    <LinearLayout
        android:id="@+id/ll_hot_live_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/iv_logo_handicap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_logo_handicap">

        <TextView
            android:id="@+id/tv_hot_live_find_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_5"
            android:text="@string/see_more"
            android:textColor="@color/color_025BE8"
            android:textSize="@dimen/textSize12sp" />

        <ImageView
            android:layout_width="@dimen/margin_14"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin_14"
            android:src="@drawable/icon_arrow03_blue" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/bg_live_match"
        app:layout_constraintTop_toBottomOf="@+id/tv_hot_handicap">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.54" />
        <RelativeLayout
            android:id="@+id/rv_match_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_dio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_24"
                android:layout_marginTop="@dimen/margin_3"
                android:src="@drawable/dio_blue" />

            <TextView
                android:id="@+id/tv_match_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_6"
                android:layout_toRightOf="@+id/iv_dio"
                android:textColor="@color/color_6C7BA8_6C7BA8"
                tools:text="@string/hot_live_match" />

            <TextView
                android:id="@+id/tv_match_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/margin_24"
                android:textColor="@color/color_FFFFFF_414655"
                android:textStyle="bold"
                tools:text="@string/hot_live_match" />
        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="@dimen/margin_24"
            android:layout_marginTop="5dp"
            android:background="@color/color_E3E8EE"
            app:layout_constraintTop_toBottomOf="@+id/rv_match_title" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_account"
            android:layout_width="0dp"
            android:layout_height="104dp"
            app:cardCornerRadius="@dimen/margin_8"
            app:cardElevation="0dp"
            android:elevation="0dp"
            android:layout_marginStart="@dimen/margin_24"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_5"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view">

            <org.cxct.sportlottery.view.OKVideoPlayer
                android:id="@+id/iv_publicity"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_live_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_novideodata"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/view_action"
            android:layout_width="0dp"
            android:layout_height="104dp"
            android:layout_marginStart="@dimen/margin_24"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_5"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />


        <TextView
            android:id="@+id/tv_first_half_game"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_8"
            android:paddingHorizontal="@dimen/margin_7"
            android:paddingVertical="@dimen/margin_2"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/textSize10sp"
            app:layout_constraintStart_toStartOf="@+id/cv_account"
            app:layout_constraintTop_toTopOf="@+id/cv_account"
            tools:text="@string/first_half_game" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_live_time"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/cv_account"
            app:layout_constraintEnd_toEndOf="@+id/cv_account"
            app:layout_constraintStart_toStartOf="@+id/cv_account">
            <TextView
                android:id="@+id/tvGameStatus"
                android:visibility="gone"
                android:textSize="@dimen/textSize12sp"
                android:layout_marginBottom="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/color_F9F9F9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="上半场"/>
            <TextView
                android:id="@+id/tv_match_time"
                android:visibility="gone"
                android:layout_toRightOf="@+id/tvGameStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginBottom="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/color_F9F9F9"
                android:textSize="@dimen/textSize12sp"
                tools:text="10:22" />

            <ImageView
                android:id="@+id/iv_time"
                android:layout_width="14dp"
                android:layout_height="@dimen/margin_16"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_14"
                android:src="@drawable/icon_fill" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="@dimen/margin_24"
            android:paddingBottom="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/view">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_match_list"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                tools:itemCount="4"
                tools:listitem="@layout/item_hot_live" />
        </LinearLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_avatar_live"
            android:layout_width="@dimen/margin_28"
            android:layout_height="@dimen/margin_28"
            android:layout_marginStart="@dimen/margin_24"
            android:layout_marginTop="@dimen/margin_12"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            app:riv_border_width="@dimen/margin_1"
            app:riv_border_color="@color/color_E23434_E23434"
            app:riv_oval="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_account"
            tools:src="@drawable/icon_avatar" />

        <TextView
            android:id="@+id/tv_introduction"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_6"
            android:layout_marginTop="@dimen/textSize17sp"
            android:ellipsize="end"
            android:lines="1"
            app:layout_constraintStart_toEndOf="@+id/iv_avatar_live"
            app:layout_constraintTop_toBottomOf="@+id/cv_account"
            tools:text="@string/bet_slip_id_is_copied" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>