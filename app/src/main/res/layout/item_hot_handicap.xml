<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_12"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
      <androidx.cardview.widget.CardView
          app:cardCornerRadius="@dimen/margin_10"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
   <androidx.constraintlayout.widget.ConstraintLayout
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">



      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/cl_title"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:background="@drawable/bg_item_hot_handicap"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <androidx.constraintlayout.widget.Guideline
             android:id="@+id/guideline"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             app:layout_constraintGuide_percent="0.43"/>

         <ImageView
             android:id="@+id/iv_league_logo"
             android:layout_marginTop="@dimen/margin_7"
             android:layout_marginStart="@dimen/margin_13"
             android:paddingBottom="@dimen/margin_7"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             android:layout_width="@dimen/margin_20"
             android:layout_height="wrap_content"
             tools:src="@drawable/team_logo"/>
         <TextView
             android:id="@+id/tv_league_name"
             android:textColor="@color/color_FFFFFF_414655"
             android:textSize="@dimen/textSize12sp"
             android:textStyle="bold"
             android:layout_marginStart="6dp"
             app:layout_constraintStart_toEndOf="@+id/iv_league_logo"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             tools:text="美国职业大联盟"/>
         <LinearLayout
             android:orientation="horizontal"
             app:layout_constraintLeft_toRightOf="@+id/guideline"
             app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             tools:ignore="MissingConstraints">
            <TextView
                android:id="@+id/tv_title1"
                android:textColor="@color/color_6C7BA8_6C7BA8"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_height="match_parent"
                android:textSize="@dimen/textSize12sp"
                tools:text="大"/>
            <TextView
                android:id="@+id/tv_title2"
                android:layout_marginEnd="@dimen/margin_10"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="@dimen/textSize12sp"
                tools:text="大"/>
            <TextView
                android:id="@+id/tv_title3"
                android:layout_marginEnd="@dimen/margin_10"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="@dimen/textSize12sp"
                tools:text="大"/>
         </LinearLayout>
      </androidx.constraintlayout.widget.ConstraintLayout>
      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rv_handicap_item"
         app:layout_constraintTop_toBottomOf="@+id/cl_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:itemCount="2"
          tools:listitem="@layout/item_home_handicap">
      </androidx.recyclerview.widget.RecyclerView>
   </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>