<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.cxct.sportlottery.ui.maintab.home.view.HomeToolbarView
        android:id="@+id/homeToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingClass" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/homeToolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <org.cxct.sportlottery.ui.maintab.home.view.HomeTopView
                android:id="@+id/homeTopView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <!--part-2-->
            <org.cxct.sportlottery.ui.maintab.games.view.HotMatchView
                android:id="@+id/hotMatchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_halloween_part3"/>

<!--            <org.cxct.sportlottery.ui.maintab.home.view.HomeOkGamesView-->
<!--                android:id="@+id/okGamesView"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content" />-->


            <org.cxct.sportlottery.ui.maintab.games.view.GamesPageView
                android:id="@+id/gameViewOkGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>


            <org.cxct.sportlottery.ui.maintab.games.view.LivePageView
                android:id="@+id/gameViewOkLive"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"/>
            <!--part-2-end-->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_halloween_part6"/>
                <include
                    android:id="@+id/includeNews"
                    layout="@layout/include_home_news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"/>
            </FrameLayout>


            <org.cxct.sportlottery.ui.maintab.home.view.WinsRankView
                android:id="@+id/winsRankView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:background="@drawable/bg_halloween_part7"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_halloween_part8"/>

                <include
                    android:id="@+id/includeBettingStation"
                    layout="@layout/include_home_bettingstation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"/>

            </FrameLayout>

            <org.cxct.sportlottery.ui.maintab.home.view.HomeButtomView
                android:id="@+id/homeBottumView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/ivBackTop"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:adjustViewBounds="true"
        android:src="@drawable/icon_backtop_blue" />

    <ImageView
        android:id="@+id/ivService"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_service_blue" />

</RelativeLayout>
