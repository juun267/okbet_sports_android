<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:background="@color/background"
    android:orientation="vertical">

    <include
        android:id="@+id/lin_toolbar"
        layout="@layout/view_toolbar_home" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                tl:cardBackgroundColor="@color/color_bbbbbb_ffffff"
                tl:cardCornerRadius="10dp"
                tl:cardElevation="2dp">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0.5dp"
                    android:minHeight="135dp"
                    tl:banner_indicator_height="6dp"
                    tl:banner_indicator_marginBottom="6dp"
                    tl:banner_indicator_normal_color="@color/color_bbbbbb_ffffff"
                    tl:banner_indicator_normal_width="6dp"
                    tl:banner_indicator_radius="3dp"
                    tl:banner_indicator_selected_color="@color/color_bbbbbb_ffffff"
                    tl:banner_indicator_selected_width="24dp"
                    tl:banner_indicator_space="6dp"
                    tl:banner_loop_time="3000"
                    tl:layout_constraintBottom_toBottomOf="parent"
                    tl:layout_constraintEnd_toEndOf="parent"
                    tl:layout_constraintStart_toStartOf="parent"
                    tl:layout_constraintTop_toTopOf="parent" />
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginTop="-9dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_home_banner_shadow" />

            <LinearLayout
                android:id="@+id/lin_announcement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="1dp"
                android:layout_marginHorizontal="15dp">

                <ImageView
                    android:id="@+id/iv_broadcast_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:src="@drawable/icon_notice" />

                <org.cxct.sportlottery.ui.common.AutoScrollRecyclerView
                    android:id="@+id/rv_marquee"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_4"
                    android:layout_marginRight="@dimen/margin_3"
                    android:clipChildren="false"
                    tl:speed_dp_sec="60dp"
                    tools:itemCount="1"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/content_marquee" />


                <ImageView
                    android:id="@+id/iv_customer_service"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_customer_service" />

            </LinearLayout>

            <include layout="@layout/tab_item_home_open" />

            <FrameLayout
                android:id="@+id/home_content_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/rv_type_list"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:nestedScrollingEnabled="false"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <include
                    android:id="@+id/lin_menu_game"
                    layout="@layout/view_home_menu_game"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <RadioGroup
                    android:id="@+id/rg_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbtn_sport"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:minWidth="80dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:button="@null"
                        android:checked="true"
                        android:elevation="2dp"
                        android:background="@drawable/selector_bg_home_tab_menu"
                        android:textColor="@color/selector_blue_white"
                        android:textSize="@dimen/textSize14sp"
                        android:text="@string/sport" />

                    <RadioButton
                        android:id="@+id/rbtn_egame"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:minWidth="80dp"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:elevation="2dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/selector_bg_home_tab_menu"
                        android:textColor="@color/selector_blue_white"
                        android:textSize="@dimen/textSize14sp"
                        android:text="@string/slot" />
                </RadioGroup>
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_15"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="SpUsage, ContentDescription">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_hot_recommended" />

                <TextView
                    android:id="@+id/tv_hot_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="@string/hot_recommend"
                    android:textAllCaps="true"
                    android:textColor="@color/color_6C7BA8"
                    android:textSize="@dimen/textSize14sp"
                    android:drawableEnd="@drawable/icon_arrow03" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                tools:ignore="SpUsage, ContentDescription"
                tools:itemCount="1"
                tools:listitem="@layout/item_home_recommend">

            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/lin_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/margin_10"
                android:background="@drawable/img_bg_active"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:src="@drawable/icon_active" />


                <com.youth.banner.Banner
                    android:id="@+id/banner_activity"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginRight="@dimen/margin_10"
                    tl:banner_orientation="vertical"
                    tl:banner_infinite_loop="true"
                    tl:banner_auto_loop="true"
                    tl:banner_loop_time="3000" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
