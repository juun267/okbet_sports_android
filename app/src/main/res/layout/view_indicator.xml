<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.tabs.TabLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tabLayout"
    android:layout_width="match_parent"
    android:layout_height="16dp"
    app:tabGravity="center"
    android:overScrollMode="never"
    app:tabIndicatorHeight="0dp"
    app:tabMaxWidth="26dp"
    app:tabMode="scrollable"
    app:tabPaddingEnd="0dp"
    app:tabPaddingStart="0dp"
    app:tabRippleColor="@color/transparent_black_0"
    tools:context="org.cxct.sportlottery.ui.common.IndicatorView">

    <!-- 此處僅為預覽示意，實際上 tab 要動態添加 -->
    <com.google.android.material.tabs.TabItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout="@layout/indicator_tab" />

    <com.google.android.material.tabs.TabItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout="@layout/indicator_tab" />

    <com.google.android.material.tabs.TabItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout="@layout/indicator_tab" />

</com.google.android.material.tabs.TabLayout>