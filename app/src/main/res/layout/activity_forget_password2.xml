<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/okbet_bg_login"
    tools:context=".ui.login.signIn.LoginActivity"
    tools:ignore="SpUsage">

    <include
        android:id="@+id/v_top"
        layout="@layout/view_status_bar" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="26dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@null"
        android:contentDescription="@null"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:src="@drawable/ic_arrow_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_top" />
    <com.flyjingfish.gradienttextviewlib.GradientTextView
        android:id="@+id/tv_title_forget_password"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="@string/forget_password"
        app:layout_constraintTop_toBottomOf="@+id/v_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:gradient_angle="270"
        app:gradient_startColor="@color/color_71ADFF"
        app:gradient_endColor="@color/color_1971FD" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="151dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/logo_okbet_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/sv_content_view"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginHorizontal="@dimen/margin_14"
            android:orientation="vertical"
            android:background="@drawable/okbet_bg_login_card">

            <org.cxct.sportlottery.widget.boundsEditText.TextFormFieldBoxes
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginHorizontal="24dp"
                app:hintText="@string/hint_phone_num"
                app:isResponsiveIconColor="false"
                app:iconSignifier="@drawable/icon_device_mobile"
                app:labelText="@string/phone_number"
                app:labelTextStyle="normal"
                app:hideSubView ="true"
                app:primaryColor="@color/color_AFAFB1"
                app:subLabelText="+63">

                <org.cxct.sportlottery.widget.boundsEditText.ExtendedEditText
                    android:id="@+id/eet_phone_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="@color/color_FFFFFF_DE000000"
                    android:textSize="@dimen/textSize14sp"
                    android:textColorHint="@color/color_C9CFD7" />

            </org.cxct.sportlottery.widget.boundsEditText.TextFormFieldBoxes>

            <org.cxct.sportlottery.widget.boundsEditText.TextFormFieldBoxes
                android:id="@+id/et_e_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="24dp"
                app:hintText="@string/hint_e_mail"
                app:isResponsiveIconColor="false"
                app:iconSignifier="@drawable/icon_device_mobile"
                app:labelText="@string/e_mail"
                app:labelTextStyle="normal"
                app:primaryColor="@color/color_AFAFB1">

                <org.cxct.sportlottery.widget.boundsEditText.ExtendedEditText
                    android:id="@+id/eet_e_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textColor="@color/color_FFFFFF_DE000000"
                    android:textSize="@dimen/textSize14sp"
                    android:textColorHint="@color/color_C9CFD7"/>

            </org.cxct.sportlottery.widget.boundsEditText.TextFormFieldBoxes>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/block_sms_valid_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="24dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible"
                android:elevation="10dp">

                <org.cxct.sportlottery.widget.boundsEditText.TextFormFieldBoxes
                    android:id="@+id/et_sms_valid_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="@dimen/margin_2"
                    app:hintText="@string/hint_verification_code_by_sms"
                    app:iconSignifier="@drawable/ic_valid"
                    app:isResponsiveIconColor="false"
                    app:labelText="@string/verification_code"
                    app:labelTextStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/btn_send_sms"
                    app:primaryColor="@color/color_AFAFB1">

                    <org.cxct.sportlottery.widget.boundsEditText.ExtendedEditText
                        android:id="@+id/eet_sms_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLines="1"
                        android:maxLength="4"
                        android:textColor="@color/color_FFFFFF_DE000000"
                        android:textSize="@dimen/textSize14sp"
                        android:textColorHint="@color/color_C9CFD7" />
                </org.cxct.sportlottery.widget.boundsEditText.TextFormFieldBoxes>

                <Button
                    android:id="@+id/btn_send_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_send_sms"
                    android:minHeight="32dp"
                    android:text="@string/get_security_code"
                    android:textAllCaps="false"
                    android:textColor="@color/color_2b2b2b_ffffff"
                    android:textSize="@dimen/textSize14sp"
                    android:visibility="visible"
                    android:enabled="false"
                    android:alpha="0.5"
                    android:layout_marginTop="@dimen/margin_15"
                    app:layout_constraintEnd_toEndOf="@+id/et_sms_valid_code"
                    app:layout_constraintTop_toTopOf="@+id/et_sms_valid_code" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_sms_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="10dp"
                android:maxLines="2"
                android:visibility="gone" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_live_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_marginEnd="@dimen/dp_4"
                    android:layout_width="@dimen/margin_18"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_customer_service"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_live_chat"/>

                <TextView
                    android:id="@+id/tv_live_chat"
                    android:textColor="@color/color_025BE8"
                    android:text="@string/live_chat"
                    android:layout_marginEnd="@dimen/margin_20"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btn_put"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginHorizontal="@dimen/margin_20"
                android:layout_marginBottom="@dimen/margin_30"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@drawable/ic_submit"
                android:text="@string/next_step"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize17sp"
                android:alpha="0.5"
                android:enabled="false"/>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/bottom_liences"
        layout="@layout/bottom_register_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_48"
        android:layout_marginBottom="@dimen/margin_20"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>