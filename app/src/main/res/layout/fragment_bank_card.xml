<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="16dp">
        <!-- 選擇銀行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_bank_list_selector"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="4"
                android:gravity="start|center_vertical"
                android:text="@string/create_bank"
                android:textColor="@color/gray4"
                android:textSize="@dimen/textSize13sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:background="@color/bright_gray" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_bank_default" />

            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="28dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="@string/select_bank"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/textSize12sp" />
        </LinearLayout>
        <!-- 開戶名 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_frame_5dp"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/tv_create_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:minEms="4"
                android:text="@string/create_name"
                android:textColor="@color/gray4"
                android:textSize="@dimen/textSize13sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:background="@color/bright_gray" />

            <EditText
                android:id="@+id/edit_create_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="start|center_vertical"
                android:hint="@string/hint_please_enter_create_name"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/textSize12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="12dp"
                android:padding="4dp"
                android:src="@drawable/ic_close_gray" />
        </LinearLayout>
        <!-- 銀行卡號 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_frame_5dp"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:gravity="start|center_vertical"
                android:text="@string/bank_card_number"
                android:textColor="@color/gray4"
                android:textSize="@dimen/textSize13sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:background="@color/bright_gray" />

            <EditText
                android:id="@+id/edit_bank_card_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:background="@color/transparent"
                android:gravity="start|center_vertical"
                android:hint="@string/please_enter_bank_card_rule"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/textSize12sp" />
        </LinearLayout>
        <!-- 開戶網點 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_frame_5dp"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:gravity="start|center_vertical"
                android:text="@string/network_point"
                android:textColor="@color/gray4"
                android:textSize="@dimen/textSize13sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:background="@color/bright_gray" />

            <EditText
                android:id="@+id/edit_network_point"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="start|center_vertical"
                android:hint="@string/please_enter_network_point"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/textSize12sp" />
        </LinearLayout>
        <!-- 提款密碼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_frame_5dp"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:gravity="start|center_vertical"
                android:text="@string/withdraw_password"
                android:textColor="@color/gray4"
                android:textSize="@dimen/textSize13sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:background="@color/bright_gray" />

            <EditText
                android:id="@+id/edit_withdraw_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="start|center_vertical"
                android:hint="@string/hint_four_number_password"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/textSize12sp" />
        </LinearLayout>
    </LinearLayout>
    <!--  按鈕  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/blue3"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:letterSpacing="0.1"
                android:paddingStart="64dp"
                android:paddingTop="8dp"
                android:paddingEnd="64dp"
                android:paddingBottom="8dp"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize16sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/blue4"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:letterSpacing="0.1"
                android:paddingStart="64dp"
                android:paddingTop="8dp"
                android:paddingEnd="64dp"
                android:paddingBottom="8dp"
                android:text="@string/reset"
                android:textColor="@color/gray4"
                android:textSize="@dimen/textSize16sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/btn_delete_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/frame_sideline_dark_blue_5dp"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:paddingStart="64dp"
        android:paddingTop="8dp"
        android:paddingEnd="64dp"
        android:paddingBottom="8dp"
        android:text="@string/delete_bank_card"
        android:textColor="@color/gray4"
        android:textSize="@dimen/textSize16sp" />
</LinearLayout>