<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@color/color_FFFFFF"
        android:gravity="center"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="@dimen/margin_24"
        android:layout_height="@dimen/margin_24"
        android:src="@drawable/ic_close_deduct"
        android:layout_margin="@dimen/margin_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:id="@+id/linTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_30"
            android:background="@drawable/bg_givemoney"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivClose" >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="116"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="32sp"
                    android:text="â‚±"
                    />
                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_3"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="50sp"
                    android:text="20"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="217"
                android:gravity="center"
                android:text="@string/P235"
                android:textSize="22sp"
                android:textColor="@color/color_303C55" />
        </LinearLayout>
        
      <EditText
          android:id="@+id/etPhone"
          android:layout_width="match_parent"
          android:layout_height="@dimen/margin_44"
          android:layout_marginTop="@dimen/margin_20"
          android:layout_marginHorizontal="@dimen/margin_15"
          android:background="@drawable/bg_white_radius_8_stoke_gray"
          android:drawableLeft="@drawable/ic_bind_phone"
          android:paddingHorizontal="@dimen/margin_12"
          android:drawablePadding="@dimen/margin_12"
          android:hint="@string/phone_number"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/linTitle"/>

    <EditText
        android:id="@+id/etVerificationCode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_44"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginHorizontal="@dimen/margin_15"
        android:background="@drawable/bg_white_radius_8_stoke_gray"
        android:drawableLeft="@drawable/ic_bind_code"
        android:paddingHorizontal="@dimen/margin_12"
        android:drawablePadding="@dimen/margin_12"
        android:paddingRight="130dp"
        android:hint="@string/verification_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPhone"/>


    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="@dimen/margin_24"
            android:layout_marginHorizontal="@dimen/margin_20"
            app:layout_constraintTop_toBottomOf="@+id/etVerificationCode"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btnSkip"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/bg_blue_radius_8_stroke"
                android:enabled="true"
                android:text="@string/btn_pass"
                android:textColor="@color/color_025BE8"
                android:textSize="@dimen/textSize17sp"
                android:textAllCaps="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clAgreement" />

            <Button
                android:id="@+id/btnSubmit"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/margin_12"
                android:background="@drawable/button_radius_8_bet_button"
                android:enabled="true"
                android:text="@string/submit"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/textSize17sp"
                android:textAllCaps="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clAgreement" />
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>

