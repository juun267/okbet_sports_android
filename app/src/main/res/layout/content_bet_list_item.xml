<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="matchOdd"
            type="org.cxct.sportlottery.network.bet.info.MatchOdd" />

        <variable
            name="parlayOdd"
            type="org.cxct.sportlottery.network.bet.info.ParlayOdd" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <include
                android:id="@+id/bet_info_detail"
                layout="@layout/content_bet_list_item_detail"
                app:matchOdd="@{matchOdd}"
                app:parlayOdd="@{parlayOdd}" />

            <LinearLayout
                android:id="@+id/ll_bet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <RelativeLayout
                        android:id="@+id/rl_input"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        app:layout_constraintEnd_toStartOf="@+id/btn_maximum_limit"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.715">

                        <EditText
                            android:id="@+id/et_bet"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/effect_select_bet_edit_text"
                            android:inputType="number"
                            android:maxLength="7"
                            android:paddingStart="10dp"
                            android:textColor="@color/colorBlackLight"
                            android:textColorHint="@color/colorSilverLight"
                            android:textSize="@dimen/textSize14sp"
                            tools:hint="限额：20,000.00"
                            tools:ignore="RtlSymmetry" />

                        <ImageView
                            android:id="@+id/iv_clear_text"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:padding="14dp"
                            android:src="@drawable/ic_close_gray12" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/btn_maximum_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bet_info_check_maximum_limit"
                        android:textColor="@color/colorBlue"
                        android:textSize="@dimen/textSize12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/rl_input"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_error_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="9dp"
                    android:textColor="@color/colorRedDark"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text="投注额大于下注限额" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_close_warning"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:background="@color/colorRed"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:text="@string/bet_info_list_game_closed"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSize13sp"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_warning_white"
                tools:ignore="RtlSymmetry"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_odd_change"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:background="@color/colorRed"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:text="@string/bet_info_list_game_odds_changed"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSize13sp"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_warning_white"
                tools:ignore="RtlSymmetry"
                tools:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorWhite5" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bg_lock"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/ll_item"
            />
    </RelativeLayout>

</layout>
