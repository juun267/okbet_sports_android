<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="org.cxct.sportlottery.ui.common.CustomTabLayout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorEEEFF0"
    android:layout_height="wrap_content">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_custom"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        app:tabIndicator="@drawable/custom_tab_indicator"
        app:tabIndicatorFullWidth="false"
        app:tabMode="fixed"
        app:tabPaddingEnd="25dp"
        app:tabPaddingStart="25dp"
        app:tabRippleColor="@null"
        app:tabSelectedTextColor="@color/colorBlackLight"
        app:tabTextColor="@color/colorGray">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/first_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_password" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/second_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/withdrawal_password" />

    </com.google.android.material.tabs.TabLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="@color/colorWhite4"
        />

</LinearLayout>
