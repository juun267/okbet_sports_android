<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        android:id="@+id/gameTypeView"
        android:visibility="gone"
        layout="@layout/publicity_game_type_view" />

    <include
        android:id="@+id/leagueView"
        layout="@layout/publicity_league_view" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLeagueList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        tools:itemCount="1"
        tools:listitem="@layout/itemview_league_odd_v5" />

    <View
        android:id="@+id/SpaceItemDecorationView"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/color_191919_FCFCFC" />

</LinearLayout>