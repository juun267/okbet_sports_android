<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolBar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tool_bar_height"
    android:background="@color/colorWhite"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    app:layout_scrollFlags="scroll|enterAlways"
    tools:ignore="SpUsage,RtlSymmetry">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="fitStart"
        android:src="@drawable/ic_logo" />

    <ImageView
        android:id="@+id/iv_language"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_flag_en"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@null"
        android:gravity="center"
        android:minWidth="48dp"
        android:text="@string/btn_login"
        android:textColor="@color/colorBlackLight" />

    <View
        android:id="@+id/toolbar_divider"
        android:layout_width="1dp"
        android:layout_height="18dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@color/colorBlackLight" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:background="@null"
        android:gravity="center"
        android:minWidth="48dp"
        android:text="@string/btn_register"
        android:textColor="@color/colorBlackLight" />

    <TextView
        android:id="@+id/btn_notice"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/bg_circle_white"
        android:backgroundTint="@color/colorBlue"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textSize14sp"
        android:visibility="gone"
        tools:text="N"
        tools:visibility="visible" />
    

    <TextView
        android:id="@+id/tv_odds_type"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/bg_odds_type_in_toolbar"
        android:drawablePadding="-1dp"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="11dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/colorGrayDark"
        android:textSize="@dimen/textSize15sp"
        android:visibility="gone"
        app:autoSizeMaxTextSize="15dp"
        app:autoSizeMinTextSize="2dp"
        app:autoSizeTextType="uniform"
        app:drawableStartCompat="@drawable/ic_odds_type_change" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_head"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_avatar_default"
        app:riv_oval="true" />

</LinearLayout>