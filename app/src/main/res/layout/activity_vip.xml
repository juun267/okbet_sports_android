<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.vip.VipActivity">

    <!-- toolBar -->
    <LinearLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/colorBlue"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_scrollFlags="scroll|enterAlways">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:scaleType="fitStart"
            android:src="@drawable/ic_logo" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--  Member Level Title  -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_vip_top_background"
                    android:paddingStart="40dp"
                    android:paddingTop="24dp"
                    android:paddingEnd="30dp"
                    android:paddingBottom="10dp">
                    <!--招呼語-->
                    <LinearLayout
                        android:id="@+id/ll_greet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toTopOf="@id/ll_level"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/greet"
                            android:textColor="@color/blue7"
                            android:textSize="@dimen/textSize16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_greet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue7"
                            android:textSize="@dimen/textSize16sp"
                            android:textStyle="bold"
                            tools:text="Jason0921" />

                    </LinearLayout>
                    <!--會員等級-->
                    <LinearLayout
                        android:id="@+id/ll_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toTopOf="@id/ll_amount"
                        app:layout_constraintStart_toStartOf="@id/ll_greet"
                        app:layout_constraintTop_toBottomOf="@id/ll_greet"
                        app:layout_constraintVertical_chainStyle="packed">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/now_level"
                            android:textColor="@color/main"
                            android:textSize="@dimen/textSize14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_vip_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/member_name_level_one"
                            android:textColor="@color/main"
                            android:textSize="@dimen/textSize14sp"
                            android:textStyle="bold"
                            tools:text="@string/member_name_level_one" />

                    </LinearLayout>
                    <!--存款-->
                    <LinearLayout
                        android:id="@+id/ll_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/ll_greet"
                        app:layout_constraintTop_toBottomOf="@id/ll_level"
                        app:layout_constraintVertical_chainStyle="packed">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/member_amount"
                            android:textSize="@dimen/textSize12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/currency_symbol"
                            android:textSize="@dimen/textSize12sp" />

                        <TextView
                            android:id="@+id/tv_user_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textSize12sp"
                            tools:text="0.00" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_vip"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_vip_level_01"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cl_user"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-16dp"
                    app:cardBackgroundColor="@color/blue7"
                    app:cardCornerRadius="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="32dp"
                        android:paddingTop="6dp"
                        android:paddingEnd="32dp"
                        android:paddingBottom="6dp"
                        android:text="@string/member_level"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize14sp" />
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <!--  Member Level Progress Bar  -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ProgressBar
                        android:id="@+id/pb_user_level"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="20dp"
                        android:progressDrawable="@drawable/color_vip_level_progress_bar"
                        tools:max="6"
                        tools:progress="3" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/bubble_level_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/selector_vip_bubble"
                            android:gravity="center_horizontal"
                            android:paddingTop="6dp"
                            android:text="@string/level_one"
                            android:textColor="@color/bubble_vip_level"
                            android:textSize="@dimen/textSize12sp"
                            app:layout_constraintBottom_toTopOf="@id/gate_level1"
                            app:layout_constraintEnd_toEndOf="@id/gate_level1"
                            app:layout_constraintStart_toStartOf="@id/gate_level1" />

                        <TextView
                            android:id="@+id/bubble_level_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/selector_vip_bubble"
                            android:gravity="center_horizontal"
                            android:paddingTop="6dp"
                            android:text="@string/level_two"
                            android:textColor="@color/bubble_vip_level"
                            android:textSize="@dimen/textSize12sp"
                            app:layout_constraintBottom_toTopOf="@id/gate_level2"
                            app:layout_constraintEnd_toEndOf="@id/gate_level2"
                            app:layout_constraintStart_toStartOf="@id/gate_level2" />

                        <TextView
                            android:id="@+id/bubble_level_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/selector_vip_bubble"
                            android:gravity="center_horizontal"
                            android:paddingTop="6dp"
                            android:text="@string/level_three"
                            android:textColor="@color/bubble_vip_level"
                            android:textSize="@dimen/textSize12sp"
                            app:layout_constraintBottom_toTopOf="@id/gate_level3"
                            app:layout_constraintEnd_toEndOf="@id/gate_level3"
                            app:layout_constraintStart_toStartOf="@id/gate_level3" />

                        <TextView
                            android:id="@+id/bubble_level_four"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/selector_vip_bubble"
                            android:gravity="center_horizontal"
                            android:paddingTop="6dp"
                            android:text="@string/level_four"
                            android:textColor="@color/bubble_vip_level"
                            android:textSize="@dimen/textSize12sp"
                            app:layout_constraintBottom_toTopOf="@id/gate_level4"
                            app:layout_constraintEnd_toEndOf="@id/gate_level4"
                            app:layout_constraintStart_toStartOf="@id/gate_level4" />

                        <TextView
                            android:id="@+id/bubble_level_five"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/selector_vip_bubble"
                            android:gravity="center_horizontal"
                            android:paddingTop="6dp"
                            android:text="@string/level_five"
                            android:textColor="@color/bubble_vip_level"
                            android:textSize="@dimen/textSize12sp"
                            app:layout_constraintBottom_toTopOf="@id/gate_level5"
                            app:layout_constraintEnd_toEndOf="@id/gate_level5"
                            app:layout_constraintStart_toStartOf="@id/gate_level5" />

                        <TextView
                            android:id="@+id/bubble_level_six"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/selector_vip_bubble"
                            android:gravity="center_horizontal"
                            android:paddingTop="6dp"
                            android:text="@string/level_six"
                            android:textColor="@color/bubble_vip_level"
                            android:textSize="@dimen/textSize12sp"
                            app:layout_constraintBottom_toTopOf="@id/gate_level6"
                            app:layout_constraintEnd_toEndOf="@id/gate_level6"
                            app:layout_constraintStart_toStartOf="@id/gate_level6" />


                        <View
                            android:id="@+id/value_level1"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/gate_level1"
                            app:layout_constraintStart_toStartOf="parent" />

                        <View
                            android:id="@+id/gate_level1"
                            android:layout_width="2dp"
                            android:layout_height="8dp"
                            android:background="@color/background"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/value_level2"
                            app:layout_constraintStart_toEndOf="@id/value_level1" />

                        <View
                            android:id="@+id/value_level2"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/gate_level2"
                            app:layout_constraintStart_toEndOf="@id/gate_level1" />

                        <View
                            android:id="@+id/gate_level2"
                            android:layout_width="2dp"
                            android:layout_height="8dp"
                            android:background="@color/background"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/value_level3"
                            app:layout_constraintStart_toEndOf="@id/value_level2" />

                        <View
                            android:id="@+id/value_level3"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/gate_level3"
                            app:layout_constraintStart_toEndOf="@id/gate_level2" />

                        <View
                            android:id="@+id/gate_level3"
                            android:layout_width="2dp"
                            android:layout_height="8dp"
                            android:background="@color/background"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/value_level4"
                            app:layout_constraintStart_toEndOf="@id/value_level3" />

                        <View
                            android:id="@+id/value_level4"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/gate_level4"
                            app:layout_constraintStart_toEndOf="@id/gate_level3" />

                        <View
                            android:id="@+id/gate_level4"
                            android:layout_width="2dp"
                            android:layout_height="8dp"
                            android:background="@color/background"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/value_level5"
                            app:layout_constraintStart_toEndOf="@id/value_level4" />

                        <View
                            android:id="@+id/value_level5"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/gate_level5"
                            app:layout_constraintStart_toEndOf="@id/gate_level4" />

                        <View
                            android:id="@+id/gate_level5"
                            android:layout_width="2dp"
                            android:layout_height="8dp"
                            android:background="@color/background"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/value_level6"
                            app:layout_constraintStart_toEndOf="@id/value_level5" />

                        <View
                            android:id="@+id/value_level6"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/gate_level6"
                            app:layout_constraintStart_toEndOf="@id/gate_level5" />

                        <View
                            android:id="@+id/gate_level6"
                            android:layout_width="2dp"
                            android:layout_height="8dp"
                            android:layout_marginEnd="20dp"
                            android:background="@color/transparent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/value_level6" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!--  Vip Level Card Banner  -->
            <com.stx.xhb.androidx.XBanner
                android:id="@+id/banner_vip_level"
                android:layout_width="match_parent"
                android:layout_height="134dp"
                app:isAutoPlay="false"
                app:isClipChildrenMode="true"
                app:isHandLoop="false"
                app:pageChangeDuration="800"
                app:pointsVisibility="false" />
            <!--  Tips For Next Level  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/next_level_requirement"
                    android:textColor="@color/blue7"
                    android:textSize="@dimen/textSize14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_next_level_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue7"
                    android:textSize="@dimen/textSize14sp"
                    android:textStyle="bold"
                    tools:text="VIP2 白银会员" />
            </LinearLayout>
            <!--  Member Growth Progress Bar  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/growth"
                    android:textColor="@color/main"
                    android:textSize="@dimen/textSize14sp"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/pb_user_growth"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="20dp"
                    android:progressDrawable="@drawable/color_vip_level_progress_bar"
                    tools:max="6"
                    tools:progress="3" />


                <!--Tips amount for next-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/next_level_tips"
                        android:textColor="@color/colorGrayDark"
                        android:textSize="@dimen/textSize12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/currency_symbol"
                        android:textColor="@color/colorGrayDark"
                        android:textSize="@dimen/textSize12sp" />

                    <TextView
                        android:id="@+id/tv_requirement_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGrayDark"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="500.00" />
                </LinearLayout>
            </LinearLayout>
            <!--  Vip Level Description  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">
                <!--  Vip Level Description Selector -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="@null"
                    app:contentPaddingLeft="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:layout_marginBottom="14dp"
                            android:text="@string/title_rebates_selector_form"
                            android:textColor="@color/main"
                            android:textSize="@dimen/textSize13sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:background="@color/bright_gray2" />

                        <org.cxct.sportlottery.ui.component.StatusSelectorView
                            android:id="@+id/sv_third_games"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            app:defaultBottomSheetTitleText=""
                            app:horizontalChainStyle="spread_inside" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <!--  Vip Level Description Form  -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="@null"
                    app:contentPaddingBottom="5dp"
                    app:contentPaddingLeft="10dp"
                    app:contentPaddingRight="10dp"
                    app:contentPaddingTop="10dp">

                    <androidx.recyclerview.widget.RecyclerView
            android:overScrollMode="never"
                        android:id="@+id/rv_third_rebates"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>