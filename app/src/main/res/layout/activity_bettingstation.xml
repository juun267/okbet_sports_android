<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <org.cxct.sportlottery.view.CustomTopToolbar
        android:id="@+id/custom_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF"
        app:topTitleText="@string/P457"/>

  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:orientation="vertical"
          android:background="@color/color_F5F5F7">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center_horizontal">
              <TextView
                  android:id="@+id/tvTitle"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/margin_30"
                  android:textSize="@dimen/textSize30sp"
                  android:textColor="@color/color_3C4858"
                  android:textStyle="bold"
                  android:text="@string/N910"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginHorizontal="100dp"
                  android:gravity="center"
                  android:lineHeight="@dimen/margin_16"
                  android:layout_marginTop="@dimen/margin_12"
                  android:textSize="@dimen/textSize12sp"
                  android:textColor="@color/color_3C4858"
                  android:text="Grander Gaming, More Service Offering, and Expanded Location!"/>
              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/margin_15"
                  android:adjustViewBounds="true"
                  android:src="@drawable/bg_home_bettingstation_top"/>
          </LinearLayout>
          <org.cxct.sportlottery.ui.maintab.home.view.HomeBettingStationView
              android:id="@+id/bettingStationView"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="-35dp"/>
          <org.cxct.sportlottery.ui.maintab.home.view.HomeBottomView
              android:id="@+id/bottomView"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
      </LinearLayout>
  </androidx.core.widget.NestedScrollView>

</LinearLayout>
