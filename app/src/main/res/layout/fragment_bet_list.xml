                        android:src="@drawable/ic_close_gray" />
                </LinearLayout>-->
            </FrameLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/betTypeTabLayout"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_below="@id/fl_title"
                app:tabIndicatorColor="@color/color_317FFF_0760D4"
                app:tabIndicatorFullWidth="true"
                app:tabMode="fixed"
                app:tabPaddingEnd="0dp"
                app:tabPaddingStart="0dp"
                app:tabRippleColor="@null"
                app:tabSelectedTextColor="@color/color_CCCCCC_333333"
                app:tabTextAppearance="@style/NoUppercaseTab"
                app:tabTextColor="@color/color_CCCCCC_999999">

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/first_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout="@layout/item_bet_list_tab" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/second_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout="@layout/item_bet_list_tab" />

            </com.google.android.material.tabs.TabLayout>

            <!--<View
                android:id="@+id/gray_view"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_below="@+id/fl_title"
                android:background="@color/color_212121_eeeeee" />-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ll_container"
                android:layout_below="@id/betTypeTabLayout">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_bet_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:overScrollMode="never"
                    app:layout_constraintBottom_toTopOf="@+id/ll_keyboard_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:itemCount="2"
                    tools:listitem="@layout/content_bet_info_item_v3" />

                <View
                    android:id="@+id/shadow"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:background="@drawable/bg_gradient_bottom_sheet_shadow"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/ll_keyboard_bg"
                    app:layout_constraintStart_toStartOf="parent" />

                <LinearLayout
                    android:id="@+id/ll_keyboard_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_191919_FCFCFC"
                    android:orientation="horizontal"
                    android:padding="6dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <org.cxct.sportlottery.ui.common.CustomKeyBoardView
                        android:id="@+id/kv_keyboard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:background="@color/color_191919_FCFCFC"
                        android:keyBackground="@drawable/bg_frame_6dp_white"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_no_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ll_container"
                android:layout_below="@+id/fl_title"
                android:background="@color/color_191919_FCFCFC"
                android:visibility="gone"
                tools:visibility="gone">

                <ImageView
                    android:id="@+id/iv_no_data"
                    android:layout_width="65dp"
                    android:layout_height="69dp"
                    android:src="@drawable/icon_no_data"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guide_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:text="@string/bet_list_empty"
                    android:textColor="@color/color_A3A3A3_666666"
                    android:textSize="@dimen/textSize14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_no_data" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guide_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.25" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/ll_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/cl_total_info"
                android:orientation="vertical">

                <View
                    android:id="@+id/line_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@drawable/bg_gradient_bottom_sheet_shadow" />

                <LinearLayout
                    android:id="@+id/ll_more_option"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="@color/color_191919_FCFCFC"
                    android:gravity="center"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bet_list_view_more_options"
                        android:textColor="@color/color_A3A3A3_666666"
                        android:textSize="@dimen/textSize12sp" />

                    <TextView
                        android:id="@+id/tv_more_options_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_4"
                        android:textColor="@color/color_317FFF_0760D4"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="(3)" />

                    <ImageView
                        android:id="@+id/iv_arrow_more_options"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_4"
                        android:src="@drawable/ic_arrow_gray_top"
                        tools:src="@drawable/ic_arrow_gray_top" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_212121_eeeeee" />

                <LinearLayout
                    android:id="@+id/ll_parlay_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/tv_odds_changed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bet_info_odd_content_changed"
                        android:visibility="gone" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_parlay_list"
                        android:layout_width="match_parent"
                        android:layout_height="235dp"
                        android:overScrollMode="never"
                        tools:listitem="@layout/item_bet_list_batch_control_connect_v3"/>

                    <View
                        android:id="@+id/shadow_parlay_list"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@drawable/bg_gradient_bottom_sheet_shadow" />

                </LinearLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_total_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ll_bet"
                android:background="@color/color_2B2B2B_FCFCFC"
                android:paddingStart="12dp"
                android:paddingTop="6dp"
                android:paddingEnd="12dp"
                android:paddingBottom="6dp">

                <TextView
                    android:id="@+id/title_all_bet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bet_info_all_bet"
                    android:textColor="@color/color_A3A3A3_666666"
                    android:textSize="@dimen/textSize14sp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/divider_all_bet"
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="6dp"
                    android:background="@color/color_A3A3A3_666666"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/title_all_bet"
                    app:layout_constraintStart_toEndOf="@+id/title_all_bet"
                    app:layout_constraintTop_toTopOf="@+id/title_all_bet" />

                <TextView
                    android:id="@+id/tv_all_bet_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textColor="@color/color_CCCCCC_333333"
                    android:textSize="@dimen/textSize14sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/title_all_bet"
                    app:layout_constraintStart_toEndOf="@+id/divider_all_bet"
                    app:layout_constraintTop_toTopOf="@+id/title_all_bet"
                    tools:text="0" />

                <TextView
                    android:id="@+id/tv_total_bet_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:gravity="end"
                    android:textColor="@color/color_CCCCCC_333333"
                    android:textSize="@dimen/textSize14sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/title_all_bet"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_all_bet_count"
                    app:layout_constraintTop_toTopOf="@+id/title_all_bet"
                    tools:text="0.000 RMB" />

                <TextView
                    android:id="@+id/title_winnable_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bet_list_win_quota"
                    android:textColor="@color/color_A3A3A3_666666"
                    android:textSize="@dimen/textSize14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_all_bet" />

                <TextView
                    android:id="@+id/tv_total_winnable_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:gravity="end"
                    android:textColor="@color/color_317FFF_0760D4"
                    android:textSize="@dimen/textSize14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/title_winnable_amount"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/title_winnable_amount"
                    app:layout_constraintTop_toTopOf="@+id/title_winnable_amount"
                    tools:text="PHP 0.000" />

            </androidx.constraintlayout.widget.ConstraintLayout>



