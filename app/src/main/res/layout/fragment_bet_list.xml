            <LinearLayout
                android:id="@+id/ll_bet"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_141414_F3F4F5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_8"
                android:paddingRight="@dimen/margin_8">

                <ImageView
                    android:id="@+id/btn_delete_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_radius_4_button_ededed"
                    android:padding="12dp"
                    android:src="@drawable/ic_trash_bin_red"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <org.cxct.sportlottery.ui.bet.list.FastBetSettingButton
                    android:id="@+id/button_fast_bet_setting"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="8dp"
                    android:visibility="gone" />

                <org.cxct.sportlottery.ui.bet.list.BetButton
                    android:id="@+id/btn_bet"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1" />
            </LinearLayout>

