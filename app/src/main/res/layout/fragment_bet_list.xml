                android:id="@+id/tv_warn_odds_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ll_odds_close_warn"
                android:background="@color/color_232628_EAF4FE"
                android:gravity="center"
