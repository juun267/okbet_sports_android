        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/tool_bar_notification_height"
            android:background="@color/color_191919_FCFCFC"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            tools:context=".ui.game.betList.BetListFragment">

            <FrameLayout
                android:id="@+id/fl_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_title"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_gradient_0068d6_0054ac">

                    <ImageView
                        android:id="@+id/iv_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="9dp"
                        android:paddingEnd="9dp"
                        android:background="@color/color_1A000000_1A000000"
                        android:src="@drawable/ic_arrow_down_white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_bet_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_8"
                        android:text="@string/bet_list_title"
                        android:textColor="@color/color_FFFFFF_FFFFFF"
                        android:textSize="@dimen/textSize14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_bet_list_count"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/bg_circle_white"
                        app:layout_constraintBottom_toBottomOf="@id/tv_bet_list_count"
                        app:layout_constraintEnd_toEndOf="@id/tv_bet_list_count"
                        app:layout_constraintStart_toStartOf="@id/tv_bet_list_count"
                        app:layout_constraintTop_toTopOf="@id/tv_bet_list_count" />

                    <TextView
                        android:id="@+id/tv_bet_list_count"
                        android:layout_width="14dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:gravity="center"
                        android:textColor="@color/color_317FFF_0760D4"
                        android:textSize="@dimen/textSize12sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="10" />

                    <TextView
                        android:id="@+id/tv_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_4"
                        android:text="0.000"
                        android:textSize="@dimen/textSize14sp"
                        android:textColor="@color/color_FFFFFF_FFFFFF"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/iv_arrow"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="9,875,241.000" />

                    <TextView
                        android:id="@+id/tv_balance_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_4"
                        android:textSize="@dimen/textSize14sp"
                        android:textColor="@color/color_FFFFFF_FFFFFF"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_balance"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="PHP" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--<LinearLayout
                    android:id="@+id/ll_delete_all"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="44dp"
