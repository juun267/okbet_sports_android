<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="gameViewModel"
            type="org.cxct.sportlottery.ui.game.GameViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/bg_dim_mount"
            android:alpha="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/transparent_black_50"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical"
            tools:ignore="SpUsage, ContentDescription">

            <!--<include
                android:id="@+id/tool_bar"
                layout="@layout/view_toolbar_main"
                android:background="@color/transparent_black_0"
                android:visibility="invisible" />-->

            <LinearLayout
                android:id="@+id/ll_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bet_list_top_padding_height"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                tools:context=".ui.game.betList.BetListFragment">

                <FrameLayout
                    android:id="@+id/fl_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <include
                        android:id="@+id/cl_title"
                        layout="@layout/bet_bar_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bet_list_bar_height" />

                </FrameLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/color_202541_FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/color_202541_FFFFFF">

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/betTypeTabLayout"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginHorizontal="65dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tabIndicator="@drawable/custom_bet_list_tab_indicator"
                            app:tabIndicatorFullWidth="true"
                            app:tabMode="fixed"
                            app:tabPaddingEnd="0dp"
                            app:tabPaddingStart="0dp"
                            app:tabRippleColor="@null"
                            app:tabSelectedTextColor="@color/color_FFFFFF_414655"
                            app:tabTextAppearance="@style/NoUppercaseTab"
                            app:tabTextColor="@color/color_A7B2C4">

                            <com.google.android.material.tabs.TabItem
                                android:id="@+id/first_tab"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout="@layout/item_bet_list_tab" />

                            <com.google.android.material.tabs.TabItem
                                android:id="@+id/second_tab"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout="@layout/item_bet_list_tab" />

                        </com.google.android.material.tabs.TabLayout>

                        </FrameLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_212121_eeeeee" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_bet_list"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:overScrollMode="never"
                            tools:itemCount="2"
                            tools:listitem="@layout/content_bet_info_item_v3" />
                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_no_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_191919_FCFCFC"
                        android:visibility="gone"
                        tools:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_no_data"
                            android:layout_width="65dp"
                            android:layout_height="69dp"
                            android:src="@drawable/icon_no_data"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/guide_line" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="19dp"
                            android:text="@string/bet_list_empty"
                            android:textColor="@color/color_909090_666666"
                            android:textSize="@dimen/textSize14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/iv_no_data" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guide_line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_percent="0.25" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/line_shadow"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@drawable/bg_gradient_bottom_sheet_shadow"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/ll_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradient_bet_total"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/cl_parlay_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:visibility="gone"
                        tools:visibility="gone">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_parlay_list"
                            android:layout_width="match_parent"
                            android:layout_height="246dp"
                            android:layout_marginTop="12.5dp"
                            android:layout_marginBottom="10.5dp"
                            android:overScrollMode="never"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:itemCount="2"
                            tools:listitem="@layout/item_bet_list_batch_control_connect_v3" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/cl_single_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:visibility="gone"
                        tools:visibility="gone">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_single_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12.5dp"
                            android:layout_marginBottom="10.5dp"
                            android:overScrollMode="never"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:itemCount="1"
                            tools:listitem="@layout/item_bet_list_batch_control_v3" />
                    </FrameLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_total_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="2dp">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/total_info_guide_line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.5" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/total_info_guide_line">
                            <TextView
                                android:id="@+id/title_all_bet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_capital"
                                android:textColor="@color/color_9BB3D9_535D76"
                                android:textSize="@dimen/textSize12sp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_total_bet_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:textColor="@color/color_FFFFFF_414655"
                                android:textSize="@dimen/textSize12sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@+id/title_all_bet"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/title_all_bet"
                                app:layout_constraintTop_toTopOf="@+id/title_all_bet"
                                tools:text="0.000" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/total_info_guide_line">
                            <TextView
                                android:id="@+id/title_winnable_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_win_amount"
                                android:textColor="@color/color_9BB3D9_535D76"
                                android:textSize="@dimen/textSize12sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/title_all_bet" />

                            <TextView
                                android:id="@+id/tv_total_winnable_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:textColor="@color/color_DB6372"
                                android:textSize="@dimen/textSize12sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@+id/title_winnable_amount"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/title_winnable_amount"
                                app:layout_constraintTop_toTopOf="@+id/title_winnable_amount"
                                tools:text="0.000" />
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>


                <!--<TextView
                    android:id="@+id/tv_warn_odds_change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/ll_odds_close_warn"
                    android:background="@color/color_232628_EAF4FE"
                    android:gravity="center"
                    android:paddingStart="@dimen/margin_8"
                    android:paddingTop="3dp"
                    android:paddingEnd="@dimen/margin_8"
                    android:paddingBottom="3dp"
                    android:text="@string/bet_info_odd_content_changed"
                    android:textColor="@color/color_E44438_e44438"
                    android:textSize="@dimen/textSize12sp"
                    android:visibility="gone"
                    tools:visibility="gone" />-->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradient_bet_total"
                    android:padding="14dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_delete_all"
                        android:layout_width="102dp"
                        android:layout_height="45dp"
                        android:background="@drawable/bg_radius_8_bet_delete"
                        android:gravity="center"
                        android:text="@string/delete_bet"
                        android:textColor="@color/color_E23434_E23434"
                        android:textSize="@dimen/textSize16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <org.cxct.sportlottery.ui.bet.list.BetButton
                        android:id="@+id/btn_bet"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/bet_button_height"
                        android:layout_marginStart="6dp"
                        android:layout_weight="1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/btn_delete_all"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!--region bet loading view-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/betLoadingView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/button_radius_8_bet_button"
                        android:visibility="gone"
                        tools:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/btn_bet"
                        app:layout_constraintEnd_toEndOf="@+id/btn_bet"
                        app:layout_constraintStart_toStartOf="@+id/btn_bet"
                        app:layout_constraintTop_toTopOf="@+id/btn_bet">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/submitting"
                                android:textColor="@color/color_FFFFFF_FFFFFF"
                                android:textSize="@dimen/textSize16sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ProgressBar
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="12dp"
                                android:indeterminateDrawable="@drawable/rotate_bet_loading_view" />
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!--endregion bet loading view-->

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 選項關閉提示 -->
                <!--<LinearLayout
                    android:id="@+id/ll_odds_close_warn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/ll_bet"
                    android:background="@color/color_232628_EAF4FE"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/margin_8"
                    android:paddingTop="3dp"
                    android:paddingEnd="@dimen/margin_8"
                    android:paddingBottom="3dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/tv_odds_closed_changed"
                        android:layout_width="match_parent"
