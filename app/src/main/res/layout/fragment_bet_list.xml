<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/bg_dim_mount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@color/transparent_black_50"
        android:clickable="true"
        android:focusable="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/bet_list_top_padding_height"
        tools:ignore="SpUsage, ContentDescription">

        <!--<include
            android:id="@+id/tool_bar"
            layout="@layout/view_toolbar_main"
            android:background="@color/transparent_black_0"
            android:visibility="invisible" />-->


        <RelativeLayout
            android:id="@+id/ll_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/clContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ll_container">

                <include
                    android:id="@+id/cl_title"
                    layout="@layout/bet_bar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_above="@+id/clContainer"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/bet_list_bar_height"
                    android:background="@color/color_80334266_E3E8EE"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_bet_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never"
                    android:layout_marginTop="45dp"
                    android:background="@color/color_202541_FFFFFF"
                    tools:itemCount="1"
                    tools:listitem="@layout/content_bet_info_item_v3" />

                <View
                    android:id="@+id/line_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@drawable/bg_gradient_bottom_sheet_shadow"
                    android:layout_gravity="bottom" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gradient_bet_total"
                android:orientation="vertical"
                android:layout_above="@+id/parlayLayout">

                <!--串关投注-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/cl_parlay_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_parlay_list"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:overScrollMode="never"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:itemCount="1"
                        tools:listitem="@layout/item_bet_list_batch_control_connect_v3" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clExpandOrStacked"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvExpandOrStacked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:drawableEnd="@drawable/ic_arrow_down_blue"
                            android:drawablePadding="4dp"
                            android:gravity="center"
                            android:paddingVertical="15dp"
                            android:text="@string/expand_more_combinations"
                            android:textColor="@color/color_025BE8"
                            android:textSize="11sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvDeleteAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_15"
                            android:background="@drawable/bg_delete_button"
                            android:paddingHorizontal="7dp"
                            android:paddingVertical="1dp"
                            android:text="@string/delete_bet_all"
                            android:textColor="@color/color_9BB3D9_535D76"
                            android:textSize="@dimen/textSize12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.988"
                            app:layout_constraintStart_toEndOf="@+id/tvExpandOrStacked"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="14dp"
                            android:background="@color/color_E3E8EE"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <!--                        <include-->
                    <!--                            android:id="@+id/includeOddsLayout"-->
                    <!--                            layout="@layout/include_bet_odds_tips_parlay" />-->
                </androidx.appcompat.widget.LinearLayoutCompat>

                <!--单项投注-->
                <FrameLayout
                    android:id="@+id/cl_single_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_single_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12.5dp"
                        android:layout_marginBottom="8.5dp"
                        android:overScrollMode="never"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:itemCount="1"
                        tools:listitem="@layout/item_bet_list_batch_control_v3" />
                </FrameLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_total_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp"
                    android:paddingTop="8dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/total_info_guide_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <LinearLayout
                        android:id="@+id/ll_total_stake"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/title_all_bet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_capital"
                            android:textColor="@color/color_9BB3D9_535D76"
                            android:textSize="@dimen/textSize12sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/tv_total_bet_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:textColor="@color/color_FFFFFF_414655"
                            android:textSize="@dimen/textSize12sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/title_all_bet"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/title_all_bet"
                            app:layout_constraintTop_toTopOf="@+id/title_all_bet"
                            tools:text="0.000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_est_winning"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/total_info_guide_line"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/title_winnable_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_win_amount"
                            android:textColor="@color/color_9BB3D9_535D76"
                            android:textSize="@dimen/textSize12sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/title_all_bet" />

                        <TextView
                            android:id="@+id/tv_total_winnable_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textColor="@color/color_DB6372"
                            android:textSize="@dimen/textSize12sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/title_winnable_amount"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/title_winnable_amount"
                            app:layout_constraintTop_toTopOf="@+id/title_winnable_amount"
                            tools:text="0.000" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <!--                <include layout="@layout/include_bet_odds_tips_parlay_warn" />-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/parlayLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_gradient_bet_total"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="14dp">

                <TextView
                    android:id="@+id/btnParlaySingle"
                    android:layout_width="102dp"
                    android:layout_height="45dp"
                    android:background="@drawable/bg_radius_8_bet_parlay"
                    android:gravity="center"
                    android:text="@string/bet_parlay"
                    android:textColor="@color/color_25BF63"
                    android:textSize="@dimen/textSize16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <org.cxct.sportlottery.ui.bet.list.BetButton
                    android:id="@+id/btn_bet"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/bet_button_height"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btnParlaySingle"
                    app:layout_constraintTop_toTopOf="parent" />

                <!--region bet loading view-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/betLoadingView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/button_radius_8_bet_button"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/btn_bet"
                    app:layout_constraintEnd_toEndOf="@+id/btn_bet"
                    app:layout_constraintStart_toStartOf="@+id/btn_bet"
                    app:layout_constraintTop_toTopOf="@+id/btn_bet"
                    tools:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/submitting"
                            android:textColor="@color/color_FFFFFF_FFFFFF"
                            android:textSize="@dimen/textSize16sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ProgressBar
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="12dp"
                            android:indeterminateDrawable="@drawable/rotate_bet_loading_view" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <!--endregion bet loading view-->

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!-- 選項關閉提示 -->
            <!--<LinearLayout
                android:id="@+id/ll_odds_close_warn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ll_bet"
                android:background="@color/color_232628_EAF4FE"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin_8"
                android:paddingTop="3dp"
                android:paddingEnd="@dimen/margin_8"
                android:paddingBottom="3dp"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/tv_odds_closed_changed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3dp"
                    android:text="@string/bet_info_odd_content_changed"
                    android:textAlignment="center"
                    android:textColor="@color/color_E44438_e44438"
                    android:textSize="@dimen/textSize12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3dp"
                    android:text="@string/bet_info_odd_content_close"
                    android:textAlignment="center"
                    android:textColor="@color/color_E44438_e44438"
                    android:textSize="@dimen/textSize12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bet_info_remove_closed"
                    android:textColor="@color/color_317FFF_0760D4"
                    android:textSize="@dimen/textSize12sp" />
            </LinearLayout>-->

        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/blockTouchView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_black_1"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

</FrameLayout>

