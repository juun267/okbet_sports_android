    <!-- 號碼 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPlayAndCateName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Đầu Đuôi (Đuôi) " />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/llPlanNumberReRecyclerView"
            android:layout_width="0dp"
            android:layout_height="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvPlayAndCateName"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_bet_follow"
        android:layout_width="94dp"
        android:layout_height="26dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/skin_btn_credit_effect_blue"
        android:text="Theo Cược"
        android:textAllCaps="false"
        android:textColor="@color/press_gray_white_effect" />
