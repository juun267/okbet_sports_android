<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/okbet_bg_login"
    tools:context=".ui.login.signIn.LoginActivity"
    tools:ignore="MissingDefaultResource,SpUsage">

    <include
        android:id="@+id/v_top"
        layout="@layout/view_status_bar" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="26dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@null"
        android:contentDescription="@null"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:src="@drawable/ic_arrow_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_top" />

    <com.flyjingfish.gradienttextviewlib.GradientTextView
        android:id="@+id/tv_title_forget_password"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="@string/recover_password"
        app:layout_constraintTop_toBottomOf="@+id/v_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:gradient_angle="270"
        app:gradient_startColor="@color/color_71ADFF"
        app:gradient_endColor="@color/color_1971FD" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="151dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/logo_okbet_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/sv_content_view"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginHorizontal="@dimen/margin_14"
            android:orientation="vertical"
            android:background="@drawable/okbet_bg_login_card">

            <Button
                android:id="@+id/btnPhoneWays"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginHorizontal="@dimen/margin_20"
                android:layout_marginBottom="@dimen/margin_30"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@drawable/ic_submit"
                android:text="@string/phone_number"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize17sp"/>

            <Button
                android:id="@+id/btnEmailWays"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginHorizontal="@dimen/margin_20"
                android:layout_marginBottom="@dimen/margin_30"
                android:background="@drawable/ic_submit"
                android:text="@string/e_mail"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize17sp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_live_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_marginEnd="@dimen/dp_4"
                    android:layout_width="@dimen/margin_18"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_customer_service"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_live_chat"/>

                <TextView
                    android:id="@+id/tv_live_chat"
                    android:textColor="@color/color_025BE8"
                    android:text="@string/live_chat"
                    android:layout_marginEnd="@dimen/margin_20"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/bottom_liences"
        layout="@layout/bottom_register_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_48"
        android:layout_marginBottom="@dimen/margin_20"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>