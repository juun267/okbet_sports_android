<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F0F5FA"
    android:orientation="vertical"
    tools:context=".ui.profileCenter.nickname.ModifyProfileInfoActivity">

    <org.cxct.sportlottery.view.CustomTopToolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:topTitleText="@string/auth_login"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="@dimen/margin_12"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:background="@drawable/bg_white_radius_12"
            android:visibility="visible">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_facebook"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_0D2245"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="@string/facebook" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_BEC7DC"
                    android:textSize="12sp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="@string/hint_link_facebook" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_check_facebook"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="80dp"
                android:gravity="center"
                android:paddingHorizontal="@dimen/margin_10"
                android:textColor="@color/color_535D76"
                android:textSize="14sp"
                android:background="@drawable/bg_stroke_radius_8_gray"
                android:text="@string/link" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_white_radius_12"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_google"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_0D2245"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="@string/google" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_BEC7DC"
                    android:textSize="12sp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="@string/hint_link_google" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_check_google"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:paddingHorizontal="@dimen/margin_10"
                android:minWidth="80dp"
                android:gravity="center"
                android:textColor="@color/color_FFFFFF"
                android:textSize="14sp"
                android:background="@drawable/button_radius_8_bet_button"
                android:text="@string/linked" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="14dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/color_535D76"
            android:textColorLink="@color/color_025BE8"
            android:textSize="@dimen/textSize13sp"
            android:lineSpacingExtra="3dp"
            android:text="@string/help" />

        <TextView
            android:id="@+id/tv_customer_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:drawablePadding="3dp"
            android:gravity="left"
            android:drawableLeft="@drawable/ic_customer_service"
            android:textColor="@color/color_025BE8"
            android:textSize="@dimen/textSize13sp"
            android:text="@string/live_service" />
    </LinearLayout>

</LinearLayout>