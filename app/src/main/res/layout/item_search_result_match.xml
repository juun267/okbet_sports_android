<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/margin_14"
        android:text="16/02 03:00AM "
        android:textColor="@color/colorGray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvMatch"
        app:layout_constraintBottom_toBottomOf="@+id/tvMatch"/>

    <org.cxct.sportlottery.widget.highLightTextView.HighlightTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvMatch"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/margin_14"
        android:textStyle="bold"
        app:highlightText="UFC"
        android:text="Lorem ipsum UFC dolor sit amet,"
        app:highlightRadius="0dp"
        android:gravity="left"
        android:ellipsize="end"
        android:lines="1"
        app:highlightColor="@color/colorBlue"
        app:highlightTextColor="@color/colorWhite"
        app:layout_constraintStart_toEndOf="@+id/tvTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>