<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="81dp"
    android:foreground="@drawable/fg_ripple"
    android:orientation="vertical"
    android:paddingHorizontal="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivSRMAwayLogo"
                android:layout_width="32dp"
                android:padding="6dp"
                android:layout_height="32dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/bg_team_logo" />

            <ImageView
                android:id="@+id/ivSRMHomeLogo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="6dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/bg_team_logo" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <org.cxct.sportlottery.view.highLightTextView.HighlightTextView
                android:id="@+id/tv_home_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:lineSpacingExtra="4dp"
                android:maxLines="1"
                android:text="Lorem ipsum UFC dolor sit amet,"
                android:textColor="@color/color_14366B"
                android:textSize="@dimen/margin_14"
                app:highlightColor="@color/transparent"
                app:highlightRadius="0dp"
                app:highlightText="UFC"
                app:highlightTextColor="@color/color_025BE8" />

            <org.cxct.sportlottery.view.highLightTextView.HighlightTextView
                android:id="@+id/tv_away_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="start"
                android:lineSpacingExtra="4dp"
                android:maxLines="1"
                android:text="Lorem ipsum UFC dolor sit amet,"
                android:textColor="@color/color_14366B"
                android:textSize="@dimen/margin_14"
                app:highlightColor="@color/transparent"
                app:highlightRadius="0dp"
                app:highlightText="UFC"
                app:highlightTextColor="@color/color_025BE8" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2022/08/13\n08:03:25"
            android:textColor="@color/color_A7B2C4"
            android:textSize="@dimen/textSize12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_191919_EEEFF0" />

</LinearLayout>