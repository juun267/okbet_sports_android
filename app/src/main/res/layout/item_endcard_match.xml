<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="124dp"
    android:paddingLeft="12dp"
    android:background="@color/color_213643">
    <View
        android:id="@+id/viewTop"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_0.5"
        android:layout_marginRight="@dimen/margin_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/color_071824" />
    <View
        android:layout_width="0.5dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="243dp"
        android:layout_marginBottom="55dp"
        android:background="@color/color_071824" />

    <ImageView
        android:id="@+id/ivHomeLogo"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="28dp"
        android:background="@drawable/bg_circle_team_log_dark"/>
    
    <TextView
        android:id="@+id/tvHomeName"
        android:layout_width="88dp"
        android:layout_height="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivHomeLogo"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="3dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/color_FFFFFF"
        android:textSize="12sp"
        android:maxLines="2"
        tools:text="Liaoning Flying Leopards"/>

    <TextView
        android:id="@+id/tvVS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvHomeName"
        android:layout_marginTop="20dp"
        android:layout_marginStart="4dp"
        android:textColor="#FFD600"
        android:textSize="14sp"
        android:text="VS"
        tools:viewBindingIgnore="true"/>


    <ImageView
        android:id="@+id/ivAwayLogo"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:padding="2dp"
        app:layout_constraintStart_toEndOf="@+id/tvVS"
        app:layout_constraintTop_toTopOf="@+id/ivHomeLogo"
        android:layout_marginStart="32dp"
        android:background="@drawable/bg_circle_team_log_dark"/>

    <TextView
        android:id="@+id/tvAwayName"
        android:layout_width="88dp"
        android:layout_height="32dp"
        app:layout_constraintLeft_toRightOf="@+id/tvVS"
        app:layout_constraintTop_toBottomOf="@+id/ivHomeLogo"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="3dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/color_FFFFFF"
        android:textSize="12sp"
        android:maxLines="2"
        tools:text="Liaoning Flying Leopards"/>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginEnd="19dp"
        android:gravity="center_horizontal"
        android:textSize="12sp"
        android:textColor="@color/color_638095"
        tools:text="Section 1 8:42"/>

    <TextView
        android:id="@+id/tvView"
        android:layout_width="100dp"
        android:layout_height="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTime"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="19dp"
        android:fontFamily="@font/helvetica_normal"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="@string/P303"/>

    <TextView
        android:id="@+id/tvNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="16dp"
        android:minHeight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="10sp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_24"
        android:layout_marginBottom="@dimen/margin_12"
        android:layout_marginRight="@dimen/margin_12"
        app:layout_constraintBottom_toBottomOf="parent">
       <LinearLayout
           android:id="@+id/linHot"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           app:layout_constraintLeft_toLeftOf="parent"
           android:gravity="center_vertical"
           android:background="@drawable/bg_darkblue_radius_12_283d49"
           android:paddingHorizontal="@dimen/margin_8">
          <ImageView
              android:layout_width="@dimen/margin_16"
              android:layout_height="@dimen/margin_16"
              android:src="@drawable/ic_endcard_fire"/>
           <TextView
               android:id="@+id/tvHotCount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="@dimen/margin_4"
               android:textColor="@color/color_638095"
               android:textSize="@dimen/textSize12sp"
               android:text="people are viewing card"/>

       </LinearLayout>
        <LinearLayout
            android:id="@+id/linRecord"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_vertical"
            android:background="@drawable/bg_darkblue_radius_12_283d49"
            android:paddingHorizontal="@dimen/margin_8">
            <ImageView
                android:layout_width="@dimen/margin_16"
                android:layout_height="@dimen/margin_16"
                android:src="@drawable/ic_endcard_betrecord"/>
            <TextView
                android:id="@+id/tvBetCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_4"
                android:textColor="@color/color_638095"
                android:textSize="@dimen/textSize12sp"
                android:text="85 slots sold"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>