<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="92dp"
    android:layout_marginTop="1dp"
    android:paddingTop="16dp"
    android:paddingLeft="12dp"
    android:background="@color/color_1A202E">
    
    <View
        android:layout_width="1dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="243dp"
        android:layout_marginBottom="16dp"
        android:background="@color/color_6D7693"
        android:alpha="0.5"/>

    <ImageView
        android:id="@+id/ivHomeLogo"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="28dp"
        android:background="@drawable/bg_circle_stroke_team_log_dark"/>
    
    <TextView
        android:id="@+id/tvHomeName"
        android:layout_width="88dp"
        android:layout_height="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivHomeLogo"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="-1dp"
        android:fontFamily="@font/helvetica_light"
        android:gravity="center"
        android:textColor="@color/color_BEC7DC"
        android:textSize="12sp"
        android:maxLines="2"
        tools:text="Liaoning Flying Leopards"/>

    <TextView
        android:id="@+id/tvVS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvHomeName"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:textColor="#FFD600"
        android:textSize="14sp"
        android:text="VS"
        tools:viewBindingIgnore="true"/>


    <ImageView
        android:id="@+id/ivAwayLogo"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:padding="2dp"
        app:layout_constraintStart_toEndOf="@+id/tvVS"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="32dp"
        android:background="@drawable/bg_circle_stroke_team_log_dark"/>

    <TextView
        android:id="@+id/tvAwayName"
        android:layout_width="88dp"
        android:layout_height="32dp"
        app:layout_constraintLeft_toRightOf="@+id/tvVS"
        app:layout_constraintTop_toBottomOf="@+id/ivHomeLogo"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="-1dp"
        android:fontFamily="@font/helvetica_light"
        android:gravity="center"
        android:textColor="@color/color_BEC7DC"
        android:textSize="12sp"
        android:maxLines="2"
        tools:text="Liaoning Flying Leopards"/>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="19dp"
        android:gravity="center_horizontal"
        android:textSize="12sp"
        android:textColor="@color/color_6D7693"
        tools:text="Section 1 8:42"/>

    <TextView
        android:id="@+id/tvView"
        android:layout_width="100dp"
        android:layout_height="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTime"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="19dp"
        android:fontFamily="@font/inter_regular"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="@string/P303"/>

    <TextView
        android:id="@+id/tvNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="16dp"
        android:minHeight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="10sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>