<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_0E131F"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linSettledMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rgDate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingHorizontal="@dimen/margin_12"
        android:background="@color/color_202839"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical|right">

        <RadioButton
            android:id="@+id/rbtnToday"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:fontFamily="@font/helvetica_normal"
            android:paddingHorizontal="@dimen/margin_12"
            android:text="@string/home_tab_today"
            android:textColor="@color/color_6d7693_ffffff"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/color_314363"
            android:layout_marginHorizontal="@dimen/margin_16"/>
        <RadioButton
            android:id="@+id/rbtnYesterday"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:fontFamily="@font/helvetica_light"
            android:paddingHorizontal="@dimen/margin_12"
            android:textColor="@color/color_6d7693_ffffff"
            android:text="@string/I023"/>
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/color_314363"
            android:layout_marginHorizontal="@dimen/margin_16"/>
        <RadioButton
            android:id="@+id/rbtnLast"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:fontFamily="@font/helvetica_light"
            android:paddingHorizontal="@dimen/margin_12"
            android:textColor="@color/color_6d7693_ffffff"
            android:text="@string/P128"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/margin_12"
        android:layout_marginTop="2dp"
        android:background="@color/color_1A202E">
     <LinearLayout
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:gravity="center"
         android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:fontFamily="@font/helvetica_light"
            android:textColor="@color/color_6D7693"
            android:textSize="@dimen/textSize12sp"
            android:text="@string/H018"/>
         <TextView
             android:id="@+id/tvTotalValue"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:lines="1"
             android:ellipsize="end"
             android:layout_marginTop="@dimen/margin_4"
             android:textColor="@color/color_BEC7DC"
             android:textSize="@dimen/textSize14sp"
             tools:text="1,000,000.00"/>

     </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:fontFamily="@font/helvetica_light"
                android:textColor="@color/color_6D7693"
                android:textSize="@dimen/textSize12sp"
                android:text="@string/P321"/>
            <TextView
                android:id="@+id/tvTotalbet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/margin_4"
                android:textColor="@color/color_BEC7DC"
                android:textSize="@dimen/textSize14sp"
                tools:text="27"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:fontFamily="@font/helvetica_light"
                android:textColor="@color/color_6D7693"
                android:textSize="@dimen/textSize12sp"
                android:text="@string/H020"/>
            <TextView
                android:id="@+id/tvReward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/margin_4"
                android:textColor="@color/color_BEC7DC"
                android:textSize="@dimen/textSize14sp"
                tools:text="1,000,000.00"/>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBetRecord"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/margin_4"
        android:orientation="vertical"
        tools:listitem="@layout/item_endcard_record"
        tools:itemCount="3"/>
</LinearLayout>