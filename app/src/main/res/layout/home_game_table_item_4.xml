<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="148dp"
    android:paddingEnd="12dp"
    tools:context=".ui.game.home.gameTable4.Vp2GameTable4Adapter"
    tools:ignore="spUsage,contentDescription"
    tools:maxHeight="148dp">

    <View
        android:id="@+id/table_match_info_border"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_game_name_away"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_game_name_home" />

    <TextView
        android:id="@+id/tv_game_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/home_tab_in_play2"
        android:textColor="@color/color_A3A3A3_666666"
        android:textSize="@dimen/textSize12sp"
        app:layout_constraintStart_toStartOf="@+id/table_match_info_border"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/test_match_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/colorRed"
        android:textSize="18dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tv_game_type"
        app:layout_constraintStart_toEndOf="@id/tv_game_type"
        app:layout_constraintTop_toTopOf="@id/tv_game_type" />

    <TextView
        android:id="@+id/tv_game_odd_match_cards_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_F75452_b73a20"
        android:textColor="@color/color_191919_FCFCFC"
        android:textSize="@dimen/textSize14sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/tv_game_score_home"
        app:layout_constraintEnd_toStartOf="@id/tv_game_score_home"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_game_score_home"
        tools:text="1"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_game_score_home"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:textColor="@color/color_F75452_b73a20"
        android:textSize="@dimen/textSize14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_game_name_home"
        app:layout_constraintStart_toStartOf="@+id/table_match_info_border"
        app:layout_constraintTop_toTopOf="@id/tv_game_name_home"
        tools:text="634"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_game_name_home"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        app:layout_goneMarginEnd="0dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:textColor="@color/color_FFFFFF_000000"
        android:textSize="@dimen/textSize14sp"
        app:layout_constraintEnd_toStartOf="@id/tv_game_total_score_home_center"
        app:layout_constraintStart_toEndOf="@id/tv_game_score_home"
        app:layout_constraintTop_toBottomOf="@id/tv_game_type"
        tools:text="皇家馬德里皇家馬德里" />

    <TextView
        android:id="@+id/tv_game_total_score_home_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingEnd="8dp"
        android:textColor="@color/color_F75452_b73a20"
        android:textSize="@dimen/textSize14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tv_game_name_home"
        app:layout_constraintEnd_toStartOf="@id/tv_game_score_home_center"
        app:layout_constraintStart_toEndOf="@id/tv_game_name_home"
        app:layout_constraintTop_toTopOf="@id/tv_game_name_home"
        tools:text="0"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_game_score_home_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingEnd="16dp"
        android:textColor="@color/color_e5e5e5_333333"
        android:textSize="@dimen/textSize14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tv_game_name_home"
        app:layout_constraintEnd_toEndOf="@id/table_match_info_border"
        app:layout_constraintStart_toEndOf="@id/tv_game_total_score_home_center"
        app:layout_constraintTop_toTopOf="@id/tv_game_name_home"
        tools:text="0"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_game_odd_match_cards_away"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_F75452_b73a20"
        android:textColor="@color/color_191919_FCFCFC"
        android:textSize="@dimen/textSize14sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/tv_game_score_away"
        app:layout_constraintEnd_toStartOf="@id/tv_game_score_away"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_game_score_away"
        tools:text="1"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_game_score_away"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingEnd="10dp"
        android:textColor="@color/color_F75452_b73a20"
        android:textSize="@dimen/textSize14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_game_name_away"
        app:layout_constraintStart_toStartOf="@+id/table_match_info_border"
        app:layout_constraintTop_toTopOf="@id/tv_game_name_away"
        tools:text="0"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_game_name_away"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginEnd="5dp"
        app:layout_goneMarginEnd="0dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:textColor="@color/color_FFFFFF_000000"
        android:textSize="@dimen/textSize14sp"
        app:layout_constraintEnd_toStartOf="@id/tv_game_total_score_away_center"
        app:layout_constraintStart_toEndOf="@id/tv_game_score_away"
        app:layout_constraintTop_toBottomOf="@id/tv_game_name_home"
        tools:text="皇家馬德里皇家馬德里" />

    <TextView
        android:id="@+id/tv_game_total_score_away_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingEnd="8dp"
        android:textColor="@color/color_F75452_b73a20"
        android:textSize="@dimen/textSize14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tv_game_name_away"
        app:layout_constraintEnd_toStartOf="@id/tv_game_score_away_center"
        app:layout_constraintStart_toEndOf="@id/tv_game_name_away"
        app:layout_constraintTop_toTopOf="@id/tv_game_name_away"
        tools:text="0"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_game_score_away_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingEnd="16dp"
        android:textColor="@color/color_e5e5e5_333333"
        android:textSize="@dimen/textSize14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tv_game_name_away"
        app:layout_constraintEnd_toEndOf="@id/table_match_info_border"
        app:layout_constraintStart_toEndOf="@id/tv_game_total_score_away_center"
        app:layout_constraintTop_toTopOf="@id/tv_game_name_away"
        tools:text="0"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_play_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ou_hdp_hdp_title"
        android:textColor="@color/color_A3A3A3_666666"
        android:textSize="@dimen/textSize12sp"
        app:layout_constraintEnd_toEndOf="@id/btn_match_odd3"
        app:layout_constraintStart_toStartOf="@id/btn_match_odd1"
        app:layout_constraintTop_toTopOf="@id/tv_game_type" />

    <org.cxct.sportlottery.ui.game.widget.OddsButton
        android:id="@+id/btn_match_odd1"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_game_name_away"
        app:layout_constraintEnd_toStartOf="@id/btn_match_odd2"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@id/tv_game_name_home" />

    <org.cxct.sportlottery.ui.game.widget.OddsButton
        android:id="@+id/btn_match_odd2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_game_name_away"
        app:layout_constraintEnd_toStartOf="@+id/btn_match_odd3"
        app:layout_constraintStart_toEndOf="@+id/btn_match_odd1"
        app:layout_constraintTop_toTopOf="@id/tv_game_name_home" />

    <org.cxct.sportlottery.ui.game.widget.OddsButton
        android:id="@+id/btn_match_odd3"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tv_game_name_away"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_match_odd2"
        app:layout_constraintTop_toTopOf="@id/tv_game_name_home"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/color_FFFFFF_000000"
        android:textSize="@dimen/textSize12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/table_match_info_border"
        app:layout_constraintTop_toBottomOf="@+id/table_match_info_border"
        tools:text="5–3"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:paddingEnd="4dp"
        android:textColor="@color/color_FFFFFF_000000"
        android:textSize="@dimen/textSize12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_score"
        app:layout_constraintTop_toBottomOf="@+id/table_match_info_border"
        tools:text="15–30"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_match_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:paddingEnd="4dp"
        android:textColor="@color/color_FFFFFF_000000"
        android:textSize="@dimen/textSize12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_point"
        app:layout_constraintTop_toBottomOf="@+id/table_match_info_border"
        tools:text="@string/second_session" />

    <TextView
        android:id="@+id/tv_match_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:paddingEnd="0dp"
        android:textColor="@color/color_FFFFFF_000000"
        android:textSize="@dimen/textSize12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_match_status"
        app:layout_constraintTop_toBottomOf="@+id/table_match_info_border"
        tools:text="90:31" />

    <ImageView
        android:id="@+id/iv_match_in_play"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginStart="10dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_inplay_v4"
        app:layout_constraintBottom_toBottomOf="@+id/tv_match_play_type_count"
        app:layout_constraintStart_toEndOf="@id/tv_match_time"
        app:layout_constraintTop_toTopOf="@+id/tv_match_play_type_count" />

    <ImageView
        android:id="@+id/iv_match_price"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginStart="10dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_price_v4"
        app:layout_constraintBottom_toBottomOf="@id/tv_match_play_type_count"
        app:layout_constraintStart_toEndOf="@id/iv_match_in_play"
        app:layout_constraintTop_toTopOf="@id/tv_match_play_type_count" />

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_live_player"
        app:layout_constraintBottom_toBottomOf="@id/tv_match_play_type_count"
        app:layout_constraintStart_toEndOf="@id/iv_match_price"
        app:layout_constraintTop_toTopOf="@id/tv_match_play_type_count" />

    <ImageView
        android:id="@+id/iv_animation"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_icon_game_schedule"
        app:layout_constraintBottom_toBottomOf="@id/tv_match_play_type_count"
        app:layout_constraintStart_toEndOf="@id/iv_play"
        app:layout_constraintTop_toTopOf="@id/tv_match_play_type_count" />

    <TextView
        android:id="@+id/tv_match_play_type_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:drawablePadding="6dp"
        android:textColor="@color/color_A3A3A3_666666"
        android:textSize="@dimen/textSize12sp"
        android:textStyle="bold"
        app:drawableRightCompat="@drawable/ic_iconarrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_animation"
        app:layout_constraintTop_toBottomOf="@+id/table_match_info_border"
        tools:text="54" />

    <ImageView
        android:id="@+id/btn_chart"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_chart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_star"
        app:layout_constraintTop_toTopOf="@+id/btn_star"
        app:tint="@color/color_A3A3A3_666666" />

    <ImageView
        android:id="@+id/btn_star"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/selector_star_v4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>