<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/x12_game_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:paddingStart="15dp"
        android:paddingTop="4dp"
        android:paddingEnd="15dp"
        android:paddingBottom="4dp"
        android:textColor="@color/textGray"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="下半場" />

    <TextView
        android:id="@+id/x12_game_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:textColor="@color/text_spread"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/x12_game_state"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/x12_game_state"
        tools:text="90:31" />

    <TextView
        android:id="@+id/x12_home_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textColor="@color/text_spread"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/x12_home_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/x12_home_name"
        tools:text="0" />

    <TextView
        android:id="@+id/x12_home_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/textColorDark"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/x12_home_score"
        app:layout_constraintTop_toBottomOf="@id/x12_game_state"
        tools:text="宏都拉斯普羅格雷索" />

    <TextView
        android:id="@+id/x12_away_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textColor="@color/text_spread"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/x12_away_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/x12_away_name"
        tools:text="3" />

    <TextView
        android:id="@+id/x12_away_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/textColorDark"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/x12_away_score"
        app:layout_constraintTop_toBottomOf="@id/x12_home_name"
        tools:text="伊斯伯納" />

    <org.cxct.sportlottery.ui.game.common.OddsBetButton
        android:id="@+id/x12_bet_1"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/x12_bet_x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/x12_away_name"
        app:topText="1"
        tools:bottomText="1.26" />

    <org.cxct.sportlottery.ui.game.common.OddsBetButton
        android:id="@+id/x12_bet_x"
        android:layout_width="80dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@id/x12_bet_1"
        app:layout_constraintEnd_toStartOf="@id/x12_bet_2"
        app:layout_constraintStart_toEndOf="@id/x12_bet_1"
        app:layout_constraintTop_toTopOf="@id/x12_bet_1"
        app:topText="X"
        tools:bottomText="4.70" />

    <org.cxct.sportlottery.ui.game.common.OddsBetButton
        android:id="@+id/x12_bet_2"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@id/x12_bet_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/x12_bet_x"
        app:layout_constraintTop_toTopOf="@id/x12_bet_1"
        app:topText="2"
        tools:bottomText="13.5" />

</androidx.constraintlayout.widget.ConstraintLayout>