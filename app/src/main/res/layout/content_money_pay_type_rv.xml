<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootItem"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@drawable/bg_skin_select_money_type_effect_main_light_color"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/ic_bank"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_type"
        android:layout_marginStart="15dp"
        tools:src="@drawable/ic_bank_atm" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:paddingEnd="10dp"
        android:ellipsize="end"
        android:gravity="center|center_vertical"
        android:singleLine="true"
        android:textColor="@color/selector_text_effect_pay_type_main_light_color"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ic_bank"
        app:layout_constraintBottom_toBottomOf="@+id/ic_bank"
        app:layout_constraintTop_toTopOf="@+id/ic_bank"
        tools:text="银行卡转账" />

</androidx.constraintlayout.widget.ConstraintLayout>