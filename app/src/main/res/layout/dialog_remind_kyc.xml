<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="bottom"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_remind_kyc">
        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_margin="@dimen/margin_15"
            android:src="@drawable/ic_close_gray"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="-18dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_big_notice_blue"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_24"
            android:layout_gravity="center_horizontal"
            android:text="@string/P512"
            android:textColor="@color/color_0D2245"
            android:textSize="@dimen/textSize18sp" />
        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="24dp"
            android:lineHeight="22dp"
            android:text="@string/P513"
            android:textColor="@color/color_6D7693"
            android:textSize="@dimen/textSize14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="@dimen/margin_24"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnVerify"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_send_sms"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/B314"
                android:textColor="@color/color_FFFFFF"
                android:textSize="16sp" />

            <View
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_gray_radius_8_806d7693"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/B445"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
</LinearLayout>