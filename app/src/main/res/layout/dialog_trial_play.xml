<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="328dp"
    android:layout_height="254dp">

    <ImageView
        android:src="@drawable/bg_trial_play"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="match_parent"/>


    <TextView
        android:id="@+id/tvContent"
        android:text="@string/N994"
        android:textSize="@dimen/textSize14sp"
        android:layout_marginTop="120dp"
        android:textColor="@color/color_000000"
        android:gravity="center"
        android:maxLines="3"
        android:ellipsize="end"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <TextView
        android:id="@+id/tvLogin"
        android:text="@string/F025"
        android:background="@drawable/bg_gray_radius100"
        android:layout_width="116dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/tv_line"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="35dp"
        android:textSize="@dimen/textSize14sp"
        android:textColor="@color/color_6D7693"
        android:layout_height="36dp"/>

    <TextView
        android:id="@+id/tv_line"
        android:layout_width="1dp"
        android:layout_centerHorizontal="true"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/tvForward"
        android:text="@string/N993"
        android:background="@drawable/bg_blue_radius100"
        android:layout_width="116dp"
        android:layout_toRightOf="@+id/tv_line"
        android:layout_marginLeft="6dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:textSize="@dimen/textSize14sp"
        android:textColor="@color/color_FFFFFF"
        android:layout_height="36dp"/>
</RelativeLayout>