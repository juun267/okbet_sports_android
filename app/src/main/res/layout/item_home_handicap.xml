<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.43"/>
    <RelativeLayout
        android:id="@+id/rlv_home_team"
        android:paddingTop="@dimen/margin_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/guideline"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_home_icon"
            android:layout_marginStart="@dimen/margin_11"
            android:layout_width="@dimen/margin_20"
            android:layout_height="wrap_content"
            tools:src="@drawable/icon_team_sign"/>
        <TextView
            android:id="@+id/tv_home_team"
            android:layout_toRightOf="@+id/iv_home_icon"
            android:layout_marginStart="@dimen/margin_8"
            android:textStyle="bold"
            android:textColor="@color/color_FFFFFF_535D76"
            android:textSize="@dimen/textSize14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="波特兰发"/>
        <TextView
            android:layout_marginEnd="@dimen/margin_20"
            android:textSize="@dimen/textSize16sp"
            android:textColor="@color/color_FFFFFF_535D76"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlv_away_team"
        android:paddingTop="@dimen/margin_12"
       app:layout_constraintTop_toBottomOf="@+id/rlv_home_team"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/guideline"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_away_icon"
            android:layout_marginStart="@dimen/margin_11"
            android:layout_width="@dimen/margin_20"
            android:layout_height="wrap_content"
            tools:src="@drawable/icon_team_sign"/>
        <TextView
            android:id="@+id/tv_away_team"
            android:layout_toRightOf="@+id/iv_away_icon"
            android:layout_marginStart="@dimen/margin_8"
            android:textStyle="bold"
            android:textColor="@color/color_FFFFFF_535D76"
            android:textSize="@dimen/textSize14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="波特兰发"/>
        <TextView
            android:layout_marginEnd="@dimen/margin_20"
            android:textSize="@dimen/textSize16sp"
            android:textColor="@color/color_FFFFFF_535D76"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_group"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/rlv_away_team"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <LinearLayout

            android:id="@+id/adds_group1"
            android:background="@drawable/bg_item_odds"
            android:gravity="center"
            android:layout_marginEnd="@dimen/margin_10"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_odds_top1"
                android:textColor="@color/color_6C7BA8_6C7BA8"
               android:textSize="@dimen/textSize12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="123"/>
            <TextView
                android:id="@+id/tv_odds_bottom1"
                android:textColor="@color/color_FFFFFF_414655"
                android:textSize="@dimen/textSize16sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="123"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/adds_group2"
            android:background="@drawable/bg_item_odds"
            android:gravity="center"
            android:layout_marginEnd="@dimen/margin_10"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_odds_top2"
                android:textColor="@color/color_6C7BA8_6C7BA8"
               android:textSize="@dimen/textSize12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="123"/>
            <TextView
                android:id="@+id/tv_odds_bottom2"
                android:textColor="@color/color_FFFFFF_414655"
                android:textSize="@dimen/textSize16sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="123"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/adds_group3"
            android:background="@drawable/bg_item_odds"
            android:gravity="center"
            android:layout_marginEnd="@dimen/margin_10"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_odds_top3"
                android:textColor="@color/color_6C7BA8_6C7BA8"
              android:textSize="@dimen/textSize12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="123"/>
            <TextView
                android:id="@+id/tv_odds_bottom3"
                android:textColor="@color/color_FFFFFF_414655"
                android:textSize="@dimen/textSize16sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="123"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_time"

        android:layout_marginTop="@dimen/margin_8"
        android:background="@drawable/bg_timer"
        android:layout_marginHorizontal="@dimen/margin_10"
        app:layout_constraintTop_toBottomOf="@+id/ll_group"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingVertical="@dimen/margin_4"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="上半场"/>
        <TextView
            android:layout_marginStart="@dimen/margin_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="80：02"/>
        <TextView
            android:layout_marginEnd="@dimen/margin_10"
           android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="20>"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>