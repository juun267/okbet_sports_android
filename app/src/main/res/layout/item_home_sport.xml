<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutSport"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_48"
    android:background="@color/color_fff3f3f3">

    <ImageView
        android:id="@+id/ivSportLogo"
        android:layout_width="@dimen/margin_18"
        android:layout_height="@dimen/margin_18"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_8"
        android:scaleType="centerCrop"
        app:tint="@color/colorGray"
        android:src="@drawable/ic_soccer" />

    <TextView
        android:id="@+id/tvSport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="545"
        android:layout_weight="1"
        android:textAllCaps="true"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/textSize14sp" />

    <View
        android:layout_width="@dimen/margin_1"
        android:layout_height="@dimen/margin_14"
        android:background="@color/colorGrayLight"
        android:layout_gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSportCount"
        android:text="1"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/textSize14sp"
        android:textStyle="bold"
        android:layout_margin="@dimen/margin_12"
        />


</LinearLayout>