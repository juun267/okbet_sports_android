<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bbbbbb_ffffff"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <org.cxct.sportlottery.view.CustomTopToolbar
        android:id="@+id/custom_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:topTitleText="@string/text_search" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_DFE8F2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/margin_14"
        android:layout_marginVertical="12.5dp"
        android:background="@drawable/bg_search_layout"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/margin_16"
            android:layout_height="@dimen/margin_16"
            android:layout_marginStart="@dimen/margin_10"
            android:src="@drawable/ic_search_svgrepo_com_1" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_12"
            android:layout_marginEnd="@dimen/margin_8"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="@string/text_search"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textColor="@color/color_000000"
            android:textColorHint="@color/color_C9CFD7"
            android:textSize="@dimen/textSize12sp"
            tools:text="fff" />

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_5"
            android:background="@null"
            android:contentDescription="@null"
            android:padding="5dp"
            android:src="@drawable/ic_cancel" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/historyTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/color_E8EFFD"
        android:paddingHorizontal="@dimen/margin_14">

        <TextView
            android:id="@+id/tvHistoryTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/text_search_history"
            android:textColor="@color/color_535D76"
            android:textSize="@dimen/margin_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="@string/text_clear"
            android:textColor="@color/color_025BE8"
            android:textSize="@dimen/margin_14" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        tools:itemCount="2"
        tools:listitem="@layout/item_search_history" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSearchResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="false"
        tools:itemCount="2"
        tools:listitem="@layout/item_search_result_sport" />

</LinearLayout>