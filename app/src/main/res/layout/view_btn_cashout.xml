<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:id="@+id/linRoot"
    android:background="@drawable/bg_blue_radius_8_stroke_1"
    android:gravity="center">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_cashout_yellow" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_8"
        android:text=""
        android:textColor="@color/color_025BE8"
        android:textSize="@dimen/textSize14sp" />

    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_8"
        android:text="â‚± 104.049.26"
        android:textColor="@color/color_025BE8"
        android:textSize="@dimen/textSize14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivLoading"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_8"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:src="@drawable/ic_spinner_dots_blue" />
</LinearLayout>