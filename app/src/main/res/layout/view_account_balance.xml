<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/account_balance_view"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:paddingStart="25dp"
    android:background="@color/colorWhite"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_balance"
        android:textStyle="bold"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/textSize14sp" />

    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textColor="@color/colorBlueDark"
        android:textSize="@dimen/textSize20sp"
        android:textStyle="bold"
        tools:text="87,547,000.000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bet_info_list_rmb"
        android:layout_marginStart="8dp"
        android:textColor="@color/colorBlueDark"
        android:textSize="@dimen/textSize16sp" />

    <ImageView
        android:id="@+id/btn_refresh"
        app:tint="@color/colorGrayLight"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="10dp"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:src="@drawable/ic_profile_center_refresh"/>

</LinearLayout>

