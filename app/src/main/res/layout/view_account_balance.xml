<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/account_balance_view"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:paddingStart="25dp"
    android:background="@color/color_191919_FCFCFC"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:context=".ui.profileCenter.money_transfer.transfer.MoneyTransferSubFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_balance"
        android:textStyle="bold"
        android:textColor="@color/color_e5e5e5_333333"
        android:textSize="@dimen/textSize14sp" />

    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textColor="@color/color_317FFF_1F4780"
        android:textSize="@dimen/textSize20sp"
        android:textStyle="bold"
        tools:text="87,547,000.000"
        />

    <TextView
        android:id="@+id/tv_currency_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/color_317FFF_1F4780"
        tools:text="PHP"
        android:textSize="@dimen/textSize16sp" />

    <ImageView
        android:id="@+id/btn_refresh"
        app:tint="@color/color_8F8F8F_999999"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="10dp"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:src="@drawable/ic_profile_center_refresh"/>

</LinearLayout>

