<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_title"
    android:orientation="horizontal"
    tools:context="org.cxct.sportlottery.view.CustomTopToolbar">

    <TextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:gravity="center"
        android:textColor="@color/color_414655"
        android:textSize="@dimen/textSize18sp"
        tools:text="@string/title" />

    <ImageView
        android:id="@+id/btn_toolbar_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:contentDescription="@null"
        android:paddingHorizontal="20dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_union" />

    <TextView
        android:id="@+id/tv_toolbar_title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginEnd="@dimen/margin_20"
        android:textColor="@color/color_6C7BA8"
        android:textSize="@dimen/textSize14sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ivToolbarEnd"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center|end"
        android:contentDescription="@null"
        android:paddingHorizontal="20dp"
        android:scaleType="centerInside"
        tools:visibility="visible"
        android:visibility="gone"
        tools:src="@drawable/ic_task_rule" />

</FrameLayout>

