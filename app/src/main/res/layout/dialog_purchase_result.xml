<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg_white_radius_16">

    <ImageView
        android:id="@+id/ivStatus"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="38dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_order_success"/>
    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginHorizontal="@dimen/margin_40"
        android:textSize="@dimen/textSize14sp"
        android:textColor="@color/color_000000"
        android:textStyle="bold"
        android:text="@string/A093"/>
    <TextView
        android:id="@+id/tvCheck"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:paddingBottom="@dimen/margin_4"
        android:background="@drawable/bg_btn_blue_short"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_24"
        android:layout_marginBottom="@dimen/margin_6"
        android:layout_marginHorizontal="@dimen/margin_40"
        android:textSize="@dimen/textSize14sp"
        android:textColor="@color/color_FFFFFF"
        android:text="@string/B208"/>
</LinearLayout>