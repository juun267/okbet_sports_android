<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.news.NewsActivity">

    <include
        android:id="@+id/toolBar"
        layout="@layout/view_base_tool_bar_no_drawer" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/bank_container"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBar"
        app:navGraph="@navigation/news_navigation"
        tools:layout="@layout/fragment_bank_list" />

    <org.cxct.sportlottery.ui.common.RedEnvelopeFloatingButton
        android:id="@+id/btn_floating_red_envelope"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>