<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.game.home.recommend.VpRecommendAdapter">

    <TextView
        android:id="@+id/tv_play_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="48dp"
        android:textColor="@color/colorBlackLight"
        android:textStyle="bold"
        tools:text="让球" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_game_champion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="4"
        tools:listitem="@layout/home_recommend_champion_item" />

    <LinearLayout
        android:id="@+id/btn_display_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:minHeight="64dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/display_more"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/textSize14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_arrow_color_gray" />

    </LinearLayout>

</LinearLayout>