<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="158dp"
    android:layout_gravity="center"
    android:layout_margin="26dp"
    app:cardBackgroundColor="@color/color_191919_FCFCFC"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    tools:context="org.cxct.sportlottery.ui.common.dialog.CustomAlertDialog">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="158dp"
        android:gravity="center_horizontal"
        android:minWidth="300dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDialogRedeemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="21dp"
            android:gravity="center"
            android:text="@string/prompt"
            android:textColor="@color/color_CCCCCC_000000"
            android:textSize="@dimen/textSize18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/color_535D76"
            android:textSize="@dimen/textSize14sp"
            tools:text="訊息" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_E3E8EE" />

        <Button
            android:id="@+id/btn_positive"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@null"
            android:minWidth="135dp"
            android:minHeight="36dp"
            android:text="@string/btn_confirm"
            android:textAllCaps="false"
            android:textColor="@color/color_317FFF_1F4780"
            android:textSize="@dimen/textSize14sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.cardview.widget.CardView>