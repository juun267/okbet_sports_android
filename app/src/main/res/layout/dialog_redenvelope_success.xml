<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="60dp"
                android:adjustViewBounds="true"
                android:src="@drawable/bg_redpacket_success" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="140dp"
                android:text="@string/red_envelope_congratulations"
                android:textAlignment="center"
                android:textColor="#7F3B0C"
                android:textSize="@dimen/textSize20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="180dp"
                android:text="â‚± 1,000.00"
                android:textColor="#E48D00"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginHorizontal="70dp"
                android:layout_marginBottom="160dp"
                android:text="@string/pls_check_amount"
                android:textAlignment="center"
                android:textColor="#BA6D38"
                android:textSize="@dimen/textSize12sp" />

            <TextView
                android:id="@+id/btn_ok"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:gravity="center"
                android:background="@drawable/selector_btn_yellow"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/sp_14"
                android:text="OK" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="70dp"
                    android:src="@drawable/ic_pop_gold" />

                <ImageView
                    android:id="@+id/iv_buble_1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="90dp"
                    android:src="@drawable/ic_pop_chest" />

                <ImageView
                    android:id="@+id/iv_buble_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="200dp"
                    android:src="@drawable/ic_pop_basketball" />

                <ImageView
                    android:id="@+id/iv_buble_3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="60dp"
                    android:src="@drawable/ic_pop_gold" />

                <ImageView
                    android:id="@+id/iv_buble_4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="180dp"
                    android:layout_marginRight="60dp"
                    android:src="@drawable/ic_pop_football" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_streamer1" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="160dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_streamer1" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="70dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_streamer2" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="300dp"
                    android:layout_marginRight="40dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_streamer2" />
            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_shinne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_circular" />

            <ImageView
                android:id="@+id/iv_gold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_gold" />
        </FrameLayout>


    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/margin_40"
        android:layout_height="@dimen/margin_40"
        android:layout_marginTop="-40dp"
        android:visibility="gone"
        android:src="@drawable/ic_close_gray_bg" />
</LinearLayout>