<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#4d000000"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_shinne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shinne" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/bg_redpocket_success" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_50"
                android:fontFamily="@font/helvetica_bold"
                android:text="â‚± 1,000.000"
                android:textColor="#D88B53"
                android:textSize="@dimen/textSize26sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="210dp"
                android:text="@string/red_envelope_congratulations"
                android:textAlignment="center"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginHorizontal="@dimen/margin_42"
                android:layout_marginBottom="35dp"
                android:text="@string/pls_check_amount"
                android:textAlignment="center"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/textSize12sp" />

        </FrameLayout>


    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/margin_40"
        android:layout_height="@dimen/margin_40"
        android:layout_marginTop="-40dp"
        android:src="@drawable/ic_close_gray_bg" />
</LinearLayout>