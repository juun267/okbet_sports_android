<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">


    <!--    android:background="@drawable/bg_white_soild_grey_corner"-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_top"
        android:layout_width="300dp"
        android:layout_height="167dp"
        android:orientation="horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_news_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_soild_grey_corner"
        android:minHeight="300dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="@+id/img_top"
        app:layout_constraintStart_toStartOf="@+id/img_top"
        app:layout_constraintTop_toBottomOf="@+id/img_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_arrow_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_triangle_left"
                android:visibility="invisible"
                android:layout_marginStart="5dp"/>

            <androidx.recyclerview.widget.RecyclerView
            android:overScrollMode="never"
                android:id="@+id/rv_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                tools:itemCount="3"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/content_news_tab"
                tools:orientation="horizontal"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/img_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_triangle_right"
                android:layout_marginEnd="5dp"/>

        </LinearLayout>
        
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_msg"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:background="@color/colorWhite" />

    </LinearLayout>

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_circle_close"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>