<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:background="@drawable/bg_sport_classifi"
    android:foreground="@drawable/fg_ripple"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivCover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_inplay_usfootball"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/tvSportName"
        android:paddingTop="2dp"
        android:text="Bet record"
        android:fontFamily="@font/helvetica_normal"
        android:paddingBottom="6dp"
        app:layout_constraintStart_toEndOf="@+id/ivCover"
        app:layout_constraintTop_toTopOf="@+id/ivCover"
        android:paddingStart="8dp"
        android:textColor="@color/color_000000"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tvSportNum"
        android:text="21"
        app:layout_constraintStart_toEndOf="@+id/ivCover"
        app:layout_constraintTop_toBottomOf="@+id/tvSportName"
        android:textColor="@color/color_6D7693"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:paddingStart="8dp"
        android:layout_height="wrap_content"/>



    <ImageView
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintStart_toEndOf="@+id/tvSportNum"
        app:layout_constraintTop_toBottomOf="@+id/tvSportName"
        android:layout_width="16dp"
        android:layout_height="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>