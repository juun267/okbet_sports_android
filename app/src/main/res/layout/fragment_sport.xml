<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_1A1A1A_FFFFFF"
    android:orientation="vertical">

    <org.cxct.sportlottery.ui.maintab.HomeToolbarView
        android:id="@+id/homeToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/vDivider1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_E3E8EE" />

    <com.google.android.material.tabs.TabLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:clipToPadding="false"
        android:paddingHorizontal="9dp"
        android:background="@color/color_FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:tabGravity="fill"
        app:tabIndicator="@drawable/bg_matchtype_indicator"
        app:tabIndicatorFullWidth="false"
        app:tabMinWidth="52dp"
        app:tabMode="scrollable"
        app:tabPaddingEnd="9dp"
        app:tabPaddingStart="9dp"
        app:tabRippleColor="@null"
        tools:layout="@layout/home_cate_tab"/>

    <View
        android:id="@+id/vDivider2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_E3E8EE" />

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>