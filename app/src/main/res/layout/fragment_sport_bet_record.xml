<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite1"
    tools:context=".ui.profileCenter.sportRecord.SportBetRecordFragment">

    <org.cxct.sportlottery.ui.component.DateRangeSearchView
        android:id="@+id/date_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/date_search_bar">

        <org.cxct.sportlottery.ui.component.StatusSelectorView
            android:id="@+id/status_selector"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:defaultStatusText="@string/all_order" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="15dp"
            android:background="@color/colorWhite1" />

        <LinearLayout
            android:id="@+id/ll_champion"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/btn_today"
            app:layout_constraintStart_toStartOf="@+id/btn_today"
            app:layout_constraintTop_toBottomOf="@+id/btn_today">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/btn_champion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/champion_play"
                android:textColor="@color/colorGrayDark" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite3"
        android:orientation="horizontal"
        android:paddingVertical="4dp"
        app:layout_constraintBottom_toTopOf="@id/view_refresh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_status">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/order_number"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/bet_type"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize12sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/total_bet_money"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@string/status"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize12sp" />
    </LinearLayout>


    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/view_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:srlDragRate="0.3"
        app:srlEnableLoadMore="true"
        app:layout_constraintBottom_toTopOf="@+id/layout_total"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        app:srlEnablePureScrollMode="true">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_bet_record"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="5"
            tools:listitem="@layout/item_bet_record_result" />

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    <include
        android:id="@+id/layout_total"
        layout="@layout/view_total_record"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_scroll_to_top"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/bg_circle_gray6_alpha50"
        android:padding="14dp"
        android:src="@drawable/ic_scroll_to_top"
        app:layout_constraintBottom_toTopOf="@+id/layout_total"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

