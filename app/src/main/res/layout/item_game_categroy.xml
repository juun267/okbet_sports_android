<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/margin_12">

    <LinearLayout
        android:id="@+id/lin_categroy_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_okgame_label_favorite" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/color_14366B"
            android:textSize="@dimen/textSize16sp"
            android:fontFamily="@font/din_bold"
            android:textFontWeight="900"
            tools:text="favorites" />

<!--        <TextView-->
<!--            android:background="@drawable/bg_more"-->
<!--            android:id="@+id/tvMore"-->
<!--            android:gravity="center"-->
<!--            android:paddingStart="10dp"-->
<!--            android:paddingVertical="3dp"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textColor="@color/color_6D7693"-->
<!--            android:layout_gravity="center_vertical"-->
<!--            android:textSize="@dimen/textSize14sp"-->
<!--            android:drawableEnd="@drawable/ic_game_gray_arrow_right"-->
<!--            android:text="@string/N702" />-->

        <TextView
            android:id="@+id/tvMore"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginEnd="3dp"
            android:background="@drawable/bg_more"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp"
            android:textColor="@color/color_6D7693"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/textSize13sp"
            android:drawableEnd="@drawable/ic_game_gray_arrow_right"
            android:text="@string/N702" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/ivBackPage"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:padding="5dp"
            android:src="@drawable/ic_home_okgames_left" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/ivForwardPage"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:padding="5dp"
            android:src="@drawable/ic_home_okgames_right" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_game_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="3"
        tools:listitem="@layout/item_game_child" />
</LinearLayout>