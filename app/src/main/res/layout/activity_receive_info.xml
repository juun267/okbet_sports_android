<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/color_F6F7F8">

    <org.cxct.sportlottery.view.CustomTopToolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:topTitleText="@string/A088"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_40"
            android:layout_marginHorizontal="@dimen/margin_24">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_6D7693"
                android:textSize="@dimen/textSize14sp"
                android:text="@string/A089"/>

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_44"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_white_radius_8_stroke_ebebeb"
                android:hint="@string/B205"
                android:paddingHorizontal="@dimen/margin_12"
                android:textColorHint="@color/color_BEC7DC"
                android:textSize="@dimen/textSize14sp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginHorizontal="@dimen/margin_24">
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_6D7693"
            android:textSize="@dimen/textSize14sp"
            android:text="@string/A090"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="98dp"
                android:layout_height="@dimen/margin_44"
                android:paddingHorizontal="@dimen/margin_12"
                android:drawableLeft="@drawable/ic_country_ph"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="+63"
                android:textColor="@color/color_0D2245"
                android:textSize="@dimen/textSize16sp"
                android:background="@drawable/bg_white_radius_8_stroke_ebebeb"/>
            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_44"
                android:layout_marginLeft="@dimen/margin_12"
                android:paddingHorizontal="@dimen/margin_12"
                android:hint="@string/B111"
                android:inputType="number"
                android:maxLength="10"
                android:textColorHint="@color/color_BEC7DC"
                android:textSize="@dimen/textSize14sp"
                android:background="@drawable/bg_white_radius_8_stroke_ebebeb"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPhoneTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2"
            android:textSize="@dimen/helper_text_size"
            android:visibility="gone"
            android:text="@string/pls_enter_correct_mobile"
            android:textColor="@color/color_E23434"
            tools:visibility="visible" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginHorizontal="@dimen/margin_24">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_6D7693"
            android:textSize="@dimen/textSize14sp"
            android:text="@string/A091"/>
        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingVertical="@dimen/margin_6"
            android:lines="7"
            android:gravity="start"
            android:paddingHorizontal="@dimen/margin_12"
            android:hint="@string/B206"
            android:textSize="@dimen/textSize14sp"
            android:textColorHint="@color/color_BEC7DC"
            android:background="@drawable/bg_white_radius_8_stroke_ebebeb"/>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <TextView
        android:id="@+id/tvSure"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="@dimen/margin_24"
        android:background="@drawable/img_task_reward_all"
        android:gravity="center"
        android:textSize="@dimen/textSize14sp"
        android:textColor="@color/color_FFFFFF"
        android:text="@string/B88"/>
</LinearLayout>