<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.next.DZFragment">

    <View
        android:id="@+id/bg1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_dz_game_1"
        app:layout_constraintBottom_toTopOf="@id/bg2"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bg2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_dz_game_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bg1" />

    <org.cxct.sportlottery.ui.common.ChooseCenterRecyclerView
        android:id="@+id/rv_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="52dp"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="3"
        tools:listitem="@layout/content_dz_game_tab" />

    <androidx.recyclerview.widget.RecyclerView
        android:overScrollMode="never"
        android:id="@+id/rv_dz"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_tab"
        app:spanCount="3"
        tools:itemCount="13"
        tools:listitem="@layout/content_dz_game_rv" />

</androidx.constraintlayout.widget.ConstraintLayout>