<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_game_card"
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:layout_marginStart="6dp"
    android:background="@drawable/bg_frame_6dp_orange_select_effect"
    android:paddingStart="6dp"
    android:paddingTop="7dp"
    android:paddingEnd="6dp"
    android:paddingBottom="7dp">

    <TextView
        android:id="@+id/txv_home_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/selector_red_text_effect_white_color"
        android:textSize="@dimen/textSize13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <TextView
        android:id="@+id/txv_home_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/selector_black_text_effect_white_color"
        android:textSize="@dimen/textSize12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/txv_home_score"
        app:layout_constraintEnd_toStartOf="@id/txv_time"
        app:layout_constraintStart_toEndOf="@+id/txv_home_score"
        tools:text="达卡流浪者" />

    <TextView
        android:id="@+id/txv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/selector_black_text_effect_white_color"
        android:textSize="@dimen/textSize12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/txv_home_score"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="45:33" />

    <TextView
        android:id="@+id/txv_away_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/selector_red_text_effect_white_color"
        android:textSize="@dimen/textSize13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="1" />

    <TextView
        android:id="@+id/txv_away_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/selector_black_text_effect_white_color"
        android:textSize="@dimen/textSize12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/txv_away_score"
        app:layout_constraintEnd_toStartOf="@id/txv_time"
        app:layout_constraintStart_toEndOf="@+id/txv_away_score"
        tools:text="达卡流浪者" />
</androidx.constraintlayout.widget.ConstraintLayout>
