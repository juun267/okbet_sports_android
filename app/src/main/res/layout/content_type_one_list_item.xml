<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:background="@color/colorWhite"
    tools:ignore="RelativeOverlap,SpUsage,ContentDescription">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/tv_odds"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/textSize14sp" />

    <TextView
        android:id="@+id/tv_odds"
        style="@style/OddsButton"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin" />

    <ImageView
        android:id="@+id/iv_disable_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_odds"
        android:layout_alignTop="@+id/tv_odds"
        android:layout_alignEnd="@+id/tv_odds"
        android:layout_alignBottom="@+id/tv_odds"
        android:background="@drawable/bg_radius_4_button_disable"
        android:paddingStart="24dp"
        android:paddingTop="12dp"
        android:paddingEnd="24dp"
        android:paddingBottom="12dp"
        android:src="@drawable/ic_lock_odd"
        android:visibility="gone" />

</RelativeLayout>