                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llKeyboardContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    android:background="@color/color_F9F9F9"

                    app:layout_constraintBottom_toTopOf="@+id/bottomPaddingView">

                    <org.cxct.sportlottery.util.KeyboardView
                        android:layout_marginTop="5dp"
                        android:id="@+id/layoutKeyBoard"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/keyboard_height"
                        android:layout_marginHorizontal="@dimen/margin_12"
                        android:visibility="gone"
                        tools:visibility="gone" />
                </androidx.appcompat.widget.LinearLayoutCompat>


                <View
                    android:id="@+id/bottomPaddingView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_10"
                    app:layout_constraintBottom_toTopOf="@+id/cl_hint_layout" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_hint_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/tv_no_parlay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#36DF9D9D"
                        android:paddingVertical="3dp"
                        android:drawablePadding="@dimen/margin_6"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/margin_10"
                        android:text="@string/bet_list_cant_parlay_warn"
                        android:textColor="@color/color_E23434"
                        android:textSize="@dimen/textSize14sp"
                        android:visibility="gone"
                        app:drawableStartCompat="@drawable/ic_bet_lock_tip"
                        app:drawableTint="@color/color_E23434"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_bet_lock"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bet_info_hint_view_height"
                        android:background="@color/color_DFE2E9"
                        android:drawablePadding="@dimen/margin_6"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/margin_10"
                        android:text="@string/bet_info_bet_lock_hint"
                        android:textColor="@color/color_5E6D78"
                        android:textSize="@dimen/textSize14sp"
                        android:visibility="gone"
                        app:drawableStartCompat="@drawable/ic_bet_lock_tip"
                        app:drawableTint="@color/color_5E6D78"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="visible" />

                    <FrameLayout
                        android:id="@+id/odds_change_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bet_info_hint_view_height"
                        android:background="@drawable/bg_bet_hint_no_top_stroke"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="gone">

                        <TextView
                            android:id="@+id/tv_odd_content_changed"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/color_26E23434"
                            android:drawablePadding="@dimen/margin_6"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/margin_10"
                            android:text="@string/bet_info_odd_content_changed2"
                            android:textColor="@color/color_E23434_E23434"
                            android:textSize="@dimen/textSize14sp"
                            app:drawableStartCompat="@drawable/ic_bet_lock_tip"
                            app:drawableTint="@color/color_E23434_E23434" />
                    </FrameLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

