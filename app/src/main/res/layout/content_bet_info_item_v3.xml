<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="org.cxct.sportlottery.ui.game.betList.BetListRefactorAdapter"
    tools:ignore="RtlSymmetry,SpUsage,ContentDescription,HardcodedText,Autofill">


    <data>

        <variable
            name="parlayOdd"
            type="org.cxct.sportlottery.network.bet.info.ParlayOdd" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/top_space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_14" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_14"
            android:layout_marginBottom="@dimen/margin_14"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_item_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_square_shape_8dp_blue_stroke_white_solid"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/topContainer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_shape_top_8dp_blue_stroke_no_bottom_stroke"
                    app:layout_constraintBottom_toBottomOf="@+id/odds_content_container"
                    app:layout_constraintTop_toTopOf="@+id/odds_content_container" />

                <ImageView
                    android:id="@+id/ivSportLogo"
                    android:layout_width="@dimen/margin_14"
                    android:layout_height="@dimen/margin_14"
                    android:layout_marginStart="@dimen/margin_8"
                    android:src="@drawable/ic_tennis_icon"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/odds_content_container"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/odds_content_container" />

                <LinearLayout
                    android:id="@+id/odds_content_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="6dp"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toStartOf="@+id/odds_change_container"
                    app:layout_constraintStart_toEndOf="@+id/ivSportLogo"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_odds_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/color_414655"
                        android:textSize="@dimen/textSize14sp"
                        tools:text="Manchester United FC (Mad)" />

                    <TextView
                        android:id="@+id/tvContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:maxLines="1"
                        android:textColor="@color/color_414655"
                        android:textSize="@dimen/textSize14sp"
                        tools:text="-0.5/2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/odds_change_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="11dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/odds_content_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/odds_content_container">

                    <TextView
                        android:id="@+id/tvOdds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_025BE8"
                        android:textSize="@dimen/margin_14"
                        android:textStyle="bold"
                        tools:text="\@ 0.89" />

                    <ImageView
                        android:id="@+id/ivOddsArrow"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginStart="2dp"
                        android:visibility="gone"
                        tools:src="@drawable/selector_odds_arrow_up"
                        tools:visibility="visible" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="6dp"
                    android:drawablePadding="8dp"
                    android:textColor="@color/color_535D76"
                    android:textSize="@dimen/textSize14sp"
                    app:drawableStartCompat="@drawable/ic_detail_odd_title_line"
                    app:layout_constraintBottom_toTopOf="@+id/tv_match"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/odds_content_container"
                    tools:text="让球(1-1) [歐洲盤]" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.79" />

                <!--玩法名稱:讓球,獨贏..-->
                <TextView
                    android:id="@+id/tv_match"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/color_6C7BA8"
                    android:textSize="@dimen/textSize13sp"
                    android:layout_marginStart="21dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/guideline"
                    app:layout_constraintBottom_toTopOf="@+id/tv_league_name"
                    tools:text="Manchester United FC (Mad) vs. SS Lazio(Dasko)" />

                <TextView
                    android:id="@+id/tv_league_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/color_6C7BA8"
                    android:textSize="@dimen/textSize13sp"
                    android:layout_marginStart="21dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/guideline"
                    app:layout_constraintBottom_toTopOf="@+id/tv_start_time"
                    tools:text="GT 联赛 - 12分钟赛事" />

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/color_6C7BA8"
                    android:textSize="@dimen/textSize13sp"
                    android:layout_marginStart="21dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/guideline"
                    app:layout_constraintBottom_toTopOf="@+id/cl_editText_container"
                    tools:text="2022-08-05 15:30:00" />

                <TextView
                    android:id="@+id/tv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:background="@drawable/bg_delete_button"
                    android:paddingHorizontal="7dp"
                    android:paddingVertical="1dp"
                    android:text="@string/delete_bet"
                    android:textColor="@color/color_535D76"
                    android:textSize="@dimen/textSize12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_start_time"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_editText_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/margin_8"
                    android:paddingTop="9dp"
                    tools:visibility="visible"
                    app:layout_constraintBottom_toTopOf="@id/ll_single_tips">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <TextView
                        android:id="@+id/tv_win"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bet_win"
                        android:textColor="@color/color_535D76"
                        android:textSize="@dimen/textSize12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/et_win"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/et_win" />

                    <EditText
                        android:id="@+id/et_win"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/et_bet_height"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/bg_radius_2_edittext_unfocus"
                        android:gravity="end|center_vertical"
                        android:inputType="numberDecimal"
                        android:letterSpacing="0.05"
                        android:maxLength="14"
                        android:paddingHorizontal="10dp"
                        android:textColor="@color/color_BBBBBB_333333"
                        android:textSize="@dimen/textSize12sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="@id/et_bet"
                        app:layout_constraintEnd_toEndOf="@+id/guideline_input"
                        app:layout_constraintStart_toEndOf="@+id/tv_win"
                        app:layout_constraintTop_toTopOf="@+id/et_bet" />

                    <TextView
                        android:id="@+id/tv_win_hint_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:textColor="@color/color_C9CFD7"
                        android:textSize="@dimen/textSize12sp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="@+id/et_win"
                        app:layout_constraintEnd_toEndOf="@+id/et_win"
                        app:layout_constraintTop_toTopOf="@+id/et_win"
                        tools:text="@string/hint_bet_limit_range" />


                    <TextView
                        android:id="@+id/tv_bet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/bet_info_list_bet"
                        android:textColor="@color/color_535D76"
                        android:textSize="@dimen/textSize12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/et_bet"
                        app:layout_constraintStart_toStartOf="@+id/guideline_input"
                        app:layout_constraintTop_toTopOf="@+id/et_bet" />

                    <EditText
                        android:id="@+id/et_bet"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/et_bet_height"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/bg_radius_2_edittext_unfocus"
                        android:gravity="end|center_vertical"
                        android:inputType="numberDecimal"
                        android:letterSpacing="0.05"
                        android:maxLength="14"
                        android:paddingHorizontal="10dp"
                        android:textColor="@color/color_BBBBBB_333333"
                        android:textSize="@dimen/textSize12sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_bet"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_hint_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:textColor="@color/color_C9CFD7"
                        android:textSize="@dimen/textSize12sp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="@+id/et_bet"
                        app:layout_constraintEnd_toEndOf="@+id/et_bet"
                        app:layout_constraintTop_toTopOf="@+id/et_bet"
                        tools:text="@string/hint_bet_limit_range" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <org.cxct.sportlottery.util.KeyboardView
                    android:id="@+id/layoutKeyBoard"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/keyboard_height"
                    android:layout_marginHorizontal="@dimen/margin_8"
                    android:paddingTop="@dimen/margin_10"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/bottomPaddingView"
                    tools:visibility="visible" />

                <View
                    android:id="@+id/bottomPaddingView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_10"
                    app:layout_constraintBottom_toTopOf="@+id/cl_hint_layout" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_hint_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent">

<!--                    <TextView-->
<!--                        android:id="@+id/tv_odd_content_changed"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="@dimen/bet_info_hint_view_height"-->
<!--                        android:background="@color/color_FFDCA8_FFF3E1"-->
<!--                        android:drawablePadding="@dimen/margin_10"-->
<!--                        android:gravity="center_vertical"-->
<!--                        android:paddingHorizontal="@dimen/margin_14"-->
<!--                        android:text="@string/bet_info_odd_content_changed2"-->
<!--                        android:textColor="@color/color_B95700_D26300"-->
<!--                        android:textSize="@dimen/textSize12sp"-->
<!--                        android:visibility="gone"-->
<!--                        app:drawableStartCompat="@drawable/ic_odds_change_tip_v2"-->
<!--                        app:layout_constraintTop_toTopOf="parent"-->
<!--                        tools:visibility="gone" />-->

                    <TextView
                        android:id="@+id/tv_no_parlay"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bet_info_hint_view_height"
                        android:background="@color/color_33FFAB2E"
                        android:drawablePadding="@dimen/margin_6"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/margin_10"
                        android:text="@string/bet_info_no_parlay_hint"
                        android:textColor="@color/color_E38902"
                        android:textSize="@dimen/textSize14sp"
                        android:visibility="gone"
                        app:drawableStartCompat="@drawable/ic_bet_lock_tip"
                        app:drawableTint="@color/color_E38902"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_bet_lock"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bet_info_hint_view_height"
                        android:background="@color/color_996A7797"
                        android:drawablePadding="@dimen/margin_6"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/margin_10"
                        android:text="@string/bet_info_bet_lock_hint"
                        android:textColor="@color/color_F9F9F9"
                        android:textSize="@dimen/textSize14sp"
                        android:visibility="gone"
                        app:drawableStartCompat="@drawable/ic_bet_lock_tip"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="visible" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 提示文字 start -->
                <LinearLayout
                    android:id="@+id/ll_single_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@id/layoutKeyBoard">

                    <TextView
                        android:id="@+id/tvBalanceInsufficientMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_8"
                        android:gravity="end"
                        android:includeFontPadding="false"
                        android:paddingTop="@dimen/margin_8"
                        android:text="@string/bet_info_bet_balance_insufficient"
                        android:textColor="@color/color_E44438_e44438"
                        android:textSize="@dimen/textSize12sp"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/tvErrorMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_8"
                        android:gravity="end"
                        android:includeFontPadding="false"
                        android:paddingTop="@dimen/margin_8"
                        android:text="@string/bet_info_list_minimum_limit_amount"
                        android:textColor="@color/color_E44438_e44438"
                        android:textSize="@dimen/textSize12sp"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/tvPleaseEnterCorrectAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_8"
                        android:gravity="end"
                        android:includeFontPadding="false"
                        android:paddingTop="@dimen/margin_8"
                        android:text="@string/please_enter_correct_amount"
                        android:textColor="@color/color_E44438_e44438"
                        android:textSize="@dimen/textSize12sp"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </LinearLayout>
                <!-- 提示文字 end -->

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</layout>