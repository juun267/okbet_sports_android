<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/bg_user_vip_top"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_30"
            android:layout_marginBottom="@dimen/margin_10"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivCurrentLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_40"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_vip_lv0" />

                <TextView
                    android:id="@+id/tvCurrentLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:includeFontPadding="false"
                    android:textAllCaps="true"
                    android:text="vip 0"
                    android:textColor="@color/color_854C00"
                    android:textFontWeight="700"
                    android:textSize="@dimen/textSize18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <org.cxct.sportlottery.ui.profileCenter.vip.view.VipProgressView
                    android:id="@+id/vipProgressView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/margin_8"
                    android:text="@string/P441"
                    android:textColor="@color/color_D48C1A"
                    android:textSize="@dimen/textSize12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivNextLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_40"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_vip_lv1" />

                <TextView
                    android:id="@+id/tvNextLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textAllCaps="true"
                    android:text="vip 1"
                    android:textColor="@color/color_854C00"
                    android:textFontWeight="700"
                    android:textSize="@dimen/textSize18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:background="@drawable/bg_white_gradient_radius_10_white_stroke"
        android:orientation="vertical"
        android:paddingVertical="@dimen/margin_16"
        android:paddingHorizontal="@dimen/margin_7"
        app:layout_constraintTop_toBottomOf="@id/linProgress">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_24"
            android:paddingHorizontal="@dimen/margin_5"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/margin_20"
                android:layout_height="@dimen/margin_20"
                android:src="@drawable/ic_vip_benfit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_weight="1"
                android:text="@string/P371"
                android:textColor="@color/color_0D2245"
                android:textFontWeight="700"
                android:textSize="@dimen/textSize14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/icon_arrow07"
                android:drawablePadding="@dimen/margin_8"
                android:text="@string/J634"
                android:textColor="@color/color_A7B2C4"
                android:textSize="@dimen/textSize12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivBonusPromote"
                    android:layout_width="@dimen/margin_36"
                    android:layout_height="@dimen/margin_36"
                    android:src="@drawable/ic_vip_bonus_promote"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivLockPromote"
                    android:layout_width="@dimen/margin_16"
                    android:layout_height="@dimen/margin_16"
                    android:layout_marginRight="-7dp"
                    android:layout_marginBottom="-4dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_vip_benefit_lock"
                    app:layout_constraintBottom_toBottomOf="@id/ivBonusPromote"
                    app:layout_constraintRight_toRightOf="@id/ivBonusPromote" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:gravity="center"
                    android:text="@string/P363"
                    android:textColor="@color/color_0D2245"
                    android:textSize="@dimen/textSize12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivBonusPromote" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivBonusBirthday"
                    android:layout_width="@dimen/margin_36"
                    android:layout_height="@dimen/margin_36"
                    android:src="@drawable/ic_vip_bonus_birthday"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivLockBirthday"
                    android:layout_width="@dimen/margin_16"
                    android:layout_height="@dimen/margin_16"
                    android:layout_marginRight="-7dp"
                    android:layout_marginBottom="-4dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_vip_benefit_lock"
                    app:layout_constraintBottom_toBottomOf="@id/ivBonusBirthday"
                    app:layout_constraintRight_toRightOf="@id/ivBonusBirthday" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:gravity="center"
                    android:text="@string/P365"
                    android:textColor="@color/color_0D2245"
                    android:textSize="@dimen/textSize12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivBonusBirthday" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivBonusWeekly"
                    android:layout_width="@dimen/margin_36"
                    android:layout_height="@dimen/margin_36"
                    android:src="@drawable/ic_vip_bonus_weekly"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivLockWeekly"
                    android:layout_width="@dimen/margin_16"
                    android:layout_height="@dimen/margin_16"
                    android:layout_marginRight="-7dp"
                    android:layout_marginBottom="-4dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_vip_benefit_lock"
                    app:layout_constraintBottom_toBottomOf="@id/ivBonusWeekly"
                    app:layout_constraintRight_toRightOf="@id/ivBonusWeekly" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:gravity="center"
                    android:text="@string/P364"
                    android:textColor="@color/color_0D2245"
                    android:textSize="@dimen/textSize12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivBonusWeekly" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivBonusPacket"
                    android:layout_width="@dimen/margin_36"
                    android:layout_height="@dimen/margin_36"
                    android:src="@drawable/ic_vip_bonus_packet"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivLockPacket"
                    android:layout_width="@dimen/margin_16"
                    android:layout_height="@dimen/margin_16"
                    android:layout_marginRight="-7dp"
                    android:layout_marginBottom="-4dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_vip_benefit_lock"
                    app:layout_constraintBottom_toBottomOf="@id/ivBonusPacket"
                    app:layout_constraintRight_toRightOf="@id/ivBonusPacket" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:gravity="center"
                    android:text="@string/P366"
                    android:textColor="@color/color_0D2245"
                    android:textSize="@dimen/textSize12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivBonusPacket" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>
</merge>