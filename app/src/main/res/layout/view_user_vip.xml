<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/linProgress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"
        android:src="@drawable/bg_user_vip_top"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/margin_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/margin_30">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/ivCurrentLevel"
                android:layout_width="@dimen/margin_28"
                android:layout_height="@dimen/margin_28"
                android:src="@drawable/ic_vip_lv0"/>
            <TextView
                android:id="@+id/tvCurrentLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/margin_4"
                android:textStyle="bold"
                android:textFontWeight="700"
                android:fontFamily="@font/inter_regular"
                android:textSize="@dimen/textSize18sp"
                android:textColor="@color/color_000000"
                android:text="vip 4"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/margin_10"
            android:orientation="vertical">
            <org.cxct.sportlottery.ui.profileCenter.vip.view.VipProgressView
                android:id="@+id/vipProgressView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_8"
                android:layout_gravity="right"
                android:textSize="@dimen/textSize12sp"
                android:textColor="@color/color_D48C1A"
                android:text="next Level"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/ivNextLevel"
            android:layout_width="@dimen/margin_28"
            android:layout_height="@dimen/margin_28"
            android:src="@drawable/ic_vip_lv1"/>
        <TextView
            android:id="@+id/tvNextLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:includeFontPadding="false"
            android:textStyle="bold"
            android:textFontWeight="700"
            android:textSize="@dimen/textSize18sp"
            android:textColor="@color/color_000000"
            android:text="vip 4"/>
    </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/linBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:padding="@dimen/margin_16"
        app:layout_constraintTop_toBottomOf="@id/linProgress"
        android:orientation="vertical"
        android:background="@drawable/bg_white_gradient_radius_10_white_stroke">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_24"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/margin_20"
                android:layout_height="@dimen/margin_20"
                android:src="@drawable/ic_vip_benfit"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/margin_8"
                android:textStyle="bold"
                android:textFontWeight="700"
                android:textSize="@dimen/textSize14sp"
                android:textColor="@color/color_0D2245"
                android:text="VIP benefits"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_8"
                android:drawableRight="@drawable/icon_arrow07"
                android:textSize="@dimen/textSize12sp"
                android:textColor="@color/color_A7B2C4"
                android:text="check more benefits"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivBonusPromote"
                    android:layout_width="@dimen/margin_36"
                    android:layout_height="@dimen/margin_36"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_vip_bonus_promote"/>
                <ImageView
                    android:id="@+id/ivLockPromote"
                    android:layout_width="@dimen/margin_16"
                    android:layout_height="@dimen/margin_16"
                    app:layout_constraintRight_toRightOf="@id/ivBonusPromote"
                    app:layout_constraintBottom_toBottomOf="@id/ivBonusPromote"
                    android:layout_marginRight="-7dp"
                    android:layout_marginBottom="-4dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_vip_benefit_lock"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/ivBonusPromote"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_8"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/color_0D2245"
                    android:text="Promote Bonus"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_marginLeft="@dimen/margin_12"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivBonusBirthday"
                    android:layout_width="@dimen/margin_36"
                    android:layout_height="@dimen/margin_36"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_vip_bonus_birthday"/>
                <ImageView
                    android:id="@+id/ivLockBirthday"
                    android:layout_width="@dimen/margin_16"
                    android:layout_height="@dimen/margin_16"
                    app:layout_constraintRight_toRightOf="@id/ivBonusBirthday"
                    app:layout_constraintBottom_toBottomOf="@id/ivBonusBirthday"
                    android:layout_marginRight="-7dp"
                    android:layout_marginBottom="-4dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_vip_benefit_lock"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/ivBonusBirthday"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_8"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/color_0D2245"
                    android:text="Birthday Bonus"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_marginLeft="@dimen/margin_12"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivBonusWeekly"
                    android:layout_width="@dimen/margin_36"
                    android:layout_height="@dimen/margin_36"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_vip_bonus_weekly"/>
                <ImageView
                    android:id="@+id/ivLockWeekly"
                    android:layout_width="@dimen/margin_16"
                    android:layout_height="@dimen/margin_16"
                    app:layout_constraintRight_toRightOf="@id/ivBonusWeekly"
                    app:layout_constraintBottom_toBottomOf="@id/ivBonusWeekly"
                    android:layout_marginRight="-7dp"
                    android:layout_marginBottom="-4dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_vip_benefit_lock"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/ivBonusWeekly"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_8"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/color_0D2245"
                    android:text="Weekly Bonus"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_marginLeft="@dimen/margin_12"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivBonusPacket"
                    android:layout_width="@dimen/margin_36"
                    android:layout_height="@dimen/margin_36"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_vip_bonus_packet"/>
                <ImageView
                    android:id="@+id/ivLockPacket"
                    android:layout_width="@dimen/margin_16"
                    android:layout_height="@dimen/margin_16"
                    app:layout_constraintRight_toRightOf="@id/ivBonusPacket"
                    app:layout_constraintBottom_toBottomOf="@id/ivBonusPacket"
                    android:layout_marginRight="-7dp"
                    android:layout_marginBottom="-4dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_vip_benefit_lock"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/ivBonusPacket"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="@dimen/margin_10"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_8"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/color_0D2245"
                    android:text="Exclusive Packet"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>