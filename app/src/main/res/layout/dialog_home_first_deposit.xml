<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_30">
        <ImageView
            android:id="@+id/ivBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/bg_dialog_home_first_deposit_1"/>

            <LinearLayout
                android:id="@+id/linCountingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/margin_12"
                android:layout_marginTop="290dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_6"
                    android:gravity="center"
                    android:textColor="@color/color_0D2245"
                    android:textSize="@dimen/textSize10sp"
                    android:textStyle="bold"
                    android:text="Last Minute Offer" />
                <TextView
                    android:id="@+id/tvNum1"
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:gravity="center"
                    android:background="@drawable/bg_time_number"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/textSize12sp"
                    android:textStyle="bold"
                    android:text="0" />
                <TextView
                    android:id="@+id/tvNum2"
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="@dimen/margin_1"
                    android:gravity="center"
                    android:background="@drawable/bg_time_number"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/textSize12sp"
                    android:textStyle="bold"
                    android:text="0" />
                <TextView
                    android:layout_width="@dimen/margin_10"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/color_6D7693"
                    android:textSize="@dimen/textSize8sp"
                    android:textStyle="bold"
                    android:text=":" />
                <TextView
                    android:id="@+id/tvNum3"
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:gravity="center"
                    android:background="@drawable/bg_time_number"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/textSize12sp"
                    android:textStyle="bold"
                    android:text="0" />
                <TextView
                    android:id="@+id/tvNum4"
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="@dimen/margin_1"
                    android:gravity="center"
                    android:background="@drawable/bg_time_number"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/textSize12sp"
                    android:textStyle="bold"
                    android:text="0" />
                <TextView
                    android:layout_width="@dimen/margin_10"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/color_6D7693"
                    android:textSize="@dimen/textSize8sp"
                    android:textStyle="bold"
                    android:text=":" />
                <TextView
                    android:id="@+id/tvNum5"
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:gravity="center"
                    android:background="@drawable/bg_time_number"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/textSize12sp"
                    android:textStyle="bold"
                    android:text="0" />
                <TextView
                    android:id="@+id/tvNum6"
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="@dimen/margin_1"
                    android:gravity="center"
                    android:background="@drawable/bg_time_number"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/textSize12sp"
                    android:textStyle="bold"
                    android:text="0" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/margin_15"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/tvDeposit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_30"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_btn_yellow_round_deposit" />
            <TextView
                android:id="@+id/tvDetail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40"
                android:layout_marginHorizontal="@dimen/margin_30"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_5"
                android:gravity="center"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/textSize14sp"
                android:text="@string/A020"/>
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="@dimen/margin_30"
        android:layout_gravity="bottom|center_horizontal"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_circle_white_close"/>
</LinearLayout>
</LinearLayout>