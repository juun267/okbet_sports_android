<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    tools:context="org.cxct.sportlottery.ui.main.accountHistory.next.AccountHistoryNextAdapter"
    tools:ignore="SpUsage">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/soccer_account"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:padding="16dp"
        android:src="@drawable/ic_arrow_left_game_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/colorBlackLight" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/bet_num_and_bet_date"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/textSize14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_bg"
        app:layout_constraintTop_toTopOf="parent" />

    <org.cxct.sportlottery.ui.component.StatusSelectorView
        android:id="@+id/date_selector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        app:backgroundFrame="@drawable/frame_color_silver_light_stroke"
        app:defaultStatusText="6-21 星期一"
        app:layout_constraintEnd_toStartOf="@id/sport_selector"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_bg"
        app:textGravity="start|center_vertical" />


    <org.cxct.sportlottery.ui.component.StatusSelectorView
        android:id="@+id/sport_selector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        app:backgroundFrame="@drawable/frame_color_silver_light_stroke"
        app:defaultStatusText="@string/all_sport"
        app:layout_constraintBottom_toBottomOf="@+id/date_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/date_selector"
        app:layout_constraintTop_toTopOf="@+id/date_selector"
        app:textGravity="start|center_vertical" />


    <TextView
        android:id="@+id/tvUsTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_10"
        android:drawablePadding="@dimen/margin_6"
        android:text="@string/text_us_east_time"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/textSize12sp"
        app:drawableLeftCompat="@drawable/ic_info_white"
        app:drawableTint="@color/colorGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sport_selector" />

</androidx.constraintlayout.widget.ConstraintLayout>

