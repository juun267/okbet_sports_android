<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="3dp"
    tools:context="org.cxct.sportlottery.ui.maintab.accountHistory.next.AccountHistoryNextAdapter"
    tools:ignore="SpUsage">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:src="@color/color_202541_FFFFFF"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="50dp"
        android:padding="17dp"
        android:layout_height="50dp"
        android:paddingVertical="4dp"
        android:src="@drawable/ic_union"
        app:layout_constraintBottom_toBottomOf="@id/iv_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/bet_detail"
        android:textColor="@color/color_FFFFFF_414655"
        android:textSize="@dimen/textSize18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <org.cxct.sportlottery.ui.component.StatusSpinnerView
        android:id="@+id/date_selector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/frame_color_silver_light_stroke"
        android:visibility="gone"
        app:defaultStatusText="6-21 星期一"
        app:textGravity="start|center_vertical"
        app:layout_constraintEnd_toStartOf="@id/sport_selector"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_bg" />


    <org.cxct.sportlottery.ui.component.StatusSpinnerView
        android:id="@+id/sport_selector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/frame_color_silver_light_stroke"
        android:visibility="gone"
        app:defaultStatusText="@string/all_sport"
        app:layout_constraintBottom_toBottomOf="@+id/date_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/date_selector"
        app:layout_constraintTop_toTopOf="@+id/date_selector"
        app:textGravity="start|center_vertical" />


    <TextView
        android:id="@+id/tvUsTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_10"
        android:drawablePadding="@dimen/margin_6"
        android:text="@string/text_us_east_time"
        android:textColor="@color/color_909090_666666"
        android:textSize="@dimen/textSize12sp"
        app:drawableLeftCompat="@drawable/ic_info_white"
        app:drawableTint="@color/color_909090_666666"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sport_selector"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>

