<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.game.GameActivity">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- toolBar -->
            <include
                android:id="@+id/tans_status_toolbar"
                layout="@layout/view_toolbar_main"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/tans_status_message"
                layout="@layout/view_message"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/tans_status_toolbar" />

            <org.cxct.sportlottery.ui.common.NotificationView
                android:id="@+id/view_notification"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@id/tans_status_message"
                app:layout_constraintTop_toTopOf="@id/tans_status_message" />

            <fragment
                android:id="@+id/fragment_transaction_status"
                class="org.cxct.sportlottery.ui.transactionStatus.TransactionStatusFragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/tans_status_bottom_navigation"
                app:layout_constraintTop_toBottomOf="@id/view_notification"
                tools:layout="@layout/fragment_transaction_status" />

            <!--根據需求先隱藏，確定不用可刪-->
            <!--20220406 只有宣傳頁、主頁需顯示-->
            <!--<org.cxct.sportlottery.ui.common.ServiceFloatingButton
                android:visibility="gone"
                android:id="@+id/btn_floating_service"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="14dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintBottom_toTopOf="@id/tans_status_bottom_navigation" />-->

            <include
                android:id="@+id/tans_status_bottom_navigation"
                layout="@layout/view_bottom_navigation_sport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- 投注單 -->
            <FrameLayout
                android:id="@+id/fl_bet_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 右側導覽列 -->
        <include layout="@layout/view_nav_right" />

        <org.cxct.sportlottery.ui.common.RedEnvelopeFloatingButton
            android:id="@+id/btn_floating_red_envelope"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible" />

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>
