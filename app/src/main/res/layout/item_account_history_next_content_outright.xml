<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="row"
            type="org.cxct.sportlottery.network.bet.settledDetailList.Row" />

        <variable
            name="matchOdd"
            type="org.cxct.sportlottery.network.bet.settledDetailList.MatchOdd" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlue"
            android:gravity="center"
            android:minHeight="48dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="9dp"
            tools:ignore="SpUsage">

            <TextView
                android:id="@+id/tv_league_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@{matchOdd.leagueName}"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSize14sp"
                app:autoSizeMaxTextSize="@dimen/textSize14sp"
                app:autoSizeMinTextSize="@dimen/textSize8sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="聯賽名稱" />

            <TextView
                android:id="@+id/tv_slash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:gravity="left"
                android:text="@string/unknown_data"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSize14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_league_name"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_play_cate_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:gravity="left"
                android:text="@{matchOdd.playCateName}"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSize14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_slash"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="玩法" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:minHeight="48dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="4dp"
            tools:ignore="SpUsage">


            <TextView
                android:id="@+id/tv_game_type_play_cate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize14sp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="@dimen/textSize12sp"
                app:autoSizeMinTextSize="@dimen/textSize8sp"
                app:layout_constraintEnd_toStartOf="@+id/tv_count"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constrainedWidth="true"
                tools:text="篮球 让球" />


            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{matchOdd.rtScore}"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/textSize12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_game_type_play_cate"
                tools:text="113 - 116" />

            <TextView
                android:id="@+id/tv_team_names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/textSize12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_game_type_play_cate"
                tools:text="菲尼克斯太阳 v 菲尼克斯太阳" />

            <!--playName spread @ odd-->
            <TextView
                android:id="@+id/play_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/textSize12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_team_names"
                tools:text="密尔沃基雄鹿 6.5 \@ 1.860" />

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/textSize12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/play_content"
                tools:text="2022-02-25 10:42" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:minHeight="48dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingBottom="10dp"
            tools:ignore="SpUsage">

            <TextView
                android:id="@+id/tv_bet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/bet_info_list_bet_quota"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize12sp"
                app:autoSizeMaxTextSize="@dimen/textSize12sp"
                app:autoSizeMinTextSize="@dimen/textSize8sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_win_lose"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/tv_bet"
                app:layout_constraintTop_toTopOf="@+id/tv_bet"
                app:moneyFormat="@{row.totalAmount}"
                tools:text="9,999,999.000" />

            <TextView
                android:id="@+id/tv_win_lose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/win_lose_mark"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize12sp"
                app:hideByStatus="@{row.status}"
                app:layout_constraintEnd_toStartOf="@id/tv_win_lose_money"
                app:layout_constraintTop_toTopOf="@+id/tv_bet" />

            <TextView
                android:id="@+id/tv_win_lose_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorGreenLight"
                android:textSize="@dimen/textSize12sp"
                android:textStyle="bold"
                app:hideByStatus="@{row.status}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_bet"
                app:moneyColor="@{row.win}"
                app:moneyFormat="@{row.win}"
                tools:text="9,959,500.000" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/textSize12sp"
                app:betReceiptStatus="@{row.status}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_bet"
                app:statusVisibility="@{row.status}"
                tools:text="下注失败"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@{row.orderNo}"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/textSize12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_time"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_bet"
                tools:text="b000003612091822030128" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/textSize12sp"
                app:dateTimeNoYear="@{matchOdd.startTime}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintTop_toTopOf="@+id/tv_number"
                tools:text="06-23 23:04:01" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>
