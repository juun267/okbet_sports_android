<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.stx.xhb.androidx.XBanner
        android:id="@+id/xbanner"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="12dp"
        app:AutoPlayTime="3000"
        app:placeholderDrawable="@drawable/img_banner01"
        app:pointsVisibility="false"
        app:pageChangeDuration="800"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center_horizontal"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvGamesTab"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/color_cccccc"
        android:layout_marginVertical="6dp"
        android:paddingHorizontal="12dp"
        android:clipToPadding="false"/>

    <EditText
        android:id="@+id/edtSearchGames"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="12dp"
        android:gravity="center_vertical|left"
        android:paddingLeft="12dp"
        android:paddingRight="18dp"
        android:background="@drawable/bg_radius_8_white_only"
        android:textColorHint="@color/color_BEC7DC"
        android:hint="Search for the game you're looking for"
        android:textSize="12sp"
        android:drawableRight="@drawable/ic_search_home"/>

</merge>