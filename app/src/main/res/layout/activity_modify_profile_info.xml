    </LinearLayout>

    <!--  微信  -->
    <LinearLayout
        android:id="@+id/ll_wechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">

        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_we_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/hint_we_chat_number"
            app:cvInputType="text"
            app:cvTitle="@string/we_chat" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_radius_20_button_dusk"
        android:minWidth="135dp"
        android:minHeight="36dp"
        android:text="@string/btn_confirm"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize14sp" />

</LinearLayout>