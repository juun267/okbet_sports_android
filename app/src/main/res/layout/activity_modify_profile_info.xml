<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray11"
    android:orientation="vertical"
    tools:context=".ui.profileCenter.nickname.ModifyProfileInfoActivity">

    <RelativeLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/colorBlue">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="@dimen/tool_bar_height"
            android:layout_height="@dimen/tool_bar_height"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/change_nickname"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize16sp" />

    </RelativeLayout>

    <!--  暱稱  -->
    <LinearLayout
        android:id="@+id/ll_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">

        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/hint_nickname"
            app:cvTitle="@string/nickname" />
    </LinearLayout>

    <!--  真實姓名  -->
    <LinearLayout
        android:id="@+id/ll_real_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">

        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_real_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/edt_hint_real_name"
            app:cvTitle="@string/real_name" />
    </LinearLayout>

    <!--  QQ號碼  -->
    <LinearLayout
        android:id="@+id/ll_qq_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">

        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_qq_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/hint_qq_number"
            app:cvInputType="number"
            app:cvTitle="@string/qq_number" />
    </LinearLayout>

    <!--  郵箱  -->
    <LinearLayout
        android:id="@+id/ll_e_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">

        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_e_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/hint_e_mail"
            app:cvTitle="@string/e_mail" />
    </LinearLayout>

    <!--  手機號碼  -->
    <LinearLayout
        android:id="@+id/ll_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">

        <org.cxct.sportlottery.ui.login.LoginEditText
            android:id="@+id/et_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cvHint="@string/hint_phone_number"
            app:cvInputType="number"
            app:cvTitle="@string/phone_number" />

