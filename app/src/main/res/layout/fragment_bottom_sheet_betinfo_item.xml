<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="org.cxct.sportlottery.ui.game.betList.FastBetFragment"
    tools:ignore="RtlSymmetry,SpUsage">


    <data>

        <variable
            name="parlayOdd"
            type="org.cxct.sportlottery.network.bet.info.ParlayOdd" />

        <variable
            name="dialog"
            type="org.cxct.sportlottery.ui.game.betList.FastBetFragment" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <View
            android:id="@+id/shadow"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@drawable/bg_gradient_bottom_sheet_shadow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_radius_8_white_top_only"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_8">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="@dimen/margin_6"
                app:cardUseCompatPadding="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintHeight_default="wrap">

                    <LinearLayout
                        android:id="@+id/layoutTitle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_24"
                        android:gravity="center_vertical"
                        android:background="@color/color_191919_FCFCFC"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_gradient_0066d1_0079fa"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvInGame"
                                android:layout_width="82.5dp"
                                android:layout_height="match_parent"
                                android:paddingStart="8dp"
                                android:background="@drawable/bg_half_orange"
                                android:gravity="start|center_vertical"
                                android:text="@string/home_tab_in_play2"
                                android:textColor="@color/white"
                                android:textSize="@dimen/margin_12"
                                android:visibility="gone"
                                tools:visibility="visible"/>

                            <ImageView
                                android:id="@+id/ivSportLogo"
                                android:layout_width="@dimen/margin_12"
                                android:layout_height="@dimen/margin_12"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/ic_tennis_icon"
                                app:tint="@color/color_FFFFFF" />

                            <TextView
                                android:id="@+id/tvLeagueName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_4"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:lines="1"
                                android:text="@string/home_tab_in_play2"
                                android:textColor="@color/color_FFFFFF"
                                android:textSize="@dimen/margin_12" />

                            <ImageView
                                android:id="@+id/iv_close"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:padding="@dimen/margin_6"
                                android:src="@drawable/ic_close"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="@color/color_FFFFFF" />
                        </LinearLayout>
                    </LinearLayout>

                    <!--                    <include-->
                    <!--                        layout="@layout/content_bet_info_item"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        app:layout_constraintTop_toBottomOf="@+id/layoutTitle"-->
                    <!--                        app:parlayOdd="@{parlayOdd}" />-->

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_item_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_191919_FCFCFC"
                        app:layout_constraintTop_toBottomOf="@+id/layoutTitle">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/iv_bet_lock"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_bet_lock"
                                android:visibility="invisible"
                                app:layout_constraintBottom_toTopOf="@+id/et_clickable"
                                app:layout_constraintEnd_toEndOf="parent" />


                            <View
                                android:id="@+id/v_point"
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:layout_marginStart="6dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/bg_circle_red"
                                android:visibility="gone"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/tv_odds_content" />


                            <!--playName + spread + @ + odds + (oddsType)-->
                            <TextView
                                android:id="@+id/tv_odds_content"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/activity_horizontal_margin"
                                android:layout_marginTop="9dp"
                                android:layout_marginEnd="8dp"
                                android:textColor="@color/color_e5e5e5_333333"
                                android:textSize="@dimen/textSize15sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toStartOf="@+id/iv_close"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="俄罗斯 -0.5/1 ＠ 0.890 (歐洲盤)" />


                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_16"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="16dp"
                                android:textColor="@color/color_e5e5e5_333333"
                                android:textSize="@dimen/textSize13sp"
                                app:layout_constraintEnd_toStartOf="@id/tvContent"
                                app:layout_constraintHorizontal_chainStyle="spread"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_odds_content"
                                tools:text="让球" />

                            <TextView
                                android:id="@+id/tvContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:textColor="@color/color_F75452_b73a20"
                                android:textSize="@dimen/textSize12sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@id/tv_name"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/tv_name"
                                app:layout_constraintTop_toTopOf="@id/tv_name"
                                tools:text="-0.5/2" />

                            <!--玩法名稱:讓球,獨贏..-->
                            <TextView
                                android:id="@+id/tv_match"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                                android:layout_marginTop="@dimen/margin_6"
                                android:layout_marginBottom="@dimen/margin_8"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textColor="@color/color_A3A3A3_666666"
                                android:textSize="@dimen/textSize13sp"
                                app:layout_constraintBottom_toTopOf="@+id/tv_odd_content_changed"
                                app:layout_constraintEnd_toStartOf="@id/tvOdds"
                                app:layout_constraintHorizontal_chainStyle="spread"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_name"
                                tools:text="纽卡斯尔 v 切尔西" />

                            <TextView
                                android:id="@+id/tvOdds"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="12dp"
                                android:textColor="@color/color_317FFF_0760D4"
                                android:textSize="@dimen/margin_14"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@id/tv_match"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/tv_match"
                                app:layout_constraintTop_toTopOf="@+id/tv_match"
                                tools:text="0.89" />

                            <TextView
                                android:id="@+id/tv_odd_content_changed"
                                android:layout_width="match_parent"
                                android:layout_height="36dp"
                                android:background="@color/color_F9DDDE"
                                android:drawableLeft="@drawable/ic_error_tip"
                                android:drawablePadding="@dimen/margin_8"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/margin_12"
                                android:text="@string/bet_info_odd_content_changed2"
                                android:textColor="@color/color_E44438_e44438"
                                android:textSize="@dimen/textSize12sp"
                                android:visibility="gone"
                                tools:visibility="visible"
                                app:layout_constraintTop_toBottomOf="@+id/tv_match"
                                app:layout_constraintBottom_toTopOf="@+id/viewGrey"/>

                            <View
                                android:id="@+id/viewGrey"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:background="@color/color_191919_EEEFF0"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_odd_content_changed" />

                            <include
                                layout="@layout/content_bet_info_item_quota_detail_v2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_12"
                                android:layout_marginTop="@dimen/margin_8"
                                android:layout_marginEnd="@dimen/margin_12"
                                android:layout_marginBottom="@dimen/margin_8"
                                app:layout_constraintBottom_toTopOf="@+id/et_bet"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/viewGrey"
                                app:parlayOdd="@{parlayOdd}" />

                            <EditText
                                android:id="@+id/et_bet"
                                android:layout_width="0dp"
                                android:layout_height="38dp"
                                android:layout_marginStart="@dimen/margin_12"
                                android:layout_marginTop="28dp"
                                android:layout_marginBottom="1dp"
                                android:background="@drawable/effect_select_bet_radius_4_edit_text"
                                android:hint="@string/bet_info_input_quota"
                                android:inputType="numberDecimal"
                                android:letterSpacing="0.05"
                                android:maxLength="7"
                                android:paddingStart="10dp"
                                android:textColor="@color/color_FFFFFF_0760D4"
                                android:textColorHint="@color/color_CCCCCC_999999"
                                android:textSize="@dimen/textSize16sp"
                                tools:text="100"
                                app:layout_constraintBottom_toTopOf="@+id/tv_error_message"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/btnRecharge"
                                android:layout_marginEnd="@dimen/margin_8"
                                app:layout_constraintTop_toBottomOf="@+id/tv_odd_content_changed" />

                            <TextView
                                android:layout_width="76dp"
                                android:id="@+id/btnRecharge"
                                android:layout_height="36dp"
                                android:background="@drawable/bg_radius_4_ffe136"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:text="@string/recharge"
                                android:gravity="center"
                                android:textSize="@dimen/textSize14sp"
                                android:textColor="@color/color_060F20"
                                android:layout_marginEnd="@dimen/margin_8"
                                android:layout_marginStart="@dimen/margin_2"
                                app:layout_constraintTop_toTopOf="@+id/et_bet"
                                app:layout_constraintStart_toEndOf="@+id/et_bet"
                                app:layout_constraintBottom_toBottomOf="@+id/et_bet"
                                android:visibility="gone"
                                />

                            <View
                                android:id="@+id/et_clickable"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintBottom_toBottomOf="@+id/et_bet"
                                app:layout_constraintEnd_toEndOf="@+id/et_bet"
                                app:layout_constraintStart_toStartOf="@+id/et_bet"
                                app:layout_constraintTop_toTopOf="@+id/et_bet" />

                            <LinearLayout
                                android:id="@+id/llActualBet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:orientation="vertical"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="@+id/et_clickable"
                                app:layout_constraintStart_toEndOf="@+id/et_clickable"
                                app:layout_constraintTop_toTopOf="@+id/et_clickable">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/actual_bet"
                                    android:textColor="@color/color_A3A3A3_666666"
                                    android:textSize="@dimen/textSize12sp" />

                                <TextView
                                    android:id="@+id/tvRealAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.00"
                                    android:textColor="@color/color_317FFF_0760D4"
                                    android:textSize="@dimen/textSize12sp" />

                            </LinearLayout>


                            <TextView
                                android:id="@+id/tv_error_message"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="10dp"
                                android:textColor="@color/color_E44438_e44438"
                                android:textSize="@dimen/textSize13sp"
                                android:visibility="gone"
                                app:layout_constraintBottom_toTopOf="@+id/layoutKeyBoard"
                                app:layout_constraintStart_toStartOf="@+id/et_bet"
                                app:layout_constraintTop_toBottomOf="@+id/et_bet"
                                tools:text="@string/bet_info_list_minimum_limit_amount"
                                tools:visibility="visible" />

                            <!--預留空間為了對應鍵盤與警告提示自動增長-->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:background="@color/transparent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_error_message"/>

                            <org.cxct.sportlottery.util.KeyboardView
                                android:id="@+id/layoutKeyBoard"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_marginTop="@dimen/margin_10"
                                android:visibility="gone"
                                tools:visibility="visible"
                                app:layout_constraintTop_toBottomOf="@+id/tv_error_message" />

                            <!--                            <LinearLayout-->
                            <!--                                android:id="@+id/ll_keyboard_bg"-->
                            <!--                                android:layout_width="match_parent"-->
                            <!--                                android:layout_height="wrap_content"-->
                            <!--                                android:orientation="horizontal"-->
                            <!--                                android:background="@color/color_060F20"-->
                            <!--                                android:paddingStart="8dp"-->
                            <!--                                android:paddingEnd="8dp"-->
                            <!--                                android:paddingTop="6dp"-->
                            <!--                                app:layout_constraintTop_toBottomOf="@+id/et_bet"-->
                            <!--                                app:layout_constraintBottom_toBottomOf="parent"-->
                            <!--                                android:paddingBottom="6dp"-->
                            <!--                                android:visibility="gone" >-->

                            <!--                                <org.cxct.sportlottery.ui.common.CustomKeyBoardView-->
                            <!--                                    android:id="@+id/kv_keyboard"-->
                            <!--                                    android:layout_width="match_parent"-->
                            <!--                                    android:layout_height="wrap_content"-->
                            <!--                                    android:focusable="true"-->
                            <!--                                    android:background="@color/color_060F20"-->
                            <!--                                    android:focusableInTouchMode="true"-->
                            <!--                                    android:keyBackground="@drawable/bg_frame_6dp_white"-->
                            <!--                                    android:visibility="gone" />-->

                            <!--                            </LinearLayout>-->

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/ll_odds_changed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_odds_changed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_232628_EAF4FE"
                    android:gravity="center"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="2dp"
                    android:text="@string/bet_info_odd_content_changed"
                    android:textColor="@color/color_E44438_e44438"
                    android:textSize="@dimen/textSize12sp"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            </LinearLayout>

            <include layout="@layout/view_bet_info_close_message" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_2B2B2B_e2e2e2">

        </View>

        <LinearLayout
            android:id="@+id/ll_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="@color/color_191919_EEEFF0"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_8"
                android:paddingRight="@dimen/margin_8">

                <org.cxct.sportlottery.ui.bet.list.FastBetSettingButton
                    android:id="@+id/button_fast_bet_setting"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_add_to_bet_info"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="@dimen/margin_4"
                    android:layout_marginRight="@dimen/margin_4"
                    android:layout_weight="1"
                    android:background="@drawable/button_radius_4_cde5ff"
                    android:gravity="center"
                    android:text="@string/bet_info_add_to_bet_info"
                    android:textColor="@color/color_FFFFFF_000000"
                    android:textSize="@dimen/textSize14sp" />

                <org.cxct.sportlottery.ui.bet.list.BetButton
                    android:id="@+id/button_bet"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginStart="@dimen/margin_4"
                    android:layout_marginEnd="@dimen/margin_1"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</layout>


