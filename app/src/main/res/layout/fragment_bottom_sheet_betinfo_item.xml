<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="org.cxct.sportlottery.ui.game.betList.FastBetFragment"
    tools:ignore="RtlSymmetry,SpUsage">


    <data>

        <variable
            name="parlayOdd"
            type="org.cxct.sportlottery.network.bet.info.ParlayOdd" />

        <variable
            name="dialog"
            type="org.cxct.sportlottery.ui.game.betList.FastBetFragment" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <View
            android:id="@+id/shadow"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@drawable/bg_gradient_bottom_sheet_shadow" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/margin_8"
            android:paddingEnd="@dimen/margin_8"
            android:paddingTop="@dimen/margin_8"
            android:background="@drawable/bg_radius_8_white_top_only">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="@dimen/margin_8">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_24"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_half_orange_half_blue">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvInGame"
                            android:layout_marginStart="@dimen/margin_12"
                            android:textColor="@color/white"
                            android:textSize="@dimen/margin_12"
                            android:text="@string/home_tab_in_play2"/>


                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>



            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/bet_list_title"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/textSize14sp"
                android:layout_marginStart="@dimen/margin_8"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <include
                layout="@layout/content_bet_info_item"
                app:parlayOdd="@{parlayOdd}" />

            <View
                android:id="@+id/v_keyboard_shadow"
                android:layout_width="match_parent"
                android:layout_marginTop="-16dp"
                android:layout_height="16dp"
                android:visibility="gone"
                android:background="@drawable/bg_gradient_bottom_sheet_shadow" />

            <LinearLayout
                android:id="@+id/ll_keyboard_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorWhite"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:visibility="gone" >

                <org.cxct.sportlottery.ui.common.CustomKeyBoardView
                    android:id="@+id/kv_keyboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:background="@color/colorWhite"
                    android:focusableInTouchMode="true"
                    android:keyBackground="@drawable/bg_frame_6dp_white"
                    android:visibility="gone" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_odd_content_changed"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:text="@string/bet_info_odd_content_changed"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/textSize12sp"
                android:visibility="gone" />

            <include layout="@layout/view_bet_info_close_message" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="@color/color_FFEEEFF0"
                android:paddingLeft="@dimen/margin_8"
                android:paddingRight="@dimen/margin_8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <org.cxct.sportlottery.ui.bet.list.FastBetSettingButton
                    android:id="@+id/button_fast_bet_setting"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_add_to_bet_info"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_radius_4_ff9e3a_ffbb4e"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_4"
                    android:layout_marginRight="@dimen/margin_4"
                    android:text="@string/bet_info_add_to_bet_info"
                    android:textColor="@color/color_FFFFFFFF"
                    android:textSize="@dimen/textSize14sp" />

                <org.cxct.sportlottery.ui.bet.list.BetButton
                    android:id="@+id/button_bet"
                    android:layout_marginStart="@dimen/margin_4"
                    android:layout_marginEnd="@dimen/margin_1"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</layout>

