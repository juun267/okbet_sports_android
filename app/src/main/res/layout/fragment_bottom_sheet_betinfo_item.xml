<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="org.cxct.sportlottery.ui.game.betList.FastBetFragment"
    tools:ignore="RtlSymmetry,SpUsage">


    <data>

        <variable
            name="parlayOdd"
            type="org.cxct.sportlottery.network.bet.info.ParlayOdd" />

        <variable
            name="dialog"
            type="org.cxct.sportlottery.ui.game.betList.FastBetFragment" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <View
            android:id="@+id/shadow"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@drawable/bg_gradient_bottom_sheet_shadow" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:paddingTop="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_radius_8_white_top_only">
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_marginBottom="@dimen/margin_12"
                android:layout_marginLeft="@dimen/margin_16"
                android:background="@drawable/bg_login_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bet_list_title"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/textSize14sp"
                android:layout_marginLeft="@dimen/margin_8"/>
            <ImageView
                android:layout_width="@dimen/margin_12"
                android:layout_height="@dimen/margin_12"
                android:id="@+id/ivBetMoney"
                android:layout_marginRight="@dimen/margin_8"
                android:src="@drawable/ic_bet_list_money"/>

            <TextView
                android:id="@+id/tv_current_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:textSize="@dimen/textSize14sp"
                android:layout_marginRight="@dimen/margin_14"
                android:textColor="@color/colorBlackLight"
                tools:text="9,875,241.000 RMB" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/colorWhite4" />


        <LinearLayout
            android:id="@+id/ll_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <include
                layout="@layout/content_bet_info_item"
                app:parlayOdd="@{parlayOdd}" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_1"
                android:background="@color/colorWhite4" />

            <LinearLayout
                android:id="@+id/ll_keyboard_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorWhite"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingBottom="6dp"
                android:visibility="gone" >

                <org.cxct.sportlottery.ui.common.CustomKeyBoardView
                    android:id="@+id/kv_keyboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:background="@color/colorWhite"
                    android:focusableInTouchMode="true"
                    android:keyBackground="@drawable/bg_frame_6dp_white"
                    android:visibility="gone" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_odd_content_changed"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:text="@string/bet_info_odd_content_changed"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/textSize12sp"
                android:visibility="gone" />

            <include layout="@layout/view_bet_info_close_message" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="#FFF"
                android:paddingLeft="@dimen/margin_8"
                android:paddingRight="@dimen/margin_8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <org.cxct.sportlottery.ui.bet.list.FastBetSettingButton
                    android:id="@+id/button_fast_bet_setting"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_add_to_bet_info"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_radius_4_button_fcfcfc_ededed"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_4"
                    android:layout_marginRight="@dimen/margin_4"
                    android:text="@string/bet_info_add_to_bet_info"
                    android:textAllCaps="true"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/textSize12sp" />

                <org.cxct.sportlottery.ui.bet.list.BetButton
                    android:id="@+id/button_bet"
                    android:layout_marginLeft="@dimen/margin_4"
                    android:layout_marginRight="@dimen/margin_8"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</layout>

