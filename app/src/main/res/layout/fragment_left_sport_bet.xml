<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_bet_record"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="8dp"
            android:layout_height="58dp">

            <ImageView
                android:id="@+id/ivBetRecord"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_bet_record"
                android:layout_width="36dp"
                android:layout_height="36dp"/>

            <TextView
                android:id="@+id/tvSportName"
                android:text="Bet record"
                app:layout_constraintStart_toEndOf="@+id/ivBetRecord"
                app:layout_constraintTop_toTopOf="@+id/ivBetRecord"
                android:textColor="@color/color_00181E"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textFontWeight="600"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tvSportNum"
                android:text="Unsettled Bet"
                app:layout_constraintStart_toEndOf="@+id/ivBetRecord"
                app:layout_constraintTop_toBottomOf="@+id/tvSportName"
                android:textColor="@color/color_6D7693"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>


            <TextView
                android:text="2123123"
                app:layout_constraintStart_toEndOf="@+id/tvSportNum"
                app:layout_constraintTop_toBottomOf="@+id/tvSportName"
                android:textColor="@color/color_FF2E00"
                android:layout_width="wrap_content"
                android:paddingLeft="8dp"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvSportNum"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@drawable/ic_bet_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:text="Hot Matches"
            android:paddingStart="12dp"
            android:textSize="14sp"
            android:textColor="@color/color_000000"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerHotMatch"
            tools:listitem="@layout/item_left_hot_matches"
            tools:itemCount="14"
            android:isScrollContainer="false"
            android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


