<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constrainBetRecord"
            android:layout_width="match_parent"
            android:background="@drawable/bg_bet_record"
            android:foreground="@drawable/fg_ripple"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:layout_height="58dp">

            <ImageView
                android:id="@+id/ivBetRecord"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_bet_record"
                android:layout_width="36dp"
                android:layout_height="36dp"/>

            <TextView
                android:id="@+id/tvSportName"
                android:text="@string/N944"
                app:layout_constraintStart_toEndOf="@+id/ivBetRecord"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/color_0D2245"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tvSportNum"
                android:text="@string/not_settled"
                app:layout_constraintStart_toEndOf="@+id/ivBetRecord"
                app:layout_constraintTop_toBottomOf="@+id/tvSportName"
                android:textColor="@color/color_6D7693"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"/>


            <TextView
                android:id="@+id/tvRecordNumber"
                android:text=""
                app:layout_constraintStart_toEndOf="@+id/tvSportNum"
                app:layout_constraintTop_toBottomOf="@+id/tvSportName"
                android:textColor="@color/color_FF2E00"
                android:layout_width="wrap_content"
                android:paddingLeft="8dp"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvSportNum"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@drawable/ic_bet_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="12dp"
                app:tint="@color/color_0D2245"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tvInplay"
            android:text="@string/home_in_play"
            android:paddingStart="12dp"
            android:textSize="16sp"
            android:textColor="@color/color_0D2245"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvInPlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_12"
            tools:listitem="@layout/item_left_in_play"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:itemCount="5"
            app:spanCount="2"
            android:isScrollContainer="false"
            android:nestedScrollingEnabled="false"
          />
        <TextView
            android:id="@+id/tvRecommendLeague"
            android:text="@string/N881"
            android:paddingStart="12dp"
            android:textSize="16sp"
            android:textColor="@color/color_0D2245"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRecommendLeague"
            tools:listitem="@layout/item_left_hot_matches"
            tools:itemCount="6"
            android:isScrollContainer="false"
            android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginHorizontal="@dimen/margin_12"
            android:background="@color/color_EEF3FC"/>
        <TextView
            android:text="@string/other"
            android:textSize="16sp"
            android:textColor="@color/color_0D2245"
            android:layout_marginHorizontal="@dimen/margin_12"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <org.cxct.sportlottery.view.MainMenuItemView
            android:id="@+id/menuPromo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <org.cxct.sportlottery.view.MainMenuItemView
            android:id="@+id/menuAffiliate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <org.cxct.sportlottery.view.MainMenuItemView
            android:id="@+id/menuNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <org.cxct.sportlottery.view.MainMenuItemView
            android:id="@+id/menuSupport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <org.cxct.sportlottery.view.MainMenuItemView
            android:id="@+id/menuVerify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
