<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_license"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_36"
        android:src="@drawable/ic_pagcor"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tvLicense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_license"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="3dp"
        android:text="Copyright Â© 2023 OKBET ALL RIGHTS RESERVED"
        android:textColor="@color/color_6D7693"
        android:textSize="@dimen/textSize10sp" />

</LinearLayout>