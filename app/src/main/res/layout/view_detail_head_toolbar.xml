<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpUsage,RtlSymmetry,ContentDescription,UseAppTint">

    <data>

        <variable
            name="fragment"
            type="org.cxct.sportlottery.ui.game.detail.SportDetailActivity" />

        <variable
            name="gameViewModel"
            type="org.cxct.sportlottery.ui.game.GameViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintHeadToobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_height="200dp"
        android:paddingTop="25dp"
        android:background="@color/color_000000">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:onClick="@{() -> fragment.finish()}"
            android:padding="5dp"
            android:tint="@color/color_FFFFFF"
            android:src="@drawable/ic_arrow_right_white"
            android:rotation="180"
            app:layout_constraintTop_toTopOf="@+id/ll_game_title"
            app:layout_constraintBottom_toBottomOf="@+id/ll_game_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="7dp"/>

        <LinearLayout
            android:id="@+id/ll_game_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingVertical="5dp">

            <TextView
                android:id="@+id/tv_game_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{gameViewModel.oddsDetailResult.peekContent().oddsDetailData.league.name}"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/textSize16sp"
                tools:text="欧洲足球锦标赛2020" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_droparrow"
                android:layout_marginLeft="7dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/img_home_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            tools:layout_height="48dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_game_title"
            android:layout_marginLeft="58dp"
            android:background="@color/color_E23434"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/tv_home_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{gameViewModel.oddsDetailResult.peekContent().oddsDetailData.matchOdd.matchInfo.homeName}"
            android:textColor="@color/color_FFFFFF_FFFFFF"
            android:textSize="@dimen/textSize14sp"
            tools:text="義大利"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@+id/img_home_logo"
            app:layout_constraintTop_toBottomOf="@+id/img_home_logo"
            app:layout_constraintRight_toRightOf="@+id/img_home_logo"/>


        <ImageView
            android:id="@+id/img_away_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            tools:minHeight="48dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_home_logo"
            android:layout_marginRight="58dp"
            tools:background="@color/color_E23434"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/tv_away_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{gameViewModel.oddsDetailResult.peekContent().oddsDetailData.matchOdd.matchInfo.homeName}"
            android:textColor="@color/color_FFFFFF_FFFFFF"
            android:textSize="@dimen/textSize14sp"
            tools:text="義大利"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@+id/img_away_logo"
            app:layout_constraintTop_toBottomOf="@+id/img_away_logo"
            app:layout_constraintRight_toRightOf="@+id/img_away_logo"/>

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_home_logo"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_time_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/textSize12sp"
                tools:text="下半场" />

            <TextView
                android:id="@+id/tv_time_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/time_null"
                android:fontFamily="@font/helvetica"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/textSize12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_home_logo"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/tv_status_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/textSize12sp"
                tools:text="下半场" />

            <TextView
                android:id="@+id/tv_spt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/time_null"
                android:fontFamily="@font/helvetica"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/textSize12sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/textSize26sp"
            android:fontFamily="@font/helvetica"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_time"
            tools:text="5 - 5"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_half"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/textSize10sp"
                android:fontFamily="@font/helvetica"
                android:visibility="gone"
                android:gravity="center"
                tools:text="半：2-1"
                tools:visibility="visible"
                />

            <ImageView
                android:id="@+id/imgCorner"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_bell"
                android:layout_marginLeft="11dp"
                android:visibility="gone"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/tvCorner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="9-2"
                android:textSize="@dimen/textSize10sp"
                android:textColor="@color/color_FFFFFF"
                android:layout_marginLeft="11dp"
                android:visibility="gone"
                tools:visibility="visible"/>


            <TextView
                android:id="@+id/imgYellowScore"
                android:layout_width="10dp"
                android:layout_height="12dp"
                android:background="@drawable/bg_radius_2_025be8"
                android:layout_marginLeft="6dp"
                android:text="1"
                android:textSize="@dimen/textSize8sp"
                android:textColor="@color/color_FFFFFF"
                android:gravity="center"
                android:fontFamily="@font/helvetica"
                android:visibility="gone"
                tools:visibility="visible"/>


            <TextView
                android:id="@+id/tvYellowScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="3-1"
                android:textSize="@dimen/textSize10sp"
                android:textColor="@color/color_FFFFFF"
                android:layout_marginLeft="6dp"
                android:visibility="gone"
                tools:visibility="visible"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_status_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/textSize12sp"
            android:visibility="gone"
            tools:text="14-15  15-14"
            tools:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

