<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/constraintHeadToobar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_sport_detail_banner" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="3:2"
        android:orientation="vertical">

        <View
            android:id="@+id/v_statusbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_25" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_bar_height"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="7dp"
                android:src="@drawable/ic_arrow_white"
                android:layout_marginLeft="10dp" />

            <LinearLayout
                android:id="@+id/ll_game_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="5dp">

                <TextView
                    android:id="@+id/tv_game_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/textSize16sp"
                    tools:text="欧洲足球锦标赛2020" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_droparrow"
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_refresh"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/margin_10"
                android:padding="7dp"
                android:src="@drawable/ic_sport_refresh"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_15">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_home_logo"
                    android:layout_width="44dp"
                    android:layout_height="48dp"
                    tools:layout_height="48dp" />

                <TextView
                    android:id="@+id/tv_home_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_10"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/color_FFFFFF_FFFFFF"
                    android:textSize="@dimen/textSize14sp"
                    tools:text="義大利"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:minWidth="60dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_time_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="下半场" />

                    <TextView
                        android:id="@+id/tv_time_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/time_null"
                        android:fontFamily="@font/helvetica"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="@dimen/textSize12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_time_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:id="@+id/tv_status_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="下半场" />

                    <TextView
                        android:id="@+id/tv_spt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/time_null"
                        android:fontFamily="@font/helvetica"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="@dimen/textSize12sp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/textSize26sp"
                    android:fontFamily="@font/din_font"
                    android:visibility="gone"
                    tools:text="5 - 5"
                    tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_away_logo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    tools:minHeight="48dp"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tv_away_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_10"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/color_FFFFFF_FFFFFF"
                    android:textSize="@dimen/textSize14sp"
                    tools:text="義大利"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_menu"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:paddingHorizontal="@dimen/margin_7"
            android:background="@drawable/bg_trans_radius_15"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:visibility="visible"
            tools:visibility="visible">

            <LinearLayout
                android:id="@+id/lin_video"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/margin_7">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_video" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_7"
                    android:textColor="@color/color_2b2b2b_ffffff"
                    android:textSize="@dimen/textSize12sp"
                    android:text="@string/video" />
            </LinearLayout>

            <View
                android:id="@+id/v_menu_1"
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:background="@color/color_99FFFFFF" />

            <LinearLayout
                android:id="@+id/lin_anime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/margin_7">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_action" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_7"
                    android:textColor="@color/color_2b2b2b_ffffff"
                    android:textSize="@dimen/textSize12sp"
                    android:text="@string/anime" />
            </LinearLayout>

        </LinearLayout>

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_half"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/textSize10sp"
                    android:fontFamily="@font/helvetica"
                    android:visibility="gone"
                    android:gravity="center"
                    tools:text="半：2-1"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/imgCorner"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_bell"
                    android:layout_marginLeft="11dp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tvCorner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="9-2"
                    android:fontFamily="@font/din_font"
                    android:textSize="@dimen/textSize10sp"
                    android:textColor="@color/color_FFFFFF"
                    android:layout_marginLeft="11dp"
                    android:visibility="gone"
                    tools:visibility="visible" />


                <TextView
                    android:id="@+id/imgYellowScore"
                    android:layout_width="10dp"
                    android:layout_height="12dp"
                    android:background="@drawable/bg_radius_2_ffcc15"
                    android:layout_marginLeft="6dp"
                    android:text="1"
                    android:textSize="@dimen/textSize8sp"
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:fontFamily="@font/helvetica"
                    android:visibility="gone"
                    tools:visibility="visible" />


                <TextView
                    android:id="@+id/tvYellowScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="3-1"
                    android:fontFamily="@font/din_font"
                    android:textSize="@dimen/textSize10sp"
                    android:textColor="@color/color_FFFFFF"
                    android:layout_marginLeft="6dp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_status_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/textSize12sp"
                android:fontFamily="@font/din_font"
                android:visibility="gone"
                tools:text="14-15  15-14"
                tools:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

