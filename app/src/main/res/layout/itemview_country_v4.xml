<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/country_border"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorWhite4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/country_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#202020"
        android:textSize="@dimen/textSize16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/country_border"
        app:layout_constraintEnd_toStartOf="@id/country_img"
        app:layout_constraintStart_toStartOf="@id/country_border"
        app:layout_constraintTop_toTopOf="@id/country_border"
        tools:text="欧洲" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/country_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/country_border"
        app:layout_constraintEnd_toEndOf="@id/country_border"
        app:layout_constraintTop_toTopOf="@id/country_border"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/country_border"
        app:layout_constraintEnd_toEndOf="@id/country_border"
        app:layout_constraintTop_toTopOf="@id/country_border">


    <WebView
        android:id="@+id/country_webview"
        android:layout_gravity="end"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:scrollbars="none"
        android:touchscreenBlocksFocus="true"
        tools:ignore="WebViewLayout" />

    </FrameLayout>
    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/country_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/country_border"
        tools:el_expanded="true">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/country_league_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            tools:itemCount="1"
            tools:listitem="@layout/itemview_country_league_v4" />

    </net.cachapa.expandablelayout.ExpandableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>