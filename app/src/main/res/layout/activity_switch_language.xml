<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="SpUsage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_48"
        android:background="@color/color_191919_FCFCFC"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_scrollFlags="scroll|enterAlways"
        tools:ignore="SpUsage,RtlSymmetry">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginBottom="@dimen/margin_4"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:scaleType="fitStart"
            android:src="@drawable/ic_logo" />

        <ImageView
            android:id="@+id/iv_language"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:src="@drawable/ic_flag_en"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_141414_F3F4F5"
        android:gravity="top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_48"
            android:background="@color/color_212121_ededed"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/margin_8">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_8"
                android:src="@drawable/ic_icon_back_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_chose_language"
                android:textColor="@color/color_e5e5e5_333333" />

            <ImageView
                android:layout_width="@dimen/margin_16"
                android:layout_height="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_10"
                android:src="@drawable/ic_icon_flag" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEnglish"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_54"
            android:background="@color/color_191919_FCFCFC"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/margin_20"
            android:paddingEnd="@dimen/margin_16">


            <TextView
                android:id="@+id/tvEnglish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/language_en"
                android:textColor="@color/color_e5e5e5_333333"
                android:textSize="@dimen/textSize14sp" />

            <ImageView
                android:layout_width="@dimen/margin_40"
                android:layout_height="@dimen/margin_26"
                android:src="@drawable/ic_flat_en" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/color_212121_ededed" />

        <LinearLayout
            android:id="@+id/llChina"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_54"
            android:background="@color/color_191919_FCFCFC"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/margin_20"
            android:paddingEnd="@dimen/margin_16">

            <TextView
                android:id="@+id/tvChina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_e5e5e5_333333"
                android:text="@string/language_cn"
                android:textSize="@dimen/textSize14sp" />

            <ImageView
                android:layout_width="@dimen/margin_40"
                android:layout_height="@dimen/margin_26"
                android:src="@drawable/ic_flat_cn" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/color_212121_ededed" />

        <LinearLayout
            android:id="@+id/llVietnam"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_54"
            android:background="@color/color_191919_FCFCFC"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/margin_20"
            android:paddingEnd="@dimen/margin_16">

            <TextView
                android:id="@+id/tvVietnam"
                android:layout_width="0dp"
                android:textColor="@color/color_e5e5e5_333333"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/language_vi"
                android:textSize="@dimen/textSize14sp" />

            <ImageView
                android:layout_width="@dimen/margin_40"
                android:layout_height="@dimen/margin_26"
                android:src="@drawable/ic_flat_vn" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/color_212121_ededed" />

    </LinearLayout>

</LinearLayout>



