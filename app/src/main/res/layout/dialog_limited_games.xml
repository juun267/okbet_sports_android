<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_white_radius_12">
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:layout_marginTop="@dimen/margin_15"
       android:layout_marginHorizontal="@dimen/margin_40"
       android:textSize="@dimen/textSize18sp"
       android:textColor="@color/color_0D2245"
       android:text="@string/A035"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGames"
        android:theme="@style/scrollbar_style"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:paddingHorizontal="@dimen/margin_16"
        android:layout_marginVertical="@dimen/margin_24"
        android:scrollbarThumbVertical="@drawable/drawable_scrollbar_thumb"
        android:scrollbarSize="4dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:itemCount="6"
        app:spanCount="3"
        tools:listitem="@layout/item_limited_game">
    </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="@dimen/margin_24"
        android:layout_gravity="bottom|center_horizontal"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_limited_game_close"/>
</LinearLayout>