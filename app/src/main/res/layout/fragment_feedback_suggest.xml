<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_141414_F3F4F5"
    android:orientation="vertical"
    tools:context=".ui.feedback.suggest.FeedbackSuggestFragment">

    <androidx.cardview.widget.CardView
        android:background="@color/color_191919_FCFCFC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/transparent_black_0"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_feedback_top" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_191919_FCFCFC"
                android:orientation="vertical"
                android:paddingHorizontal="14dp"
                android:paddingTop="15dp"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feedback"
                    android:drawableLeft="@drawable/ic_oval"
                    android:drawablePadding="@dimen/dp_4"
                    android:textColor="@color/color_BBBBBB_333333"
                    android:textSize="@dimen/textSize14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="6dp"
                    android:text="@string/feedback_description"
                    android:textColor="@color/color_535D76"
                    android:textSize="@dimen/textSize12sp" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="6dp"
                    android:textColor="@color/color_E44438_e44438"
                    android:textSize="@dimen/textSize12sp"
                    android:visibility="gone"
                    tools:text="@string/feedback_description_money" />

                <TextView
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ic_submit"
                    android:gravity="center"
                    android:text="@string/N729"
                    android:textAllCaps="true"
                    android:textColor="@color/color_FCFCFC"
                    android:textSize="@dimen/textSize16sp" />


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>