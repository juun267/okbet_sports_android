<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_return_to_top"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_above="@+id/sport_bottom_navigation"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="9dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/color_191919_EEEFF0"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:contentPadding="10dp"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/return_to_top"
            android:textColor="@color/color_A3A3A3_666666"
            android:textSize="@dimen/textSize14sp" />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_sport"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_191919_FCFCFC"
        app:itemIconTint="@color/selector_blue_silver"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_sport"
        android:visibility="gone"/>


    <org.cxct.sportlottery.ui.game.bottomNavigation.SportBottomNavigation
        android:id="@+id/sport_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true" />


</RelativeLayout>