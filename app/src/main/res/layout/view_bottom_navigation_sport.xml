<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="SpUsage, ContentDescription">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/game_submit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/color_FF9143_ff9200"
            android:text="@string/submit"
            android:textColor="@color/color_FCFCFC"
            android:textSize="@dimen/textSize14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="8dp"
            tools:visibility="gone" />

        <org.cxct.sportlottery.ui.common.ServiceFloatingButton
            android:id="@+id/btn_floating_service"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="14dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_bet_list_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bet_list_bar_height"
        android:background="@drawable/bg_gradient_bet_info_title_v2"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        tools:visibility="gone">

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_7"
            android:paddingHorizontal="@dimen/margin_8"
            android:rotation="180"
            android:src="@drawable/ic_arrow_gray_down"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_bet_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_9"
            android:text="@string/bet_slip"
            android:textColor="@color/color_317FFF_0760D4"
            android:textSize="@dimen/textSize14sp"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_bet_list_count"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_circle_317fff_0760d4"
            app:layout_constraintBottom_toBottomOf="@id/tv_bet_list_count"
            app:layout_constraintEnd_toEndOf="@id/tv_bet_list_count"
            app:layout_constraintStart_toStartOf="@id/tv_bet_list_count"
            app:layout_constraintTop_toTopOf="@id/tv_bet_list_count" />

        <TextView
            android:id="@+id/tv_bet_list_count"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:textColor="@color/color_FFFFFF_FFFFFF"
            android:textSize="@dimen/textSize16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="10" />

        <TextView
            android:id="@+id/tv_balance_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_4"
            android:textColor="@color/color_909090_666666"
            android:textSize="@dimen/textSize14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_balance"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="â‚±" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_10"
            android:textColor="@color/color_909090_666666"
            android:textSize="@dimen/textSize14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/gray_line"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="9,875,241.000" />

        <View
            android:id="@+id/gray_line"
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:background="@color/color_404040_cccccc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_arrow"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <org.cxct.sportlottery.ui.game.bottomNavigation.SportBottomNavigation
        android:id="@+id/sport_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_nav_bar_height" />

</LinearLayout>
