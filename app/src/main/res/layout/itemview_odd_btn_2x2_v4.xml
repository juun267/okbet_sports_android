<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="spUsage">

    <View
        android:id="@+id/odd_btn_row1"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toStartOf="@id/odd_btn_row2"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/odd_btn_row2"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/odd_btn_row1" />

    <TextView
        android:id="@+id/odd_btn_row1_type"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/textSize12sp"
        app:layout_constraintEnd_toEndOf="@id/odd_btn_row1"
        app:layout_constraintStart_toStartOf="@id/odd_btn_row1"
        app:layout_constraintTop_toTopOf="@id/odd_btn_row1"
        tools:text="独赢" />

    <TextView
        android:id="@+id/odd_btn_row1_half"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/textSize12sp"
        app:layout_constraintEnd_toEndOf="@id/odd_btn_row1"
        app:layout_constraintStart_toStartOf="@id/odd_btn_row1"
        app:layout_constraintTop_toBottomOf="@id/odd_btn_row1_type"
        tools:text="1st half"
        tools:visibility="gone" />

    <org.cxct.sportlottery.ui.game.widget.OddsButton
        android:id="@+id/odd_btn_row1_home"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@id/odd_btn_row1"
        app:layout_constraintStart_toStartOf="@id/odd_btn_row1"
        app:layout_constraintTop_toBottomOf="@id/odd_btn_row1_type"
        app:ob_hide_item_flag="true" />

    <org.cxct.sportlottery.ui.game.widget.OddsButton
        android:id="@+id/odd_btn_row1_away"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@id/odd_btn_row1"
        app:layout_constraintStart_toStartOf="@id/odd_btn_row1"
        app:layout_constraintTop_toBottomOf="@id/odd_btn_row1_home"
        app:ob_hide_item_flag="true" />

    <org.cxct.sportlottery.ui.game.widget.OddsButton
        android:id="@+id/odd_btn_row1_draw"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@id/odd_btn_row1"
        app:layout_constraintStart_toStartOf="@id/odd_btn_row1"
        app:layout_constraintTop_toBottomOf="@id/odd_btn_row1_away"
        app:ob_hide_item_flag="true" />

    <TextView
        android:id="@+id/odd_btn_row2_type"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/textSize12sp"
        app:layout_constraintEnd_toEndOf="@id/odd_btn_row2"
        app:layout_constraintStart_toStartOf="@id/odd_btn_row2"
        app:layout_constraintTop_toTopOf="@id/odd_btn_row2"
        tools:text="独赢" />

    <TextView
        android:id="@+id/odd_btn_row2_half"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/textSize12sp"
        app:layout_constraintEnd_toEndOf="@id/odd_btn_row2"
        app:layout_constraintStart_toStartOf="@id/odd_btn_row2"
        app:layout_constraintTop_toBottomOf="@id/odd_btn_row2_type"
        tools:text="1st half"
        tools:visibility="gone" />

    <org.cxct.sportlottery.ui.game.widget.OddsButton
        android:id="@+id/odd_btn_row2_home"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@id/odd_btn_row2"
        app:layout_constraintStart_toStartOf="@id/odd_btn_row2"
        app:layout_constraintTop_toBottomOf="@id/odd_btn_row2_type"
        app:ob_hide_item_flag="true" />

    <org.cxct.sportlottery.ui.game.widget.OddsButton
        android:id="@+id/odd_btn_row2_away"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@id/odd_btn_row2"
        app:layout_constraintStart_toStartOf="@id/odd_btn_row2"
        app:layout_constraintTop_toBottomOf="@id/odd_btn_row2_home"
        app:ob_hide_item_flag="true" />

    <org.cxct.sportlottery.ui.game.widget.OddsButton
        android:id="@+id/odd_btn_row2_draw"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@id/odd_btn_row2"
        app:layout_constraintStart_toStartOf="@id/odd_btn_row2"
        app:layout_constraintTop_toBottomOf="@id/odd_btn_row2_away"
        app:ob_hide_item_flag="true" />

</androidx.constraintlayout.widget.ConstraintLayout>