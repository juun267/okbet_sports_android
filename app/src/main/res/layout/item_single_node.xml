<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_F9FAFD"
    android:paddingHorizontal="11dp"
    android:layout_height="36dp">

    <ImageView
        android:id="@+id/ivCheckBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_left_check_normal"
        android:layout_width="16dp"
        android:layout_height="16dp"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivIcon"
            android:src="@drawable/ic_left_check_normal"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

        <TextView
            android:id="@+id/tvName"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingStart="4dp"
            android:text="Bottom_toBottomOBottom_toBottomOBottom_toBottomOBottom_toBottomOBottom_toBottomOBottom_toBottomO"
            android:textSize="14sp"
            android:textColor="@color/color_6D7693"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>



    <TextView
        android:id="@+id/tvLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:background="@color/color_EEF3FC"
        android:layout_marginTop="3dp"
        android:layout_height="0.5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>