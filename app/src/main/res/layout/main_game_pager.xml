<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainGamePager">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/alignLeftRv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_arrow_right"
        app:layout_constraintStart_toEndOf="@id/btn_arrow_left"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="2"
        tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/content_main_game_rv"
        tools:orientation="vertical"
        tools:spanCount="2" />

    <ImageView
        android:id="@+id/btn_arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@drawable/ic_main_game_arrow_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@drawable/ic_main_game_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>