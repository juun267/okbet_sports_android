<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="org.cxct.sportlottery.ui.game.betList.BetListRefactorAdapter"
    tools:ignore="RtlSymmetry,SpUsage,ContentDescription,HardcodedText,Autofill">


    <data>

        <variable
            name="parlayOdd"
            type="org.cxct.sportlottery.network.bet.info.ParlayOdd" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_item_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:paddingBottom="20dp">


        <ImageView
            android:id="@+id/iv_bet_lock"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_bet_lock"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingTop="10dp"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingBottom="10dp"
            android:src="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/colorGrayLight" />


        <View
            android:id="@+id/v_point"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_circle_red"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_odds_content" />


        <!--playName + spread + @ + odds + (oddsType)-->
        <TextView
            android:id="@+id/tv_odds_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_close"
            tools:text="俄罗斯 -0.5/1 ＠ 0.890 (歐洲盤)" />


        <TextView
            android:id="@+id/tv_match"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/textSize13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_odds_content"
            tools:text="纽卡斯尔 v 切尔西" />


        <!--玩法名稱:讓球,獨贏..-->
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_match"
            tools:text="让球" />


        <EditText
            android:id="@+id/et_bet"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="10dp"
            android:background="@drawable/effect_select_bet_edit_text"
            android:hint="@string/bet_info_input_quota"
            android:inputType="number"
            android:maxLength="7"
            android:paddingStart="10dp"
            android:textColor="@color/colorBlackLight"
            android:textColorHint="@color/colorSilverLight"
            android:textSize="@dimen/textSize16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_error_message"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            app:layout_constraintWidth_percent="0.442" />

        <View
            android:id="@+id/et_clickable"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/et_bet"
            app:layout_constraintStart_toStartOf="@+id/et_bet"
            app:layout_constraintTop_toTopOf="@+id/et_bet"
            app:layout_constraintWidth_percent="0.442" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            app:layout_constraintStart_toEndOf="@+id/et_clickable"
            app:layout_constraintTop_toTopOf="@+id/et_clickable"
            app:layout_constraintBottom_toBottomOf="@+id/et_clickable">
            <!--缺翻譯-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实际下注"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/textSize12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvRealAmount"
                android:text="0.00"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/textSize12sp"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="@dimen/textSize13sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorRed"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/et_bet"
            app:layout_constraintTop_toBottomOf="@+id/et_bet"
            tools:text="@string/bet_info_list_minimum_limit_amount"
            tools:visibility="visible" />


        <include
            layout="@layout/content_bet_info_item_quota_detail"
            app:parlayOdd="@{parlayOdd}" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>