<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingTop="9dp"
    android:paddingBottom="10dp"
    tools:ignore="SpUsage,HardcodedText">

    <TextView
        android:id="@+id/tv_bet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:letterSpacing="0.1"
        android:text="@string/bet_info_list_bet_quota"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/textSize14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_bet_quota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="0.000"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:textColor="@color/colorOrange"
        android:textSize="@dimen/textSize14sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_bet_rmb"
        app:layout_constraintTop_toTopOf="@+id/tv_bet_name"
        tools:text="1000.000"/>

    <TextView
        android:id="@+id/tv_bet_rmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:text="@string/bet_info_list_rmb"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/textSize14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_bet_name" />

    <TextView
        android:id="@+id/tv_win_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/bet_info_list_win_quota"
        android:letterSpacing="0.1"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/textSize14sp"
        app:layout_constraintStart_toStartOf="@+id/tv_bet_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_bet_name" />

    <TextView
        android:id="@+id/tv_win_quota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="0.000"
        android:textStyle="bold"
        android:textColor="@color/colorGreen"
        android:letterSpacing="0.1"
        android:textSize="@dimen/textSize14sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_win_rmb"
        app:layout_constraintTop_toTopOf="@+id/tv_win_name"
        tools:text="1000.000" />

    <TextView
        android:id="@+id/tv_win_rmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bet_info_list_rmb"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/textSize14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_bet_rmb"
        app:layout_constraintTop_toTopOf="@+id/tv_win_name" />

    <TextView
        android:id="@+id/tv_bet"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_radius_4_button_orange_light"
        android:gravity="center"
        android:text="@string/bet_info_list_bet"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:letterSpacing="0.2"
        android:textSize="@dimen/textSize14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_win_name"
        app:layout_constraintWidth_percent="0.546" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_radius_4_button_orange_light"
        android:gravity="center"
        android:text="@string/sign_up_know"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textSize14sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_win_name"
        app:layout_constraintWidth_percent="0.546" />

    <TextView
        android:id="@+id/tv_add_more"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:background="@drawable/bg_radius_4_button_colorwhite6"
        android:gravity="center"
        android:text="@string/bet_info_list_add_more"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/textSize14sp"
        android:letterSpacing="0.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_bet"
        app:layout_constraintTop_toTopOf="@+id/tv_bet" />


</androidx.constraintlayout.widget.ConstraintLayout>