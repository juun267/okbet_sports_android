<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.game.home.recommend.VpRecommendAdapter">

    <TextView
        android:id="@+id/tv_play_type_eps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="48dp"
        android:textColor="@color/color_317FFF_0760D4"
        android:textStyle="bold"
        android:textSize="@dimen/textSize14sp"
        tools:text="让球" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title_eps"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:textColor="@color/color_e5e5e5_333333"
            android:textStyle="bold"
            tools:text="法国会赢 4-0" />

        <org.cxct.sportlottery.ui.game.widget.OddsButton
            android:id="@+id/btn_odd_eps"
            android:layout_width="78dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="6dp" />

    </LinearLayout>

</LinearLayout>