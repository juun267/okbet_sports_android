<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView
            android:overScrollMode="never"
        android:id="@+id/sport_type_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite2"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="1"
        tools:listitem="@layout/itemview_sport_type" />

    <View
        android:id="@+id/game_filter_back_row"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/sport_type_list" />

    <ImageButton
        android:id="@+id/game_filter_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        android:background="@color/transparent"
        android:padding="4dp"
        android:src="@drawable/ic_arrowleft"
        app:layout_constraintBottom_toBottomOf="@id/game_filter_back_row"
        app:layout_constraintStart_toStartOf="@id/game_filter_back_row"
        app:layout_constraintTop_toTopOf="@id/game_filter_back_row" />

    <TextView
        android:id="@+id/game_filter_inplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="@string/match_type_row_in_play"
        android:textColor="@color/colorOrange"
        android:textSize="@dimen/textSize15sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/game_filter_back_row"
        app:layout_constraintStart_toEndOf="@id/game_filter_back"
        app:layout_constraintTop_toTopOf="@id/game_filter_back_row" />

    <TextView
        android:id="@+id/game_filter_sport_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:textColor="@color/selector_game_filter_sport_text"
        android:textSize="@dimen/textSize15sp"
        app:layout_constraintBottom_toBottomOf="@id/game_filter_back_row"
        app:layout_constraintStart_toEndOf="@id/game_filter_inplay"
        app:layout_constraintTop_toTopOf="@id/game_filter_back_row"
        tools:text="足球" />

    <Button
        android:id="@+id/game_filter_1x2"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_game_filter_btn_bg"
        android:text="@string/match_type_row_btn_double"
        android:textColor="@color/selector_game_filter_btn_text"
        android:textSize="@dimen/textSize12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/game_filter_back_row"
        app:layout_constraintEnd_toEndOf="@id/game_filter_back_row"
        app:layout_constraintTop_toTopOf="@id/game_filter_back_row" />

    <Button
        android:id="@+id/game_filter_ou"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/shape_game_filter_btn_bg"
        android:text="@string/match_type_row_btn_bs"
        android:textColor="@color/selector_game_filter_btn_text"
        android:textSize="@dimen/textSize12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/game_filter_back_row"
        app:layout_constraintEnd_toStartOf="@id/game_filter_1x2"
        app:layout_constraintTop_toTopOf="@id/game_filter_back_row" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/game_filter_search"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_game_filter_search_bg"
        android:paddingStart="-16dp"
        android:paddingEnd="-8dp"
        android:theme="@style/AppSearchView"
        app:closeIcon="@drawable/ic_iconclosewhite"
        app:iconifiedByDefault="false"
        app:layout_constraintBottom_toBottomOf="@id/game_filter_back_row"
        app:layout_constraintEnd_toEndOf="@id/game_filter_back_row"
        app:layout_constraintTop_toTopOf="@id/game_filter_back_row"
        app:queryBackground="@color/transparent"
        app:queryHint="@string/game_filter_row_search_hint"
        app:searchIcon="@drawable/ic_magnifyingglass" />

    <TextView
        android:id="@+id/game_filter_game"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite4"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/date_row_league"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/textSize16sp"
        app:layout_constraintTop_toBottomOf="@id/game_filter_back_row" />

    <androidx.recyclerview.widget.RecyclerView
            android:overScrollMode="never"
        android:id="@+id/game_filter_type_list"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingStart="10dp"
        android:paddingTop="6dp"
        android:paddingEnd="10dp"
        android:paddingBottom="6dp"
        app:layout_constraintTop_toBottomOf="@id/game_filter_game"
        tools:itemCount="1"
        tools:listitem="@layout/itemview_game_type2" />

</androidx.constraintlayout.widget.ConstraintLayout>