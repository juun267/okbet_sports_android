<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:layout_width="wrap_content"
    tools:layout_height="wrap_content"
    tools:ignore="ContentDescription, SpUsage">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/margin_5"
        app:cardBackgroundColor="@color/transparent"
        app:cardElevation="2dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/bg_card_game" />

        <ImageView
            android:id="@+id/iv_people"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:elevation="@dimen/margin_3"
            android:layout_gravity="right"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_game_01" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:elevation="@dimen/margin_4"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:id="@+id/tv_firm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_025BE8"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="OKGAMES" />

            <TextView
                android:id="@+id/tv_game_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/color_414655"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="E-GAME"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_repair"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="13dp"
                android:src="@drawable/ic_game_repair" />

            <View
                android:layout_width="@dimen/margin_30"
                android:layout_height="2dp"
                android:background="@color/color_6C7BA8" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:textColor="@color/color_6C7BA8"
                android:fontFamily="@font/din_regular"
                android:textSize="14sp"
                android:text="@string/comingsoon" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</FrameLayout>