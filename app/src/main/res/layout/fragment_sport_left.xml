<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_131932_F0F5FA"
        android:fitsSystemWindows="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_sport_left_top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="35dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/logo_okbet_color" />

                <androidx.legacy.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="@dimen/margin_25"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_menu_search" />

                <ImageView
                    android:id="@+id/iv_setting"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_menu_setting" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/rg_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbtn_sport"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/selector_bg_home_tab_menu"
                    android:button="@null"
                    android:checked="false"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:minWidth="90dp"
                    android:text="@string/sport"
                    android:textColor="@color/selector_blue_white"
                    android:textSize="@dimen/textSize14sp" />

                <RadioButton
                    android:id="@+id/rbtn_inplay"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/selector_bg_home_tab_menu"
                    android:button="@null"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:minWidth="90dp"
                    android:text="@string/home_in_play"
                    android:textColor="@color/selector_blue_white"
                    android:textSize="@dimen/textSize14sp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_sport"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/lin_game_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_tran_blue"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp">

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:src="@drawable/selector_menu_result" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:text="@string/game_result"
                        android:textColor="@color/color_black_white"
                        android:textSize="@dimen/textSize14sp" />


                    <androidx.legacy.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_arrow_gray_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:background="@color/color_80C9CFD7" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_worldcup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_tran_blue"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp">

                    <ImageView
                        android:id="@+id/ivWorldCup"
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:src="@drawable/selector_menu_worldcup" />

                    <TextView
                        android:id="@+id/tvWorldCup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:text="@string/worldcup"
                        android:textColor="@color/color_black_white"
                        android:textSize="@dimen/textSize14sp" />

                    <androidx.legacy.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_arrow_gray_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:background="@color/color_80C9CFD7" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_tran_blue"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp">

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:src="@drawable/selector_menu_today" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:text="@string/date_row_today"
                        android:textColor="@color/color_black_white"
                        android:textSize="@dimen/textSize14sp" />

                    <TextView
                        android:id="@+id/tv_today_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_4"
                        android:fontFamily="@font/din_bold"
                        android:textColor="@color/selector_blue_white"
                        android:textSize="@dimen/textSize14sp"
                        tools:text="122" />

                    <androidx.legacy.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_arrow_gray_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:background="@color/color_80C9CFD7" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lin_sport_classify"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_tran_blue"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp">

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:src="@drawable/selector_menu_classify" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_10"
                        android:layout_weight="1"
                        android:text="@string/sport_classify"
                        android:textColor="@color/color_black_white"
                        android:textSize="@dimen/textSize14sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/selector_arrow_right_up" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:background="@color/color_80C9CFD7" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_sport_classify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_sport_classify"
                    tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_game_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_tran_blue"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp">

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:src="@drawable/selector_menu_gamerule" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:text="@string/game_rule"
                        android:textColor="@color/color_black_white"
                        android:textSize="@dimen/textSize14sp" />

                    <androidx.legacy.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_arrow_gray_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:background="@color/color_80C9CFD7" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_inplay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_sport_inplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="3"
                tools:listitem="@layout/item_sport_inplay"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/lin_all_inplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_20"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_all_inplay"
                    android:textColor="@color/color_025BE8_025BE8"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="@dimen/margin_4"
                    android:src="@drawable/ic_arrow_blue_right" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>