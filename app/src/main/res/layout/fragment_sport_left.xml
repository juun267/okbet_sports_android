<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        android:orientation="vertical"
        android:background="@color/color_131932_F0F5FA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="35dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_okbet_color"
                android:adjustViewBounds="true" />

            <androidx.legacy.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="@dimen/margin_25"
                android:src="@drawable/ic_menu_search"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu_setting"
                android:adjustViewBounds="true" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbtn_sport"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:minWidth="90dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:button="@null"
                android:checked="true"
                android:elevation="2dp"
                android:background="@drawable/selector_bg_home_tab_menu"
                android:textColor="@color/selector_blue_white"
                android:textSize="@dimen/textSize14sp"
                android:text="@string/sport" />

            <RadioButton
                android:id="@+id/rbtn_egame"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:minWidth="90dp"
                android:layout_marginLeft="@dimen/margin_15"
                android:elevation="2dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/selector_bg_home_tab_menu"
                android:textColor="@color/selector_blue_white"
                android:textSize="@dimen/textSize14sp"
                android:text="@string/home_tab_in_play" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lin_game_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp">

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:src="@drawable/ic_menu_saiguo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:text="@string/game_result"
                        android:textColor="@color/color_FFFFFF_414655"
                        android:textSize="@dimen/textSize14sp" />


                    <androidx.legacy.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_arrow_gray_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:background="@color/color_80C9CFD7" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_worldcup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp">

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:src="@drawable/ic_menu_saiguo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:text="@string/worldcup"
                        android:textColor="@color/color_FFFFFF_414655"
                        android:textSize="@dimen/textSize14sp" />

                    <androidx.legacy.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_arrow_gray_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:background="@color/color_80C9CFD7" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp">

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:src="@drawable/ic_menu_today" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:text="@string/date_row_today"
                        android:textColor="@color/color_FFFFFF_414655"
                        android:textSize="@dimen/textSize14sp" />

                    <TextView
                        android:id="@+id/tv_today_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_4"
                        android:fontFamily="@font/din_regular"
                        tools:text="122"
                        android:textFontWeight="400"
                        android:textColor="@color/color_025BE8_025BE8"
                        android:textSize="@dimen/textSize14sp" />

                    <androidx.legacy.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_arrow_gray_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:background="@color/color_80C9CFD7" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lin_odds_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/selector_tran_blue"
                    android:paddingHorizontal="20dp">

                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:src="@drawable/selector_menu_odds" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_10"
                        android:layout_weight="1"
                        android:text="@string/left_menu_odds_type_setting"
                        android:textColor="@color/color_black_white"
                        android:textSize="@dimen/textSize14sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/selector_arrow_right_up" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:background="@color/color_80C9CFD7" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_odds_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="@dimen/dp_10"
                    android:background="@color/color_bbbbbb_ffffff"
                    android:visibility="gone"
                    tools:itemCount="4"
                    tools:listitem="@layout/item_odds_type"
                    tools:visibility="visible" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>