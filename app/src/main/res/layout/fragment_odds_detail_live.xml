<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpUsage">

    <data>

        <variable
            name="view"
            type="org.cxct.sportlottery.ui.odds.OddsDetailLiveFragment" />

        <variable
            name="gameViewModel"
            type="org.cxct.sportlottery.ui.game.GameViewModel" />
    </data>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite1"
        android:overScrollMode="never"
        app:srlDragRate="0.3"
        app:srlEnableLoadMore="true"
        app:srlEnablePureScrollMode="true">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_title_bar"
                    android:maxHeight="48dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_odd_detail_title_bg_white"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <ImageView
                    android:id="@+id/ll_back"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:padding="16dp"
                    android:src="@drawable/ic_arrow_left_game_back"
                    android:onClick="@{() -> view.back()}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_title_bar"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_game_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="欧洲足球锦标赛2020"
                    android:textColor="@color/colorBlackLight"
                    android:textStyle="bold"
                    android:textSize="@dimen/textSize18sp"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/iv_title_bar" />


                <ImageView
                    android:id="@+id/img_game_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="68dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toTopOf="@id/live_view_tool_bar"
                    app:layout_constraintTop_toBottomOf="@+id/iv_title_bar"
                    android:src="@drawable/img_odd_detail_title_bg" />

                <TextView
                    android:id="@+id/tv_home_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="義大利"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="@dimen/textSize16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/img_game_detail"/>

                <TextView
                    android:id="@+id/tv_away_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textSize16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/img_game_detail"
                    app:layout_constraintStart_toStartOf="@id/tv_home_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_home_name"
                    tools:text="瑞士" />

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="17dp"
                    android:textColor="@color/colorSilver"
                    android:textSize="@dimen/textSize12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/img_game_detail"
                    tools:text="17 / 16" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="17dp"
                    android:textColor="@color/colorSilver"
                    android:textSize="@dimen/textSize12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/img_game_detail"
                    app:layout_constraintEnd_toEndOf="@+id/tv_score"
                    app:layout_constraintTop_toBottomOf="@id/tv_score"
                    tools:text="03:00" />

                <androidx.recyclerview.widget.RecyclerView
                    android:visibility="gone"
                    android:id="@+id/rv_game_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintBottom_toTopOf="@id/live_view_tool_bar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ll_back"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:itemCount="5"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/content_odds_detail_game_card"
                    tools:orientation="horizontal" />

                <org.cxct.sportlottery.ui.component.LiveViewToolbar
                    android:id="@+id/live_view_tool_bar"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/rv_game_card"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_detail"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/live_view_tool_bar"
                    tools:listitem="@layout/content_odds_detail_list_item" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

</layout>