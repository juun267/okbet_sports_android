<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpUsage">

    <data>

        <variable
            name="fragment"
            type="org.cxct.sportlottery.ui.base.BaseFragment" />

        <variable
            name="gameViewModel"
            type="org.cxct.sportlottery.ui.game.GameViewModel" />

        <variable
            name="receiver"
            type="org.cxct.sportlottery.service.ServiceBroadcastReceiver" />

    </data>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite1"
        android:overScrollMode="never"
        app:srlDragRate="0.3"
        app:srlEnableLoadMore="true"
        app:srlEnablePureScrollMode="true">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/v_toolbar"
                    layout="@layout/view_odds_detail_toolbar"
                    app:fragment="@{fragment}"
                    app:gameViewModel="@{gameViewModel}"
                    app:receiver="@{receiver}" />

                <org.cxct.sportlottery.ui.component.LiveViewToolbar
                    android:id="@+id/live_view_tool_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/v_toolbar" />

                <View
                    android:id="@+id/v_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorWhite8"
                    app:layout_constraintTop_toBottomOf="@+id/live_view_tool_bar" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_cat"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:background="@color/colorWhite"
                    android:clipToPadding="false"
                    android:paddingHorizontal="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/v_divider"
                    app:tabIndicatorHeight="0dp"
                    app:tabMode="scrollable"
                    app:tabPaddingEnd="6dp"
                    app:tabPaddingStart="6dp"
                    app:tabRippleColor="@color/transparent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/tab_cat"
                    tools:listitem="@layout/content_odds_detail_list_item" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

</layout>