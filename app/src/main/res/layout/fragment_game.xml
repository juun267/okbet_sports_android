<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.game.GameFragment">


    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlDragRate="0.3"
        app:srlEnableLoadMore="true"
        app:srlEnablePureScrollMode="true">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:background="@color/colorWhite"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:overScrollMode="never"
                    android:id="@+id/hall_game_type_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray11"
                    android:paddingStart="8dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:itemCount="1"
                    tools:listitem="@layout/itemview_game_type" />

                <org.cxct.sportlottery.ui.game.common.MatchTypeRow
                    android:id="@+id/hall_match_type_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/hall_game_type_list" />

                <androidx.recyclerview.widget.RecyclerView
                    android:overScrollMode="never"
                    android:id="@+id/hall_date_list"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@android:color/white"
                    android:padding="8dp"
                    app:layout_constraintTop_toBottomOf="@id/hall_match_type_row"
                    tools:itemCount="1"
                    tools:listitem="@layout/itemview_game_date" />

                <androidx.recyclerview.widget.RecyclerView
                    android:overScrollMode="never"
                    android:id="@+id/hall_odds_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/hall_date_list"
                    android:background="@color/colorWhite"
                    tools:itemCount="2"
                    tools:listitem="@layout/itemview_league_odd" />

                <androidx.recyclerview.widget.RecyclerView
                    android:overScrollMode="never"
                    android:id="@+id/hall_league_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:background="@color/colorWhite"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/hall_date_list" />

                <androidx.recyclerview.widget.RecyclerView
                    android:overScrollMode="never"
                    android:id="@+id/hall_outright_season_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:background="@color/colorWhite"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/hall_date_list" />

                <ImageView
                    android:id="@+id/hall_no_history_img"
                    android:layout_width="317dp"
                    android:layout_height="239dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ic_imgnohistory"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/hall_date_list" />

                <TextView
                    android:id="@+id/hall_no_history_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_history"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textSize14sp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/hall_no_history_img"
                    app:layout_constraintStart_toStartOf="@id/hall_no_history_img"
                    app:layout_constraintTop_toBottomOf="@id/hall_no_history_img" />

                <TextView
                    android:id="@+id/hall_no_history_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/no_history_content"
                    android:textColor="@color/gray3"
                    android:textSize="@dimen/textSize14sp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/hall_no_history_img"
                    app:layout_constraintStart_toStartOf="@id/hall_no_history_img"
                    app:layout_constraintTop_toBottomOf="@id/hall_no_history_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

</FrameLayout>