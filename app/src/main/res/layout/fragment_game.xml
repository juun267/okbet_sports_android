<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.game.GameFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hall_game_type_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bright_gray"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/hall_inplay_row"
        layout="@layout/game_bar_inplay"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:layout_constraintTop_toBottomOf="@id/hall_game_type_list" />

    <include
        android:id="@+id/hall_date_row"
        layout="@layout/game_bar_date"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        app:layout_constraintTop_toBottomOf="@id/hall_inplay_row" />

</androidx.constraintlayout.widget.ConstraintLayout>