<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.game.GameFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hall_game_type_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bright_gray"
                android:paddingStart="8dp"
                android:paddingTop="5dp"
                android:paddingEnd="8dp"
                android:paddingBottom="5dp"
                app:layout_constraintTop_toTopOf="parent" />

            <org.cxct.sportlottery.ui.game.common.MatchTypeRow
                android:id="@+id/hall_match_type_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/hall_game_type_list" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hall_date_list"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@android:color/white"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/hall_match_type_row" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hall_odds_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/hall_date_list" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hall_league_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/hall_date_list" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hall_outright_season_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/hall_date_list" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>