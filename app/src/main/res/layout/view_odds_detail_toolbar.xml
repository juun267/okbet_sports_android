<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpUsage,RtlSymmetry,ContentDescription,UseAppTint">

    <data>

        <variable
            name="fragment"
            type="org.cxct.sportlottery.ui.base.BaseFragment" />

        <variable
            name="gameViewModel"
            type="org.cxct.sportlottery.ui.game.GameViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_title_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:minHeight="48dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_odd_detail_title_bg_white"
            app:layout_constraintBottom_toBottomOf="@id/tv_game_title"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="@{() -> fragment.back()}"
            android:padding="16dp"
            android:tint="@color/color_AEAEAE_404040"
            android:src="@drawable/ic_arrow_left_game_back"
            app:layout_constraintBottom_toBottomOf="@+id/iv_title_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_game_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginHorizontal="48dp"
            android:gravity="center"
            android:text="@{gameViewModel.oddsDetailResult.peekContent().oddsDetailData.league.name}"
            android:textColor="@color/color_BBBBBB_333333"
            android:textSize="@dimen/textSize16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_game_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="欧洲足球锦标赛2020" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_title_bar">

            <ImageView
                android:id="@+id/img_game_detail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_odd_detail_title_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_home_score"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:gravity="center_vertical"
                android:textColor="@color/color_FF9143_ff9200"
                android:textSize="@dimen/textSize16sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_home_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_home_name"
                tools:text="5"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_home_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_marginEnd="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:gravity="center_vertical"
                android:text="@{gameViewModel.oddsDetailResult.peekContent().oddsDetailData.matchOdd.matchInfo.homeName}"
                android:textColor="@color/color_FFFFFF_FFFFFF"
                android:textSize="@dimen/textSize16sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_away_name"
                app:layout_constraintEnd_toStartOf="@+id/tv_home_score_total"
                app:layout_constraintStart_toEndOf="@+id/tv_home_score"
                app:layout_constraintTop_toTopOf="@id/img_game_detail"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="義大利" />

            <TextView
                android:id="@+id/tv_home_score_total"
                android:layout_width="32dp"
                android:layout_height="0dp"
                android:gravity="center|end"
                android:textColor="@color/color_FF9143_ff9200"
                android:textSize="@dimen/textSize16sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_home_name"
                app:layout_constraintEnd_toStartOf="@+id/tv_home_score_live"
                app:layout_constraintStart_toEndOf="@+id/tv_home_name"
                app:layout_constraintTop_toTopOf="@+id/tv_home_name"
                tools:text="5"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_home_score_live"
                android:layout_width="32dp"
                android:layout_height="0dp"
                android:gravity="center|end"
                android:textColor="@color/color_FFFFFF_FFFFFF"
                android:textSize="@dimen/textSize16sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_home_score_total"
                app:layout_constraintEnd_toStartOf="@+id/tv_home_point_live"
                app:layout_constraintStart_toEndOf="@+id/tv_home_score_total"
                app:layout_constraintTop_toTopOf="@+id/tv_home_score_total"
                tools:text="5"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_home_point_live"
                android:layout_width="32dp"
                android:layout_height="0dp"
                android:gravity="center|end"
                android:textColor="@color/color_FFFFFF_FFFFFF"
                android:textSize="@dimen/textSize16sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_home_score_live"
                app:layout_constraintEnd_toStartOf="@+id/ll_time"
                app:layout_constraintStart_toEndOf="@+id/tv_home_score_live"
                app:layout_constraintTop_toTopOf="@+id/tv_home_score_live"
                tools:text="5"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_away_point_live"
                android:layout_width="32dp"
                android:layout_height="0dp"
                android:gravity="center|end"
                android:textColor="@color/color_FFFFFF_FFFFFF"
                android:textSize="@dimen/textSize16sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_away_score_live"
                app:layout_constraintEnd_toStartOf="@+id/ll_time"
                app:layout_constraintStart_toEndOf="@+id/tv_away_score_live"
                app:layout_constraintTop_toTopOf="@+id/tv_away_score_live"
                tools:text="5"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_home_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@color/color_E44438_e44438"
                android:textColor="@color/color_FFFFFF_FFFFFF"
                android:textSize="@dimen/textSize12sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_home_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_home_name"
                app:layout_constraintVertical_bias="0.5"
                tools:text="5"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_away_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@color/color_E44438_e44438"
                android:textColor="@color/color_FFFFFF_FFFFFF"
                android:textSize="@dimen/textSize12sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_away_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_away_name"
                app:layout_constraintVertical_bias="0.5"
                tools:text="5"
                tools:visibility="visible" />


            <TextView
                android:id="@+id/tv_away_score"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:gravity="center_vertical"
                android:textColor="@color/color_FF9143_ff9200"
                android:textSize="@dimen/textSize16sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_away_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_away_name"
                tools:text="5"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_away_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:maxLines="2"
                android:layout_marginEnd="5dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:text="@{gameViewModel.oddsDetailResult.peekContent().oddsDetailData.matchOdd.matchInfo.awayName}"
                android:textColor="@color/color_FFFFFF_FFFFFF"
                android:textSize="@dimen/textSize16sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_status_left"
                app:layout_constraintEnd_toStartOf="@+id/tv_away_score_total"
                app:layout_constraintStart_toStartOf="@id/tv_home_name"
                app:layout_constraintTop_toBottomOf="@id/tv_home_name"
                tools:text="瑞士" />

            <TextView
                android:id="@+id/tv_away_score_total"
                android:layout_width="32dp"
                android:layout_height="0dp"
                android:gravity="center|end"
                android:textColor="@color/color_FF9143_ff9200"
                android:textSize="@dimen/textSize16sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_away_name"
                app:layout_constraintEnd_toStartOf="@+id/tv_away_score_live"
                app:layout_constraintStart_toEndOf="@+id/tv_away_name"
                app:layout_constraintTop_toTopOf="@+id/tv_away_name"
                tools:text="5"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_away_score_live"
                android:layout_width="32dp"
                android:layout_height="0dp"
                android:gravity="center|end"
                android:textColor="@color/color_FFFFFF_FFFFFF"
                android:textSize="@dimen/textSize16sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_away_score_total"
                app:layout_constraintEnd_toStartOf="@+id/tv_away_point_live"
                app:layout_constraintStart_toEndOf="@+id/tv_away_score_total"
                app:layout_constraintTop_toTopOf="@+id/tv_away_score_total"
                tools:text="5"
                tools:visibility="visible" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="end"
                app:constraint_referenced_ids="tv_home_point_live, tv_away_point_live" />

            <LinearLayout
                android:id="@+id/ll_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/tv_away_name"
                app:layout_constraintEnd_toStartOf="@id/space"
                app:layout_constraintStart_toEndOf="@+id/tv_home_point_live"
                app:layout_constraintTop_toTopOf="@+id/tv_home_name">

                <TextView
                    android:id="@+id/tv_time_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/textSize12sp"
                    tools:text="17 / 16" />

                <TextView
                    android:id="@+id/tv_time_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_null"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/textSize12sp" />

            </LinearLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.78" />

            <TextView
                android:id="@+id/tv_status_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="10dp"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/textSize12sp"
                android:visibility="gone"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_away_name"
                tools:text="第一節14-15 第二節15-14"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_spt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/textSize12sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_status_left"
                app:layout_constraintTop_toBottomOf="@+id/tv_away_name"
                app:layout_constraintVertical_bias="1"
                tools:text="/ 5"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_status_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/textSize12sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_status_left"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_status_left"
                tools:text="14-15  15-14"
                tools:visibility="visible" />

            <androidx.legacy.widget.Space
                android:id="@+id/space"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

