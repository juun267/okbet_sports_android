<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpUsage,ContentDescription,Autofill,DisableBaselineAlignment,RtlSymmetry,HardcodedText">

    <data>

        <variable
            name="matchOdd"
            type="org.cxct.sportlottery.network.bet.info.MatchOdd" />

        <variable
            name="parlayOdd"
            type="org.cxct.sportlottery.network.bet.info.ParlayOdd" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite2">

        <ImageView
            android:id="@+id/iv_bet_lock_single"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_bet_lock"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/btn_rule_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/ic_question_mark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="9dp"
            android:paddingEnd="16dp"
            android:paddingBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bet_list_single"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="6">

                    <EditText
                        android:id="@+id/et_bet_single"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/effect_select_bet_edit_text_fill_color_white"
                        android:hint="@string/bet_info_input_quota"
                        android:inputType="number"
                        android:maxLength="7"
                        android:paddingStart="10dp"
                        android:textColor="@color/colorBlue"
                        android:textColorHint="@color/colorSilverLight"
                        android:textSize="@dimen/textSize16sp"
                        android:letterSpacing="0.05"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/et_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:text="X"
                        android:textColor="@color/colorBlackLight"
                        android:textSize="@dimen/textSize13sp" />

                    <TextView
                        android:id="@+id/tv_single_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlackLight"
                        android:textSize="@dimen/textSize13sp"
                        tools:text="3" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_winnable"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="end|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bet_info_win_quota"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/textSize12sp" />

                    <TextView
                        android:id="@+id/tv_winnable_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlue"
                        android:textSize="@dimen/textSize12sp"
                        tools:text="9.720" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
