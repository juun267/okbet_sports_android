<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="org.cxct.sportlottery.network.third_game.money_transfer.GameData" />
    </data>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkbox"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@{item.isChecked ? @color/color_191919_EEEFF0 : @color/color_191919_FCFCFC}"
        android:button="@null"
        android:checked="@{item.isChecked}"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:text="@{item.showName}"
        android:textColor="@color/color_BBBBBB_333333"
        android:textSize="@dimen/textSize12sp"
        tools:text="未确认" />

</layout>