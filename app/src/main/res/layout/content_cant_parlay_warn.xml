<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_cant_parlay_warn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/cl_total_info"
    android:background="@color/color_141414_F3F4F5"
    android:orientation="vertical"
    android:showDividers="end"
    tools:ignore="SpUsage">

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:layout_marginHorizontal="@dimen/margin_10"
        android:background="@color/color_1F1F1F_e6e6e6" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_odds_change_tip"
        android:drawablePadding="@dimen/margin_6"
        android:paddingHorizontal="@dimen/margin_24"
        android:paddingStart="@dimen/margin_24"
        android:paddingTop="@dimen/margin_12"
        android:paddingBottom="@dimen/margin_18"
        android:text="@string/bet_list_cant_parlay_warn"
        android:textColor="@color/color_E44438_e44438"
        android:textSize="@dimen/textSize12sp" />

</LinearLayout>
