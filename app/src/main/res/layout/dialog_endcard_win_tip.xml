<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/color_213743">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_44"
            android:paddingHorizontal="@dimen/margin_12"
            android:gravity="center"
            android:background="@color/color_2F4553">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_4"
                android:textSize="@dimen/textSize18sp"
                android:textColor="@color/color_FFFFFF"
                android:textStyle="bold"
                android:text="@string/KYC055"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5"
            android:background="@color/color_0C121E"/>
        <TextView
            android:id="@+id/tvTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginHorizontal="@dimen/margin_12"
            android:lineHeight="@dimen/margin_18"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/textSize14sp"
            android:text="@string/P348"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginHorizontal="@dimen/margin_25">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize14sp"
                android:textColor="@color/color_BEC7DC"
                android:text="@string/P349"/>
            <TextView
                android:id="@+id/tvQuarter1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize14sp"
                android:textColor="@color/color_FFD600"
                android:text=" - ₱100"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginHorizontal="@dimen/margin_25">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize14sp"
                android:textColor="@color/color_BEC7DC"
                android:text="@string/P350"/>
            <TextView
                android:id="@+id/tvQuarter2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize14sp"
                android:textColor="@color/color_FFD600"
                android:text=" - ₱100"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginHorizontal="@dimen/margin_25">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize14sp"
                android:textColor="@color/color_BEC7DC"
                android:text="@string/P351"/>
            <TextView
                android:id="@+id/tvQuarter3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize14sp"
                android:textColor="@color/color_FFD600"
                android:text=" - ₱100"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginHorizontal="@dimen/margin_25">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize14sp"
                android:textColor="@color/color_BEC7DC"
                android:text="@string/P352"/>
            <TextView
                android:id="@+id/tvQuarter4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize14sp"
                android:textColor="@color/color_FFD600"
                android:text=" - ₱1500"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_darkblue_radius_8_1a2c38"
            android:layout_marginHorizontal="@dimen/margin_12"
            android:layout_marginTop="@dimen/margin_16"
            android:paddingHorizontal="@dimen/margin_10"
            android:paddingVertical="@dimen/margin_12">
            <TextView
                android:id="@+id/tvPrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="true"
                android:lineHeight="@dimen/margin_16"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/textSize12sp"
                android:text="@string/P353"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="true"
                android:lineHeight="@dimen/margin_16"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/textSize12sp"
                android:text="@string/P354"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_24">

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:lines="1"
                android:ellipsize="end"
                android:paddingHorizontal="8dp"
                android:foreground="@drawable/fg_ripple"
                android:layout_marginLeft="@dimen/margin_14"
                android:layout_marginRight="@dimen/margin_12"
                android:background="@drawable/selector_button_default_darkblue"
                android:textSize="@dimen/textSize16sp"
                android:textColor="@color/color_FFFFFF"
                android:text="@string/btn_confirm"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>