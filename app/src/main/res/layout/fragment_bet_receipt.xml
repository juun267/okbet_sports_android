<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_black_0"
    tools:context=".ui.game.betList.receipt.BetReceiptFragment">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/view_toolbar_main"
        android:background="@color/transparent_black_0"
        android:visibility="invisible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingBottom="@dimen/margin_8"

        app:layout_constraintTop_toBottomOf="@+id/tool_bar">
        <!-- TODO: Update blank fragment layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_48"
            android:background="@color/color_191919_FCFCFC"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_receipt"
                android:layout_width="@dimen/margin_16"
                android:layout_height="@dimen/margin_16"
                android:layout_marginLeft="@dimen/margin_14"
                android:src="@drawable/icon_recept"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_bet_list_receipt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_14"
                android:text="@string/bet_list_receipt"
                android:textColor="@color/color_BBBBBB_333333"
                android:textSize="@dimen/textSize14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_receipt"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivBetMoney"
                android:layout_width="@dimen/margin_12"
                android:layout_height="@dimen/margin_12"
                android:layout_marginRight="@dimen/margin_8"
                android:src="@drawable/ic_bet_list_money"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_balance"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_4"
                android:textColor="@color/color_BBBBBB_333333"
                android:textSize="@dimen/textSize14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_currency"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="9,875,241.000" />

            <TextView
                android:id="@+id/tv_currency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_14"
                android:text="RMB"
                android:textColor="@color/color_BBBBBB_333333"
                android:textSize="@dimen/textSize14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_bet_receipt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            app:layout_constraintBottom_toTopOf="@+id/cl_total_info"
            app:layout_constraintTop_toBottomOf="@+id/cl_title"
            tools:listitem="@layout/item_match_receipt" />

<!--        <View-->
<!--            android:id="@+id/shadow"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="16dp"-->
<!--            android:background="@drawable/bg_gradient_bottom_sheet_shadow"-->
<!--            app:layout_constraintBottom_toTopOf="@+id/cl_total_info" />-->


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_total_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_191919_EAF4FE"
            android:paddingStart="16dp"
            android:paddingTop="13dp"
            android:paddingEnd="16dp"
            android:paddingBottom="13dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_already_bet_complete"
            app:layout_constraintTop_toBottomOf="@+id/rv_bet_receipt">

            <TextView
                android:id="@+id/title_all_bet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bet_receipt_all_bet"
                android:textColor="@color/color_909090_666666"
                android:textSize="@dimen/textSize14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider_all_bet"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginStart="6dp"
                android:background="@color/color_909090_666666"
                app:layout_constraintBottom_toBottomOf="@+id/title_all_bet"
                app:layout_constraintStart_toEndOf="@+id/title_all_bet"
                app:layout_constraintTop_toTopOf="@+id/title_all_bet" />

            <TextView
                android:id="@+id/tv_all_bet_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textColor="@color/color_BBBBBB_333333"
                android:textSize="@dimen/textSize14sp"
                app:layout_constraintBottom_toBottomOf="@+id/title_all_bet"
                app:layout_constraintStart_toEndOf="@+id/divider_all_bet"
                app:layout_constraintTop_toTopOf="@+id/title_all_bet"
                tools:text="0" />

            <TextView
                android:id="@+id/tv_total_bet_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:gravity="end"
                android:textColor="@color/color_BBBBBB_333333"
                android:textSize="@dimen/textSize14sp"
                app:layout_constraintBottom_toBottomOf="@+id/title_all_bet"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_all_bet_count"
                app:layout_constraintTop_toTopOf="@+id/title_all_bet"
                tools:text="0.000 RMB" />

            <TextView
                android:id="@+id/title_winnable_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bet_receipt_win_quota"
                android:textColor="@color/color_909090_666666"
                android:textSize="@dimen/textSize14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_all_bet" />

            <TextView
                android:id="@+id/tv_total_winnable_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:gravity="end"
                android:textColor="@color/color_317FFF_0760D4"
                android:textSize="@dimen/textSize14sp"
                app:layout_constraintBottom_toBottomOf="@+id/title_winnable_amount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/title_winnable_amount"
                app:layout_constraintTop_toTopOf="@+id/title_winnable_amount"
                tools:text="0.000 RMB" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_already_bet_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_EAF4FE"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="@string/already_bet_complete"
            android:textColor="@color/color_317FFF_0760D4"
            android:textSize="@dimen/textSize13sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/btn_complete" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/color_212121_ededed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_already_bet_complete" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/color_191919_EEEFF0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view" />

        <TextView
            android:id="@+id/btn_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@drawable/button_radius_4_117ecd_1053af"
            android:gravity="center"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="@string/complete"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>