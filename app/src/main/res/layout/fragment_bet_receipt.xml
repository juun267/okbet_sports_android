<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite8"
    tools:context=".ui.game.betList.receipt.BetReceiptFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlackLight"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_receipt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingTop="14dp"
            android:paddingEnd="10dp"
            android:paddingBottom="14dp"
            android:src="@drawable/ic_iconrecept"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_bet_list_receipt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/bet_list_receipt"
            android:textColor="@color/colorWhite6"
            android:textSize="@dimen/textSize14sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_balance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_receipt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite6"
            android:textSize="@dimen/textSize14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_currency"
            app:layout_constraintStart_toStartOf="@id/tv_bet_list_receipt"
            app:layout_constraintTop_toBottomOf="@+id/tv_bet_list_receipt"
            tools:text="9,875,241.000" />

        <TextView
            android:id="@+id/tv_currency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/currency"
            android:textColor="@color/colorWhite6"
            android:textSize="@dimen/textSize14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_balance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_balance"
            app:layout_constraintTop_toTopOf="@+id/tv_balance" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_bet_receipt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/view_bet_total"
        app:layout_constraintTop_toBottomOf="@+id/cl_title"
        tools:listitem="@layout/item_match_receipt" />

    <include
        android:id="@+id/view_bet_total"
        layout="@layout/view_match_receipt_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tv_already_bet_complete"
        app:layout_constraintTop_toBottomOf="@+id/rv_bet_receipt"
        />

    <TextView
        android:id="@+id/tv_already_bet_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/already_bet_complete"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/textSize13sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_complete"
        app:layout_constraintTop_toBottomOf="@+id/view_bet_total" />

    <TextView
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:gravity="center"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:text="@string/complete"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize13sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>