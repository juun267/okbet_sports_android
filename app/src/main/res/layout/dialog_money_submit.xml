<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_white_radius_8">

        <TextView
            android:id="@+id/txv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="44dp"
            android:text="@string/title_pay_msg"
            android:textColor="@color/color_CCCCCC_000000"
            android:textSize="@dimen/textSize16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_191919_EEEFF0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_pay_way"
                android:textColor="@color/color_AEAEAE_404040"
                android:textSize="@dimen/textSize14sp" />

            <TextView
                android:id="@+id/txv_pay_way"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/color_BBBBBB_333333"
                android:textSize="@dimen/textSize14sp"
                tools:text="在线支付" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_pay_money"
                android:textColor="@color/color_AEAEAE_404040"
                android:textSize="@dimen/textSize14sp" />

            <TextView
                android:id="@+id/txv_pay_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/color_BBBBBB_333333"
                android:textSize="@dimen/textSize14sp"
                tools:text="100 RMB" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginStart="26dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:text="@string/hint_pay1"
            android:textColor="@color/color_909090_666666"
            android:textSize="@dimen/textSize12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginStart="26dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:text="@string/hint_pay2"
            android:textColor="@color/color_909090_666666"
            android:textSize="@dimen/textSize12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:background="@color/color_191919_EEEFF0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_view_log"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/btn_look_for"
                android:textColor="@color/color_317FFF_0760D4"
                android:textSize="@dimen/textSize14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_191919_EEEFF0" />

            <TextView
                android:id="@+id/tv_service"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/btn_service"
                android:textColor="@color/color_317FFF_0760D4"
                android:textSize="@dimen/textSize14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
