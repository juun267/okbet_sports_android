<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.profileCenter.money_transfer.MoneyTransferActivity">

    <include
        layout="@layout/view_base_tool_bar_no_drawer"/>

    <LinearLayout
        android:id="@+id/ll_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_317FFF_1463cf"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp">


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/frame_4dp_white"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_change"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_button_white_blue_left"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:paddingVertical="4dp"
                android:text="@string/account_transfer"
                android:textColor="@color/selector_blue_white" />

            <RadioButton
                android:id="@+id/rb_record"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_button_white_blue_right"
                android:button="@null"
                android:gravity="center"
                android:paddingVertical="4dp"
                android:text="@string/record_conversion"
                android:textColor="@color/selector_blue_white" />
        </RadioGroup>

    </LinearLayout>

    <fragment
        android:id="@+id/my_nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/money_transfer_navigation" />

</LinearLayout>

