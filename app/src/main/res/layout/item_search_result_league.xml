<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#EDF2FC"
    android:gravity="center_vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/view1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        tools:background="@drawable/bg_blue_divide_ver" />

    <org.cxct.sportlottery.view.highLightTextView.HighlightTextView
        android:id="@+id/tvLeagueTittle"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_8"
        android:gravity="center_vertical"
        android:text="Lorem ipsum UFC dolor sit amet,"
        android:textColor="@color/black"
        android:textSize="@dimen/margin_14"
        android:textStyle="bold"
        app:highlightColor="@color/transparent"
        app:highlightRadius="0dp"
        app:highlightText="UFC"
        app:highlightTextColor="@color/color_025BE8" />

    <ImageView
        android:id="@+id/view_arrow_top"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_arrow_gray_up1" />

</LinearLayout>

