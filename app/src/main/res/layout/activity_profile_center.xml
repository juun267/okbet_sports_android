<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.profileCenter.ProfileCenterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:src="@drawable/profile_center_bg"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_mask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:src="@drawable/profile_center_white_mask"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/effect_ripple_circle_blue_light"
            android:contentDescription="@null"
            android:src="@drawable/ic_back_white_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/label_account_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="20dp"
            android:text="@string/account_balance"
            android:textColor="@color/gray6"
            android:textSize="@dimen/textSize12sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_mask"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_account_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/main_dark"
            android:textSize="@dimen/textSize20sp"
            app:layout_constraintBottom_toBottomOf="@id/label_account_balance"
            app:layout_constraintStart_toEndOf="@id/label_account_balance"
            app:layout_constraintTop_toTopOf="@id/label_account_balance"
            tools:text="87,547,000.00" />

        <TextView
            android:id="@+id/tv_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="1dp"
            android:text="@string/bet_info_list_rmb"
            android:textColor="@color/main_dark"
            android:textSize="@dimen/textSize16sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_account_balance"
            app:layout_constraintStart_toEndOf="@id/tv_account_balance" />

        <ImageButton
            android:id="@+id/btn_refresh_money"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/effect_ripple_circle_blue_light"
            android:contentDescription="@null"
            android:src="@drawable/ic_profile_center_refresh"
            app:layout_constraintBottom_toBottomOf="@id/label_account_balance"
            app:layout_constraintStart_toEndOf="@id/tv_currency"
            app:layout_constraintTop_toTopOf="@id/label_account_balance" />

        <ImageButton
            android:id="@+id/btn_bell"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/effect_ripple_circle_blue_light"
            android:contentDescription="@null"
            android:src="@drawable/ic_profile_center_bell"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_head"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_marginStart="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_head"
            app:layout_constraintBottom_toTopOf="@id/label_account_balance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.75"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/tv_user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/main_dark"
            android:textSize="@dimen/textSize16sp"
            app:layout_constraintBottom_toTopOf="@id/label_user_id"
            app:layout_constraintStart_toEndOf="@id/iv_head"
            app:layout_constraintTop_toTopOf="@id/iv_head"
            tools:text="Hi! Jason0921" />

        <ImageButton
            android:id="@+id/btn_edit_nickname"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/effect_ripple_circle_blue_light"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/ic_edit_button"
            app:layout_constraintBottom_toBottomOf="@id/tv_user_nickname"
            app:layout_constraintStart_toEndOf="@id/tv_user_nickname"
            app:layout_constraintTop_toTopOf="@id/tv_user_nickname" />

        <TextView
            android:id="@+id/label_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/user_id_colon"
            android:textColor="@color/lightGray"
            android:textSize="@dimen/textSize12sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_head"
            app:layout_constraintStart_toEndOf="@id/iv_head"
            app:layout_constraintTop_toBottomOf="@id/tv_user_nickname" />

        <TextView
            android:id="@+id/tv_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightGray"
            android:textSize="@dimen/textSize12sp"
            app:layout_constraintStart_toEndOf="@id/label_user_id"
            app:layout_constraintTop_toTopOf="@id/label_user_id"
            tools:text="48745884554" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-5dp"
        android:background="@drawable/bg_gradient_white"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/main_dark"
                android:gravity="center"
                android:minHeight="60dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btn_recharge"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/effect_ripple_rectangle_blue_light"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_profile_center_recharge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="@string/recharge"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/textSize16sp" />

                </LinearLayout>


                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:background="@android:color/white" />

                <LinearLayout
                    android:id="@+id/btn_withdraw"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/effect_ripple_rectangle_blue_light"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_profile_center_withdraw" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="@string/withdraw"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/textSize16sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/more_service"
                    android:textColor="@color/gray6"
                    android:textSize="@dimen/textSize14sp" />

                <LinearLayout
                    android:id="@+id/btn_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/effect_ripple_rectangle_blue_light"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="30dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_profile_center_account_info" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:text="@string/profile_info"
                        android:textColor="@color/gray3"
                        android:textSize="@dimen/textSize13sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right_gray" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_fund_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/effect_ripple_rectangle_blue_light"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="30dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_profile_center_fund_detail" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:text="@string/fund_detail"
                        android:textColor="@color/gray3"
                        android:textSize="@dimen/textSize13sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right_gray" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_bet_record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/effect_ripple_rectangle_blue_light"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="30dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_profile_center_bet_record" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:text="@string/bet_record"
                        android:textColor="@color/gray3"
                        android:textSize="@dimen/textSize13sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right_gray" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_withdrawal_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/effect_ripple_rectangle_blue_light"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="30dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_profile_center_withdrawal_setting" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:text="@string/withdraw_setting"
                        android:textColor="@color/gray3"
                        android:textSize="@dimen/textSize13sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right_gray" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="4.5dp"
                    android:layout_marginBottom="4.5dp"
                    android:background="@color/light_gray" />

                <LinearLayout
                    android:id="@+id/btn_news_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/effect_ripple_rectangle_blue_light"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="30dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_profile_center_news" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:text="@string/news_center"
                        android:textColor="@color/gray3"
                        android:textSize="@dimen/textSize13sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right_gray" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/effect_ripple_rectangle_blue_light"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="30dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_profile_center_feedback" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:text="@string/feedback"
                        android:textColor="@color/gray3"
                        android:textSize="@dimen/textSize13sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right_gray" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_promotion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/effect_ripple_rectangle_blue_light"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="30dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_profile_center_gift" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:text="@string/promotion"
                        android:textColor="@color/gray3"
                        android:textSize="@dimen/textSize13sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right_gray" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="4.5dp"
                    android:layout_marginBottom="4.5dp"
                    android:background="@color/light_gray" />

                <LinearLayout
                    android:id="@+id/btn_agent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/effect_ripple_rectangle_blue_light"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="30dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_profile_center_agency" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:text="@string/agent"
                        android:textColor="@color/gray3"
                        android:textSize="@dimen/textSize13sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right_gray" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_help_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/effect_ripple_rectangle_blue_light"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="30dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_profile_center_help" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:text="@string/help_center"
                        android:textColor="@color/gray3"
                        android:textSize="@dimen/textSize13sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right_gray" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_online_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/effect_ripple_rectangle_blue_light"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="30dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_profile_center_service" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:text="@string/online_service"
                        android:textColor="@color/gray3"
                        android:textSize="@dimen/textSize13sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right_gray" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_radius_5_button_blue4"
                    android:minHeight="40dp"
                    android:text="@string/sign_out"
                    android:textColor="@color/gray4"
                    android:textSize="@dimen/textSize14sp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/btn_finance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finance" />

</LinearLayout>