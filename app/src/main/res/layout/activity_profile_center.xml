<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".ui.profileCenter.ProfileCenterActivity"
    tools:ignore="spUsage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:paddingStart="0dp"
        android:paddingEnd="20dp">

        <ImageView
            android:id="@+id/profile_center_back"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_icon_arrow_blue"
            app:layout_constraintBottom_toBottomOf="@id/iv_head"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_head"
            app:tint="@color/colorBlue" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_head"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_avatar_default"
            app:layout_constraintStart_toEndOf="@id/profile_center_back"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/tv_user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxWidth="200dp"
            android:maxLines="1"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/textSize16sp"
            app:layout_constraintBottom_toTopOf="@id/label_user_id"
            app:layout_constraintStart_toEndOf="@id/iv_head"
            app:layout_constraintTop_toTopOf="@id/iv_head"
            tools:text="Jason0921155" />

        <ImageButton
            android:id="@+id/btn_edit_nickname"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:background="@null"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/ic_edit_button"
            app:layout_constraintBottom_toBottomOf="@id/tv_user_nickname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/tv_user_nickname"
            app:layout_constraintTop_toTopOf="@id/tv_user_nickname" />

        <TextView
            android:id="@+id/label_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:text="@string/user_id_colon"
            android:textColor="@color/colorGrayLight"
            android:textSize="@dimen/textSize12sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_head"
            app:layout_constraintStart_toEndOf="@id/iv_head"
            app:layout_constraintTop_toBottomOf="@id/tv_user_nickname" />

        <TextView
            android:id="@+id/tv_user_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:textColor="@color/colorGrayLight"
            android:textSize="@dimen/textSize12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/label_user_id"
            app:layout_constraintTop_toTopOf="@id/label_user_id"
            tools:text="48745884554" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/block_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/bg_gradient_blue"
        android:gravity="center_vertical"
        android:minHeight="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_account_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical"
            android:text="@string/account_balance"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize12sp" />

        <TextView
            android:id="@+id/tv_account_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:maxWidth="180dp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize20sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="20dp"
            app:autoSizeMinTextSize="2dp"
            tools:text="87,547,000.000" />

        <TextView
            android:id="@+id/tv_currency_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize18sp"
            tools:text="PHP" />

        <ImageButton
            android:id="@+id/btn_refresh_money"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@null"
            android:contentDescription="@null"
            android:paddingHorizontal="10dp"
            android:src="@drawable/ic_profile_center_refresh" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/colorWhite1"
        app:layout_constraintTop_toBottomOf="@id/block_amount" />

    <androidx.cardview.widget.CardView
        android:id="@+id/block_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorWhite"
        android:paddingHorizontal="16dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/block_amount">

        <LinearLayout
