                        android:layout_height="wrap_content"
                        android:background="@drawable/effect_ripple_rectangle_gray"
                        android:gravity="center"
                        android:minHeight="40dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="30dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_basketball_record" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:text="@string/sport_bet_record"
                            android:textColor="@color/gray3"
                            android:textSize="@dimen/textSize13sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_arrow_right_gray" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_other_bet_record"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/effect_ripple_rectangle_gray"
                        android:gravity="center"
                        android:minHeight="40dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="30dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_profile_center_bet_record" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:text="@string/other_bet_record"
                            android:textColor="@color/gray3"
                            android:textSize="@dimen/textSize13sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_arrow_right_gray" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_fund_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/effect_ripple_rectangle_gray"
                        android:gravity="center"
                        android:minHeight="40dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="30dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_profile_center_fund_detail" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:text="@string/fund_detail"
                            android:textColor="@color/gray3"
                            android:textSize="@dimen/textSize13sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_arrow_right_gray" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="4.5dp"
                        android:layout_marginBottom="4.5dp"
                        android:background="@color/light_gray" />

                    <LinearLayout
                        android:id="@+id/btn_news_center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/effect_ripple_rectangle_gray"
                        android:gravity="center"
                        android:minHeight="40dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="30dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_profile_center_news" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:text="@string/news_center"
                            android:textColor="@color/gray3"
                            android:textSize="@dimen/textSize13sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_arrow_right_gray" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_promotion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/effect_ripple_rectangle_gray"
                        android:gravity="center"
                        android:minHeight="40dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="30dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_profile_center_gift" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:text="@string/promotion"
                            android:textColor="@color/gray3"
                            android:textSize="@dimen/textSize13sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_arrow_right_gray" />

                    </LinearLayout>

