                        android:contentDescription="@null"
                        android:rotationY="180"
                        android:src="@drawable/ic_icon_arrow_blue"
                        app:tint="@color/color_E2E2E2" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
