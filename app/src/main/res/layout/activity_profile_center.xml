<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".ui.profileCenter.ProfileCenterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_head"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_marginVertical="18dp"
            android:layout_marginStart="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_avatar_default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_border_color="@color/colorBlue"
            app:riv_border_width="2dp"
            app:riv_oval="true" />

        <LinearLayout
            android:id="@+id/block_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/label_user_id"
            app:layout_constraintEnd_toStartOf="@id/line_vertical"
            app:layout_constraintStart_toEndOf="@id/iv_head"
            app:layout_constraintTop_toTopOf="@id/iv_head">

            <TextView
                android:id="@+id/tv_user_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/main_dark"
                android:textSize="@dimen/textSize16sp"
                tools:text="Jason0921" />

            <ImageButton
                android:id="@+id/btn_edit_nickname"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/effect_ripple_circle_blue_light"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/ic_edit_button" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintBottom_toTopOf="@+id/guide_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bg_gradient_blue"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_account_balance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="20dp"
                android:text="@string/account_balance"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSize12sp" />

                <TextView
                    android:id="@+id/tv_account_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textSize20sp"
                    android:maxWidth="220dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="87,547,000.000" />

                <TextView
                    android:id="@+id/tv_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginStart="6dp"
                    android:text="@string/bet_info_list_rmb"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textSize16sp" />

                <ImageButton
                    android:id="@+id/btn_refresh_money"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/effect_ripple_circle_blue_light"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_profile_center_refresh" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/colorWhite1"
            app:layout_constraintTop_toBottomOf="@+id/linear_layout2"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.65" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15" />

        <TextView
            android:id="@+id/label_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/user_id_colon"
            android:textColor="@color/lightGray"
            android:textSize="@dimen/textSize12sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_head"
            app:layout_constraintStart_toEndOf="@id/iv_head"
            app:layout_constraintTop_toBottomOf="@id/block_nickname" />

        <TextView
            android:id="@+id/tv_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightGray"
            android:textSize="@dimen/textSize12sp"
            app:layout_constraintStart_toEndOf="@id/label_user_id"
            app:layout_constraintTop_toTopOf="@id/label_user_id"
            tools:text="48745884554" />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guide_line">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="4dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:minHeight="60dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/btn_recharge"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/effect_ripple_rectangle_gray"
                        android:gravity="center"
                        android:elevation="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_profile_center_recharge" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:text="@string/recharge"
                            android:textStyle="bold"
                            android:textColor="@color/colorGrayDark"
                            android:textSize="@dimen/textSize16sp" />

                    </LinearLayout>


                    <View
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:background="@color/colorWhite6" />

                    <LinearLayout
