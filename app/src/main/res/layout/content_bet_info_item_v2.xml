<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="org.cxct.sportlottery.ui.game.betList.BetListRefactorAdapter"
    tools:ignore="RtlSymmetry,SpUsage,ContentDescription,HardcodedText,Autofill">


    <data>

        <variable
            name="parlayOdd"
            type="org.cxct.sportlottery.network.bet.info.ParlayOdd" />

    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintHeight_default="wrap"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_26"
                    android:id="@+id/layoutTitle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="86dp"
                        android:layout_height="match_parent"
                        android:id="@+id/tvInGame"
                        android:paddingEnd="@dimen/margin_8"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/margin_12"
                        android:background="@drawable/bg_half_orange_half_blue"
                        android:text="@string/home_tab_in_play2"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gradient_0066d1_0079fa"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/margin_8"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="@dimen/margin_12"
                            android:layout_height="@dimen/margin_12"
                            android:id="@+id/ivSportLogo"
                            android:src="@drawable/ic_tennis_icon"
                            app:tint="@color/white"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvLeagueName"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            android:textSize="@dimen/margin_12"
                            android:lines="1"
                            android:ellipsize="end"
                            android:layout_marginStart="@dimen/margin_4"
                            android:text="@string/home_tab_in_play2"/>

                        <ImageView
                            android:id="@+id/iv_close"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_close"
                            android:padding="@dimen/margin_6"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/white" />

                    </LinearLayout>


                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_item_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/layoutTitle"
                    android:background="@color/colorWhite">

                    <ImageView
                        android:id="@+id/iv_bet_lock"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_bet_lock"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <View
                            android:id="@+id/v_point"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_circle_red"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_odds_content" />


                        <!--playName + spread + @ + odds + (oddsType)-->
                        <TextView
                            android:id="@+id/tv_odds_content"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/activity_horizontal_margin"
                            android:layout_marginTop="9dp"
                            android:layout_marginEnd="8dp"
                            android:textColor="@color/colorBlackLight"
                            android:textSize="@dimen/textSize15sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@+id/iv_close"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="俄罗斯 -0.5/1 ＠ 0.890 (歐洲盤)" />


                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/colorBlackLight"
                            android:textSize="@dimen/textSize13sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_odds_content"
                            tools:text="让球" />

                        <!--玩法名稱:讓球,獨贏..-->
                        <TextView
                            android:id="@+id/tv_match"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/textSize13sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_name"
                            tools:text="纽卡斯尔 v 切尔西" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:id="@+id/viewGrey"
                            android:background="@color/colorWhite6"
                            android:layout_marginTop="@dimen/margin_12"
                            app:layout_constraintTop_toBottomOf="@+id/tv_match"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <EditText
                            android:id="@+id/et_bet"
                            android:layout_width="213dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="@dimen/activity_horizontal_margin"
                            android:layout_marginTop="22dp"
                            android:background="@drawable/effect_select_bet_edit_text"
                            android:hint="@string/bet_info_input_quota"
                            android:inputType="number"
                            android:maxLength="7"
                            android:paddingStart="10dp"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:textColor="@color/colorBlue"
                            android:textColorHint="@color/colorSilverLight"
                            android:textSize="@dimen/textSize16sp"
                            android:letterSpacing="0.05"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/tv_error_message"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_match" />

                        <View
                            android:id="@+id/et_clickable"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@+id/et_bet"
                            app:layout_constraintStart_toStartOf="@+id/et_bet"
                            app:layout_constraintTop_toTopOf="@+id/et_bet"
                            app:layout_constraintEnd_toEndOf="@+id/et_bet" />

                        <LinearLayout
                            android:id="@+id/llActualBet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:orientation="vertical"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@+id/et_clickable"
                            app:layout_constraintStart_toEndOf="@+id/et_clickable"
                            app:layout_constraintTop_toTopOf="@+id/et_clickable">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/actual_bet"
                                android:textColor="@color/colorGray"
                                android:textSize="@dimen/textSize12sp" />

                            <TextView
                                android:id="@+id/tvRealAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.00"
                                android:textColor="@color/colorBlue"
                                android:textSize="@dimen/textSize12sp" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_error_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/colorRed"
                            android:textSize="@dimen/textSize13sp"
                            android:visibility="gone"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintStart_toStartOf="@+id/et_bet"
                            app:layout_constraintTop_toBottomOf="@+id/et_bet"
                            app:layout_constraintBottom_toTopOf="@+id/layoutKeyBoard"
                            tools:text="@string/bet_info_list_minimum_limit_amount"
                            tools:visibility="visible" />


                        <include
                            layout="@layout/content_bet_info_item_quota_detail"
                            app:parlayOdd="@{parlayOdd}" />
                        <org.cxct.sportlottery.util.KeyboardView
                            android:layout_width="match_parent"
                            android:id="@+id/layoutKeyBoard"
                            android:layout_height="150dp"
                            android:layout_marginTop="@dimen/margin_4"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_error_message"
                            android:visibility="gone"/>
<!--                        <View-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="150dp"-->
<!--                            app:layout_constraintBottom_toBottomOf="parent"-->
<!--                            app:layout_constraintTop_toBottomOf="@+id/et_bet"-->
<!--                            android:background="@color/blueDeep"/>-->

                        <!--                    <LinearLayout-->
                        <!--                        android:id="@+id/ll_keyboard_bg"-->
                        <!--                        android:layout_width="match_parent"-->
                        <!--                        android:layout_height="wrap_content"-->
                        <!--                        android:orientation="horizontal"-->
                        <!--                        android:background="@color/color_060F20"-->
                        <!--                        android:paddingStart="8dp"-->
                        <!--                        android:paddingEnd="8dp"-->
                        <!--                        android:paddingTop="6dp"-->
                        <!--                        app:layout_constraintTop_toBottomOf="@+id/et_bet"-->
                        <!--                        app:layout_constraintBottom_toBottomOf="parent"-->
                        <!--                        android:paddingBottom="6dp"-->
                        <!--                        android:visibility="gone" >-->

                        <!--                        <org.cxct.sportlottery.ui.common.CustomKeyBoardView-->
                        <!--                            android:id="@+id/kv_keyboard"-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:focusable="true"-->
                        <!--                            android:background="@color/color_060F20"-->
                        <!--                            android:focusableInTouchMode="true"-->
                        <!--                            android:keyBackground="@drawable/bg_frame_6dp_white"-->
                        <!--                            android:visibility="gone" />-->

                        <!--                    </LinearLayout>-->

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


    </FrameLayout>



</layout>