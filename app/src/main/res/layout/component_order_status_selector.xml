<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/color_191919_FCFCFC"
    android:paddingStart="10dp"
    android:paddingTop="5dp"
    android:paddingEnd="10dp"
    android:paddingBottom="5dp">

    <View
        android:id="@+id/ll_start_date"
        android:layout_width="120dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/order_selector_div"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_BBBBBB_333333"
        android:textSize="@dimen/textSize14sp"
        app:layout_constraintBottom_toBottomOf="@id/ll_start_date"
        app:layout_constraintEnd_toEndOf="@id/ll_start_date"
        app:layout_constraintStart_toStartOf="@id/ll_start_date"
        app:layout_constraintTop_toTopOf="@id/ll_start_date"
        tools:text="全部订单状态" />

    <ImageView
        android:id="@+id/tv_start_date_arrow"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_arrow_down_dark"
        app:layout_constraintBottom_toBottomOf="@id/tv_start_date"
        app:layout_constraintStart_toEndOf="@id/tv_start_date"
        app:layout_constraintTop_toTopOf="@id/tv_start_date" />

    <TextView
        android:id="@+id/order_selector_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="｜"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ll_end_date"
        app:layout_constraintStart_toEndOf="@id/ll_start_date"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/ll_end_date"
        android:layout_width="120dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/order_selector_div"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_BBBBBB_333333"
        android:textSize="@dimen/textSize14sp"
        app:layout_constraintBottom_toBottomOf="@id/ll_end_date"
        app:layout_constraintEnd_toEndOf="@id/ll_end_date"
        app:layout_constraintStart_toStartOf="@id/ll_end_date"
        app:layout_constraintTop_toTopOf="@id/ll_end_date"
        tools:text="全部渠道类型" />

    <ImageView
        android:id="@+id/tv_end_date_arrow"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_arrow_down_dark"
        app:layout_constraintBottom_toBottomOf="@id/tv_end_date"
        app:layout_constraintStart_toEndOf="@id/tv_end_date"
        app:layout_constraintTop_toTopOf="@id/tv_end_date" />

</androidx.constraintlayout.widget.ConstraintLayout>