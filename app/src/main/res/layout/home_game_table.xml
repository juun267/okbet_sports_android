<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fillet_5dp_white"
    android:orientation="vertical"
    tools:context=".ui.game.home.gameTable.HomeGameTable">

    <LinearLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/colorBlueDark"
            android:textSize="@dimen/textSize18sp"
            tools:text="@string/home_tab_in_play" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:minWidth="28dp"
            android:layout_margin="10dp"
            android:background="@drawable/home_count_ball"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize17sp"
            tools:text="21" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorWhite6"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:itemCount="3"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/home_game_table_item" />

</LinearLayout>