<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_square_shape_4dp_white"
    android:orientation="vertical"
    android:paddingStart="14dp"
    android:paddingEnd="14dp"
    tools:ignore="SpUsage">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textColor="@color/color_CCCCCC_333333"
        android:textSize="@dimen/textSize12sp"
        tools:text="美国职棒大联盟 - 热身赛（洛杉矶道奇 VS 奥克兰运动家）赛事结果调整" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="14dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_A3A3A3_666666"
            android:textSize="@dimen/textSize12sp"
            tools:text="2022.03.18" />

        <TextView
            android:id="@+id/tvDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rectangle_11_gray"
            android:paddingStart="14dp"
            android:paddingTop="4dp"
            android:paddingEnd="14dp"
            android:paddingBottom="4dp"
            android:text="@string/news_detail"
            android:textColor="@color/color_317FFF_0760D4"
            android:textSize="@dimen/textSize12sp" />
    </LinearLayout>
</LinearLayout>