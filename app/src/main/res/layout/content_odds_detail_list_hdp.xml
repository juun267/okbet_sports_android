<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius_5_colorwhite"
    android:orientation="vertical">

    <include layout="@layout/content_odds_detail_list_item" />

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorWhite6" />

    <RelativeLayout
        android:id="@+id/rl_game"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tv_home_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/tv_vs"
            android:letterSpacing="0.0088"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textSize14sp"
            tools:text="皇家马德里" />

        <TextView
            android:id="@+id/tv_away_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/tv_vs"
            android:gravity="end"
            android:letterSpacing="0.0088"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textSize14sp"
            tools:text="利物浦" />

        <TextView
            android:id="@+id/tv_vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:letterSpacing="0.0088"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textSize14sp"
            android:text="@string/verse_lower"
            tools:text="vs" />


    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:overScrollMode="never"
        android:id="@+id/rv_bet"
        android:paddingEnd="2.5dp"
        android:paddingStart="2.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false" />

</LinearLayout>

