<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_14"
    android:layout_marginVertical="@dimen/margin_10"
    android:background="@drawable/bg_gradient_publicity_4dp"
    android:elevation="4dp"
    android:gravity="center"
    android:orientation="horizontal"
    tools:ignore="SpUsage, ContentDescription">

    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="24dp"
        android:layout_marginVertical="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_login_signup"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:text="@string/btn_login"
            android:textColor="@color/color_cccccc_333333"
            android:textSize="@dimen/textSize14sp" />

        <LinearLayout
            android:id="@+id/ll_signup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_5"
                android:text="@string/splash_no_trans"
                android:textColor="@color/color_cccccc_333333"
                android:textSize="@dimen/textSize14sp" />

            <TextView
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_register"
                android:textColor="@color/color_cccccc_333333"
                android:textSize="@dimen/textSize14sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_user_data"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <TextView
            android:id="@+id/tv_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_BCBCBC_666666"
            android:textSize="@dimen/textSize12sp"
            tools:text="user20220617" />

        <TextView
            android:id="@+id/tv_user_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2"
            android:textColor="@color/color_cccccc_333333"
            android:textSize="@dimen/textSize14sp"
            tools:text="â‚± 100,000,000.000" />
    </LinearLayout>

    <View
        android:id="@+id/line_center"
        android:layout_width="1dp"
        android:layout_height="24dp"
        android:layout_marginVertical="18dp"
        android:background="@color/color_3d3d3d_dddddd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/ll_deposit_withdraw"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/margin_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/line"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <TextView
            android:id="@+id/btn_deposit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_icon_deposit"
            android:gravity="center"
            android:text="@string/recharge"
            android:textColor="@color/color_b4b4b4_848b9f"
            android:textSize="@dimen/textSize12sp" />

        <TextView
            android:id="@+id/btn_withdraw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_icon_withdraw"
            android:gravity="center"
            android:text="@string/withdraw"
            android:textColor="@color/color_b4b4b4_848b9f"
            android:textSize="@dimen/textSize12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>