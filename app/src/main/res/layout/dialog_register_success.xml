<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    app:cardBackgroundColor="@color/color_191919_FCFCFC"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    tools:context="org.cxct.sportlottery.ui.common.CustomAlertDialog">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="300dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/ivSuccess"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_icon_success"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/margin_30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_20"
            android:textColor="@color/color_DDDDDD_000000"
            android:textSize="@dimen/textSize20sp"
            android:textStyle="bold"
            android:text="@string/register_success"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivSuccess" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvJump"
            android:text="@string/register_jump"
            android:textColor="@color/color_939393_333333"
            android:textSize="@dimen/textSize12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            android:layout_marginTop="@dimen/margin_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCount"
            android:text="(5)"
            android:textColor="@color/color_317FFF_0760D4"
            android:textSize="@dimen/textSize12sp"
            app:layout_constraintStart_toEndOf="@+id/tvJump"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            android:layout_marginTop="@dimen/margin_24"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:background="@color/color_141414_F3F4F5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_30"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/tvJump">


            <Button
                android:id="@+id/btnRecharge"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="68dp"
                android:layout_marginRight="68dp"
                android:background="@drawable/bg_radius_20_button_dusk"
                android:enabled="true"
                android:text="@string/register_recharge_now"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize17sp"
                android:textAllCaps="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clAgreement" />

            <TextView
                android:id="@+id/tvVisitFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_gravity="center"
                android:text="@string/visit_first"
                android:textColor="@color/color_A3A3A3_666666"
                app:layout_constraintBaseline_toBaselineOf="@+id/btn_visit_first"
                android:textSize="@dimen/textSize12sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>