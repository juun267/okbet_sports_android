<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="SpUsage,ContentDescription,WebViewLayout,UnusedAttribute">

    <TextView
        android:id="@+id/league_text"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_212121_ededed"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:lineHeight="20dp"
        android:paddingStart="16dp"
        android:paddingEnd="34dp"
        android:textAllCaps="true"
        android:textColor="@color/color_e5e5e5_202020"
        android:textSize="@dimen/textSize14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="欧洲足球锦标赛2020" />

    <ImageView
        android:id="@+id/iv_country"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_earth"
        app:layout_constraintBottom_toBottomOf="@id/league_text"
        app:layout_constraintEnd_toStartOf="@+id/iv_refresh"
        app:layout_constraintTop_toTopOf="@id/league_text" />

    <ImageView
        android:id="@+id/iv_refresh"
        android:layout_width="34dp"
        android:layout_height="0dp"
        android:paddingStart="0dp"
        android:paddingTop="20dp"
        android:paddingEnd="16dp"
        android:paddingBottom="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_refresh_gray"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/league_text"
        app:layout_constraintEnd_toEndOf="@id/league_text"
        app:layout_constraintTop_toTopOf="@id/league_text"
        tools:ignore="WebViewLayout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/league_odd_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/league_text"
        tools:itemCount="1"
        tools:listitem="@layout/itemview_league_odd_v5" />

    <View
        android:id="@+id/SpaceItemDecorationView"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/color_191919_FCFCFC"
        app:layout_constraintTop_toBottomOf="@+id/league_odd_list" />

</androidx.constraintlayout.widget.ConstraintLayout>