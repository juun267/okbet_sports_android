<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/league_border"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorWhite4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/league_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#202020"
        android:textSize="@dimen/textSize16sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="@id/league_border"
        app:layout_constraintEnd_toStartOf="@id/iv_country"
        app:layout_constraintStart_toStartOf="@id/league_border"
        app:layout_constraintTop_toTopOf="@id/league_border"
        tools:text="欧洲足球锦标赛2020" />

    <ImageView
        android:id="@+id/iv_country"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_earth"
        app:layout_constraintBottom_toBottomOf="@id/league_border"
        app:layout_constraintEnd_toStartOf="@+id/iv_refresh"
        app:layout_constraintTop_toTopOf="@id/league_border"
        tools:ignore="WebViewLayout" />

    <ImageView
        android:id="@+id/iv_refresh"
        android:layout_width="34dp"
        android:layout_height="0dp"
        android:paddingEnd="16dp"
        android:paddingStart="0dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_refresh_gray"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/league_border"
        app:layout_constraintEnd_toEndOf="@id/league_border"
        app:layout_constraintTop_toTopOf="@id/league_border"
        tools:ignore="WebViewLayout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/league_odd_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:overScrollMode="never"
        tools:itemCount="1"
        tools:listitem="@layout/itemview_league_odd_v4"
        app:layout_constraintTop_toBottomOf="@id/league_border"/>

    <View android:id="@+id/SpaceItemDecorationView"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@+id/league_odd_list" />

</androidx.constraintlayout.widget.ConstraintLayout>