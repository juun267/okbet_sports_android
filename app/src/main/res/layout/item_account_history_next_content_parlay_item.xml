<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="gameType"
            type="String" />

        <variable
            name="matchOdd"
            type="org.cxct.sportlottery.network.bet.settledDetailList.MatchOdd" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_191919_FCFCFC"
            android:gravity="center"
            android:minHeight="48dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            tools:ignore="SpUsage">

            <TextView
                android:id="@+id/tv_game_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:textColor="@color/color_e5e5e5_333333"
                android:textSize="@dimen/textSize12sp"
                android:textStyle="bold"
                app:gameType="@{gameType}"
                app:layout_constraintEnd_toStartOf="@id/tv_play_cate_name"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="篮球" />

            <TextView
                android:id="@+id/tv_play_cate_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{matchOdd.playCateName}"
                android:textColor="@color/color_e5e5e5_333333"
                android:textSize="@dimen/textSize12sp"
                android:textStyle="bold"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@+id/list_score"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/tv_game_type"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="让球" />

            <TextView
                android:id="@+id/tv_league_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{matchOdd.leagueName}"
                android:textColor="@color/color_e5e5e5_333333"
                android:textSize="@dimen/textSize13sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@+id/list_score"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_play_cate_name"
                tools:text="NBA季后赛" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:itemCount="3"
                tools:listitem="@layout/item_account_history_next_context_listview_score" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_A3A3A3_666666"
                android:textSize="@dimen/textSize12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/list_score"
                app:layout_constraintTop_toBottomOf="@id/list_score"
                app:layout_constraintVertical_bias="0"
                tools:text="(5-26)" />


            <TextView
                android:id="@+id/tv_team_names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:textColor="@color/color_A3A3A3_666666"
                android:textSize="@dimen/textSize12sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_time"
                tools:text="菲尼克斯太阳 v 菲尼克斯太阳" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:textColor="@color/color_A3A3A3_666666"
                android:textSize="@dimen/textSize12sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_league_name"
                tools:text="2022-02-25 10:42" />

            <!--playName spread @ odd (oddsType)-->
            <TextView
                android:id="@+id/play_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:gravity="center"
                android:textColor="@color/color_A3A3A3_666666"
                android:textSize="@dimen/textSize12sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_team_names"
                tools:text="密尔沃基雄鹿 6.5 \@ 1.860 (印尼盘)" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_191919_EEEFF0"
            app:layout_constraintTop_toBottomOf="@id/tv_team_home" />

    </LinearLayout>

</layout>
