<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="gameType"
            type="String" />

        <variable
            name="matchOdd"
            type="org.cxct.sportlottery.network.bet.settledDetailList.MatchOdd" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:minHeight="48dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            tools:ignore="SpUsage">


            <TextView
                android:id="@+id/tv_game_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:gameType="@{gameType}"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize12sp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="@dimen/textSize12sp"
                app:autoSizeMinTextSize="@dimen/textSize8sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="篮球 让球" />

            <TextView
                android:id="@+id/tv_league_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@{matchOdd.leagueName}"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize13sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_game_type"
                app:layout_constraintStart_toStartOf="@+id/tv_game_type"
                tools:text="22-06 NBA季后赛" />

            <ListView
                android:id="@+id/list_score"
                android:layout_width="100dp"
                app:layout_constraintStart_toEndOf="@id/barrier"
                app:layout_constrainedWidth="true"
                tools:layout_width="100dp"
                tools:layout_height="30dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="完賽: 1-3\n完賽: 1-3\n完賽: 1-3" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="right"
                app:constraint_referenced_ids="tv_game_type, tv_league_name, tv_team_homeway, tv_odd"/>

            <TextView
                android:id="@+id/tv_play_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{matchOdd.homeName}"
                android:layout_marginVertical="5dp"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/textSize12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_team_home"
                tools:text="菲尼克斯太阳" />

            <TextView
                android:id="@+id/tv_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="4dp"
                android:gravity="center"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/textSize12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_play_name"
                app:layout_constraintStart_toEndOf="@id/tv_play_name"
                app:layout_constraintTop_toTopOf="@+id/tv_play_name"
                android:text="@string/at" />

            <TextView
                android:id="@+id/tv_odd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="4dp"
                android:gravity="center"
                android:textColor="@color/colorRedDark"
                android:textSize="@dimen/textSize12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_play_name"
                app:layout_constraintStart_toEndOf="@id/tv_at"
                app:layout_constraintTop_toTopOf="@+id/tv_play_name"
                app:oddNoAtFormat="@{matchOdd.odds}"
                tools:text="1.860" />

            <TextView
                android:id="@+id/tv_team_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:gravity="center"
                android:text="@{matchOdd.homeName}"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/textSize12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_league_name"
                tools:text="菲尼克斯太阳" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorRedDark"
                android:textSize="@dimen/textSize12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_team_home"
                app:layout_constraintStart_toEndOf="@id/tv_team_home"
                app:layout_constraintTop_toTopOf="@+id/tv_team_home"
                tools:text="5.5" />

            <TextView
                android:id="@+id/text_view_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:gravity="center"
                android:text="@string/verse"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/textSize12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_team_home"
                app:layout_constraintStart_toEndOf="@id/tv_score"
                app:layout_constraintTop_toTopOf="@+id/tv_team_home" />

            <TextView
                android:id="@+id/tv_team_homeway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:gravity="center"
                android:text="@{matchOdd.awayName}"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/textSize12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_team_home"
                app:layout_constraintStart_toEndOf="@id/text_view_v"
                app:layout_constraintTop_toTopOf="@+id/tv_team_home"
                tools:text="菲尼克斯太阳" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider2"
            app:layout_constraintTop_toBottomOf="@id/tv_team_home"
            android:background="@color/colorWhite6"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>

</layout>
