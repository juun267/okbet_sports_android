<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.cxct.sportlottery.ui.game.common.OddButtonPagerAdapter"
    tools:ignore="spUsage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center">

        <TextView
            android:id="@+id/odd_btn_row1_type"
            android:layout_width="70dp"
            android:layout_height="47dp"
            android:layout_marginRight="@dimen/margin_5"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/textSize12sp"
            app:autoSizeMaxTextSize="@dimen/textSize12sp"
            app:autoSizeMinTextSize="@dimen/textSize8sp"
            app:autoSizeTextType="uniform"
            tools:text="独赢" />

        <TextView
            android:id="@+id/odd_btn_row2_type"
            android:layout_width="70dp"
            android:layout_height="47dp"
            android:layout_marginLeft="@dimen/margin_5"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/textSize12sp"
            app:autoSizeMaxTextSize="@dimen/textSize12sp"
            app:autoSizeMinTextSize="@dimen/textSize8sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toTopOf="@id/guideline1"
            app:layout_constraintEnd_toEndOf="@id/odd_btn_row2"
            app:layout_constraintStart_toStartOf="@id/odd_btn_row2"
            app:layout_constraintTop_toTopOf="@id/odd_btn_row2"
            tools:text="独赢" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center">

        <org.cxct.sportlottery.ui.game.widget.OddsButton
            android:id="@+id/odd_btn_row1_home"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:layout_marginRight="@dimen/margin_5"
            app:ob_hide_item_flag="true" />

        <org.cxct.sportlottery.ui.game.widget.OddsButton
            android:id="@+id/odd_btn_row2_home"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/margin_5"
            app:ob_hide_item_flag="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center">
        <org.cxct.sportlottery.ui.game.widget.OddsButton
            android:id="@+id/odd_btn_row1_away"
            android:layout_width="70dp"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_height="48dp"
            app:ob_hide_item_flag="true" />
        <org.cxct.sportlottery.ui.game.widget.OddsButton
            android:id="@+id/odd_btn_row2_away"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/margin_5"
            app:layout_constraintBottom_toTopOf="@id/guideline3"
            app:layout_constraintEnd_toEndOf="@id/odd_btn_row2"
            app:layout_constraintStart_toStartOf="@id/odd_btn_row2"
            app:layout_constraintTop_toBottomOf="@id/guideline2"
            app:ob_hide_item_flag="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center">
        <org.cxct.sportlottery.ui.game.widget.OddsButton
            android:id="@+id/odd_btn_row1_draw"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:layout_marginRight="@dimen/margin_5"
            app:layout_constraintBottom_toTopOf="@id/guideline4"
            app:layout_constraintEnd_toEndOf="@id/odd_btn_row1"
            app:layout_constraintStart_toStartOf="@id/odd_btn_row1"
            app:layout_constraintTop_toBottomOf="@id/guideline3"
            app:ob_hide_item_flag="true" />
        <org.cxct.sportlottery.ui.game.widget.OddsButton
            android:id="@+id/odd_btn_row2_draw"
            android:layout_width="70dp"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_height="48dp"
            app:layout_constraintBottom_toTopOf="@id/guideline4"
            app:layout_constraintEnd_toEndOf="@id/odd_btn_row2"
            app:layout_constraintStart_toStartOf="@id/odd_btn_row2"
            app:layout_constraintTop_toBottomOf="@id/guideline3"
            app:ob_hide_item_flag="true" />

    </LinearLayout>


</LinearLayout>