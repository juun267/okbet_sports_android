<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_191919_FCFCFC"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="SpUsage,ContentDescription,UselessParent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="18dp"
        android:paddingTop="5dp"
        android:paddingEnd="18dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/tv_odds"
            style="@style/OddsButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal"
            android:maxLines="1"
            app:autoSizeMaxTextSize="@dimen/textSize15sp"
            app:autoSizeMinTextSize="@dimen/textSize8sp"
            app:autoSizeTextType="uniform"
            android:paddingBottom="4dp"
            tools:text="1.52" />

        <TextView
            android:id="@+id/tv_spread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_odds"
            android:layout_alignEnd="@+id/tv_odds"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/selector_game_spread"
            android:textSize="@dimen/textSize14sp"
            tools:text="1.52" />

        <ImageView
            android:id="@+id/iv_disable_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_odds"
            android:layout_alignTop="@+id/tv_odds"
            android:layout_alignEnd="@+id/tv_odds"
            android:layout_alignBottom="@+id/tv_odds"
            android:background="@drawable/bg_radius_4_button_disable"
            android:paddingStart="24dp"
            android:paddingTop="12dp"
            android:paddingEnd="24dp"
            android:paddingBottom="12dp"
            android:src="@drawable/ic_lock_odd"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color_191919_EEEFF0"/>

</LinearLayout>