<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_rectangle_white_6dp"
    tools:ignore="ContentDescription,SpUsage,UseCompatTextViewDrawableXml,UseAppTint">

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/bg_customer_service"
        app:layout_constraintBottom_toTopOf="@id/frame_service1"
        app:layout_constraintDimensionRatio="360:92"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.30" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/customer_service_title"
        android:textColor="@color/color_317FFF_0760D4"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_title"
        app:layout_constraintEnd_toStartOf="@+id/iv_close"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@+id/iv_title" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:padding="8dp"
        android:src="@drawable/ic_close_gray2"
        android:tint="@color/color_909090_666666"
        app:layout_constraintEnd_toEndOf="@id/iv_title"
        app:layout_constraintTop_toTopOf="@id/iv_title" />

    <View
        android:id="@+id/frame_service1"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_radius_16_frame_color_317fff_0760d4"
        app:layout_constraintBottom_toTopOf="@id/frame_service2"
        app:layout_constraintEnd_toEndOf="@id/iv_title"
        app:layout_constraintStart_toStartOf="@id/iv_title"
        app:layout_constraintTop_toBottomOf="@id/iv_title" />

    <ImageView
        android:id="@+id/iv_service1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_service_inside_blue"
        app:layout_constraintBottom_toBottomOf="@id/frame_service1"
        app:layout_constraintStart_toStartOf="@id/frame_service1"
        app:layout_constraintTop_toTopOf="@id/frame_service1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/service_1"
        android:textColor="@color/color_317FFF_0760D4"
        android:textSize="@dimen/textSize14sp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="@id/frame_service1"
        app:layout_constraintStart_toEndOf="@id/iv_service1"
        app:layout_constraintTop_toTopOf="@id/frame_service1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/bg_service_connect_button"
        android:drawableEnd="@drawable/ic_go"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:text="@string/service_connect"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/frame_service1"
        app:layout_constraintEnd_toEndOf="@id/frame_service1"
        app:layout_constraintTop_toTopOf="@id/frame_service1" />

    <View
        android:id="@+id/frame_service2"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/bg_radius_16_frame_color_317fff_0760d4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iv_title"
        app:layout_constraintStart_toStartOf="@id/iv_title"
        app:layout_constraintTop_toBottomOf="@id/frame_service1" />

    <ImageView
        android:id="@+id/iv_service2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_service_inside_blue"
        app:layout_constraintBottom_toBottomOf="@id/frame_service2"
        app:layout_constraintStart_toStartOf="@id/frame_service2"
        app:layout_constraintTop_toTopOf="@id/frame_service2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/service_2"
        android:textColor="@color/color_317FFF_0760D4"
        android:textSize="@dimen/textSize14sp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="@id/frame_service2"
        app:layout_constraintStart_toEndOf="@id/iv_service2"
        app:layout_constraintTop_toTopOf="@id/frame_service2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/bg_service_connect_button"
        android:drawableEnd="@drawable/ic_go"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:text="@string/service_connect"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/frame_service2"
        app:layout_constraintEnd_toEndOf="@id/frame_service2"
        app:layout_constraintTop_toTopOf="@id/frame_service2" />

</androidx.constraintlayout.widget.ConstraintLayout>