<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="row"
            type="org.cxct.sportlottery.network.bet.settledList.Row" />

        <variable
            name="clickListener"
            type="org.cxct.sportlottery.ui.betRecord.accountHistory.first.ItemClickListener" />

        <variable
            name="TextUtil"
            type="org.cxct.sportlottery.util.TextUtil" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="SpUsage">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_BBBBBB_333333"
                android:textSize="@dimen/textSize14sp"
                android:text="@{row.statDate}"
                app:dateNoYear="@{row.statDate}"
                app:autoSizeMaxTextSize="@dimen/textSize12sp"
                app:autoSizeMinTextSize="@dimen/textSize8sp"
                android:visibility="gone"
                tools:text="12-29" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:dayOfWeek="@{row.statDate}"
                android:textColor="@color/color_BBBBBB_333333"
                android:textSize="@dimen/textSize14sp"
                android:visibility="gone"
                tools:text="星期一" />

            <TextView
                android:id="@+id/tv_date_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_9BB3D9_535D76"
                android:textSize="@dimen/textSize14sp"
                android:lines="1"
                app:autoSizeMaxTextSize="@dimen/textSize12sp"
                app:autoSizeMinTextSize="@dimen/textSize8sp"
                tools:text="2022/08/13" />

        </LinearLayout>

        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="8,117,500.00"
            android:gravity="center"
            android:text="@string/unknown_data"
            app:moneyFormat="@{row.settledBetMoney}"
            android:layout_marginStart="7dp"
            android:textColor="@color/color_9BB3D9_535D76"
            android:textSize="@dimen/textSize14sp" />

        <TextView
            android:id="@+id/tv_bet_total_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_weight="2"
            android:gravity="center"
            tools:text="9,959,500.00"
            android:text="@string/unknown_data"
            app:moneyFormat="@{row.validBetMoney}"
            android:textColor="@color/color_9BB3D9_535D76"
            android:textSize="@dimen/textSize14sp" />

        <TextView
            android:id="@+id/tv_tv_win_lose_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/unknown_data"
            app:moneyColor="@{row.vipRewardMoneyWithRebate}"
            app:moneyFormat="@{row.vipRewardMoneyWithRebate}"
            tools:text="-9,959,500.00"
            tools:textColor="@color/color_E23434_E23434"
            android:textColor="@color/color_9BB3D9_535D76"
            android:textSize="@dimen/textSize14sp" />

    </LinearLayout>

        <View
            android:id="@+id/bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_80334266_E3E8EE" />

    </LinearLayout>
</layout>
