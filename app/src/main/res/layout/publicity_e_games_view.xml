<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ivTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_9"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:ignore="SpUsage, ContentDescription">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:drawableStart="@drawable/ic_icon_cards"
        android:drawablePadding="@dimen/margin_6"
        android:text="@string/e_games"
        android:textAllCaps="true"
        android:textColor="@color/color_cccccc_333333"
        android:textSize="@dimen/textSize14sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_14"
        android:layout_marginVertical="@dimen/margin_10"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/margin_4"
        app:cardElevation="@dimen/margin_3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.41" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.53" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_e_games"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:text="@string/e_games_slogan"
                android:textColor="@color/color_77A0CC_405366"
                android:textSize="@dimen/textSize12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_v"
                app:layout_constraintTop_toTopOf="@+id/guideline_h" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/betListBarPaddingView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bet_list_bar_height"/>
    <View
        android:id="@+id/BottomNavBarPaddingView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_nav_bar_height"/>

</LinearLayout>
