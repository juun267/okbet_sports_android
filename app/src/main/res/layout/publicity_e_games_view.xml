<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ivTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_9"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:ignore="SpUsage, ContentDescription">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:drawableStart="@drawable/ic_icon_cards"
        android:drawablePadding="@dimen/margin_6"
        android:text="@string/e_games"
        android:textAllCaps="true"
        android:textColor="@color/color_cccccc_333333"
        android:textSize="@dimen/textSize14sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_14"
        android:layout_marginVertical="@dimen/margin_10"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/margin_4"
        app:cardElevation="@dimen/margin_3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_e_games" />

    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/betListBarPaddingView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bet_list_bar_height"/>
    <View
        android:id="@+id/BottomNavBarPaddingView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_nav_bar_height"/>

</LinearLayout>
