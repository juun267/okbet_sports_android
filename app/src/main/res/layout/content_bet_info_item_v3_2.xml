<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_item_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/ivSportLogo"
            android:layout_width="@dimen/margin_14"
            android:layout_height="@dimen/margin_14"
            android:layout_marginStart="@dimen/margin_8"
            android:src="@drawable/ic_tennis_icon"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/odds_content_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/odds_content_container" />

        <LinearLayout
            android:id="@+id/odds_content_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/ivSportLogo"
            app:layout_constraintTop_toTopOf="parent">

            <!--            <TextView-->
            <!--                android:id="@+id/tvMatchType"-->
            <!--                android:text="滚球"-->
            <!--                android:textSize="10sp"-->
            <!--                android:gravity="center"-->
            <!--                android:layout_gravity="center_vertical"-->
            <!--                android:textColor="@color/color_FFFFFF"-->
            <!--                android:background="@drawable/bg_match_type_red_circle"-->
            <!--                android:layout_width="30dp"-->
            <!--                android:paddingVertical="1dp"-->
            <!--                android:layout_height="wrap_content"/>-->

            <TextView
                android:id="@+id/tv_odds_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_FFFFFF_414655"
                android:textSize="@dimen/textSize14sp"
                android:textStyle="bold"
                tools:text="Manchester United FC (Mad)" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:background="@color/color_C9CFD7" />

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/color_FFFFFF_414655"
                android:textSize="@dimen/textSize14sp"
                android:textStyle="bold"
                tools:text="-0.5/2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/odds_change_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/odds_content_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/odds_content_container">

            <ImageView
                android:id="@+id/ivOddsArrow"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="2dp"
                android:visibility="gone"
                tools:src="@drawable/ic_arrow_odd_up"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvOdds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/din_regular"
                android:textColor="@color/color_025BE8_025BE8"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold"
                tools:text="\@ 0.89" />

        </LinearLayout>

        <!--玩法名稱:讓球,獨贏..-->
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:textColor="@color/color_9BB3D9_535D76"
            android:textSize="@dimen/textSize12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/odds_content_container"
            app:layout_constraintTop_toBottomOf="@+id/odds_content_container"
            tools:text="让球(1-1)" />

        <TextView
            android:id="@+id/tv_name_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_match_type_gray_circle"
            android:gravity="center_vertical"
            android:paddingHorizontal="4dp"
            android:textColor="@color/color_9BB3D9_535D76"
            android:textSize="@dimen/textSize12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name"
            app:layout_constraintStart_toEndOf="@+id/tv_name"
            app:layout_constraintTop_toTopOf="@+id/tv_name"
            tools:text="欧洲盘" />

        <TextView
            android:id="@+id/tv_match"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_A7B2C4"
            android:textSize="@dimen/textSize13sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_league_name"
            app:layout_constraintEnd_toStartOf="@+id/tv_close"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/tv_league_name"
            app:layout_constraintTop_toTopOf="@+id/tv_league_name"
            app:layout_constraintVertical_bias="0.0"
            app:layout_goneMarginEnd="15dp"
            tools:text="Manchester United FC (Mad) vs. SS Lazio(Dasko)" />

        <TextView
            android:id="@+id/tv_league_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_A7B2C4"
            android:textSize="@dimen/textSize13sp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            app:layout_constraintWidth_max="120dp"
            tools:text="GT 联赛 - 12分钟赛事" />

        <View
            android:id="@+id/viewDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/color_e3e8ee"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_league_name" />

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/color_6C7BA8_6C7BA8"
            android:textSize="@dimen/textSize13sp"
            app:layout_constraintBottom_toTopOf="@+id/llKeyboardContainer"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="2022-08-05 15:30:00"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="@dimen/margin_15"
            android:background="@drawable/icon_close"
            android:paddingVertical="1dp"
            android:textColor="@color/color_9BB3D9_535D76"
            android:textSize="@dimen/textSize12sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/tv_match"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_match" />

        <org.cxct.sportlottery.widget.SlideLayout
            android:id="@+id/slideLayout"
            android:layout_width="0dp"
            android:layout_height="82dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--左部分-->
            <RelativeLayout
                android:id="@+id/rlLeftContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#990C0C0C">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTipsContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="20dp"
                    android:text="@string/bet_list_cant_parlay_warn"
                    android:textColor="#ffffff" />

            </RelativeLayout>

            <!--右部分-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_delete"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#E23434"
                android:gravity="center"
                android:text="删除"
                android:textColor="#ffffff" />

        </org.cxct.sportlottery.widget.SlideLayout>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llKeyboardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_radius_12_f8f8f8"
            android:orientation="vertical"
            android:paddingTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewDivider"
            app:layout_constraintVertical_bias="1.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_editText_container"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingHorizontal="@dimen/margin_14"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/llKeyboardContainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="visible">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

                <TextView
                    android:id="@+id/tv_win"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="60dp"
                    android:text="@string/bet_win"
                    android:textColor="@color/color_9BB3D9_535D76"
                    android:textSize="@dimen/textSize12sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/et_win"
                    app:layout_constraintStart_toEndOf="@id/guideline_input"
                    app:layout_constraintTop_toTopOf="@+id/et_win"
                    tools:layout_editor_absoluteX="8dp" />

                <EditText
                    android:id="@+id/et_win"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/bg_radius_2_edittext_unfocus"
                    android:fontFamily="@font/din_regular"
                    android:gravity="end|center_vertical"
                    android:hint="@string/hint_bet_limit_range"
                    android:inputType="numberDecimal"
                    android:letterSpacing="0.05"
                    android:maxLength="14"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/color_025BE8"
                    android:textColorHint="@color/color_455074_C9CFD7"
                    android:textSize="@dimen/textSize12sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/et_bet"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_win"
                    app:layout_constraintTop_toTopOf="@+id/et_bet" />

                <TextView
                    android:id="@+id/tv_bet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="60dp"
                    android:text="@string/bet_stake"
                    android:textColor="@color/color_9BB3D9_535D76"
                    android:textSize="@dimen/textSize12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/et_bet"
                    app:layout_constraintStart_toEndOf="@+id/tv_win"
                    app:layout_constraintTop_toTopOf="@+id/et_bet" />

                <EditText
                    android:id="@+id/et_bet"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/bg_radius_2_edittext_unfocus"
                    android:fontFamily="@font/din_regular"
                    android:gravity="end|center_vertical"
                    android:hint="@string/hint_bet_limit_range"
                    android:inputType="numberDecimal"
                    android:letterSpacing="0.05"
                    android:maxLength="14"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/color_025BE8"
                    android:textColorHint="@color/color_455074_C9CFD7"
                    android:textSize="@dimen/textSize16sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_bet"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单关"
                    android:textColor="@color/color_00181E"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvCanWin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可赢:--"
                    android:textColor="@color/color_414655"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    app:layout_constraintVertical_bias="1.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <org.cxct.sportlottery.util.KeyboardView
                android:id="@+id/layoutKeyBoard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                tools:visibility="visible" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:id="@+id/bottomPaddingView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5"
            app:layout_constraintBottom_toTopOf="@+id/cl_hint_layout" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_hint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent">

            <!--不支持串关-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llNoParlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#36DF9D9D"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/ic_bet_lock_tip_red" />

                <TextView
                    android:id="@+id/tv_no_parlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/margin_6"
                    android:gravity="center_vertical"
                    android:paddingVertical="3dp"
                    android:paddingStart="5dp"
                    android:text="@string/bet_list_cant_parlay_warn"
                    android:textColor="@color/color_E23434"
                    android:textSize="@dimen/textSize14sp"
                    android:visibility="visible"
                    tools:visibility="visible" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!--转盘口已关闭-->
            <TextView
                android:id="@+id/tv_bet_lock"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bet_info_hint_view_height"
                android:background="@color/color_DFE2E9"
                android:drawablePadding="@dimen/margin_6"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/margin_10"
                android:text="@string/bet_info_bet_lock_hint"
                android:textColor="@color/color_5E6D78"
                android:textSize="@dimen/textSize14sp"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_bet_lock_tip"
                app:drawableTint="@color/color_5E6D78"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="gone" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.LinearLayoutCompat>

