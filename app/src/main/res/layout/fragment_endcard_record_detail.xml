<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource"
    android:background="@color/color_0E131F">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linBack"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:foreground="@drawable/fg_ripple"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/margin_1"
        android:background="@color/color_1A202E">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_betrecord_image"
            android:layout_marginRight="@dimen/margin_24"/>
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/margin_24"
            android:layout_height="@dimen/margin_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/margin_12"
            android:padding="@dimen/margin_3"
            android:src="@drawable/ic_back_white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/ivBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/margin_4"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/textSize14sp"
            android:textColor="@color/color_FFFFFF"
            android:text="@string/I031"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/margin_12"
        android:paddingVertical="@dimen/margin_12"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@color/color_1A202E">
     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="@dimen/margin_36">
         <TextView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:lines="1"
             android:ellipsize="end"
             android:textSize="@dimen/textSize14sp"
             android:textStyle="bold"
             android:textColor="@color/color_FFFFFF"
             android:text="@string/P316"/>
         <ImageView
             android:id="@+id/ivStatus"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:adjustViewBounds="true"
             app:layout_constraintRight_toRightOf="parent"
             android:src="@drawable/ic_tag_win"/>
     </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvOdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_12"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="10"
            tools:itemCount="12"
            tools:listitem="@layout/item_endcard_record_odd" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5"
            android:background="@color/color_0E131F"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:fontFamily="@font/helvetica_light"
                android:textSize="@dimen/textSize14sp"
                android:textColor="@color/color_6D7693"
                android:text="@string/I041"/>
            <TextView
                android:id="@+id/tvLeagueName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginLeft="@dimen/margin_12"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="@dimen/textSize14sp"
                android:textColor="@color/color_FFFFFF"
                android:text="NBA"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5"
            android:background="@color/color_0E131F"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:fontFamily="@font/helvetica_light"
                android:textSize="@dimen/textSize14sp"
                android:textColor="@color/color_6D7693"
                android:text="@string/P317"/>
            <androidx.legacy.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvHomeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="100dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/textSize14sp"
                    android:textColor="@color/color_FFFFFF"
                    android:text="red tame"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_10"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/textSize14sp"
                    android:textColor="@color/color_F5FFC700"
                    android:text="VS"/>
                <TextView
                    android:id="@+id/tvAwayName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="100dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/textSize14sp"
                    android:textColor="@color/color_FFFFFF"
                    android:text="Bule Tame"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5"
            android:background="@color/color_0E131F"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:fontFamily="@font/helvetica_light"
                android:textSize="@dimen/textSize14sp"
                android:textColor="@color/color_6D7693"
                android:text="@string/I039"/>
            <TextView
                android:id="@+id/tvBettingTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginLeft="@dimen/margin_12"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="@dimen/textSize14sp"
                android:textColor="@color/color_FFFFFF"
                android:text="09/02/2024"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5"
            android:background="@color/color_0E131F"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:fontFamily="@font/helvetica_light"
                android:textSize="@dimen/textSize14sp"
                android:textColor="@color/color_6D7693"
                android:text="Bet"/>
            <TextView
                android:id="@+id/tvBet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginLeft="@dimen/margin_12"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="@dimen/textSize14sp"
                android:textColor="@color/color_FFFFFF"
                android:text="₱ 100"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5"
            android:background="@color/color_0E131F"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:fontFamily="@font/helvetica_light"
                android:textSize="@dimen/textSize14sp"
                android:textColor="@color/color_6D7693"
                android:text="@string/LT042"/>
            <TextView
                android:id="@+id/tvBetAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginLeft="@dimen/margin_12"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="@dimen/textSize14sp"
                android:textColor="@color/color_FFFFFF"
                android:text="₱ 200"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5"
            android:background="@color/color_0E131F"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:fontFamily="@font/helvetica_light"
                android:textSize="@dimen/textSize14sp"
                android:textColor="@color/color_6D7693"
                android:text="@string/N142"/>
            <TextView
                android:id="@+id/tvOrderNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginLeft="@dimen/margin_12"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="@dimen/textSize14sp"
                android:textColor="@color/color_FFFFFF"
                android:text="EG1231546778945613"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5"
            android:background="@color/color_0E131F"/>
        <TextView
            android:id="@+id/tvTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:lineSpacingExtra="3dp"
            android:fontFamily="@font/helvetica_light"
            android:textSize="@dimen/textSize12sp"
            android:textColor="@color/color_BEC7DC"
            android:text="@string/P322"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_2"
        android:padding="@dimen/margin_12"
        android:background="@color/color_1A202E">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/textSize14sp"
            android:textStyle="bold"
            android:textColor="@color/color_FFFFFF"
            android:text="@string/B003"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_1"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@drawable/bg_darkblue_stroke_radius_8">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/margin_8"
                app:cardElevation="0dp"
                android:elevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <include
                        android:id="@+id/rowTitle"
                        layout="@layout/item_endcard_detail_result_row_title"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/color_1A2334"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="3"
                        tools:listitem="@layout/item_endcard_detail_result_row_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="2dp"
        android:paddingHorizontal="@dimen/margin_12"
        android:gravity="center_vertical"
        android:background="@color/color_1A202E">
        <TextView
            android:id="@+id/tvWinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="86dp"
            android:gravity="center"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/textSize16sp"
            android:textColor="@color/color_FFFFFF"
            android:text="@string/H020"/>
        <View
            android:layout_width="@dimen/margin_0.5"
            android:layout_height="@dimen/margin_28"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:background="@color/color_0C121E"/>
        <TextView
            android:id="@+id/tvTotalWin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/textSize18sp"
            android:textColor="@color/color_FFFFFF"
            android:fontFamily="@font/inter_bold"
            android:textFontWeight="600"
            android:text="₱ 895.64"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvSettleTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_8"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:fontFamily="@font/helvetica_light"
        android:textSize="@dimen/textSize12sp"
        android:textColor="@color/color_BEC7DC"
        android:text="@string/N664"
        tools:text="settlement time: 09/02/2024  18:30"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>