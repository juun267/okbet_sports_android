<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.stx.xhb.androidx.XBanner
        android:id="@+id/topBanner"
        android:layout_width="match_parent"
        android:layout_height="274dp"
        android:background="@android:color/white"
        app:AutoPlayTime="3500"
        app:pointSelect="@drawable/indicator_30_blue"
        app:pointNormal="@drawable/dot_4_4c326bff"
        app:pageChangeDuration="800"
        app:pointTopBottomPadding="24dp"
        app:pointLeftRightPadding="1dp"/>

    <LinearLayout
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:visibility="gone">

        <Button
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:minWidth="74dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_blue_radius_15"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:text="@string/btn_login"/>

        <Button
            android:id="@+id/tvRegist"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:minWidth="74dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:background="@drawable/bg_orange_radius_15"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:text="@string/btn_register"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:textColor="@color/color_414655"
            android:textSize="14sp"
            android:text="OR"/>

        <ImageView
            android:id="@+id/ivGoogle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_circle_google"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/depositLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:visibility="gone">

        <Button
            android:id="@+id/tvDeposit"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:minWidth="74dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/bg_blue_radius_15"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:text="@string/J285"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:text="With"/>
        
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_circle_glive"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_circle_paymaya"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_circle_pay_x"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_circle_fortunepay"/>

    </LinearLayout>


    <com.stx.xhb.androidx.XBanner
        android:id="@+id/promotionsBanner"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="16dp"
        app:isAutoPlay="false"
        app:pointSelect="@drawable/indicator_12_blue"
        app:pointNormal="@drawable/dot_4_4c326bff"
        app:pointTopBottomPadding="7dp"
        app:pointLeftRightPadding="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_gamevenues" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/color_14366B"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="@string/N703" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/vSports"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_sports"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/vOkgames"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_okgames"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/vBingo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_okbingo"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#90000000"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/color_FFFFFF"
                android:textStyle="bold"
                android:text="@string/M013"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/vOklive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_oklive"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#90000000"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/color_FFFFFF"
                android:textStyle="bold"
                android:text="@string/M013"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</merge>