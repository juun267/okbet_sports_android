<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.stx.xhb.androidx.XBanner
        android:id="@+id/topBanner"
        android:layout_width="match_parent"
        android:layout_height="274dp"
        app:AutoPlayTime="3000"
        app:pageChangeDuration="800"
        app:pointsVisibility="false"/>

    <org.cxct.sportlottery.view.IndicatorWidget
        android:id="@+id/topBannerIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white"
        android:gravity="center">

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="74dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:background="@drawable/bg_blue_radius_15"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:text="@string/btn_login"/>

        <TextView
            android:id="@+id/tvRegist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="74dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:background="@drawable/bg_red_radius_15"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:text="@string/btn_register"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/depositLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white"
        android:visibility="gone">

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="16dp"
        app:cardElevation="1px"
        app:cardCornerRadius="12dp">

        <com.stx.xhb.androidx.XBanner
            android:id="@+id/promotionsBanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:AutoPlayTime="3000"
            app:pageChangeDuration="800"
            app:pointsVisibility="false"/>

        <org.cxct.sportlottery.view.IndicatorWidget
            android:id="@+id/promotionsBannerIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"/>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/lin_categroy_name"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_okgame_label_favorite" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/color_14366B"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="OKBet Game Venues" />

        <TextView
            android:id="@+id/tvMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="4dp"
            android:textColor="@color/color_6D7693"
            android:textSize="14sp"
            android:text="@string/N702" />

        <ImageView
            android:id="@+id/ivMore"
            android:layout_width="@dimen/margin_16"
            android:layout_height="@dimen/margin_16"
            android:src="@drawable/ic_game_gray_arrow_right" />
    </LinearLayout>

</merge>