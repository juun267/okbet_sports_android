<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="row"
            type="org.cxct.sportlottery.network.bet.settledDetailList.Row" />

        <variable
            name="matchOdd"
            type="org.cxct.sportlottery.network.bet.settledDetailList.MatchOdd" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlue"
            android:gravity="center"
            android:minHeight="48dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="9dp"
            tools:ignore="SpUsage">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/sum_pass"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSize14sp"
                app:autoSizeMaxTextSize="@dimen/textSize12sp"
                app:autoSizeMinTextSize="@dimen/textSize8sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_parlay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSize12sp"
                app:parlayType="@{row.parlayType}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="2 串 1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_parlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            tools:itemCount="3"
            tools:listitem="@layout/item_account_history_next_content_parlay_item" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:minHeight="48dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingBottom="10dp"
            tools:ignore="SpUsage">

            <TextView
                android:id="@+id/tv_bet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/bet_info_list_bet_quota"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize12sp"
                app:autoSizeMaxTextSize="@dimen/textSize12sp"
                app:autoSizeMinTextSize="@dimen/textSize8sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_win_lose"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/tv_bet"
                app:layout_constraintTop_toTopOf="@+id/tv_bet"
                app:moneyFormat="@{row.totalAmount}"
                tools:text="9,999,999.000" />

            <TextView
                android:id="@+id/tv_win_lose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/win_lose_mark"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize12sp"
                app:hideByStatus="@{row.status}"
                app:layout_constraintEnd_toStartOf="@id/tv_win_lose_money"
                app:layout_constraintTop_toTopOf="@+id/tv_bet" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/textSize12sp"
                app:betReceiptStatus="@{row.status}"
                app:statusVisibility="@{row.status}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_bet"
                tools:text="取消注單"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/tv_win_lose_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorGreenLight"
                android:textSize="@dimen/textSize12sp"
                app:hideByStatus="@{row.status}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_bet"
                app:moneyFormat="@{row.win}"
                app:moneyColor="@{row.win}"
                tools:text="9,959,500.000" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@{row.orderNo}"
                android:textColor="@color/colorGrayLight"
                android:textSize="@dimen/textSize12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_time"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_bet"
                tools:text="b000003612091822030128" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorGrayLight"
                android:textSize="@dimen/textSize12sp"
                app:dateTimeNoYear="@{row.addTime}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintTop_toTopOf="@+id/tv_number"
                tools:text="06-23 23:04:01" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>
