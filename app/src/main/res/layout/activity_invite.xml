<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F0F5FA"
    android:orientation="vertical"
    tools:context=".ui.profileCenter.invite.InviteActivity">

    <org.cxct.sportlottery.view.CustomTopToolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:topTitleText="Invite Your Friends"/>

    <org.cxct.sportlottery.view.webView.OkWebView
        android:id="@+id/okWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>