<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite1"
    android:orientation="vertical"
    android:padding="@dimen/margin_14"
    tools:context=".ui.feedback.suggest.FeedbackSubmitFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_4"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_14"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="@string/selfLimit_froze"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize13sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_1"
                android:background="@color/colorWhite6" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_14"
                android:layout_marginRight="@dimen/margin_14"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="@string/selfLimit_froze_content"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize12sp" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40"
                android:id="@+id/llImportant"
                android:layout_marginLeft="@dimen/margin_14"
                android:layout_marginRight="@dimen/margin_14"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_15"
                android:gravity="center_vertical"
                android:background="@drawable/bg_rectangle_white_4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/selfLimit_impotent"
                    android:textColor="@color/colorBlackLight"
                    android:layout_weight="1"
                    android:textSize="@dimen/textSize13sp"
                    android:layout_marginLeft="@dimen/margin_14"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/margin_16"
                    android:layout_height="@dimen/margin_16"
                    android:src="@drawable/ic_blue_info"
                    android:layout_marginRight="@dimen/margin_14" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        app:cardCornerRadius="@dimen/margin_4"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="@string/selfLimit_froze_days"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/textSize13sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_36"
                android:background="@color/colorWhite6"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/etFrozeDay"
                android:layout_weight="1"
                android:backgroundTint="@android:color/white"
                android:hint="@string/selfLimit_froze_input_days"
                android:textSize="@dimen/textSize12sp"
                android:layout_marginLeft="@dimen/margin_8" />

            <TextView
                android:layout_width="76dp"
                android:id="@+id/btnConfirm"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_6"
                android:layout_marginBottom="@dimen/margin_6"
                android:layout_marginRight="@dimen/margin_14"
                android:enabled="false"
                android:background="@drawable/enable_blue_gray_radius_4_button"
                android:text="@string/btn_confirm"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/textSize12sp"
                android:textColor="@color/enable_blue_light_gray"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>