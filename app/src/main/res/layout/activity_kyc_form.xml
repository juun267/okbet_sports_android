<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_edf3f9">

    <include
        android:id="@+id/toolBar"
        layout="@layout/view_base_tool_bar_no_drawer"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="16dp">
        
        <LinearLayout
            android:id="@+id/frIdType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="76dp"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_667085"
                android:textSize="@dimen/textSize14sp"
                android:text="ID type"/>

            <TextView
                android:id="@+id/tvIdType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@null"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frFirstName"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_667085"
                android:textSize="@dimen/textSize14sp"
                android:text="@string/P185"/>

            <EditText
                android:id="@+id/edtFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_gravity="bottom"
                android:maxLines="1"
                android:background="@null"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold"
                android:hint="@string/P185"/>

            <ImageView
                android:id="@+id/ivClearFirstName"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginBottom="6dp"
                android:layout_gravity="bottom|right"
                android:src="@drawable/iv_clear_blue"
                android:visibility="gone"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frMiddleName"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/P186"
                android:textColor="@color/color_667085"
                android:textSize="@dimen/textSize14sp" />

            <EditText
                android:id="@+id/edtMiddleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_gravity="bottom"
                android:maxLines="1"
                android:background="@null"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold"
                android:hint="@string/P186"/>

            <ImageView
                android:id="@+id/ivClearMiddleName"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginBottom="6dp"
                android:layout_gravity="bottom|right"
                android:src="@drawable/iv_clear_blue"
                android:visibility="gone"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/llMiddleName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivCheckBox"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/selector_radio_white"/>

            <TextView
                android:id="@+id/tvHaveMiddelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize16sp"
                android:textColor="@color/color_667085"
                android:text="@string/P188"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frLastName"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_667085"
                android:textSize="@dimen/textSize14sp"
                android:text="@string/P187"/>

            <EditText
                android:id="@+id/edtLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_gravity="bottom"
                android:maxLines="1"
                android:hint="@string/P187"
                android:background="@null"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/ivClearLastName"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginBottom="6dp"
                android:layout_gravity="bottom|right"
                android:src="@drawable/iv_clear_blue"
                android:visibility="gone"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frBirthday"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_667085"
                android:textSize="@dimen/textSize14sp"
                android:text="@string/J902"/>

            <EditText
                android:id="@+id/tvBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_gravity="bottom"
                android:background="@null"
                android:editable="false"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textColorHint="@color/color_667085"
                android:hint="YYYY-MM-DD"/>

            <ImageView
                android:id="@+id/ivDate"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginBottom="6dp"
                android:layout_gravity="bottom|right"
                android:src="@drawable/ic_date"/>

        </FrameLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="113dp"
        android:background="@drawable/bg_blue_radius_8"
        android:textSize="@dimen/textSize16sp"
        android:textColor="@color/white"
        android:text="@string/btn_confirm"/>

</LinearLayout>