    <androidx.cardview.widget.CardView
        android:id="@+id/cardGame1"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:visibility="gone"
        android:foreground="@drawable/fg_ripple"
        app:cardCornerRadius="@dimen/margin_12"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="1px">

                <ImageView
                    android:id="@+id/iv_cover1"
                    android:layout_width="110dp"
                    android:layout_height="88dp" />

                <TextView
                    android:id="@+id/tv_firm_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginBottom="8dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:text="ARCADE" />

                <ImageView
                    android:id="@+id/iv_fav1"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="right"
                    android:padding="4dp"
                    android:src="@drawable/selector_game_fav" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_414655"
                android:textFontWeight="700"
                android:textSize="14sp"
                tools:text="Game Name" />
        </LinearLayout>

        <eightbitlab.com.blurview.BlurView
            android:id="@+id/blurCard1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#90ffffff"
                app:blurOverlayColor="@color/color_chat_toast_background" />
            <TextView
                android:text="@string/N702"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/color_0D2245"
                android:textStyle="bold"
                android:layout_width="110dp"
                android:layout_height="110dp"/>
        </eightbitlab.com.blurview.BlurView>
    </androidx.cardview.widget.CardView>




