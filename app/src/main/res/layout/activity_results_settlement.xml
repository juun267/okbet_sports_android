<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    tools:context="org.cxct.sportlottery.ui.results.ResultsSettlementActivity">

    <LinearLayout
        android:id="@+id/linear_filter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="4dp"
        android:paddingEnd="16dp"
        android:paddingBottom="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ll_game_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:layout_weight="2"
            android:background="@drawable/spinner_gray_5dp"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="24dp">

            <TextView
                android:id="@+id/tv_game_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/textSize14sp"
                tools:text="@string/football" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_game_league"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:layout_weight="2"
            android:background="@drawable/spinner_gray_5dp"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="24dp">

            <TextView
                android:id="@+id/tv_league"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/league"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/textSize14sp"
                tools:text="@string/league" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_key_word"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:layout_weight="3"
            android:background="@drawable/search_gray_5dp"
            android:ellipsize="end"
            android:gravity="center_vertical|start"
            android:hint="@string/search"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:paddingEnd="32dp"
            android:textColorHint="@color/bright_gray"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_refresh_5dp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_date"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/rv_results"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_filter"
        tools:listitem="@layout/settlement_date_item" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_results"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_date"
        tools:listitem="@layout/content_settlement_rv" />


</androidx.constraintlayout.widget.ConstraintLayout>
