<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_1D4C99_0760D4"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="18dp"
        android:paddingEnd="16dp"
        android:paddingBottom="18dp">

        <!--20220505 被要求移除-->
        <!--<TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_title_parlay"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize14sp" />-->

        <TextView
            android:id="@+id/title_parlay_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/textSize14sp"
            tools:text="2 串 1" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_parlay_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        tools:itemCount="3"
        tools:listitem="@layout/content_parlay_match" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="10dp"
        android:paddingEnd="16dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bet_receipt_bet_quota"
                    android:textColor="@color/color_CCCCCC_333333"
                    android:textSize="@dimen/textSize13sp" />

                <TextView
                    android:id="@+id/content_parlay_bet_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/color_CCCCCC_333333"
                    android:textSize="@dimen/textSize13sp"
                    tools:text="50.000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bet_info_list_win_quota"
                    android:textColor="@color/color_CCCCCC_333333"
                    android:textSize="@dimen/textSize13sp" />

                <TextView
                    android:id="@+id/content_parlay_winnable_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_08dc6e_08dc6e"
                    android:textSize="@dimen/textSize13sp"
                    android:textStyle="bold"
                    tools:text="9,999,999.000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/content_parlay_order_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_8F8F8F_999999"
                android:textSize="@dimen/textSize13sp"
                tools:text="b000003612091822030128" />

            <TextView
                android:id="@+id/content_parlay_time_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_8F8F8F_999999"
                android:textSize="@dimen/textSize13sp"
                tools:text="23:04:01 (欧洲盘)" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>