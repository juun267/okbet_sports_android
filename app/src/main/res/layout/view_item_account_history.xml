<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_1D1F2D_FFFFFF"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingVertical="4dp"
    android:paddingHorizontal="8dp">

    <LinearLayout
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_12"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rech_log_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_BBBBBB_333333"
            android:textSize="@dimen/textSize12sp"
            tools:text="2020-12-12" />

        <TextView
            android:id="@+id/rech_log_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_BBBBBB_333333"
            android:textSize="@dimen/textSize12sp"
            tools:text="11:43:39" />
    </LinearLayout>

    <TextView
        android:id="@+id/rech_order_num"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_12"
        android:gravity="center"
        android:maxEms="2"
        android:ellipsize="end"
        android:textColor="@color/color_BBBBBB_333333"
        android:textSize="@dimen/textSize12sp"
        tools:text="01234567890123456789" />
    <TextView
        android:id="@+id/tvTypeName"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_12"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/color_BBBBBB_333333"
        android:textSize="@dimen/textSize12sp"
        tools:text="withdraw" />
    <TextView
        android:id="@+id/rech_amont"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_12"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/color_BBBBBB_333333"
        android:textSize="@dimen/textSize12sp"
        tools:text="+100.00" />

    <TextView
        android:id="@+id/rech_balance"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/color_909090_666666"
        android:textSize="@dimen/textSize12sp"
        tools:text="555,026.00" />

</LinearLayout>