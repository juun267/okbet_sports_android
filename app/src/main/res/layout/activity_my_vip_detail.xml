<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_F9FAFD">

    <org.cxct.sportlottery.view.CustomTopToolbar
        android:id="@+id/custom_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:topTitleText="@string/P372"/>

   <FrameLayout
       android:id="@+id/linStatus"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:minHeight="142dp"
       android:orientation="vertical"
       android:background="@drawable/bg_vipdetails_orange"
       android:layout_marginHorizontal="@dimen/margin_12"
       android:layout_marginTop="@dimen/margin_10">
       <TextView
           android:id="@+id/tvTag"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:background="@drawable/bg_keepgrade_orange"
           android:textColor="@color/color_FFFFFF"
           android:textSize="@dimen/textSize12sp"
           android:text="@string/P442"/>
       <LinearLayout
           android:id="@+id/linContent"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:visibility="visible">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="@dimen/margin_32"
               android:gravity="center_vertical"
               android:layout_marginLeft="@dimen/margin_16"
               android:layout_marginTop="@dimen/margin_36">
               <TextView
                   android:id="@+id/tvAmount"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="@dimen/margin_8"
                   android:textSize="@dimen/textSize18sp"
                   android:textColor="@color/color_FF7676"
                   android:text="50"/>
               <TextView
                   android:id="@+id/tvContent"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:includeFontPadding="false"
                   android:textSize="@dimen/textSize14sp"
                   android:textColor="@color/color_0D2245"
                   android:text="@string/P396"/>
           </LinearLayout>
           <org.cxct.sportlottery.ui.profileCenter.vip.view.VipProgressView
               android:id="@+id/vpProgress"
               android:layout_width="220dp"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="@dimen/margin_16"
               android:layout_marginTop="@dimen/margin_6"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="@dimen/margin_16"
               android:layout_marginTop="@dimen/margin_8"
               android:textSize="@dimen/textSize12sp"
               android:textColor="@color/color_999999"
               android:text="@string/P440"/>
       </LinearLayout>
       <LinearLayout
           android:id="@+id/linEmpty"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:visibility="gone"
           android:layout_gravity="center"
           android:gravity="center"
           android:orientation="vertical">
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="88dp"
               android:adjustViewBounds="true"
               android:src="@drawable/bg_vip_detail_empty"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/margin_4"
               android:textSize="@dimen/textSize14sp"
               android:textColor="@color/color_999999"
               android:text="@string/P419"/>
       </LinearLayout>
   </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginHorizontal="@dimen/margin_12"
        android:paddingHorizontal="@dimen/margin_10"
        android:paddingVertical="@dimen/margin_20"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_white_radius_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12"
            android:includeFontPadding="false"
            android:textStyle="bold"
            android:textSize="@dimen/textSize18sp"
            android:textColor="@color/color_0D2245"
            android:text="@string/P398"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:lineHeight="@dimen/margin_20"
            android:textSize="@dimen/textSize14sp"
            android:textColor="@color/color_6D7693"
            android:text="@string/P400"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:lineHeight="@dimen/margin_20"
            android:textSize="@dimen/textSize14sp"
            android:textColor="@color/color_6D7693"
            android:text="@string/P401"/>

    </LinearLayout>

</LinearLayout>