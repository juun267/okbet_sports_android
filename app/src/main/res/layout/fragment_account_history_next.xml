<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="betRecordDetailViewModel"
            type="org.cxct.sportlottery.ui.profileCenter.sportRecord.BetRecordViewModel" />

        <variable
            name="row"
            type="org.cxct.sportlottery.network.bet.list.Row" />

        <variable
            name="TextUtil"
            type="org.cxct.sportlottery.util.TextUtil" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        tools:context=".ui.profileCenter.sportRecord.SportBetRecordFragment"
        tools:ignore="SpUsage">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/soccer_account"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_arrow_left_game_back"
            app:layout_constraintBottom_toBottomOf="@id/iv_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/colorBlackLight" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@string/bet_num_and_bet_date"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/textSize14sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_bg"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/bg_white_square_shape_4dp_gray_stroke"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/linear_layout2"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_bg">

            <org.cxct.sportlottery.ui.component.StatusSelectorView
                android:id="@+id/date_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:defaultBottomSheetTitleText="@string/choose_bet_state"
                app:defaultStatusText="6-21 星期一"
                app:horizontalChainStyle="spread" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/bg_white_square_shape_4dp_gray_stroke"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/linear_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linear_layout"
            app:layout_constraintTop_toTopOf="@+id/linear_layout">

            <org.cxct.sportlottery.ui.component.StatusSelectorView
                android:id="@+id/sport_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:defaultBottomSheetTitleText="@string/choose_bet_state"
                app:defaultStatusText="@string/all_sport"
                app:horizontalChainStyle="spread" />

        </LinearLayout>


        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/view_refresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear_layout"
            app:srlDragRate="0.3"
            app:srlEnableLoadMore="true"
            app:srlEnablePureScrollMode="true">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_account_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="5"
                tools:listitem="@layout/item_account_history_next_title_2" />

        </com.scwang.smart.refresh.layout.SmartRefreshLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorWhite6"
            app:layout_constraintBottom_toTopOf="@id/btn_back_to_top" />


        <Button
            android:id="@+id/btn_back_to_top"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_rectangle_4dp_gray_dark"
            android:text="@string/back_to_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintVertical_chainStyle="packed" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

