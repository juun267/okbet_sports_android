<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite4"
    android:padding="20dp"
    tools:ignore="spUsage">

    <TextView
        android:id="@+id/quick_odd_eps_text1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textSize18sp"
        app:layout_constraintBottom_toBottomOf="@id/quick_odd_eps_btn1"
        app:layout_constraintEnd_toStartOf="@id/quick_odd_eps_btn1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/quick_odd_eps_btn1"
        tools:text="东京不死鸟会赢3-2" />

    <org.cxct.sportlottery.ui.game.widget.EpsOddButton
        android:id="@+id/quick_odd_eps_btn1"
        android:layout_width="72dp"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/quick_odd_eps_text2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textSize18sp"
        app:layout_constraintBottom_toBottomOf="@id/quick_odd_eps_btn2"
        app:layout_constraintEnd_toStartOf="@id/quick_odd_eps_btn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/quick_odd_eps_btn2"
        tools:text="东京不死鸟会赢3-2" />

    <org.cxct.sportlottery.ui.game.widget.EpsOddButton
        android:id="@+id/quick_odd_eps_btn2"
        android:layout_width="72dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quick_odd_eps_btn1" />

</androidx.constraintlayout.widget.ConstraintLayout>