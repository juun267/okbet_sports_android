<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#0f00f0">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_back_white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="My VIP Benefits"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivBack"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="6dp"
        android:fontFamily="@font/helvetica_bold"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="growth value"/>
    
    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toBottomOf="@+id/ivBack"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/ivProfile"
        app:layout_constraintTop_toTopOf="@+id/ivProfile"
        android:layout_marginTop="3dp"
        android:layout_marginStart="8dp"
        android:text="oliver.lee_888"
        android:fontFamily="@font/helvetica_bold"
        android:textSize="18sp"
        android:textColor="@color/color_FFE6B3"/>
    
    <ImageView
        android:id="@+id/ivLVTips"
        android:layout_width="64dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="@+id/tvUserName"
        app:layout_constraintBottom_toBottomOf="@+id/ivProfile"
        android:layout_marginBottom="3dp"
        android:src="@drawable/ic_vip_tips_10"/>

    <TextView
        android:id="@+id/tvId"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@+id/ivLVTips"
        app:layout_constraintTop_toTopOf="@+id/ivLVTips"
        android:layout_marginStart="4dp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="ID: 88888888"
        />

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProfile"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical" />



</androidx.constraintlayout.widget.ConstraintLayout>