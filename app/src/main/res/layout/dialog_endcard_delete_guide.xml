<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_black_60">
    <ImageView
        android:id="@+id/ivDeleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="89dp"
        android:layout_marginTop="230dp"
        android:src="@drawable/ic_endcard_bet_delate"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivDeleteBtn"
        app:layout_constraintLeft_toRightOf="@id/ivDeleteBtn"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="-20dp"
        android:src="@drawable/ic_endcard_handpoint"/>
    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivDeleteBtn"
        app:layout_constraintLeft_toRightOf="@id/ivDeleteBtn"
        android:layout_marginLeft="-40dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_endcard_arrow"/>
    <TextView
        android:id="@+id/tvTips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivArrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="@dimen/margin_40"
        android:paddingHorizontal="@dimen/margin_25"
        android:paddingTop="@dimen/margin_15"
        android:paddingBottom="@dimen/margin_25"
        android:background="@drawable/ic_endcard_delete_tips"
        android:textSize="@dimen/textSize14sp"
        android:textColor="@color/color_FFFFFF"
        android:text="Check out the selected scores here. Move the mouse over the score to choose delete" />

    <TextView
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_endcard_isee"
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTips"
        android:textSize="@dimen/textSize16sp"
        android:textColor="@color/color_F5FFC700"
        android:text="i see"/>
</androidx.constraintlayout.widget.ConstraintLayout>
