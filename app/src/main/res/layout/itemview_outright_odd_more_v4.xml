<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_more_content"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/color_191919_FCFCFC"
    android:orientation="horizontal"
    android:gravity="center"
    tools:ignore="spUsage">

    <TextView android:id="@+id/tvMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:text="@string/display_more"
        android:textColor="@color/color_A3A3A3_666666"
        android:textSize="@dimen/textSize14sp"
        android:textAllCaps="true" />

    <ImageView android:id="@+id/ivMoreIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_down_gray"
        android:layout_marginStart="10dp"/>

</LinearLayout>