<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/rlHeaderCalendar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="36dp"
    android:paddingVertical="8dp"
    android:orientation="horizontal"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgVNavLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_left_selector" />

    <com.archit.calendardaterangepicker.customviews.CustomTextView
        android:id="@+id/tvYearTitle"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:tag="dateTitle"
        android:textStyle="bold"
        tools:text="2014 FEBRUARY"
        android:textSize="@dimen/text_size_title" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgVNavRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_right_selector" />
</LinearLayout>